<!--
    ChartExamples.xaml

    This file demonstrates data visualization and charting components for the Market Data Collector.
    These examples use Canvas-based rendering for lightweight, high-performance charts.

    Note: This is a reference file. Copy patterns to your actual pages.
-->

<Page
    x:Class="MarketDataCollector.Uwp.Examples.ChartExamples"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Background="{StaticResource ConsoleBackgroundDarkBrush}">

    <Page.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="ms-appx:///Styles/AppStyles.xaml"/>
            </ResourceDictionary.MergedDictionaries>

            <!-- Chart Colors -->
            <SolidColorBrush x:Key="ChartGridBrush" Color="#21262d"/>
            <SolidColorBrush x:Key="ChartAxisBrush" Color="#30363d"/>
            <SolidColorBrush x:Key="ChartLineBrush" Color="#58a6ff"/>
            <SolidColorBrush x:Key="ChartFillBrush" Color="#1a58a6ff"/>
            <SolidColorBrush x:Key="ChartBullishBrush" Color="#3fb950"/>
            <SolidColorBrush x:Key="ChartBearishBrush" Color="#f85149"/>
        </ResourceDictionary>
    </Page.Resources>

    <ScrollViewer>
        <StackPanel Padding="32" Spacing="32">

            <!-- ═══════════════════════════════════════════════════════════════════
                 SECTION: SPARKLINE CHARTS
                 ═══════════════════════════════════════════════════════════════════ -->
            <StackPanel Spacing="16">
                <TextBlock Text="Sparkline Charts" Style="{StaticResource SectionHeaderStyle}"/>
                <TextBlock Text="Compact inline charts for quick trend visualization" FontSize="12" Foreground="#8b949e"/>

                <StackPanel Orientation="Horizontal" Spacing="24">
                    <!-- Bullish Sparkline (Green) -->
                    <Border Style="{StaticResource MetricCardStyle}" Width="200">
                        <StackPanel Spacing="8">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="AAPL" FontWeight="SemiBold" Foreground="#e6edf3"/>
                                <TextBlock Grid.Column="1" Text="+2.34%" Foreground="#3fb950"/>
                            </Grid>

                            <!-- Sparkline Canvas -->
                            <Canvas Height="40" Width="168">
                                <!-- Grid Lines -->
                                <Line X1="0" Y1="20" X2="168" Y2="20" Stroke="#21262d" StrokeThickness="1"/>

                                <!-- Sparkline Path (upward trend) -->
                                <Polyline Points="0,35 20,32 40,28 60,30 80,25 100,20 120,18 140,15 168,8"
                                          Stroke="#3fb950" StrokeThickness="2" StrokeLineJoin="Round"/>

                                <!-- Fill Area -->
                                <Polygon Points="0,35 20,32 40,28 60,30 80,25 100,20 120,18 140,15 168,8 168,40 0,40"
                                         Fill="#1a3fb950"/>

                                <!-- End Point -->
                                <Ellipse Canvas.Left="164" Canvas.Top="4" Width="8" Height="8" Fill="#3fb950"/>
                            </Canvas>

                            <TextBlock Text="$185.42" Style="{StaticResource MetricValueStyle}" FontSize="24"/>
                        </StackPanel>
                    </Border>

                    <!-- Bearish Sparkline (Red) -->
                    <Border Style="{StaticResource MetricCardStyle}" Width="200">
                        <StackPanel Spacing="8">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="TSLA" FontWeight="SemiBold" Foreground="#e6edf3"/>
                                <TextBlock Grid.Column="1" Text="-1.87%" Foreground="#f85149"/>
                            </Grid>

                            <!-- Sparkline Canvas -->
                            <Canvas Height="40" Width="168">
                                <Line X1="0" Y1="20" X2="168" Y2="20" Stroke="#21262d" StrokeThickness="1"/>

                                <!-- Sparkline Path (downward trend) -->
                                <Polyline Points="0,8 20,12 40,10 60,18 80,22 100,20 120,28 140,30 168,35"
                                          Stroke="#f85149" StrokeThickness="2" StrokeLineJoin="Round"/>

                                <Polygon Points="0,8 20,12 40,10 60,18 80,22 100,20 120,28 140,30 168,35 168,40 0,40"
                                         Fill="#1af85149"/>

                                <Ellipse Canvas.Left="164" Canvas.Top="31" Width="8" Height="8" Fill="#f85149"/>
                            </Canvas>

                            <TextBlock Text="$242.15" Style="{StaticResource MetricValueStyle}" FontSize="24"/>
                        </StackPanel>
                    </Border>

                    <!-- Flat Sparkline (Gray) -->
                    <Border Style="{StaticResource MetricCardStyle}" Width="200">
                        <StackPanel Spacing="8">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="MSFT" FontWeight="SemiBold" Foreground="#e6edf3"/>
                                <TextBlock Grid.Column="1" Text="+0.02%" Foreground="#8b949e"/>
                            </Grid>

                            <Canvas Height="40" Width="168">
                                <Line X1="0" Y1="20" X2="168" Y2="20" Stroke="#21262d" StrokeThickness="1"/>

                                <Polyline Points="0,20 20,22 40,18 60,21 80,19 100,20 120,21 140,19 168,20"
                                          Stroke="#8b949e" StrokeThickness="2" StrokeLineJoin="Round"/>

                                <Ellipse Canvas.Left="164" Canvas.Top="16" Width="8" Height="8" Fill="#8b949e"/>
                            </Canvas>

                            <TextBlock Text="$378.92" Style="{StaticResource MetricValueStyle}" FontSize="24"/>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </StackPanel>

            <!-- ═══════════════════════════════════════════════════════════════════
                 SECTION: BAR CHARTS
                 ═══════════════════════════════════════════════════════════════════ -->
            <StackPanel Spacing="16">
                <TextBlock Text="Volume Bar Charts" Style="{StaticResource SectionHeaderStyle}"/>

                <Border Style="{StaticResource CardStyle}" Padding="24" MaxWidth="600">
                    <StackPanel Spacing="16">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="Daily Volume (Last 10 Days)" FontWeight="SemiBold" Foreground="#e6edf3"/>
                            <TextBlock Grid.Column="1" Text="Avg: 45.2M" Foreground="#8b949e"/>
                        </Grid>

                        <!-- Bar Chart Canvas -->
                        <Canvas Height="120" Width="552">
                            <!-- Y-Axis Labels -->
                            <TextBlock Canvas.Left="-30" Canvas.Top="0" Text="80M" FontSize="10" Foreground="#6e7681"/>
                            <TextBlock Canvas.Left="-30" Canvas.Top="50" Text="40M" FontSize="10" Foreground="#6e7681"/>
                            <TextBlock Canvas.Left="-30" Canvas.Top="100" Text="0" FontSize="10" Foreground="#6e7681"/>

                            <!-- Grid Lines -->
                            <Line X1="0" Y1="0" X2="552" Y2="0" Stroke="#21262d" StrokeThickness="1" StrokeDashArray="4,4"/>
                            <Line X1="0" Y1="60" X2="552" Y2="60" Stroke="#21262d" StrokeThickness="1" StrokeDashArray="4,4"/>
                            <Line X1="0" Y1="120" X2="552" Y2="120" Stroke="#30363d" StrokeThickness="1"/>

                            <!-- Average Line -->
                            <Line X1="0" Y1="52" X2="552" Y2="52" Stroke="#a371f7" StrokeThickness="1" StrokeDashArray="6,3"/>

                            <!-- Volume Bars (10 bars, each 48px wide with 8px gap) -->
                            <Rectangle Canvas.Left="0" Canvas.Top="30" Width="48" Height="90" Fill="#3fb950" RadiusX="2" RadiusY="2"/>
                            <Rectangle Canvas.Left="56" Canvas.Top="45" Width="48" Height="75" Fill="#3fb950" RadiusX="2" RadiusY="2"/>
                            <Rectangle Canvas.Left="112" Canvas.Top="60" Width="48" Height="60" Fill="#f85149" RadiusX="2" RadiusY="2"/>
                            <Rectangle Canvas.Left="168" Canvas.Top="40" Width="48" Height="80" Fill="#3fb950" RadiusX="2" RadiusY="2"/>
                            <Rectangle Canvas.Left="224" Canvas.Top="35" Width="48" Height="85" Fill="#3fb950" RadiusX="2" RadiusY="2"/>
                            <Rectangle Canvas.Left="280" Canvas.Top="55" Width="48" Height="65" Fill="#f85149" RadiusX="2" RadiusY="2"/>
                            <Rectangle Canvas.Left="336" Canvas.Top="50" Width="48" Height="70" Fill="#3fb950" RadiusX="2" RadiusY="2"/>
                            <Rectangle Canvas.Left="392" Canvas.Top="70" Width="48" Height="50" Fill="#f85149" RadiusX="2" RadiusY="2"/>
                            <Rectangle Canvas.Left="448" Canvas.Top="25" Width="48" Height="95" Fill="#3fb950" RadiusX="2" RadiusY="2"/>
                            <Rectangle Canvas.Left="504" Canvas.Top="20" Width="48" Height="100" Fill="#3fb950" RadiusX="2" RadiusY="2"/>
                        </Canvas>

                        <!-- X-Axis Labels -->
                        <StackPanel Orientation="Horizontal" Spacing="8">
                            <TextBlock Text="Dec 27" Width="48" FontSize="10" Foreground="#6e7681" TextAlignment="Center"/>
                            <TextBlock Text="Dec 28" Width="48" FontSize="10" Foreground="#6e7681" TextAlignment="Center"/>
                            <TextBlock Text="Dec 29" Width="48" FontSize="10" Foreground="#6e7681" TextAlignment="Center"/>
                            <TextBlock Text="Dec 30" Width="48" FontSize="10" Foreground="#6e7681" TextAlignment="Center"/>
                            <TextBlock Text="Dec 31" Width="48" FontSize="10" Foreground="#6e7681" TextAlignment="Center"/>
                            <TextBlock Text="Jan 2" Width="48" FontSize="10" Foreground="#6e7681" TextAlignment="Center"/>
                            <TextBlock Text="Jan 3" Width="48" FontSize="10" Foreground="#6e7681" TextAlignment="Center"/>
                            <TextBlock Text="Jan 6" Width="48" FontSize="10" Foreground="#6e7681" TextAlignment="Center"/>
                            <TextBlock Text="Jan 7" Width="48" FontSize="10" Foreground="#6e7681" TextAlignment="Center"/>
                            <TextBlock Text="Jan 8" Width="48" FontSize="10" Foreground="#6e7681" TextAlignment="Center"/>
                        </StackPanel>
                    </StackPanel>
                </Border>
            </StackPanel>

            <!-- ═══════════════════════════════════════════════════════════════════
                 SECTION: CANDLESTICK CHARTS
                 ═══════════════════════════════════════════════════════════════════ -->
            <StackPanel Spacing="16">
                <TextBlock Text="Candlestick Charts" Style="{StaticResource SectionHeaderStyle}"/>

                <Border Style="{StaticResource CardStyle}" Padding="24" MaxWidth="600">
                    <StackPanel Spacing="16">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <StackPanel Orientation="Horizontal" Spacing="8">
                                <TextBlock Text="AAPL" FontWeight="SemiBold" FontSize="18" Foreground="#e6edf3"/>
                                <TextBlock Text="Daily" FontSize="14" Foreground="#8b949e" VerticalAlignment="Center"/>
                            </StackPanel>
                            <StackPanel Grid.Column="1" Orientation="Horizontal" Spacing="16">
                                <StackPanel Orientation="Horizontal" Spacing="4">
                                    <Rectangle Width="12" Height="12" Fill="#3fb950" RadiusX="2" RadiusY="2"/>
                                    <TextBlock Text="Up" FontSize="12" Foreground="#8b949e"/>
                                </StackPanel>
                                <StackPanel Orientation="Horizontal" Spacing="4">
                                    <Rectangle Width="12" Height="12" Fill="#f85149" RadiusX="2" RadiusY="2"/>
                                    <TextBlock Text="Down" FontSize="12" Foreground="#8b949e"/>
                                </StackPanel>
                            </StackPanel>
                        </Grid>

                        <!-- Candlestick Chart Canvas -->
                        <Canvas Height="200" Width="552">
                            <!-- Grid Lines -->
                            <Line X1="0" Y1="0" X2="552" Y2="0" Stroke="#21262d" StrokeThickness="1" StrokeDashArray="4,4"/>
                            <Line X1="0" Y1="50" X2="552" Y2="50" Stroke="#21262d" StrokeThickness="1" StrokeDashArray="4,4"/>
                            <Line X1="0" Y1="100" X2="552" Y2="100" Stroke="#21262d" StrokeThickness="1" StrokeDashArray="4,4"/>
                            <Line X1="0" Y1="150" X2="552" Y2="150" Stroke="#21262d" StrokeThickness="1" StrokeDashArray="4,4"/>
                            <Line X1="0" Y1="200" X2="552" Y2="200" Stroke="#30363d" StrokeThickness="1"/>

                            <!-- Candlesticks (10 candles) -->
                            <!-- Candle 1: Green (bullish) -->
                            <Line X1="24" Y1="45" X2="24" Y2="160" Stroke="#3fb950" StrokeThickness="1"/> <!-- Wick -->
                            <Rectangle Canvas.Left="12" Canvas.Top="70" Width="24" Height="60" Fill="#3fb950" RadiusX="2" RadiusY="2"/> <!-- Body -->

                            <!-- Candle 2: Green -->
                            <Line X1="80" Y1="40" X2="80" Y2="145" Stroke="#3fb950" StrokeThickness="1"/>
                            <Rectangle Canvas.Left="68" Canvas.Top="55" Width="24" Height="65" Fill="#3fb950" RadiusX="2" RadiusY="2"/>

                            <!-- Candle 3: Red (bearish) -->
                            <Line X1="136" Y1="35" X2="136" Y2="155" Stroke="#f85149" StrokeThickness="1"/>
                            <Rectangle Canvas.Left="124" Canvas.Top="50" Width="24" Height="70" Fill="#f85149" RadiusX="2" RadiusY="2"/>

                            <!-- Candle 4: Red -->
                            <Line X1="192" Y1="60" X2="192" Y2="170" Stroke="#f85149" StrokeThickness="1"/>
                            <Rectangle Canvas.Left="180" Canvas.Top="80" Width="24" Height="55" Fill="#f85149" RadiusX="2" RadiusY="2"/>

                            <!-- Candle 5: Green -->
                            <Line X1="248" Y1="55" X2="248" Y2="165" Stroke="#3fb950" StrokeThickness="1"/>
                            <Rectangle Canvas.Left="236" Canvas.Top="85" Width="24" Height="50" Fill="#3fb950" RadiusX="2" RadiusY="2"/>

                            <!-- Candle 6: Green (large body) -->
                            <Line X1="304" Y1="30" X2="304" Y2="150" Stroke="#3fb950" StrokeThickness="1"/>
                            <Rectangle Canvas.Left="292" Canvas.Top="45" Width="24" Height="80" Fill="#3fb950" RadiusX="2" RadiusY="2"/>

                            <!-- Candle 7: Red (doji-like) -->
                            <Line X1="360" Y1="35" X2="360" Y2="145" Stroke="#f85149" StrokeThickness="1"/>
                            <Rectangle Canvas.Left="348" Canvas.Top="60" Width="24" Height="20" Fill="#f85149" RadiusX="2" RadiusY="2"/>

                            <!-- Candle 8: Green -->
                            <Line X1="416" Y1="40" X2="416" Y2="140" Stroke="#3fb950" StrokeThickness="1"/>
                            <Rectangle Canvas.Left="404" Canvas.Top="55" Width="24" Height="60" Fill="#3fb950" RadiusX="2" RadiusY="2"/>

                            <!-- Candle 9: Green -->
                            <Line X1="472" Y1="25" X2="472" Y2="130" Stroke="#3fb950" StrokeThickness="1"/>
                            <Rectangle Canvas.Left="460" Canvas.Top="40" Width="24" Height="65" Fill="#3fb950" RadiusX="2" RadiusY="2"/>

                            <!-- Candle 10: Green (current) -->
                            <Line X1="528" Y1="15" X2="528" Y2="120" Stroke="#3fb950" StrokeThickness="1"/>
                            <Rectangle Canvas.Left="516" Canvas.Top="30" Width="24" Height="55" Fill="#3fb950" RadiusX="2" RadiusY="2"/>

                            <!-- Price Labels on Right -->
                            <TextBlock Canvas.Left="560" Canvas.Top="-5" Text="$190" FontSize="10" Foreground="#6e7681"/>
                            <TextBlock Canvas.Left="560" Canvas.Top="45" Text="$186" FontSize="10" Foreground="#6e7681"/>
                            <TextBlock Canvas.Left="560" Canvas.Top="95" Text="$182" FontSize="10" Foreground="#6e7681"/>
                            <TextBlock Canvas.Left="560" Canvas.Top="145" Text="$178" FontSize="10" Foreground="#6e7681"/>
                        </Canvas>
                    </StackPanel>
                </Border>
            </StackPanel>

            <!-- ═══════════════════════════════════════════════════════════════════
                 SECTION: LINE AREA CHARTS
                 ═══════════════════════════════════════════════════════════════════ -->
            <StackPanel Spacing="16">
                <TextBlock Text="Line Area Charts" Style="{StaticResource SectionHeaderStyle}"/>

                <Border Style="{StaticResource CardStyle}" Padding="24" MaxWidth="600">
                    <StackPanel Spacing="16">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="Events per Minute (Last Hour)" FontWeight="SemiBold" Foreground="#e6edf3"/>
                            <TextBlock Grid.Column="1" Text="Current: 1,234/min" Foreground="#58a6ff"/>
                        </Grid>

                        <!-- Area Chart Canvas -->
                        <Canvas Height="150" Width="552">
                            <!-- Grid -->
                            <Line X1="0" Y1="0" X2="552" Y2="0" Stroke="#21262d" StrokeThickness="1" StrokeDashArray="4,4"/>
                            <Line X1="0" Y1="50" X2="552" Y2="50" Stroke="#21262d" StrokeThickness="1" StrokeDashArray="4,4"/>
                            <Line X1="0" Y1="100" X2="552" Y2="100" Stroke="#21262d" StrokeThickness="1" StrokeDashArray="4,4"/>
                            <Line X1="0" Y1="150" X2="552" Y2="150" Stroke="#30363d" StrokeThickness="1"/>

                            <!-- Area Fill -->
                            <Polygon Points="0,150 0,100 50,90 100,85 150,95 200,70 250,65 300,80 350,55 400,50 450,60 500,45 552,40 552,150"
                                     Fill="#1a58a6ff"/>

                            <!-- Line -->
                            <Polyline Points="0,100 50,90 100,85 150,95 200,70 250,65 300,80 350,55 400,50 450,60 500,45 552,40"
                                      Stroke="#58a6ff" StrokeThickness="2" StrokeLineJoin="Round"/>

                            <!-- Data Points -->
                            <Ellipse Canvas.Left="47" Canvas.Top="87" Width="6" Height="6" Fill="#58a6ff"/>
                            <Ellipse Canvas.Left="197" Canvas.Top="67" Width="6" Height="6" Fill="#58a6ff"/>
                            <Ellipse Canvas.Left="397" Canvas.Top="47" Width="6" Height="6" Fill="#58a6ff"/>
                            <Ellipse Canvas.Left="549" Canvas.Top="37" Width="6" Height="6" Fill="#58a6ff"/>
                        </Canvas>

                        <!-- Time Labels -->
                        <Grid>
                            <TextBlock Text="09:00" FontSize="10" Foreground="#6e7681" HorizontalAlignment="Left"/>
                            <TextBlock Text="09:30" FontSize="10" Foreground="#6e7681" HorizontalAlignment="Center"/>
                            <TextBlock Text="10:00" FontSize="10" Foreground="#6e7681" HorizontalAlignment="Right"/>
                        </Grid>
                    </StackPanel>
                </Border>
            </StackPanel>

            <!-- ═══════════════════════════════════════════════════════════════════
                 SECTION: DONUT/PIE CHARTS
                 ═══════════════════════════════════════════════════════════════════ -->
            <StackPanel Spacing="16">
                <TextBlock Text="Donut Charts" Style="{StaticResource SectionHeaderStyle}"/>

                <StackPanel Orientation="Horizontal" Spacing="24">
                    <!-- Provider Distribution -->
                    <Border Style="{StaticResource CardStyle}" Padding="24">
                        <StackPanel Spacing="16">
                            <TextBlock Text="Data by Provider" FontWeight="SemiBold" Foreground="#e6edf3"/>

                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="16"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <!-- Donut Chart using Ellipse and clipping -->
                                <Canvas Width="120" Height="120">
                                    <!-- Background ring -->
                                    <Ellipse Width="120" Height="120" Stroke="#21262d" StrokeThickness="20" Fill="Transparent"/>

                                    <!-- Segments (simplified representation) -->
                                    <!-- IB: 45% - Red arc -->
                                    <Ellipse Width="120" Height="120" Stroke="#f85149" StrokeThickness="20" Fill="Transparent"
                                             StrokeDashArray="2.83 6.28" StrokeDashOffset="0"/>

                                    <!-- Alpaca: 30% - Purple arc -->
                                    <Ellipse Width="120" Height="120" Stroke="#a371f7" StrokeThickness="20" Fill="Transparent"
                                             StrokeDashArray="1.88 6.28" StrokeDashOffset="-2.83"/>

                                    <!-- Polygon: 25% - Blue arc -->
                                    <Ellipse Width="120" Height="120" Stroke="#58a6ff" StrokeThickness="20" Fill="Transparent"
                                             StrokeDashArray="1.57 6.28" StrokeDashOffset="-4.71"/>

                                    <!-- Center text -->
                                    <TextBlock Canvas.Left="35" Canvas.Top="45" Text="1.2M" FontSize="20" FontWeight="SemiBold" Foreground="#e6edf3"/>
                                    <TextBlock Canvas.Left="40" Canvas.Top="68" Text="events" FontSize="11" Foreground="#8b949e"/>
                                </Canvas>

                                <!-- Legend -->
                                <StackPanel Grid.Column="2" Spacing="8" VerticalAlignment="Center">
                                    <StackPanel Orientation="Horizontal" Spacing="8">
                                        <Rectangle Width="12" Height="12" Fill="#f85149" RadiusX="2" RadiusY="2"/>
                                        <TextBlock Text="IB (45%)" FontSize="12" Foreground="#e6edf3"/>
                                    </StackPanel>
                                    <StackPanel Orientation="Horizontal" Spacing="8">
                                        <Rectangle Width="12" Height="12" Fill="#a371f7" RadiusX="2" RadiusY="2"/>
                                        <TextBlock Text="Alpaca (30%)" FontSize="12" Foreground="#e6edf3"/>
                                    </StackPanel>
                                    <StackPanel Orientation="Horizontal" Spacing="8">
                                        <Rectangle Width="12" Height="12" Fill="#58a6ff" RadiusX="2" RadiusY="2"/>
                                        <TextBlock Text="Polygon (25%)" FontSize="12" Foreground="#e6edf3"/>
                                    </StackPanel>
                                </StackPanel>
                            </Grid>
                        </StackPanel>
                    </Border>

                    <!-- Storage Usage -->
                    <Border Style="{StaticResource CardStyle}" Padding="24">
                        <StackPanel Spacing="16">
                            <TextBlock Text="Storage Usage" FontWeight="SemiBold" Foreground="#e6edf3"/>

                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="16"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <Canvas Width="120" Height="120">
                                    <Ellipse Width="120" Height="120" Stroke="#21262d" StrokeThickness="20" Fill="Transparent"/>

                                    <!-- Trades: 50% -->
                                    <Ellipse Width="120" Height="120" Stroke="#3fb950" StrokeThickness="20" Fill="Transparent"
                                             StrokeDashArray="3.14 6.28" StrokeDashOffset="0"/>

                                    <!-- Quotes: 35% -->
                                    <Ellipse Width="120" Height="120" Stroke="#39c5cf" StrokeThickness="20" Fill="Transparent"
                                             StrokeDashArray="2.20 6.28" StrokeDashOffset="-3.14"/>

                                    <!-- LOB: 15% -->
                                    <Ellipse Width="120" Height="120" Stroke="#d29922" StrokeThickness="20" Fill="Transparent"
                                             StrokeDashArray="0.94 6.28" StrokeDashOffset="-5.34"/>

                                    <TextBlock Canvas.Left="30" Canvas.Top="45" Text="42 GB" FontSize="18" FontWeight="SemiBold" Foreground="#e6edf3"/>
                                    <TextBlock Canvas.Left="42" Canvas.Top="68" Text="total" FontSize="11" Foreground="#8b949e"/>
                                </Canvas>

                                <StackPanel Grid.Column="2" Spacing="8" VerticalAlignment="Center">
                                    <StackPanel Orientation="Horizontal" Spacing="8">
                                        <Rectangle Width="12" Height="12" Fill="#3fb950" RadiusX="2" RadiusY="2"/>
                                        <TextBlock Text="Trades (50%)" FontSize="12" Foreground="#e6edf3"/>
                                    </StackPanel>
                                    <StackPanel Orientation="Horizontal" Spacing="8">
                                        <Rectangle Width="12" Height="12" Fill="#39c5cf" RadiusX="2" RadiusY="2"/>
                                        <TextBlock Text="Quotes (35%)" FontSize="12" Foreground="#e6edf3"/>
                                    </StackPanel>
                                    <StackPanel Orientation="Horizontal" Spacing="8">
                                        <Rectangle Width="12" Height="12" Fill="#d29922" RadiusX="2" RadiusY="2"/>
                                        <TextBlock Text="LOB (15%)" FontSize="12" Foreground="#e6edf3"/>
                                    </StackPanel>
                                </StackPanel>
                            </Grid>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </StackPanel>

            <!-- ═══════════════════════════════════════════════════════════════════
                 SECTION: REAL-TIME GAUGES
                 ═══════════════════════════════════════════════════════════════════ -->
            <StackPanel Spacing="16">
                <TextBlock Text="Real-Time Gauges" Style="{StaticResource SectionHeaderStyle}"/>

                <StackPanel Orientation="Horizontal" Spacing="24">
                    <!-- CPU Usage Gauge -->
                    <Border Style="{StaticResource MetricCardStyle}" Padding="16">
                        <StackPanel Spacing="8" HorizontalAlignment="Center">
                            <TextBlock Text="CPU Usage" FontSize="12" Foreground="#8b949e" HorizontalAlignment="Center"/>

                            <Grid Width="80" Height="80">
                                <!-- Background circle -->
                                <Ellipse Width="80" Height="80" Stroke="#21262d" StrokeThickness="8" Fill="Transparent"/>
                                <!-- Progress arc (simulated with dash) -->
