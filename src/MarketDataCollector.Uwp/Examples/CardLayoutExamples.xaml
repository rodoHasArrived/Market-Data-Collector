<!--
    CardLayoutExamples.xaml

    This file demonstrates various card-based layouts for metrics, data display, and dashboard tiles.
    Cards are the primary container for grouping related information.

    Note: This is a reference file. Copy patterns to your actual pages.
-->

<Page
    x:Class="MarketDataCollector.Uwp.Examples.CardLayoutExamples"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Background="{StaticResource ConsoleBackgroundDarkBrush}">

    <Page.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="ms-appx:///Styles/AppStyles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Page.Resources>

    <ScrollViewer>
        <StackPanel Padding="32" Spacing="32">

            <!-- ═══════════════════════════════════════════════════════════════════
                 SECTION: DASHBOARD METRIC CARDS (4-COLUMN GRID)
                 ═══════════════════════════════════════════════════════════════════ -->
            <StackPanel Spacing="16">
                <TextBlock Text="Dashboard Metric Cards" Style="{StaticResource SectionHeaderStyle}"/>

                <Grid ColumnSpacing="16" RowSpacing="16">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Events Published -->
                    <Border Style="{StaticResource MetricCardStyle}">
                        <StackPanel Spacing="8">
                            <Grid>
                                <TextBlock Text="Events Published" Style="{StaticResource MetricLabelStyle}"/>
                                <FontIcon Glyph="&#xE8F3;" FontSize="16" Foreground="#8b949e" HorizontalAlignment="Right"/>
                            </Grid>
                            <TextBlock Text="1,234,567" Style="{StaticResource MetricValueStyle}"/>
                            <StackPanel Orientation="Horizontal" Spacing="8">
                                <FontIcon Glyph="&#xE74A;" FontSize="12" Foreground="#3fb950"/>
                                <TextBlock Text="+12,345 today" FontSize="12" Foreground="#3fb950"/>
                            </StackPanel>
                        </StackPanel>
                    </Border>

                    <!-- Active Symbols -->
                    <Border Style="{StaticResource MetricCardSuccessStyle}">
                        <StackPanel Spacing="8">
                            <Grid>
                                <TextBlock Text="Active Symbols" Style="{StaticResource MetricLabelStyle}"/>
                                <Border Style="{StaticResource LiveBadgeStyle}" Padding="6,2" HorizontalAlignment="Right">
                                    <TextBlock Text="LIVE" FontSize="9" FontWeight="Bold" Foreground="#3fb950"/>
                                </Border>
                            </Grid>
                            <TextBlock Text="42" Style="{StaticResource MetricValueStyle}"/>
                            <TextBlock Text="Trades: 42 | Quotes: 38 | LOB: 12" FontSize="11" Foreground="#8b949e"/>
                        </StackPanel>
                    </Border>

                    <!-- Uptime -->
                    <Border Style="{StaticResource MetricCardStyle}">
                        <StackPanel Spacing="8">
                            <Grid>
                                <TextBlock Text="Session Uptime" Style="{StaticResource MetricLabelStyle}"/>
                                <FontIcon Glyph="&#xE823;" FontSize="16" Foreground="#8b949e" HorizontalAlignment="Right"/>
                            </Grid>
                            <TextBlock Text="14:32:15" Style="{StaticResource MetricValueStyle}"/>
                            <TextBlock Text="Started: 09:30:00 EST" FontSize="11" Foreground="#8b949e"/>
                        </StackPanel>
                    </Border>

                    <!-- Storage Used -->
                    <Border Style="{StaticResource MetricCardWarningStyle}">
                        <StackPanel Spacing="8">
                            <Grid>
                                <TextBlock Text="Storage Used" Style="{StaticResource MetricLabelStyle}"/>
                                <FontIcon Glyph="&#xE7C3;" FontSize="16" Foreground="#d29922" HorizontalAlignment="Right"/>
                            </Grid>
                            <StackPanel Orientation="Horizontal" Spacing="4">
                                <TextBlock Text="42.5" Style="{StaticResource MetricValueStyle}"/>
                                <TextBlock Text="GB" FontSize="14" Foreground="#8b949e" VerticalAlignment="Bottom" Margin="0,0,0,4"/>
                            </StackPanel>
                            <ProgressBar Value="42.5" Maximum="100" Height="4"/>
                        </StackPanel>
                    </Border>
                </Grid>
            </StackPanel>

            <!-- ═══════════════════════════════════════════════════════════════════
                 SECTION: PROVIDER STATUS CARDS
                 ═══════════════════════════════════════════════════════════════════ -->
            <StackPanel Spacing="16">
                <TextBlock Text="Provider Status Cards" Style="{StaticResource SectionHeaderStyle}"/>

                <Grid ColumnSpacing="16">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Interactive Brokers Card -->
                    <Border Style="{StaticResource CardStyle}" Padding="0">
                        <StackPanel>
                            <!-- Header with accent border -->
                            <Border Background="#f85149" Height="4" CornerRadius="6,6,0,0"/>
                            <StackPanel Padding="16" Spacing="16">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <Border Background="#f85149" CornerRadius="8" Width="48" Height="48">
                                        <TextBlock Text="IB" FontWeight="Bold" FontSize="18" Foreground="#ffffff"
                                                   HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>

                                    <StackPanel Grid.Column="1" Margin="12,0" VerticalAlignment="Center">
                                        <TextBlock Text="Interactive Brokers" FontWeight="SemiBold" FontSize="16" Foreground="#e6edf3"/>
                                        <TextBlock Text="TWS Gateway 10.19.1" FontSize="12" Foreground="#8b949e"/>
                                    </StackPanel>

                                    <StackPanel Grid.Column="2" HorizontalAlignment="Right">
                                        <StackPanel Orientation="Horizontal" Spacing="6">
                                            <Ellipse Width="10" Height="10" Fill="#3fb950"/>
                                            <TextBlock Text="Connected" FontSize="12" Foreground="#3fb950"/>
                                        </StackPanel>
                                    </StackPanel>
                                </Grid>

                                <Border Height="1" Background="#30363d"/>

                                <Grid RowSpacing="8">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>

                                    <StackPanel>
                                        <TextBlock Text="Host" FontSize="11" Foreground="#6e7681"/>
                                        <TextBlock Text="127.0.0.1:7496" FontFamily="Cascadia Code" FontSize="12" Foreground="#e6edf3"/>
                                    </StackPanel>

                                    <StackPanel Grid.Column="1">
                                        <TextBlock Text="Client ID" FontSize="11" Foreground="#6e7681"/>
                                        <TextBlock Text="1" FontFamily="Cascadia Code" FontSize="12" Foreground="#e6edf3"/>
                                    </StackPanel>

                                    <StackPanel Grid.Row="1">
                                        <TextBlock Text="Latency" FontSize="11" Foreground="#6e7681"/>
                                        <TextBlock Text="12ms" FontFamily="Cascadia Code" FontSize="12" Foreground="#3fb950"/>
                                    </StackPanel>

                                    <StackPanel Grid.Row="1" Grid.Column="1">
                                        <TextBlock Text="Events/min" FontSize="11" Foreground="#6e7681"/>
                                        <TextBlock Text="1,234" FontFamily="Cascadia Code" FontSize="12" Foreground="#e6edf3"/>
                                    </StackPanel>
                                </Grid>

                                <Button Style="{StaticResource SecondaryButtonStyle}" Content="Disconnect" HorizontalAlignment="Stretch"/>
                            </StackPanel>
                        </StackPanel>
                    </Border>

                    <!-- Alpaca Card -->
                    <Border Style="{StaticResource CardStyle}" Padding="0">
                        <StackPanel>
                            <Border Background="#a371f7" Height="4" CornerRadius="6,6,0,0"/>
                            <StackPanel Padding="16" Spacing="16">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <Border Background="#a371f7" CornerRadius="8" Width="48" Height="48">
                                        <TextBlock Text="A" FontWeight="Bold" FontSize="20" Foreground="#ffffff"
                                                   HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>

                                    <StackPanel Grid.Column="1" Margin="12,0" VerticalAlignment="Center">
                                        <TextBlock Text="Alpaca Markets" FontWeight="SemiBold" FontSize="16" Foreground="#e6edf3"/>
                                        <TextBlock Text="WebSocket API v2" FontSize="12" Foreground="#8b949e"/>
                                    </StackPanel>

                                    <StackPanel Grid.Column="2" HorizontalAlignment="Right">
                                        <StackPanel Orientation="Horizontal" Spacing="6">
                                            <ProgressRing Width="12" Height="12" IsActive="True"/>
                                            <TextBlock Text="Connecting..." FontSize="12" Foreground="#d29922"/>
                                        </StackPanel>
                                    </StackPanel>
                                </Grid>

                                <Border Height="1" Background="#30363d"/>

                                <Grid RowSpacing="8">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>

                                    <StackPanel>
                                        <TextBlock Text="Feed Type" FontSize="11" Foreground="#6e7681"/>
                                        <TextBlock Text="IEX" FontFamily="Cascadia Code" FontSize="12" Foreground="#e6edf3"/>
                                    </StackPanel>

                                    <StackPanel Grid.Column="1">
                                        <TextBlock Text="Environment" FontSize="11" Foreground="#6e7681"/>
                                        <TextBlock Text="Paper" FontFamily="Cascadia Code" FontSize="12" Foreground="#d29922"/>
                                    </StackPanel>

                                    <StackPanel Grid.Row="1">
                                        <TextBlock Text="Latency" FontSize="11" Foreground="#6e7681"/>
                                        <TextBlock Text="--" FontFamily="Cascadia Code" FontSize="12" Foreground="#6e7681"/>
                                    </StackPanel>

                                    <StackPanel Grid.Row="1" Grid.Column="1">
                                        <TextBlock Text="Events/min" FontSize="11" Foreground="#6e7681"/>
                                        <TextBlock Text="--" FontFamily="Cascadia Code" FontSize="12" Foreground="#6e7681"/>
                                    </StackPanel>
                                </Grid>

                                <Button Style="{StaticResource SecondaryButtonStyle}" Content="Cancel" HorizontalAlignment="Stretch"/>
                            </StackPanel>
                        </StackPanel>
                    </Border>

                    <!-- Polygon Card (Disabled) -->
                    <Border Style="{StaticResource CardStyle}" Padding="0" Opacity="0.6">
                        <StackPanel>
                            <Border Background="#58a6ff" Height="4" CornerRadius="6,6,0,0"/>
                            <StackPanel Padding="16" Spacing="16">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <Border Background="#58a6ff" CornerRadius="8" Width="48" Height="48">
                                        <TextBlock Text="P" FontWeight="Bold" FontSize="20" Foreground="#ffffff"
                                                   HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>

                                    <StackPanel Grid.Column="1" Margin="12,0" VerticalAlignment="Center">
                                        <TextBlock Text="Polygon.io" FontWeight="SemiBold" FontSize="16" Foreground="#e6edf3"/>
                                        <TextBlock Text="REST API" FontSize="12" Foreground="#8b949e"/>
                                    </StackPanel>

                                    <StackPanel Grid.Column="2" HorizontalAlignment="Right">
                                        <StackPanel Orientation="Horizontal" Spacing="6">
                                            <Ellipse Width="10" Height="10" Stroke="#6e7681" StrokeThickness="2" Fill="Transparent"/>
                                            <TextBlock Text="Disabled" FontSize="12" Foreground="#6e7681"/>
                                        </StackPanel>
                                    </StackPanel>
                                </Grid>

                                <Border Height="1" Background="#30363d"/>

                                <Grid RowSpacing="8">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>

                                    <StackPanel>
                                        <TextBlock Text="API Key" FontSize="11" Foreground="#6e7681"/>
                                        <TextBlock Text="Not configured" FontFamily="Cascadia Code" FontSize="12" Foreground="#6e7681"/>
                                    </StackPanel>

                                    <StackPanel Grid.Column="1">
                                        <TextBlock Text="Subscription" FontSize="11" Foreground="#6e7681"/>
                                        <TextBlock Text="--" FontFamily="Cascadia Code" FontSize="12" Foreground="#6e7681"/>
                                    </StackPanel>

                                    <StackPanel Grid.Row="1">
                                        <TextBlock Text="Latency" FontSize="11" Foreground="#6e7681"/>
                                        <TextBlock Text="--" FontFamily="Cascadia Code" FontSize="12" Foreground="#6e7681"/>
                                    </StackPanel>

                                    <StackPanel Grid.Row="1" Grid.Column="1">
                                        <TextBlock Text="Events/min" FontSize="11" Foreground="#6e7681"/>
                                        <TextBlock Text="--" FontFamily="Cascadia Code" FontSize="12" Foreground="#6e7681"/>
                                    </StackPanel>
                                </Grid>

                                <Button Style="{StaticResource AccentButtonStyle}" Content="Configure" HorizontalAlignment="Stretch"/>
                            </StackPanel>
                        </StackPanel>
                    </Border>
                </Grid>
            </StackPanel>

            <!-- ═══════════════════════════════════════════════════════════════════
                 SECTION: SYMBOL CARDS
                 ═══════════════════════════════════════════════════════════════════ -->
            <StackPanel Spacing="16">
                <TextBlock Text="Symbol Cards" Style="{StaticResource SectionHeaderStyle}"/>

                <Grid ColumnSpacing="16" RowSpacing="16">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- AAPL Card -->
                    <Border Style="{StaticResource CardStyle}" Padding="16">
                        <StackPanel Spacing="12">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <StackPanel>
                                    <TextBlock Text="AAPL" FontWeight="Bold" FontSize="20" Foreground="#e6edf3"/>
                                    <TextBlock Text="Apple Inc." FontSize="12" Foreground="#8b949e"/>
                                </StackPanel>

                                <Border Grid.Column="1" Style="{StaticResource LiveBadgeStyle}" Padding="6,3" VerticalAlignment="Top">
                                    <TextBlock Text="● LIVE" FontSize="10" FontWeight="SemiBold" Foreground="#3fb950"/>
                                </Border>
                            </Grid>

                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <TextBlock Text="$185.42" FontSize="28" FontWeight="SemiBold" FontFamily="Cascadia Code" Foreground="#e6edf3"/>
                                <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                    <TextBlock Text="+$2.34" FontFamily="Cascadia Code" FontSize="14" Foreground="#3fb950" HorizontalAlignment="Right"/>
                                    <TextBlock Text="+1.28%" FontFamily="Cascadia Code" FontSize="12" Foreground="#3fb950" HorizontalAlignment="Right"/>
                                </StackPanel>
                            </Grid>

                            <!-- Mini Sparkline -->
                            <Canvas Height="30">
                                <Polyline Points="0,25 20,22 40,18 60,20 80,15 100,12 120,10 140,8 160,5"
                                          Stroke="#3fb950" StrokeThickness="2" StrokeLineJoin="Round"/>
                            </Canvas>

                            <Border Height="1" Background="#30363d"/>

                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <StackPanel HorizontalAlignment="Center">
                                    <TextBlock Text="Vol" FontSize="10" Foreground="#6e7681" HorizontalAlignment="Center"/>
                                    <TextBlock Text="45.2M" FontFamily="Cascadia Code" FontSize="11" Foreground="#8b949e" HorizontalAlignment="Center"/>
                                </StackPanel>

                                <StackPanel Grid.Column="1" HorizontalAlignment="Center">
                                    <TextBlock Text="High" FontSize="10" Foreground="#6e7681" HorizontalAlignment="Center"/>
                                    <TextBlock Text="186.12" FontFamily="Cascadia Code" FontSize="11" Foreground="#8b949e" HorizontalAlignment="Center"/>
                                </StackPanel>

                                <StackPanel Grid.Column="2" HorizontalAlignment="Center">
                                    <TextBlock Text="Low" FontSize="10" Foreground="#6e7681" HorizontalAlignment="Center"/>
                                    <TextBlock Text="183.45" FontFamily="Cascadia Code" FontSize="11" Foreground="#8b949e" HorizontalAlignment="Center"/>
                                </StackPanel>
                            </Grid>
                        </StackPanel>
                    </Border>

                    <!-- TSLA Card (Down) -->
                    <Border Style="{StaticResource CardStyle}" Padding="16">
                        <StackPanel Spacing="12">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <StackPanel>
                                    <TextBlock Text="TSLA" FontWeight="Bold" FontSize="20" Foreground="#e6edf3"/>
                                    <TextBlock Text="Tesla, Inc." FontSize="12" Foreground="#8b949e"/>
                                </StackPanel>

                                <Border Grid.Column="1" Style="{StaticResource LiveBadgeStyle}" Padding="6,3" VerticalAlignment="Top">
                                    <TextBlock Text="● LIVE" FontSize="10" FontWeight="SemiBold" Foreground="#3fb950"/>
                                </Border>
                            </Grid>

                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <TextBlock Text="$242.15" FontSize="28" FontWeight="SemiBold" FontFamily="Cascadia Code" Foreground="#e6edf3"/>
                                <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                    <TextBlock Text="-$4.62" FontFamily="Cascadia Code" FontSize="14" Foreground="#f85149" HorizontalAlignment="Right"/>
                                    <TextBlock Text="-1.87%" FontFamily="Cascadia Code" FontSize="12" Foreground="#f85149" HorizontalAlignment="Right"/>
                                </StackPanel>
                            </Grid>

                            <Canvas Height="30">
                                <Polyline Points="0,5 20,8 40,6 60,12 80,15 100,14 120,20 140,22 160,25"
                                          Stroke="#f85149" StrokeThickness="2" StrokeLineJoin="Round"/>
                            </Canvas>

                            <Border Height="1" Background="#30363d"/>

                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <StackPanel HorizontalAlignment="Center">
                                    <TextBlock Text="Vol" FontSize="10" Foreground="#6e7681" HorizontalAlignment="Center"/>
                                    <TextBlock Text="82.1M" FontFamily="Cascadia Code" FontSize="11" Foreground="#8b949e" HorizontalAlignment="Center"/>
                                </StackPanel>

                                <StackPanel Grid.Column="1" HorizontalAlignment="Center">
                                    <TextBlock Text="High" FontSize="10" Foreground="#6e7681" HorizontalAlignment="Center"/>
                                    <TextBlock Text="248.50" FontFamily="Cascadia Code" FontSize="11" Foreground="#8b949e" HorizontalAlignment="Center"/>
                                </StackPanel>

                                <StackPanel Grid.Column="2" HorizontalAlignment="Center">
                                    <TextBlock Text="Low" FontSize="10" Foreground="#6e7681" HorizontalAlignment="Center"/>
                                    <TextBlock Text="240.00" FontFamily="Cascadia Code" FontSize="11" Foreground="#8b949e" HorizontalAlignment="Center"/>
                                </StackPanel>
                            </Grid>
                        </StackPanel>
                    </Border>

                    <!-- SPY Card (Flat) -->
                    <Border Style="{StaticResource CardStyle}" Padding="16">
                        <StackPanel Spacing="12">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <StackPanel>
                                    <TextBlock Text="SPY" FontWeight="Bold" FontSize="20" Foreground="#e6edf3"/>
                                    <TextBlock Text="SPDR S&amp;P 500" FontSize="12" Foreground="#8b949e"/>
                                </StackPanel>

                                <Border Grid.Column="1" Style="{StaticResource LiveBadgeStyle}" Padding="6,3" VerticalAlignment="Top">
                                    <TextBlock Text="● LIVE" FontSize="10" FontWeight="SemiBold" Foreground="#3fb950"/>
                                </Border>
                            </Grid>

                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <TextBlock Text="$478.91" FontSize="28" FontWeight="SemiBold" FontFamily="Cascadia Code" Foreground="#e6edf3"/>
                                <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                    <TextBlock Text="+$0.12" FontFamily="Cascadia Code" FontSize="14" Foreground="#8b949e" HorizontalAlignment="Right"/>
                                    <TextBlock Text="+0.03%" FontFamily="Cascadia Code" FontSize="12" Foreground="#8b949e" HorizontalAlignment="Right"/>
                                </StackPanel>
                            </Grid>

                            <Canvas Height="30">
                                <Polyline Points="0,15 20,14 40,16 60,15 80,14 100,15 120,14 140,15 160,15"
                                          Stroke="#8b949e" StrokeThickness="2" StrokeLineJoin="Round"/>
                            </Canvas>

                            <Border Height="1" Background="#30363d"/>

                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <StackPanel HorizontalAlignment="Center">
                                    <TextBlock Text="Vol" FontSize="10" Foreground="#6e7681" HorizontalAlignment="Center"/>
                                    <TextBlock Text="125.8M" FontFamily="Cascadia Code" FontSize="11" Foreground="#8b949e" HorizontalAlignment="Center"/>
                                </StackPanel>

                                <StackPanel Grid.Column="1" HorizontalAlignment="Center">
                                    <TextBlock Text="High" FontSize="10" Foreground="#6e7681" HorizontalAlignment="Center"/>
                                    <TextBlock Text="479.50" FontFamily="Cascadia Code" FontSize="11" Foreground="#8b949e" HorizontalAlignment="Center"/>
                                </StackPanel>

                                <StackPanel Grid.Column="2" HorizontalAlignment="Center">
                                    <TextBlock Text="Low" FontSize="10" Foreground="#6e7681" HorizontalAlignment="Center"/>
                                    <TextBlock Text="477.80" FontFamily="Cascadia Code" FontSize="11" Foreground="#8b949e" HorizontalAlignment="Center"/>
                                </StackPanel>
                            </Grid>
                        </StackPanel>
                    </Border>

                    <!-- Add Symbol Card -->
                    <Border Style="{StaticResource CardStyle}" Padding="16" BorderBrush="#30363d" BorderThickness="2" Background="Transparent">
                        <Button Style="{StaticResource SecondaryButtonStyle}" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Background="Transparent" BorderThickness="0">
                            <StackPanel Spacing="8" HorizontalAlignment="Center" VerticalAlignment="Center">
                                <FontIcon Glyph="&#xE710;" FontSize="32" Foreground="#6e7681"/>
                                <TextBlock Text="Add Symbol" FontSize="14" Foreground="#6e7681"/>
                            </StackPanel>
                        </Button>
                    </Border>
                </Grid>
            </StackPanel>

            <!-- ═══════════════════════════════════════════════════════════════════
                 SECTION: INFORMATION CARDS
                 ═══════════════════════════════════════════════════════════════════ -->
            <StackPanel Spacing="16">
                <TextBlock Text="Information Cards" Style="{StaticResource SectionHeaderStyle}"/>

                <Grid ColumnSpacing="16">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Configuration Summary Card -->
                    <Border Style="{StaticResource CardStyle}" Padding="20">
                        <StackPanel Spacing="16">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="Configuration" FontWeight="SemiBold" FontSize="16" Foreground="#e6edf3"/>
                                <Button Grid.Column="1" Style="{StaticResource SecondaryButtonStyle}" Padding="8,4">
                                    <FontIcon Glyph="&#xE70F;" FontSize="14"/>
                                </Button>
                            </Grid>

                            <StackPanel Spacing="12">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="120"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Text="Config File" FontSize="12" Foreground="#8b949e"/>
                                    <TextBlock Grid.Column="1" Text="config/appsettings.json" FontFamily="Cascadia Code" FontSize="12" Foreground="#e6edf3" TextTrimming="CharacterEllipsis"/>
                                </Grid>

                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="120"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Text="Data Source" FontSize="12" Foreground="#8b949e"/>
                                    <StackPanel Grid.Column="1" Orientation="Horizontal" Spacing="8">
                                        <Border Style="{StaticResource TagIBStyle}">
                                            <TextBlock Text="IB" FontSize="10" FontWeight="Bold"/>
                                        </Border>
                                        <TextBlock Text="Interactive Brokers" FontSize="12" Foreground="#e6edf3"/>
                                    </StackPanel>
                                </Grid>

                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="120"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Text="Storage Path" FontSize="12" Foreground="#8b949e"/>
                                    <TextBlock Grid.Column="1" Text="D:\MarketData\live" FontFamily="Cascadia Code" FontSize="12" Foreground="#e6edf3" TextTrimming="CharacterEllipsis"/>
                                </Grid>

                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="120"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Text="Compression" FontSize="12" Foreground="#8b949e"/>
                                    <TextBlock Grid.Column="1" Text="LZ4 (RealTime profile)" FontSize="12" Foreground="#e6edf3"/>
                                </Grid>

                                <Grid>
                                    <Grid.ColumnDefinitions>
