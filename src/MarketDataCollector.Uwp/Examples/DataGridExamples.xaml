<!--
    DataGridExamples.xaml

    This file demonstrates table and data grid patterns for displaying market data.
    These patterns are optimized for real-time updates and high data density.

    Note: This is a reference file. Copy patterns to your actual pages.
-->

<Page
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Background="{StaticResource ConsoleBackgroundDarkBrush}">

    <Page.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="ms-appx:///Styles/AppStyles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Page.Resources>

    <ScrollViewer>
        <StackPanel Padding="32" Spacing="32">

            <!-- ═══════════════════════════════════════════════════════════════════
                 SECTION: PRICE WATCHLIST TABLE
                 ═══════════════════════════════════════════════════════════════════ -->
            <StackPanel Spacing="16">
                <TextBlock Text="Price Watchlist Table" Style="{StaticResource SectionHeaderStyle}"/>

                <Border Style="{StaticResource CardStyle}" Padding="0" MaxWidth="900">
                    <StackPanel>
                        <!-- Table Header -->
                        <Border Background="#161b22" Padding="16,12" CornerRadius="6,6,0,0">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="100"/>
                                    <ColumnDefinition Width="120"/>
                                    <ColumnDefinition Width="100"/>
                                    <ColumnDefinition Width="100"/>
                                    <ColumnDefinition Width="100"/>
                                    <ColumnDefinition Width="120"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <TextBlock Text="Symbol" FontWeight="SemiBold" FontSize="12" Foreground="#8b949e"/>
                                <TextBlock Grid.Column="1" Text="Last Price" FontWeight="SemiBold" FontSize="12" Foreground="#8b949e" HorizontalAlignment="Right"/>
                                <TextBlock Grid.Column="2" Text="Change" FontWeight="SemiBold" FontSize="12" Foreground="#8b949e" HorizontalAlignment="Right"/>
                                <TextBlock Grid.Column="3" Text="% Change" FontWeight="SemiBold" FontSize="12" Foreground="#8b949e" HorizontalAlignment="Right"/>
                                <TextBlock Grid.Column="4" Text="Volume" FontWeight="SemiBold" FontSize="12" Foreground="#8b949e" HorizontalAlignment="Right"/>
                                <TextBlock Grid.Column="5" Text="Bid/Ask" FontWeight="SemiBold" FontSize="12" Foreground="#8b949e" HorizontalAlignment="Right"/>
                                <TextBlock Grid.Column="6" Text="Spread" FontWeight="SemiBold" FontSize="12" Foreground="#8b949e" HorizontalAlignment="Right"/>
                            </Grid>
                        </Border>

                        <!-- Table Body -->
                        <StackPanel Padding="0,0,0,8">
                            <!-- Row: AAPL - Up -->
                            <Border Padding="16,10" Background="Transparent">
                                <Border.Resources>
                                    <Style TargetType="Border">
                                        <Setter Property="Background" Value="Transparent"/>
                                    </Style>
                                </Border.Resources>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="100"/>
                                        <ColumnDefinition Width="120"/>
                                        <ColumnDefinition Width="100"/>
                                        <ColumnDefinition Width="100"/>
                                        <ColumnDefinition Width="100"/>
                                        <ColumnDefinition Width="120"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>

                                    <StackPanel Orientation="Horizontal" Spacing="8">
                                        <TextBlock Text="AAPL" FontWeight="SemiBold" Foreground="#e6edf3"/>
                                        <Border Style="{StaticResource LiveBadgeStyle}" Padding="4,1">
                                            <TextBlock Text="●" FontSize="8" Foreground="#3fb950"/>
                                        </Border>
                                    </StackPanel>
                                    <TextBlock Grid.Column="1" Text="$185.42" FontFamily="Cascadia Code" Foreground="#e6edf3" HorizontalAlignment="Right"/>
                                    <TextBlock Grid.Column="2" Text="+$2.34" FontFamily="Cascadia Code" Foreground="#3fb950" HorizontalAlignment="Right"/>
                                    <TextBlock Grid.Column="3" Text="+1.28%" FontFamily="Cascadia Code" Foreground="#3fb950" HorizontalAlignment="Right"/>
                                    <TextBlock Grid.Column="4" Text="45.2M" FontFamily="Cascadia Code" Foreground="#8b949e" HorizontalAlignment="Right"/>
                                    <TextBlock Grid.Column="5" FontFamily="Cascadia Code" HorizontalAlignment="Right">
                                        <Run Text="185.41" Foreground="#3fb950"/>
                                        <Run Text="/" Foreground="#6e7681"/>
                                        <Run Text="185.43" Foreground="#f85149"/>
                                    </TextBlock>
                                    <TextBlock Grid.Column="6" Text="$0.02" FontFamily="Cascadia Code" Foreground="#8b949e" HorizontalAlignment="Right"/>
                                </Grid>
                            </Border>

                            <Border Height="1" Background="#21262d" Margin="16,0"/>

                            <!-- Row: TSLA - Down -->
                            <Border Padding="16,10">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="100"/>
                                        <ColumnDefinition Width="120"/>
                                        <ColumnDefinition Width="100"/>
                                        <ColumnDefinition Width="100"/>
                                        <ColumnDefinition Width="100"/>
                                        <ColumnDefinition Width="120"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>

                                    <StackPanel Orientation="Horizontal" Spacing="8">
                                        <TextBlock Text="TSLA" FontWeight="SemiBold" Foreground="#e6edf3"/>
                                        <Border Style="{StaticResource LiveBadgeStyle}" Padding="4,1">
                                            <TextBlock Text="●" FontSize="8" Foreground="#3fb950"/>
                                        </Border>
                                    </StackPanel>
                                    <TextBlock Grid.Column="1" Text="$242.15" FontFamily="Cascadia Code" Foreground="#e6edf3" HorizontalAlignment="Right"/>
                                    <TextBlock Grid.Column="2" Text="-$4.62" FontFamily="Cascadia Code" Foreground="#f85149" HorizontalAlignment="Right"/>
                                    <TextBlock Grid.Column="3" Text="-1.87%" FontFamily="Cascadia Code" Foreground="#f85149" HorizontalAlignment="Right"/>
                                    <TextBlock Grid.Column="4" Text="82.1M" FontFamily="Cascadia Code" Foreground="#8b949e" HorizontalAlignment="Right"/>
                                    <TextBlock Grid.Column="5" FontFamily="Cascadia Code" HorizontalAlignment="Right">
                                        <Run Text="242.14" Foreground="#3fb950"/>
                                        <Run Text="/" Foreground="#6e7681"/>
                                        <Run Text="242.16" Foreground="#f85149"/>
                                    </TextBlock>
                                    <TextBlock Grid.Column="6" Text="$0.02" FontFamily="Cascadia Code" Foreground="#8b949e" HorizontalAlignment="Right"/>
                                </Grid>
                            </Border>

                            <Border Height="1" Background="#21262d" Margin="16,0"/>

                            <!-- Row: SPY - Flat -->
                            <Border Padding="16,10">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="100"/>
                                        <ColumnDefinition Width="120"/>
                                        <ColumnDefinition Width="100"/>
                                        <ColumnDefinition Width="100"/>
                                        <ColumnDefinition Width="100"/>
                                        <ColumnDefinition Width="120"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>

                                    <StackPanel Orientation="Horizontal" Spacing="8">
                                        <TextBlock Text="SPY" FontWeight="SemiBold" Foreground="#e6edf3"/>
                                        <Border Style="{StaticResource LiveBadgeStyle}" Padding="4,1">
                                            <TextBlock Text="●" FontSize="8" Foreground="#3fb950"/>
                                        </Border>
                                    </StackPanel>
                                    <TextBlock Grid.Column="1" Text="$478.91" FontFamily="Cascadia Code" Foreground="#e6edf3" HorizontalAlignment="Right"/>
                                    <TextBlock Grid.Column="2" Text="+$0.12" FontFamily="Cascadia Code" Foreground="#8b949e" HorizontalAlignment="Right"/>
                                    <TextBlock Grid.Column="3" Text="+0.03%" FontFamily="Cascadia Code" Foreground="#8b949e" HorizontalAlignment="Right"/>
                                    <TextBlock Grid.Column="4" Text="125.8M" FontFamily="Cascadia Code" Foreground="#8b949e" HorizontalAlignment="Right"/>
                                    <TextBlock Grid.Column="5" FontFamily="Cascadia Code" HorizontalAlignment="Right">
                                        <Run Text="478.90" Foreground="#3fb950"/>
                                        <Run Text="/" Foreground="#6e7681"/>
                                        <Run Text="478.92" Foreground="#f85149"/>
                                    </TextBlock>
                                    <TextBlock Grid.Column="6" Text="$0.02" FontFamily="Cascadia Code" Foreground="#8b949e" HorizontalAlignment="Right"/>
                                </Grid>
                            </Border>

                            <Border Height="1" Background="#21262d" Margin="16,0"/>

                            <!-- Row: NVDA - Strong Up -->
                            <Border Padding="16,10">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="100"/>
                                        <ColumnDefinition Width="120"/>
                                        <ColumnDefinition Width="100"/>
                                        <ColumnDefinition Width="100"/>
                                        <ColumnDefinition Width="100"/>
                                        <ColumnDefinition Width="120"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>

                                    <StackPanel Orientation="Horizontal" Spacing="8">
                                        <TextBlock Text="NVDA" FontWeight="SemiBold" Foreground="#e6edf3"/>
                                        <Border Style="{StaticResource LiveBadgeStyle}" Padding="4,1">
                                            <TextBlock Text="●" FontSize="8" Foreground="#3fb950"/>
                                        </Border>
                                    </StackPanel>
                                    <TextBlock Grid.Column="1" Text="$892.34" FontFamily="Cascadia Code" Foreground="#e6edf3" HorizontalAlignment="Right"/>
                                    <TextBlock Grid.Column="2" Text="+$28.45" FontFamily="Cascadia Code" Foreground="#3fb950" HorizontalAlignment="Right"/>
                                    <TextBlock Grid.Column="3" Text="+3.29%" FontFamily="Cascadia Code" Foreground="#3fb950" HorizontalAlignment="Right"/>
                                    <TextBlock Grid.Column="4" Text="68.4M" FontFamily="Cascadia Code" Foreground="#8b949e" HorizontalAlignment="Right"/>
                                    <TextBlock Grid.Column="5" FontFamily="Cascadia Code" HorizontalAlignment="Right">
                                        <Run Text="892.32" Foreground="#3fb950"/>
                                        <Run Text="/" Foreground="#6e7681"/>
                                        <Run Text="892.36" Foreground="#f85149"/>
                                    </TextBlock>
                                    <TextBlock Grid.Column="6" Text="$0.04" FontFamily="Cascadia Code" Foreground="#8b949e" HorizontalAlignment="Right"/>
                                </Grid>
                            </Border>
                        </StackPanel>
                    </StackPanel>
                </Border>
            </StackPanel>

            <!-- ═══════════════════════════════════════════════════════════════════
                 SECTION: ORDER BOOK (DEPTH OF MARKET)
                 ═══════════════════════════════════════════════════════════════════ -->
            <StackPanel Spacing="16">
                <TextBlock Text="Order Book (Level 2 Depth)" Style="{StaticResource SectionHeaderStyle}"/>

                <Border Style="{StaticResource CardStyle}" Padding="16" MaxWidth="500">
                    <StackPanel Spacing="12">
                        <!-- Header -->
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <StackPanel Orientation="Horizontal" Spacing="12">
                                <TextBlock Text="AAPL" FontWeight="SemiBold" FontSize="18" Foreground="#e6edf3"/>
                                <TextBlock Text="$185.42" FontSize="18" Foreground="#e6edf3" VerticalAlignment="Center"/>
                            </StackPanel>
                            <TextBlock Grid.Column="1" Text="Spread: $0.02 (0.01%)" FontSize="12" Foreground="#8b949e"/>
                        </Grid>

                        <!-- Column Headers -->
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="80"/>
                                <ColumnDefinition Width="10"/>
                                <ColumnDefinition Width="80"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Text="Bid Size" FontSize="11" Foreground="#8b949e" HorizontalAlignment="Right"/>
                            <TextBlock Grid.Column="1" Text="Bid" FontSize="11" Foreground="#8b949e" HorizontalAlignment="Center"/>
                            <TextBlock Grid.Column="3" Text="Ask" FontSize="11" Foreground="#8b949e" HorizontalAlignment="Center"/>
                            <TextBlock Grid.Column="4" Text="Ask Size" FontSize="11" Foreground="#8b949e" HorizontalAlignment="Left"/>
                        </Grid>

                        <!-- Order Book Rows -->
                        <StackPanel Spacing="2">
                            <!-- Level 1 (BBO) -->
                            <Grid Height="28">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="80"/>
                                    <ColumnDefinition Width="10"/>
                                    <ColumnDefinition Width="80"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <!-- Bid bar -->
                                <Border Background="#1a3fb950" HorizontalAlignment="Right" Width="180" CornerRadius="2,0,0,2"/>
                                <TextBlock Text="1,500" FontFamily="Cascadia Code" FontSize="12" Foreground="#3fb950" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,0,4,0"/>

                                <Border Grid.Column="1" Background="#0d3fb950" CornerRadius="2">
                                    <TextBlock Text="185.41" FontFamily="Cascadia Code" FontSize="12" FontWeight="SemiBold" Foreground="#3fb950" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>

                                <Border Grid.Column="3" Background="#0df85149" CornerRadius="2">
                                    <TextBlock Text="185.43" FontFamily="Cascadia Code" FontSize="12" FontWeight="SemiBold" Foreground="#f85149" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>

                                <!-- Ask bar -->
                                <Border Grid.Column="4" Background="#1af85149" HorizontalAlignment="Left" Width="120" CornerRadius="0,2,2,0"/>
                                <TextBlock Grid.Column="4" Text="800" FontFamily="Cascadia Code" FontSize="12" Foreground="#f85149" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="4,0,0,0"/>
                            </Grid>

                            <!-- Level 2 -->
                            <Grid Height="24">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="80"/>
                                    <ColumnDefinition Width="10"/>
                                    <ColumnDefinition Width="80"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <Border Background="#103fb950" HorizontalAlignment="Right" Width="140" CornerRadius="2,0,0,2"/>
                                <TextBlock Text="1,200" FontFamily="Cascadia Code" FontSize="11" Foreground="#3fb950" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,0,4,0"/>

                                <TextBlock Grid.Column="1" Text="185.40" FontFamily="Cascadia Code" FontSize="11" Foreground="#3fb950" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                <TextBlock Grid.Column="3" Text="185.44" FontFamily="Cascadia Code" FontSize="11" Foreground="#f85149" HorizontalAlignment="Center" VerticalAlignment="Center"/>

                                <Border Grid.Column="4" Background="#10f85149" HorizontalAlignment="Left" Width="160" CornerRadius="0,2,2,0"/>
                                <TextBlock Grid.Column="4" Text="1,100" FontFamily="Cascadia Code" FontSize="11" Foreground="#f85149" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="4,0,0,0"/>
                            </Grid>

                            <!-- Level 3 -->
                            <Grid Height="24">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="80"/>
                                    <ColumnDefinition Width="10"/>
                                    <ColumnDefinition Width="80"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <Border Background="#0a3fb950" HorizontalAlignment="Right" Width="100" CornerRadius="2,0,0,2"/>
                                <TextBlock Text="800" FontFamily="Cascadia Code" FontSize="11" Foreground="#3fb950" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,0,4,0"/>

                                <TextBlock Grid.Column="1" Text="185.39" FontFamily="Cascadia Code" FontSize="11" Foreground="#3fb950" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                <TextBlock Grid.Column="3" Text="185.45" FontFamily="Cascadia Code" FontSize="11" Foreground="#f85149" HorizontalAlignment="Center" VerticalAlignment="Center"/>

                                <Border Grid.Column="4" Background="#0af85149" HorizontalAlignment="Left" Width="200" CornerRadius="0,2,2,0"/>
                                <TextBlock Grid.Column="4" Text="1,400" FontFamily="Cascadia Code" FontSize="11" Foreground="#f85149" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="4,0,0,0"/>
                            </Grid>

                            <!-- Level 4 -->
                            <Grid Height="24">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="80"/>
                                    <ColumnDefinition Width="10"/>
                                    <ColumnDefinition Width="80"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <Border Background="#053fb950" HorizontalAlignment="Right" Width="60" CornerRadius="2,0,0,2"/>
                                <TextBlock Text="500" FontFamily="Cascadia Code" FontSize="11" Foreground="#3fb950" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,0,4,0"/>

                                <TextBlock Grid.Column="1" Text="185.38" FontFamily="Cascadia Code" FontSize="11" Foreground="#3fb950" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                <TextBlock Grid.Column="3" Text="185.46" FontFamily="Cascadia Code" FontSize="11" Foreground="#f85149" HorizontalAlignment="Center" VerticalAlignment="Center"/>

                                <Border Grid.Column="4" Background="#05f85149" HorizontalAlignment="Left" Width="90" CornerRadius="0,2,2,0"/>
                                <TextBlock Grid.Column="4" Text="600" FontFamily="Cascadia Code" FontSize="11" Foreground="#f85149" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="4,0,0,0"/>
                            </Grid>

                            <!-- Level 5 -->
                            <Grid Height="24">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="80"/>
                                    <ColumnDefinition Width="10"/>
                                    <ColumnDefinition Width="80"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <Border Background="#033fb950" HorizontalAlignment="Right" Width="40" CornerRadius="2,0,0,2"/>
                                <TextBlock Text="300" FontFamily="Cascadia Code" FontSize="11" Foreground="#3fb950" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,0,4,0"/>

                                <TextBlock Grid.Column="1" Text="185.37" FontFamily="Cascadia Code" FontSize="11" Foreground="#3fb950" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                <TextBlock Grid.Column="3" Text="185.47" FontFamily="Cascadia Code" FontSize="11" Foreground="#f85149" HorizontalAlignment="Center" VerticalAlignment="Center"/>

                                <Border Grid.Column="4" Background="#03f85149" HorizontalAlignment="Left" Width="50" CornerRadius="0,2,2,0"/>
                                <TextBlock Grid.Column="4" Text="350" FontFamily="Cascadia Code" FontSize="11" Foreground="#f85149" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="4,0,0,0"/>
                            </Grid>
                        </StackPanel>

                        <!-- Totals -->
                        <Border Height="1" Background="#30363d"/>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Orientation="Horizontal" Spacing="8" HorizontalAlignment="Center">
                                <TextBlock Text="Total Bid:" FontSize="11" Foreground="#8b949e"/>
                                <TextBlock Text="4,300" FontFamily="Cascadia Code" FontSize="11" Foreground="#3fb950"/>
                            </StackPanel>

                            <StackPanel Grid.Column="1" Orientation="Horizontal" Spacing="8" HorizontalAlignment="Center">
                                <TextBlock Text="Total Ask:" FontSize="11" Foreground="#8b949e"/>
                                <TextBlock Text="4,250" FontFamily="Cascadia Code" FontSize="11" Foreground="#f85149"/>
                            </StackPanel>
                        </Grid>
                    </StackPanel>
                </Border>
            </StackPanel>

            <!-- ═══════════════════════════════════════════════════════════════════
                 SECTION: TRADE HISTORY TABLE
                 ═══════════════════════════════════════════════════════════════════ -->
            <StackPanel Spacing="16">
                <TextBlock Text="Time &amp; Sales (Trade History)" Style="{StaticResource SectionHeaderStyle}"/>

                <Border Style="{StaticResource TerminalCardStyle}" MaxWidth="600">
                    <StackPanel>
                        <!-- Header -->
                        <Border Style="{StaticResource TerminalHeaderStyle}">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <StackPanel Orientation="Horizontal" Spacing="8">
                                    <TextBlock Text="AAPL" FontWeight="SemiBold" Foreground="#e6edf3"/>
                                    <TextBlock Text="Time &amp; Sales" FontSize="12" Foreground="#8b949e"/>
                                </StackPanel>
                                <TextBlock Grid.Column="1" Text="Last 50 trades" FontSize="11" Foreground="#6e7681"/>
                            </Grid>
                        </Border>

                        <!-- Table Header -->
                        <Border Background="#161b22" Padding="12,8">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="100"/>
                                    <ColumnDefinition Width="100"/>
                                    <ColumnDefinition Width="80"/>
                                    <ColumnDefinition Width="80"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <TextBlock Text="Time" FontSize="11" FontWeight="SemiBold" Foreground="#8b949e"/>
                                <TextBlock Grid.Column="1" Text="Price" FontSize="11" FontWeight="SemiBold" Foreground="#8b949e" HorizontalAlignment="Right"/>
                                <TextBlock Grid.Column="2" Text="Size" FontSize="11" FontWeight="SemiBold" Foreground="#8b949e" HorizontalAlignment="Right"/>
                                <TextBlock Grid.Column="3" Text="Side" FontSize="11" FontWeight="SemiBold" Foreground="#8b949e" HorizontalAlignment="Center"/>
                                <TextBlock Grid.Column="4" Text="Exchange" FontSize="11" FontWeight="SemiBold" Foreground="#8b949e" HorizontalAlignment="Right"/>
                            </Grid>
                        </Border>

                        <!-- Trade Rows -->
                        <Border Style="{StaticResource TerminalBodyStyle}" Padding="0" MaxHeight="250">
                            <ScrollViewer>
                                <StackPanel Padding="12,4">
                                    <!-- Trade 1: Buy at Ask -->
                                    <Grid Padding="0,4">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="100"/>
                                            <ColumnDefinition Width="100"/>
                                            <ColumnDefinition Width="80"/>
                                            <ColumnDefinition Width="80"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>

                                        <TextBlock Text="10:42:15.234" FontFamily="Cascadia Code" FontSize="11" Foreground="#6e7681"/>
                                        <TextBlock Grid.Column="1" Text="185.43" FontFamily="Cascadia Code" FontSize="11" Foreground="#3fb950" HorizontalAlignment="Right"/>
                                        <TextBlock Grid.Column="2" Text="500" FontFamily="Cascadia Code" FontSize="11" Foreground="#e6edf3" HorizontalAlignment="Right"/>
                                        <Border Grid.Column="3" Background="#0d3fb950" CornerRadius="2" Padding="8,2" HorizontalAlignment="Center">
                                            <TextBlock Text="BUY" FontSize="10" FontWeight="SemiBold" Foreground="#3fb950"/>
                                        </Border>
                                        <TextBlock Grid.Column="4" Text="NASDAQ" FontFamily="Cascadia Code" FontSize="11" Foreground="#8b949e" HorizontalAlignment="Right"/>
                                    </Grid>

                                    <!-- Trade 2: Sell at Bid -->
                                    <Grid Padding="0,4">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="100"/>
                                            <ColumnDefinition Width="100"/>
                                            <ColumnDefinition Width="80"/>
                                            <ColumnDefinition Width="80"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>

                                        <TextBlock Text="10:42:15.156" FontFamily="Cascadia Code" FontSize="11" Foreground="#6e7681"/>
                                        <TextBlock Grid.Column="1" Text="185.41" FontFamily="Cascadia Code" FontSize="11" Foreground="#f85149" HorizontalAlignment="Right"/>
                                        <TextBlock Grid.Column="2" Text="200" FontFamily="Cascadia Code" FontSize="11" Foreground="#e6edf3" HorizontalAlignment="Right"/>
                                        <Border Grid.Column="3" Background="#0df85149" CornerRadius="2" Padding="8,2" HorizontalAlignment="Center">
                                            <TextBlock Text="SELL" FontSize="10" FontWeight="SemiBold" Foreground="#f85149"/>
                                        </Border>
                                        <TextBlock Grid.Column="4" Text="NYSE" FontFamily="Cascadia Code" FontSize="11" Foreground="#8b949e" HorizontalAlignment="Right"/>
                                    </Grid>

                                    <!-- Trade 3: Large Block -->
                                    <Grid Padding="0,4" Background="#0da371f7">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="100"/>
                                            <ColumnDefinition Width="100"/>
                                            <ColumnDefinition Width="80"/>
                                            <ColumnDefinition Width="80"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>

                                        <TextBlock Text="10:42:14.892" FontFamily="Cascadia Code" FontSize="11" Foreground="#6e7681"/>
                                        <TextBlock Grid.Column="1" Text="185.42" FontFamily="Cascadia Code" FontSize="11" Foreground="#3fb950" HorizontalAlignment="Right"/>
                                        <TextBlock Grid.Column="2" Text="10,000" FontFamily="Cascadia Code" FontSize="11" FontWeight="SemiBold" Foreground="#a371f7" HorizontalAlignment="Right"/>
                                        <Border Grid.Column="3" Background="#0d3fb950" CornerRadius="2" Padding="8,2" HorizontalAlignment="Center">
                                            <TextBlock Text="BUY" FontSize="10" FontWeight="SemiBold" Foreground="#3fb950"/>
                                        </Border>
                                        <TextBlock Grid.Column="4" Text="BATS" FontFamily="Cascadia Code" FontSize="11" Foreground="#8b949e" HorizontalAlignment="Right"/>
                                    </Grid>

                                    <!-- Trade 4 -->
                                    <Grid Padding="0,4">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="100"/>
                                            <ColumnDefinition Width="100"/>
                                            <ColumnDefinition Width="80"/>
                                            <ColumnDefinition Width="80"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>

                                        <TextBlock Text="10:42:14.654" FontFamily="Cascadia Code" FontSize="11" Foreground="#6e7681"/>
                                        <TextBlock Grid.Column="1" Text="185.42" FontFamily="Cascadia Code" FontSize="11" Foreground="#3fb950" HorizontalAlignment="Right"/>
                                        <TextBlock Grid.Column="2" Text="100" FontFamily="Cascadia Code" FontSize="11" Foreground="#e6edf3" HorizontalAlignment="Right"/>
                                        <Border Grid.Column="3" Background="#0d3fb950" CornerRadius="2" Padding="8,2" HorizontalAlignment="Center">
