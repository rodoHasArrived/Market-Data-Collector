<!--
    NotificationExamples.xaml

    This file demonstrates toast notifications, in-app alerts, and notification center patterns.
    These components provide feedback for system events and user actions.

    Note: This is a reference file. Copy patterns to your actual pages.
-->

<Page
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Background="{StaticResource ConsoleBackgroundDarkBrush}">

    <Page.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="ms-appx:///Styles/AppStyles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Page.Resources>

    <ScrollViewer>
        <StackPanel Padding="32" Spacing="32">

            <!-- ═══════════════════════════════════════════════════════════════════
                 SECTION: TOAST NOTIFICATIONS
                 ═══════════════════════════════════════════════════════════════════ -->
            <StackPanel Spacing="16">
                <TextBlock Text="Toast Notifications" Style="{StaticResource SectionHeaderStyle}"/>
                <TextBlock Text="Temporary notifications that appear and auto-dismiss" FontSize="12" Foreground="#8b949e"/>

                <StackPanel Spacing="16" MaxWidth="400">
                    <!-- Success Toast -->
                    <Border Background="#161b22" CornerRadius="8" Padding="16" BorderBrush="#3fb950" BorderThickness="0,0,0,3">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <Border Background="#1a3fb950" CornerRadius="20" Width="40" Height="40" VerticalAlignment="Top">
                                <FontIcon Glyph="&#xE73E;" FontSize="20" Foreground="#3fb950" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>

                            <StackPanel Grid.Column="1" Margin="12,0" Spacing="4">
                                <TextBlock Text="Connection Established" FontWeight="SemiBold" Foreground="#e6edf3"/>
                                <TextBlock Text="Successfully connected to Interactive Brokers gateway." FontSize="12" Foreground="#8b949e" TextWrapping="Wrap"/>
                                <TextBlock Text="Just now" FontSize="10" Foreground="#6e7681"/>
                            </StackPanel>

                            <Button Grid.Column="2" Style="{StaticResource SecondaryButtonStyle}" Padding="8" Background="Transparent" BorderThickness="0" VerticalAlignment="Top">
                                <FontIcon Glyph="&#xE711;" FontSize="12" Foreground="#6e7681"/>
                            </Button>
                        </Grid>
                    </Border>

                    <!-- Info Toast -->
                    <Border Background="#161b22" CornerRadius="8" Padding="16" BorderBrush="#58a6ff" BorderThickness="0,0,0,3">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <Border Background="#1a58a6ff" CornerRadius="20" Width="40" Height="40" VerticalAlignment="Top">
                                <FontIcon Glyph="&#xE946;" FontSize="20" Foreground="#58a6ff" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>

                            <StackPanel Grid.Column="1" Margin="12,0" Spacing="4">
                                <TextBlock Text="Backfill Started" FontWeight="SemiBold" Foreground="#e6edf3"/>
                                <TextBlock Text="Historical data backfill for AAPL started. 1,000 bars to fetch." FontSize="12" Foreground="#8b949e" TextWrapping="Wrap"/>
                                <TextBlock Text="2 minutes ago" FontSize="10" Foreground="#6e7681"/>
                            </StackPanel>

                            <Button Grid.Column="2" Style="{StaticResource SecondaryButtonStyle}" Padding="8" Background="Transparent" BorderThickness="0" VerticalAlignment="Top">
                                <FontIcon Glyph="&#xE711;" FontSize="12" Foreground="#6e7681"/>
                            </Button>
                        </Grid>
                    </Border>

                    <!-- Warning Toast -->
                    <Border Background="#161b22" CornerRadius="8" Padding="16" BorderBrush="#d29922" BorderThickness="0,0,0,3">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <Border Background="#1ad29922" CornerRadius="20" Width="40" Height="40" VerticalAlignment="Top">
                                <FontIcon Glyph="&#xE7BA;" FontSize="20" Foreground="#d29922" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>

                            <StackPanel Grid.Column="1" Margin="12,0" Spacing="4">
                                <TextBlock Text="Rate Limit Warning" FontWeight="SemiBold" Foreground="#e6edf3"/>
                                <TextBlock Text="API rate limit at 85%. Requests may be throttled soon." FontSize="12" Foreground="#8b949e" TextWrapping="Wrap"/>
                                <TextBlock Text="5 minutes ago" FontSize="10" Foreground="#6e7681"/>
                            </StackPanel>

                            <Button Grid.Column="2" Style="{StaticResource SecondaryButtonStyle}" Padding="8" Background="Transparent" BorderThickness="0" VerticalAlignment="Top">
                                <FontIcon Glyph="&#xE711;" FontSize="12" Foreground="#6e7681"/>
                            </Button>
                        </Grid>
                    </Border>

                    <!-- Error Toast -->
                    <Border Background="#161b22" CornerRadius="8" Padding="16" BorderBrush="#f85149" BorderThickness="0,0,0,3">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <Border Background="#1af85149" CornerRadius="20" Width="40" Height="40" VerticalAlignment="Top">
                                <FontIcon Glyph="&#xE783;" FontSize="20" Foreground="#f85149" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>

                            <StackPanel Grid.Column="1" Margin="12,0" Spacing="4">
                                <TextBlock Text="Connection Lost" FontWeight="SemiBold" Foreground="#e6edf3"/>
                                <TextBlock Text="Lost connection to data provider. Attempting to reconnect..." FontSize="12" Foreground="#8b949e" TextWrapping="Wrap"/>
                                <StackPanel Orientation="Horizontal" Spacing="12" Margin="0,8,0,0">
                                    <Button Style="{StaticResource AccentButtonStyle}" Padding="12,6" Content="Retry Now"/>
                                    <Button Style="{StaticResource SecondaryButtonStyle}" Padding="12,6" Content="Dismiss"/>
                                </StackPanel>
                            </StackPanel>

                            <Button Grid.Column="2" Style="{StaticResource SecondaryButtonStyle}" Padding="8" Background="Transparent" BorderThickness="0" VerticalAlignment="Top">
                                <FontIcon Glyph="&#xE711;" FontSize="12" Foreground="#6e7681"/>
                            </Button>
                        </Grid>
                    </Border>
                </StackPanel>
            </StackPanel>

            <!-- ═══════════════════════════════════════════════════════════════════
                 SECTION: INLINE ALERTS (BANNERS)
                 ═══════════════════════════════════════════════════════════════════ -->
            <StackPanel Spacing="16">
                <TextBlock Text="Inline Alerts (Banners)" Style="{StaticResource SectionHeaderStyle}"/>
                <TextBlock Text="Persistent alerts embedded in page content" FontSize="12" Foreground="#8b949e"/>

                <StackPanel Spacing="12" MaxWidth="700">
                    <!-- Info Banner -->
                    <Border Background="#1f2937" CornerRadius="6" Padding="16">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <FontIcon Glyph="&#xE946;" FontSize="20" Foreground="#58a6ff" VerticalAlignment="Top" Margin="0,2,0,0"/>

                            <StackPanel Grid.Column="1" Margin="12,0" Spacing="4">
                                <TextBlock Text="Market Hours" FontWeight="SemiBold" Foreground="#e6edf3"/>
                                <TextBlock Text="Regular trading hours: 9:30 AM - 4:00 PM EST. Extended hours data may have limited liquidity." FontSize="13" Foreground="#8b949e" TextWrapping="Wrap"/>
                            </StackPanel>

                            <Button Grid.Column="2" Style="{StaticResource SecondaryButtonStyle}" Padding="8" Background="Transparent" BorderThickness="0">
                                <FontIcon Glyph="&#xE711;" FontSize="14" Foreground="#6e7681"/>
                            </Button>
                        </Grid>
                    </Border>

                    <!-- Success Banner -->
                    <Border Background="#1a2e1f" CornerRadius="6" Padding="16">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <FontIcon Glyph="&#xE73E;" FontSize="20" Foreground="#3fb950" VerticalAlignment="Top" Margin="0,2,0,0"/>

                            <StackPanel Grid.Column="1" Margin="12,0" Spacing="4">
                                <TextBlock Text="Configuration Saved" FontWeight="SemiBold" Foreground="#e6edf3"/>
                                <TextBlock Text="Your settings have been saved successfully. Changes will take effect immediately." FontSize="13" Foreground="#8b949e" TextWrapping="Wrap"/>
                            </StackPanel>

                            <Button Grid.Column="2" Style="{StaticResource SecondaryButtonStyle}" Padding="8" Background="Transparent" BorderThickness="0">
                                <FontIcon Glyph="&#xE711;" FontSize="14" Foreground="#6e7681"/>
                            </Button>
                        </Grid>
                    </Border>

                    <!-- Warning Banner with Action -->
                    <Border Background="#2d2a1f" CornerRadius="6" Padding="16">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <FontIcon Glyph="&#xE7BA;" FontSize="20" Foreground="#d29922" VerticalAlignment="Top" Margin="0,2,0,0"/>

                            <StackPanel Grid.Column="1" Margin="12,0" Spacing="4">
                                <TextBlock Text="Storage Space Low" FontWeight="SemiBold" Foreground="#e6edf3"/>
                                <TextBlock Text="Only 5.2 GB remaining on your data drive. Consider archiving old data or expanding storage." FontSize="13" Foreground="#8b949e" TextWrapping="Wrap"/>
                                <StackPanel Orientation="Horizontal" Spacing="12" Margin="0,8,0,0">
                                    <Button Style="{StaticResource AccentButtonStyle}" Padding="12,6" Content="Archive Now"/>
                                    <Button Style="{StaticResource SecondaryButtonStyle}" Padding="12,6" Content="View Storage"/>
                                </StackPanel>
                            </StackPanel>

                            <Button Grid.Column="2" Style="{StaticResource SecondaryButtonStyle}" Padding="8" Background="Transparent" BorderThickness="0" VerticalAlignment="Top">
                                <FontIcon Glyph="&#xE711;" FontSize="14" Foreground="#6e7681"/>
                            </Button>
                        </Grid>
                    </Border>

                    <!-- Error Banner -->
                    <Border Background="#2d1f1f" CornerRadius="6" Padding="16">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <FontIcon Glyph="&#xE783;" FontSize="20" Foreground="#f85149" VerticalAlignment="Top" Margin="0,2,0,0"/>

                            <StackPanel Grid.Column="1" Margin="12,0" Spacing="4">
                                <TextBlock Text="Authentication Failed" FontWeight="SemiBold" Foreground="#e6edf3"/>
                                <TextBlock Text="Unable to authenticate with the data provider. Please check your API credentials and try again." FontSize="13" Foreground="#8b949e" TextWrapping="Wrap"/>
                                <TextBlock Text="Error code: AUTH_401 - Invalid or expired API key" FontFamily="Cascadia Code" FontSize="11" Foreground="#f85149" Margin="0,4,0,0"/>
                            </StackPanel>

                            <Button Grid.Column="2" Style="{StaticResource SecondaryButtonStyle}" Padding="8" Background="Transparent" BorderThickness="0" VerticalAlignment="Top">
                                <FontIcon Glyph="&#xE711;" FontSize="14" Foreground="#6e7681"/>
                            </Button>
                        </Grid>
                    </Border>
                </StackPanel>
            </StackPanel>

            <!-- ═══════════════════════════════════════════════════════════════════
                 SECTION: NOTIFICATION CENTER
                 ═══════════════════════════════════════════════════════════════════ -->
            <StackPanel Spacing="16">
                <TextBlock Text="Notification Center" Style="{StaticResource SectionHeaderStyle}"/>
                <TextBlock Text="Panel for viewing notification history" FontSize="12" Foreground="#8b949e"/>

                <Border Style="{StaticResource CardStyle}" Padding="0" MaxWidth="400">
                    <StackPanel>
                        <!-- Header -->
                        <Border Background="#161b22" Padding="16" CornerRadius="6,6,0,0">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <StackPanel Orientation="Horizontal" Spacing="8">
                                    <TextBlock Text="Notifications" FontWeight="SemiBold" FontSize="16" Foreground="#e6edf3"/>
                                    <Border Style="{StaticResource CountBadgeStyle}">
                                        <TextBlock Text="5" FontSize="10" FontWeight="SemiBold"/>
                                    </Border>
                                </StackPanel>

                                <Button Grid.Column="1" Style="{StaticResource SecondaryButtonStyle}" Padding="8,4" Content="Clear All"/>
                            </Grid>
                        </Border>

                        <!-- Notification List -->
                        <StackPanel Padding="8">
                            <!-- Unread Notification -->
                            <Border Background="#1a58a6ff" Padding="12" CornerRadius="6" Margin="0,0,0,8">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="8"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <Ellipse Width="8" Height="8" Fill="#58a6ff" VerticalAlignment="Top" Margin="0,6,0,0"/>

                                    <StackPanel Grid.Column="1" Margin="8,0" Spacing="2">
                                        <TextBlock Text="Backfill completed" FontWeight="SemiBold" FontSize="13" Foreground="#e6edf3"/>
                                        <TextBlock Text="AAPL: 252 daily bars imported" FontSize="12" Foreground="#8b949e"/>
                                        <TextBlock Text="2 minutes ago" FontSize="10" Foreground="#6e7681"/>
                                    </StackPanel>

                                    <Button Grid.Column="2" Style="{StaticResource SecondaryButtonStyle}" Padding="6" Background="Transparent" BorderThickness="0">
                                        <FontIcon Glyph="&#xE711;" FontSize="10" Foreground="#6e7681"/>
                                    </Button>
                                </Grid>
                            </Border>

                            <!-- Unread Warning -->
                            <Border Background="#1ad29922" Padding="12" CornerRadius="6" Margin="0,0,0,8">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="8"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <Ellipse Width="8" Height="8" Fill="#d29922" VerticalAlignment="Top" Margin="0,6,0,0"/>

                                    <StackPanel Grid.Column="1" Margin="8,0" Spacing="2">
                                        <TextBlock Text="Sequence gap detected" FontWeight="SemiBold" FontSize="13" Foreground="#e6edf3"/>
                                        <TextBlock Text="TSLA trades: 3 events missing" FontSize="12" Foreground="#8b949e"/>
                                        <TextBlock Text="15 minutes ago" FontSize="10" Foreground="#6e7681"/>
                                    </StackPanel>

                                    <Button Grid.Column="2" Style="{StaticResource SecondaryButtonStyle}" Padding="6" Background="Transparent" BorderThickness="0">
                                        <FontIcon Glyph="&#xE711;" FontSize="10" Foreground="#6e7681"/>
                                    </Button>
                                </Grid>
                            </Border>

                            <!-- Read Notification -->
                            <Border Background="Transparent" Padding="12" CornerRadius="6" Margin="0,0,0,8">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="8"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <Ellipse Width="8" Height="8" Fill="Transparent" VerticalAlignment="Top" Margin="0,6,0,0"/>

                                    <StackPanel Grid.Column="1" Margin="8,0" Spacing="2">
                                        <TextBlock Text="Connected to Alpaca" FontWeight="SemiBold" FontSize="13" Foreground="#8b949e"/>
                                        <TextBlock Text="WebSocket connection established" FontSize="12" Foreground="#6e7681"/>
                                        <TextBlock Text="1 hour ago" FontSize="10" Foreground="#6e7681"/>
                                    </StackPanel>

                                    <Button Grid.Column="2" Style="{StaticResource SecondaryButtonStyle}" Padding="6" Background="Transparent" BorderThickness="0">
                                        <FontIcon Glyph="&#xE711;" FontSize="10" Foreground="#6e7681"/>
                                    </Button>
                                </Grid>
                            </Border>

                            <!-- Read Notification -->
                            <Border Background="Transparent" Padding="12" CornerRadius="6" Margin="0,0,0,8">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="8"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <Ellipse Width="8" Height="8" Fill="Transparent" VerticalAlignment="Top" Margin="0,6,0,0"/>

                                    <StackPanel Grid.Column="1" Margin="8,0" Spacing="2">
                                        <TextBlock Text="Session started" FontWeight="SemiBold" FontSize="13" Foreground="#8b949e"/>
                                        <TextBlock Text="New collection session initialized" FontSize="12" Foreground="#6e7681"/>
                                        <TextBlock Text="2 hours ago" FontSize="10" Foreground="#6e7681"/>
                                    </StackPanel>

                                    <Button Grid.Column="2" Style="{StaticResource SecondaryButtonStyle}" Padding="6" Background="Transparent" BorderThickness="0">
                                        <FontIcon Glyph="&#xE711;" FontSize="10" Foreground="#6e7681"/>
                                    </Button>
                                </Grid>
                            </Border>
                        </StackPanel>

                        <!-- Footer -->
                        <Border BorderBrush="#30363d" BorderThickness="0,1,0,0" Padding="16">
                            <Button Style="{StaticResource SecondaryButtonStyle}" Content="View All Notifications" HorizontalAlignment="Stretch"/>
                        </Border>
                    </StackPanel>
                </Border>
            </StackPanel>

            <!-- ═══════════════════════════════════════════════════════════════════
                 SECTION: CONFIRMATION DIALOGS
                 ═══════════════════════════════════════════════════════════════════ -->
            <StackPanel Spacing="16">
                <TextBlock Text="Confirmation Dialogs" Style="{StaticResource SectionHeaderStyle}"/>
                <TextBlock Text="Modal dialogs for user confirmations" FontSize="12" Foreground="#8b949e"/>

                <StackPanel Orientation="Horizontal" Spacing="24">
                    <!-- Danger Confirmation -->
                    <Border Style="{StaticResource CardStyle}" Padding="24" MaxWidth="400">
                        <StackPanel Spacing="16">
                            <StackPanel Orientation="Horizontal" Spacing="12">
                                <Border Background="#2d1f1f" CornerRadius="20" Width="40" Height="40">
                                    <FontIcon Glyph="&#xE74D;" FontSize="18" Foreground="#f85149" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                                <TextBlock Text="Delete Session Data" FontWeight="SemiBold" FontSize="18" Foreground="#e6edf3" VerticalAlignment="Center"/>
                            </StackPanel>

                            <TextBlock Text="Are you sure you want to delete all data from session 'sess_2024-01-09_093000'? This action cannot be undone." FontSize="13" Foreground="#8b949e" TextWrapping="Wrap"/>

                            <Border Background="#2d1f1f" CornerRadius="6" Padding="12">
                                <StackPanel Spacing="4">
                                    <TextBlock Text="This will delete:" FontSize="12" FontWeight="SemiBold" Foreground="#f85149"/>
                                    <TextBlock Text="• 1,234,567 trade events" FontSize="12" Foreground="#8b949e"/>
                                    <TextBlock Text="• 987,654 quote events" FontSize="12" Foreground="#8b949e"/>
                                    <TextBlock Text="• 2.4 GB of storage" FontSize="12" Foreground="#8b949e"/>
                                </StackPanel>
                            </Border>

                            <StackPanel Orientation="Horizontal" Spacing="12" HorizontalAlignment="Right">
                                <Button Style="{StaticResource SecondaryButtonStyle}" Content="Cancel" Padding="16,8"/>
                                <Button Style="{StaticResource DangerButtonStyle}" Content="Delete" Padding="16,8"/>
                            </StackPanel>
                        </StackPanel>
                    </Border>

                    <!-- Standard Confirmation -->
                    <Border Style="{StaticResource CardStyle}" Padding="24" MaxWidth="400">
                        <StackPanel Spacing="16">
                            <StackPanel Orientation="Horizontal" Spacing="12">
                                <Border Background="#1a58a6ff" CornerRadius="20" Width="40" Height="40">
                                    <FontIcon Glyph="&#xE8F4;" FontSize="18" Foreground="#58a6ff" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                                <TextBlock Text="Export Data" FontWeight="SemiBold" FontSize="18" Foreground="#e6edf3" VerticalAlignment="Center"/>
                            </StackPanel>

                            <TextBlock Text="Export all data for selected symbols to Parquet format?" FontSize="13" Foreground="#8b949e" TextWrapping="Wrap"/>

                            <Border Background="#1f2937" CornerRadius="6" Padding="12">
                                <Grid RowSpacing="8">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="100"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>

                                    <TextBlock Text="Symbols:" FontSize="12" Foreground="#6e7681"/>
                                    <TextBlock Grid.Column="1" Text="AAPL, TSLA, SPY" FontSize="12" Foreground="#e6edf3"/>

                                    <TextBlock Grid.Row="1" Text="Date Range:" FontSize="12" Foreground="#6e7681"/>
                                    <TextBlock Grid.Row="1" Grid.Column="1" Text="Jan 1 - Dec 31, 2024" FontSize="12" Foreground="#e6edf3"/>

                                    <TextBlock Grid.Row="2" Text="Est. Size:" FontSize="12" Foreground="#6e7681"/>
                                    <TextBlock Grid.Row="2" Grid.Column="1" Text="~450 MB" FontSize="12" Foreground="#e6edf3"/>
                                </Grid>
                            </Border>

                            <StackPanel Orientation="Horizontal" Spacing="12" HorizontalAlignment="Right">
                                <Button Style="{StaticResource SecondaryButtonStyle}" Content="Cancel" Padding="16,8"/>
                                <Button Style="{StaticResource AccentButtonStyle}" Content="Export" Padding="16,8"/>
                            </StackPanel>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </StackPanel>

            <!-- ═══════════════════════════════════════════════════════════════════
                 SECTION: STATUS BAR NOTIFICATIONS
                 ═══════════════════════════════════════════════════════════════════ -->
            <StackPanel Spacing="16">
                <TextBlock Text="Status Bar Notifications" Style="{StaticResource SectionHeaderStyle}"/>
                <TextBlock Text="Persistent status indicators at the bottom of the window" FontSize="12" Foreground="#8b949e"/>

                <!-- Simulated Status Bar -->
                <Border Background="#161b22" CornerRadius="6" Padding="8,6" MaxWidth="900">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <!-- Left Side: Status Messages -->
                        <StackPanel Orientation="Horizontal" Spacing="16">
                            <!-- Connection Status -->
                            <StackPanel Orientation="Horizontal" Spacing="6">
                                <Ellipse Width="8" Height="8" Fill="#3fb950"/>
                                <TextBlock Text="Connected to IB" FontSize="11" Foreground="#8b949e"/>
                            </StackPanel>

                            <Border Width="1" Background="#30363d"/>

                            <!-- Event Rate -->
                            <StackPanel Orientation="Horizontal" Spacing="6">
                                <FontIcon Glyph="&#xE916;" FontSize="12" Foreground="#58a6ff"/>
                                <TextBlock Text="1,234 events/min" FontSize="11" Foreground="#8b949e"/>
                            </StackPanel>

                            <Border Width="1" Background="#30363d"/>

                            <!-- Last Activity -->
                            <StackPanel Orientation="Horizontal" Spacing="6">
                                <FontIcon Glyph="&#xE823;" FontSize="12" Foreground="#8b949e"/>
                                <TextBlock Text="Last: AAPL trade @ 10:42:15" FontSize="11" Foreground="#6e7681"/>
                            </StackPanel>
                        </StackPanel>

                        <!-- Right Side: Quick Stats -->
                        <StackPanel Grid.Column="1" Orientation="Horizontal" Spacing="16">
                            <TextBlock Text="42 symbols" FontSize="11" Foreground="#8b949e"/>
                            <TextBlock Text="14:32:15 uptime" FontSize="11" Foreground="#8b949e"/>
                            <TextBlock Text="42.5 GB used" FontSize="11" Foreground="#d29922"/>
                        </StackPanel>
                    </Grid>
                </Border>
            </StackPanel>

        </StackPanel>
    </ScrollViewer>
</Page>
