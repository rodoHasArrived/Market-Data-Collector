<?xml version="1.0" encoding="utf-8"?>
<UserControl
    x:Class="MarketDataCollector.Uwp.Controls.SectionHeader"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:MarketDataCollector.Uwp.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Margin="{x:Bind Margin, Mode=OneWay}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>

        <!-- Title Section -->
        <StackPanel Grid.Column="0" Orientation="Horizontal" Spacing="12" VerticalAlignment="Center">
            <!-- Icon -->
            <Border x:Name="IconContainer"
                    Width="40" Height="40"
                    CornerRadius="10"
                    Visibility="{x:Bind IconVisibility, Mode=OneWay}"
                    VerticalAlignment="Center">
                <FontIcon x:Name="HeaderIcon"
                          Glyph="{x:Bind IconGlyph, Mode=OneWay}"
                          FontSize="18"
                          HorizontalAlignment="Center"
                          VerticalAlignment="Center" />
            </Border>

            <!-- Text Content -->
            <StackPanel Spacing="2" VerticalAlignment="Center">
                <StackPanel Orientation="Horizontal" Spacing="10">
                    <TextBlock x:Name="TitleText"
                               Text="{x:Bind Title, Mode=OneWay}"
                               FontSize="{x:Bind TitleFontSize, Mode=OneWay}"
                               FontWeight="SemiBold"
                               Foreground="{StaticResource ConsoleTextPrimaryBrush}"
                               VerticalAlignment="Center"
                               AutomationProperties.HeadingLevel="Level2" />

                    <!-- Optional Badge -->
                    <Border x:Name="BadgeContainer"
                            CornerRadius="12"
                            Padding="10,4"
                            Visibility="{x:Bind BadgeVisibility, Mode=OneWay}"
                            VerticalAlignment="Center">
                        <TextBlock x:Name="BadgeText"
                                   Text="{x:Bind Badge, Mode=OneWay}"
                                   FontSize="11"
                                   FontWeight="SemiBold" />
                    </Border>
                </StackPanel>

                <TextBlock x:Name="DescriptionText"
                           Text="{x:Bind Description, Mode=OneWay}"
                           FontSize="13"
                           Foreground="{StaticResource ConsoleTextSecondaryBrush}"
                           TextWrapping="Wrap"
                           Visibility="{x:Bind DescriptionVisibility, Mode=OneWay}"
                           MaxWidth="500" />
            </StackPanel>
        </StackPanel>

        <!-- Actions Slot -->
        <ContentPresenter x:Name="ActionsPresenter"
                          Grid.Column="1"
                          Content="{x:Bind Actions, Mode=OneWay}"
                          VerticalAlignment="Center" />
    </Grid>
</UserControl>
