<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="MarketDataCollector.Uwp.Views.DataSamplingPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:MarketDataCollector.Uwp.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="24">
        <StackPanel Spacing="24" MaxWidth="1200">
            <!-- Header -->
            <StackPanel Orientation="Horizontal" Spacing="12">
                <FontIcon Glyph="&#xE8B1;" FontSize="28" Foreground="{ThemeResource SystemAccentColor}" />
                <StackPanel>
                    <TextBlock Text="Data Sampling &amp; Subsets" Style="{StaticResource TitleTextBlockStyle}" />
                    <TextBlock Text="Create representative data samples for development, testing, and analysis"
                               Style="{StaticResource CaptionTextBlockStyle}"
                               Foreground="{ThemeResource SystemBaseMediumColor}" />
                </StackPanel>
            </StackPanel>

            <!-- Quick Presets -->
            <Border Style="{StaticResource CardStyle}">
                <StackPanel Spacing="16">
                    <StackPanel Orientation="Horizontal" Spacing="8">
                        <FontIcon Glyph="&#xE8F1;" Foreground="{ThemeResource SystemAccentColor}" />
                        <TextBlock Text="Quick Presets" Style="{StaticResource SubtitleTextBlockStyle}" />
                    </StackPanel>

                    <TextBlock Text="Select a preset to quickly configure common sampling scenarios"
                               Style="{StaticResource CaptionTextBlockStyle}"
                               Foreground="{ThemeResource SystemBaseMediumColor}" />

                    <GridView x:Name="PresetsGrid"
                              SelectionMode="Single"
                              IsItemClickEnabled="True"
                              ItemClick="Preset_Click">
                        <GridView.ItemTemplate>
                            <DataTemplate>
                                <Border Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                                        BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                                        BorderThickness="1"
                                        CornerRadius="8"
                                        Padding="16"
                                        Width="200"
                                        Height="100">
                                    <StackPanel Spacing="8">
                                        <TextBlock Text="{Binding Name}"
                                                   Style="{StaticResource BodyStrongTextBlockStyle}"
                                                   TextTrimming="CharacterEllipsis" />
                                        <TextBlock Text="{Binding Description}"
                                                   Style="{StaticResource CaptionTextBlockStyle}"
                                                   Foreground="{ThemeResource SystemBaseMediumColor}"
                                                   TextWrapping="Wrap"
                                                   MaxLines="3" />
                                    </StackPanel>
                                </Border>
                            </DataTemplate>
                        </GridView.ItemTemplate>
                    </GridView>
                </StackPanel>
            </Border>

            <!-- Sampling Configuration -->
            <Border Style="{StaticResource CardStyle}">
                <StackPanel Spacing="16">
                    <StackPanel Orientation="Horizontal" Spacing="8">
                        <FontIcon Glyph="&#xE713;" Foreground="{ThemeResource SystemAccentColor}" />
                        <TextBlock Text="Sampling Configuration" Style="{StaticResource SubtitleTextBlockStyle}" />
                    </StackPanel>

                    <Grid ColumnSpacing="24" RowSpacing="16">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>

                        <!-- Symbol Selection -->
                        <StackPanel Grid.Row="0" Grid.Column="0" Spacing="8">
                            <TextBlock Text="Symbols" Style="{StaticResource BodyStrongTextBlockStyle}" />
                            <AutoSuggestBox x:Name="SymbolSearchBox"
                                            PlaceholderText="Search symbols..."
                                            QueryIcon="Find"
                                            TextChanged="SymbolSearch_TextChanged" />
                            <ListView x:Name="SymbolsList"
                                      Height="150"
                                      SelectionMode="Multiple"
                                      SelectionChanged="Symbols_SelectionChanged">
                                <ListViewItem Content="AAPL" IsSelected="True" />
                                <ListViewItem Content="MSFT" IsSelected="True" />
                                <ListViewItem Content="GOOGL" IsSelected="True" />
                                <ListViewItem Content="AMZN" />
                                <ListViewItem Content="TSLA" />
                                <ListViewItem Content="META" />
                                <ListViewItem Content="NVDA" />
                                <ListViewItem Content="SPY" />
                            </ListView>
                            <TextBlock x:Name="SelectedSymbolsCount"
                                       Text="3 symbols selected"
                                       Style="{StaticResource CaptionTextBlockStyle}"
                                       Foreground="{ThemeResource SystemBaseMediumColor}" />
                        </StackPanel>

                        <!-- Date Range -->
                        <StackPanel Grid.Row="0" Grid.Column="1" Spacing="8">
                            <TextBlock Text="Date Range" Style="{StaticResource BodyStrongTextBlockStyle}" />
                            <CalendarDatePicker x:Name="FromDatePicker"
                                                Header="From"
                                                HorizontalAlignment="Stretch"
                                                PlaceholderText="Start date"
                                                DateChanged="DateRange_Changed" />
                            <CalendarDatePicker x:Name="ToDatePicker"
                                                Header="To"
                                                HorizontalAlignment="Stretch"
                                                PlaceholderText="End date"
                                                DateChanged="DateRange_Changed" />
                            <StackPanel Orientation="Horizontal" Spacing="4" Margin="0,8,0,0">
                                <Button Content="Today" Click="SetToday_Click" />
                                <Button Content="Week" Click="SetWeek_Click" />
                                <Button Content="Month" Click="SetMonth_Click" />
                                <Button Content="Year" Click="SetYear_Click" />
                            </StackPanel>
                        </StackPanel>

                        <!-- Event Types -->
                        <StackPanel Grid.Row="0" Grid.Column="2" Spacing="8">
                            <TextBlock Text="Event Types" Style="{StaticResource BodyStrongTextBlockStyle}" />
                            <CheckBox x:Name="TradesCheck" Content="Trades" IsChecked="True" />
                            <CheckBox x:Name="QuotesCheck" Content="BBO Quotes" IsChecked="True" />
                            <CheckBox x:Name="DepthCheck" Content="Order Book Depth" IsChecked="False" />
                            <CheckBox x:Name="BarsCheck" Content="Historical Bars" IsChecked="False" />
                        </StackPanel>

                        <!-- Sampling Strategy -->
                        <StackPanel Grid.Row="1" Grid.Column="0" Spacing="8">
                            <TextBlock Text="Sampling Strategy" Style="{StaticResource BodyStrongTextBlockStyle}" />
                            <ComboBox x:Name="StrategyCombo"
                                      HorizontalAlignment="Stretch"
                                      SelectedIndex="0"
                                      SelectionChanged="Strategy_SelectionChanged">
                                <ComboBoxItem Content="Random Sample" Tag="Random" />
                                <ComboBoxItem Content="Time-Based Downsampling" Tag="TimeBased" />
                                <ComboBoxItem Content="Symbol-Stratified" Tag="SymbolStratified" />
                                <ComboBoxItem Content="Event Type-Stratified" Tag="EventTypeStratified" />
                                <ComboBoxItem Content="Volatility-Based" Tag="VolatilityBased" />
                                <ComboBoxItem Content="First N Records" Tag="FirstN" />
                                <ComboBoxItem Content="Last N Records" Tag="LastN" />
                                <ComboBoxItem Content="Peak Trading Hours" Tag="PeakHours" />
                                <ComboBoxItem Content="Systematic (Every Nth)" Tag="Systematic" />
                            </ComboBox>
                            <TextBlock x:Name="StrategyDescription"
                                       Text="Randomly select N events or N% of total data"
                                       TextWrapping="Wrap"
                                       Style="{StaticResource CaptionTextBlockStyle}"
                                       Foreground="{ThemeResource SystemBaseMediumColor}" />
                        </StackPanel>

                        <!-- Sample Size -->
                        <StackPanel Grid.Row="1" Grid.Column="1" Spacing="8">
                            <TextBlock Text="Sample Size" Style="{StaticResource BodyStrongTextBlockStyle}" />
                            <RadioButton x:Name="SizeByCountRadio"
                                         Content="By Count"
                                         GroupName="SizeType"
                                         IsChecked="True"
                                         Checked="SizeType_Changed" />
                            <NumberBox x:Name="SampleCountBox"
                                       Header="Number of Records"
                                       Value="100000"
                                       Minimum="100"
                                       Maximum="100000000"
                                       SpinButtonPlacementMode="Inline"
                                       SmallChange="1000"
                                       LargeChange="10000" />
                            <RadioButton x:Name="SizeByPercentRadio"
                                         Content="By Percentage"
                                         GroupName="SizeType"
                                         Checked="SizeType_Changed" />
                            <NumberBox x:Name="SamplePercentBox"
                                       Header="Percentage of Data"
                                       Value="5"
                                       Minimum="0.01"
                                       Maximum="100"
                                       SpinButtonPlacementMode="Inline"
                                       SmallChange="1"
                                       LargeChange="5"
                                       IsEnabled="False" />
                        </StackPanel>

                        <!-- Interval (for time-based) -->
                        <StackPanel x:Name="IntervalPanel" Grid.Row="1" Grid.Column="2" Spacing="8" Visibility="Collapsed">
                            <TextBlock Text="Sampling Interval" Style="{StaticResource BodyStrongTextBlockStyle}" />
                            <NumberBox x:Name="IntervalSecondsBox"
                                       Header="Interval (seconds)"
                                       Value="60"
                                       Minimum="1"
                                       Maximum="86400"
                                       SpinButtonPlacementMode="Inline" />
                            <StackPanel Orientation="Horizontal" Spacing="4" Margin="0,8,0,0">
                                <Button Content="1s" Click="SetInterval1s_Click" />
                                <Button Content="10s" Click="SetInterval10s_Click" />
                                <Button Content="1m" Click="SetInterval1m_Click" />
                                <Button Content="5m" Click="SetInterval5m_Click" />
                            </StackPanel>
                        </StackPanel>

                        <!-- Advanced Options (shows when interval is hidden) -->
                        <StackPanel x:Name="AdvancedOptionsPanel" Grid.Row="1" Grid.Column="2" Spacing="8">
                            <TextBlock Text="Advanced Options" Style="{StaticResource BodyStrongTextBlockStyle}" />
                            <CheckBox x:Name="MaintainDistributionCheck"
                                      Content="Maintain distribution"
                                      IsChecked="True"
                                      ToolTipService.ToolTip="Preserve original data characteristics in sample" />
                            <CheckBox x:Name="IncludeStatisticsCheck"
                                      Content="Include statistics"
                                      IsChecked="True"
                                      ToolTipService.ToolTip="Generate sample statistics report" />
                            <StackPanel Orientation="Horizontal" Spacing="8">
                                <CheckBox x:Name="UseFixedSeedCheck"
                                          Content="Fixed seed"
                                          ToolTipService.ToolTip="Use fixed random seed for reproducibility" />
                                <NumberBox x:Name="SeedBox"
                                           Value="42"
                                           Minimum="0"
                                           Maximum="2147483647"
                                           Width="100"
                                           IsEnabled="{x:Bind UseFixedSeedCheck.IsChecked, Mode=OneWay}" />
                            </StackPanel>
                        </StackPanel>

                        <!-- Output Settings -->
                        <StackPanel Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2" Spacing="8">
                            <TextBlock Text="Output Settings" Style="{StaticResource BodyStrongTextBlockStyle}" />
                            <Grid ColumnSpacing="16">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>
                                <TextBox x:Name="OutputPathBox"
                                         Grid.Column="0"
                                         Header="Output Path"
                                         PlaceholderText="C:\Samples\market_sample.parquet" />
                                <Button Grid.Column="1" Content="Browse..." VerticalAlignment="Bottom" Click="BrowseOutput_Click" />
                            </Grid>
                            <Grid ColumnSpacing="16">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>
                                <ComboBox x:Name="OutputFormatCombo"
                                          Grid.Column="0"
                                          Header="Output Format"
                                          HorizontalAlignment="Stretch"
                                          SelectedIndex="1">
                                    <ComboBoxItem Content="CSV" Tag="CSV" />
                                    <ComboBoxItem Content="Parquet" Tag="Parquet" />
                                    <ComboBoxItem Content="JSON Lines" Tag="JSONL" />
                                    <ComboBoxItem Content="Feather" Tag="Feather" />
                                </ComboBox>
                                <TextBox x:Name="SampleNameBox"
                                         Grid.Column="1"
                                         Header="Sample Name (optional)"
                                         PlaceholderText="e.g., dev_test_sample" />
                            </Grid>
                        </StackPanel>

                        <!-- Estimate and Create -->
                        <StackPanel Grid.Row="2" Grid.Column="2" Spacing="8" VerticalAlignment="Bottom">
                            <Border Background="{ThemeResource CardBackgroundFillColorSecondaryBrush}"
                                    CornerRadius="8"
                                    Padding="16">
                                <StackPanel Spacing="8">
                                    <TextBlock Text="Estimate" Style="{StaticResource BodyStrongTextBlockStyle}" />
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="Auto" />
                                        </Grid.ColumnDefinitions>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="Auto" />
                                        </Grid.RowDefinitions>
                                        <TextBlock Grid.Row="0" Grid.Column="0" Text="Source records:" />
                                        <TextBlock x:Name="EstSourceRecords" Grid.Row="0" Grid.Column="1" Text="~1,000,000" HorizontalAlignment="Right" />
                                        <TextBlock Grid.Row="1" Grid.Column="0" Text="Sample size:" />
                                        <TextBlock x:Name="EstSampleSize" Grid.Row="1" Grid.Column="1" Text="~100,000" HorizontalAlignment="Right" />
                                        <TextBlock Grid.Row="2" Grid.Column="0" Text="File size:" />
                                        <TextBlock x:Name="EstFileSize" Grid.Row="2" Grid.Column="1" Text="~15 MB" HorizontalAlignment="Right" />
                                    </Grid>
                                </StackPanel>
                            </Border>
                            <Button x:Name="CreateSampleButton"
                                    Content="Create Sample"
                                    Style="{StaticResource AccentButtonStyle}"
                                    HorizontalAlignment="Stretch"
                                    Click="CreateSample_Click" />
                        </StackPanel>
                    </Grid>
                </StackPanel>
            </Border>

            <!-- Progress Panel -->
            <Border x:Name="ProgressPanel" Style="{StaticResource CardStyle}" Visibility="Collapsed">
                <StackPanel Spacing="16">
                    <StackPanel Orientation="Horizontal" Spacing="8">
                        <ProgressRing IsActive="True" Width="24" Height="24" />
                        <TextBlock x:Name="ProgressTitle" Text="Creating Sample..." Style="{StaticResource SubtitleTextBlockStyle}" />
                    </StackPanel>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>
                        <TextBlock x:Name="ProgressLabel" Grid.Column="0" Text="Processing AAPL trades..." />
                        <TextBlock x:Name="ProgressPercent" Grid.Column="1" Text="45%" />
                    </Grid>
                    <ProgressBar x:Name="ProgressBar" Minimum="0" Maximum="100" Value="45" />
                    <Button x:Name="CancelButton" Content="Cancel" Click="Cancel_Click" />
                </StackPanel>
            </Border>

            <!-- Saved Samples -->
            <Border Style="{StaticResource CardStyle}">
                <StackPanel Spacing="16">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>
                        <StackPanel Grid.Column="0" Orientation="Horizontal" Spacing="8">
                            <FontIcon Glyph="&#xE838;" Foreground="{ThemeResource SystemAccentColor}" />
                            <TextBlock Text="Saved Samples" Style="{StaticResource SubtitleTextBlockStyle}" />
                        </StackPanel>
                        <Button Grid.Column="1" Content="Refresh" Click="RefreshSamples_Click">
                            <Button.KeyboardAccelerators>
                                <KeyboardAccelerator Key="F5" />
                            </Button.KeyboardAccelerators>
                        </Button>
                    </Grid>

                    <ListView x:Name="SavedSamplesList"
                              SelectionMode="Single"
                              MaxHeight="300">
                        <ListView.HeaderTemplate>
                            <DataTemplate>
                                <Grid Padding="12,8" Background="{ThemeResource SystemFillColorNeutralBackgroundBrush}">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="180" />
                                        <ColumnDefinition Width="120" />
                                        <ColumnDefinition Width="100" />
                                        <ColumnDefinition Width="100" />
                                        <ColumnDefinition Width="150" />
                                        <ColumnDefinition Width="*" />
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Grid.Column="0" Text="Name" FontWeight="SemiBold" />
                                    <TextBlock Grid.Column="1" Text="Created" FontWeight="SemiBold" />
                                    <TextBlock Grid.Column="2" Text="Strategy" FontWeight="SemiBold" />
                                    <TextBlock Grid.Column="3" Text="Records" FontWeight="SemiBold" />
                                    <TextBlock Grid.Column="4" Text="Size" FontWeight="SemiBold" />
                                    <TextBlock Grid.Column="5" Text="Actions" FontWeight="SemiBold" />
                                </Grid>
                            </DataTemplate>
                        </ListView.HeaderTemplate>
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <Grid Padding="12,12">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="180" />
                                        <ColumnDefinition Width="120" />
                                        <ColumnDefinition Width="100" />
                                        <ColumnDefinition Width="100" />
                                        <ColumnDefinition Width="150" />
                                        <ColumnDefinition Width="*" />
                                    </Grid.ColumnDefinitions>
                                    <StackPanel Grid.Column="0">
                                        <TextBlock Text="{Binding Name}" FontWeight="SemiBold" TextTrimming="CharacterEllipsis" />
                                        <TextBlock Text="{Binding SymbolsDisplay}"
                                                   Style="{StaticResource CaptionTextBlockStyle}"
                                                   Foreground="{ThemeResource SystemBaseMediumColor}"
                                                   TextTrimming="CharacterEllipsis" />
                                    </StackPanel>
                                    <TextBlock Grid.Column="1" Text="{Binding CreatedDisplay}" VerticalAlignment="Center" />
                                    <TextBlock Grid.Column="2" Text="{Binding Strategy}" VerticalAlignment="Center" />
                                    <TextBlock Grid.Column="3" Text="{Binding RecordCountDisplay}" VerticalAlignment="Center" />
                                    <TextBlock Grid.Column="4" Text="{Binding FileSizeDisplay}" VerticalAlignment="Center" />
                                    <StackPanel Grid.Column="5" Orientation="Horizontal" Spacing="8" VerticalAlignment="Center">
                                        <Button Content="Open" Tag="{Binding Id}" Click="OpenSample_Click" />
                                        <Button Content="Delete" Tag="{Binding Id}" Click="DeleteSample_Click" />
                                    </StackPanel>
                                </Grid>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>

                    <TextBlock x:Name="NoSamplesText"
                               Text="No saved samples. Create your first sample above."
                               Foreground="{ThemeResource SystemBaseMediumColor}"
                               Visibility="Visible" />
                </StackPanel>
            </Border>

            <!-- Sample Statistics (shown after creation) -->
            <Border x:Name="StatisticsPanel" Style="{StaticResource CardStyle}" Visibility="Collapsed">
                <StackPanel Spacing="16">
                    <StackPanel Orientation="Horizontal" Spacing="8">
                        <FontIcon Glyph="&#xE9D9;" Foreground="{ThemeResource SystemAccentColor}" />
                        <TextBlock Text="Sample Statistics" Style="{StaticResource SubtitleTextBlockStyle}" />
                    </StackPanel>

                    <Grid ColumnSpacing="24">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>

                        <!-- Records by Symbol -->
                        <StackPanel Grid.Column="0" Spacing="8">
                            <TextBlock Text="Records by Symbol" Style="{StaticResource BodyStrongTextBlockStyle}" />
                            <ListView x:Name="StatsBySymbolList" Height="150" SelectionMode="None">
                                <ListView.ItemTemplate>
                                    <DataTemplate>
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="80" />
                                                <ColumnDefinition Width="*" />
                                            </Grid.ColumnDefinitions>
                                            <TextBlock Grid.Column="0" Text="{Binding Key}" FontWeight="SemiBold" />
                                            <TextBlock Grid.Column="1" Text="{Binding Value}" HorizontalAlignment="Right" />
                                        </Grid>
                                    </DataTemplate>
                                </ListView.ItemTemplate>
                            </ListView>
                        </StackPanel>

                        <!-- Records by Event Type -->
                        <StackPanel Grid.Column="1" Spacing="8">
                            <TextBlock Text="Records by Event Type" Style="{StaticResource BodyStrongTextBlockStyle}" />
                            <ListView x:Name="StatsByEventList" Height="150" SelectionMode="None">
                                <ListView.ItemTemplate>
                                    <DataTemplate>
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="100" />
                                                <ColumnDefinition Width="*" />
                                            </Grid.ColumnDefinitions>
                                            <TextBlock Grid.Column="0" Text="{Binding Key}" FontWeight="SemiBold" />
                                            <TextBlock Grid.Column="1" Text="{Binding Value}" HorizontalAlignment="Right" />
                                        </Grid>
                                    </DataTemplate>
                                </ListView.ItemTemplate>
                            </ListView>
                        </StackPanel>

                        <!-- Summary Stats -->
                        <StackPanel Grid.Column="2" Spacing="8">
                            <TextBlock Text="Summary" Style="{StaticResource BodyStrongTextBlockStyle}" />
                            <Border Background="{ThemeResource CardBackgroundFillColorSecondaryBrush}"
                                    CornerRadius="8"
                                    Padding="16">
                                <StackPanel Spacing="8">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="Auto" />
                                        </Grid.ColumnDefinitions>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="Auto" />
                                        </Grid.RowDefinitions>
                                        <TextBlock Grid.Row="0" Grid.Column="0" Text="Sampling ratio:" />
                                        <TextBlock x:Name="StatSamplingRatio" Grid.Row="0" Grid.Column="1" Text="10.0%" HorizontalAlignment="Right" FontWeight="SemiBold" />
                                        <TextBlock Grid.Row="1" Grid.Column="0" Text="Time span:" />
                                        <TextBlock x:Name="StatTimeSpan" Grid.Row="1" Grid.Column="1" Text="7 days" HorizontalAlignment="Right" />
                                        <TextBlock Grid.Row="2" Grid.Column="0" Text="First record:" />
                                        <TextBlock x:Name="StatFirstRecord" Grid.Row="2" Grid.Column="1" Text="2026-01-01 09:30" HorizontalAlignment="Right" />
                                        <TextBlock Grid.Row="3" Grid.Column="0" Text="Last record:" />
                                        <TextBlock x:Name="StatLastRecord" Grid.Row="3" Grid.Column="1" Text="2026-01-07 16:00" HorizontalAlignment="Right" />
                                        <TextBlock Grid.Row="4" Grid.Column="0" Text="Duration:" />
                                        <TextBlock x:Name="StatDuration" Grid.Row="4" Grid.Column="1" Text="2.3s" HorizontalAlignment="Right" />
                                    </Grid>
                                </StackPanel>
                            </Border>
                        </StackPanel>
                    </Grid>
                </StackPanel>
            </Border>

            <!-- Info Bar -->
            <InfoBar x:Name="ActionInfoBar" IsOpen="False" IsClosable="True" />
        </StackPanel>
    </ScrollViewer>
</Page>
