<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="MarketDataCollector.Uwp.Views.ArchiveHealthPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:MarketDataCollector.Uwp.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="24">
        <StackPanel Spacing="24">
            <!-- Header -->
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Orientation="Horizontal" Spacing="12">
                    <FontIcon Glyph="&#xE9F5;" FontSize="28" Foreground="{ThemeResource SystemAccentColor}" />
                    <TextBlock Text="Archive Health" Style="{StaticResource TitleTextBlockStyle}" VerticalAlignment="Center" />
                    <Border x:Name="HealthStatusBadge" Background="#48BB78" CornerRadius="4" Padding="8,4" VerticalAlignment="Center">
                        <TextBlock x:Name="HealthStatusText" Text="Healthy" FontSize="12" Foreground="White" />
                    </Border>
                </StackPanel>

                <!-- Quick Actions -->
                <StackPanel Grid.Column="1" Orientation="Horizontal" Spacing="8">
                    <Button x:Name="VerifyAllButton" Click="VerifyAll_Click" Style="{StaticResource AccentButtonStyle}">
                        <StackPanel Orientation="Horizontal" Spacing="6">
                            <FontIcon Glyph="&#xE73E;" FontSize="14" />
                            <TextBlock Text="Verify All" />
                        </StackPanel>
                    </Button>
                    <Button x:Name="QuickCheckButton" Click="QuickCheck_Click">
                        <StackPanel Orientation="Horizontal" Spacing="6">
                            <FontIcon Glyph="&#xE9D9;" FontSize="14" />
                            <TextBlock Text="Quick Check" />
                        </StackPanel>
                    </Button>
                    <Button x:Name="RefreshButton" Click="Refresh_Click">
                        <FontIcon Glyph="&#xE72C;" FontSize="14" />
                    </Button>
                </StackPanel>
            </Grid>

            <!-- Health Score Card -->
            <Border Style="{StaticResource CardStyle}">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <!-- Health Gauge -->
                    <Grid Grid.Column="0" Width="150" Height="150" Margin="0,0,24,0">
                        <Ellipse Width="140" Height="140" Stroke="{ThemeResource SystemBaseLowColor}" StrokeThickness="12" />
                        <Ellipse x:Name="HealthGaugeArc" Width="140" Height="140"
                                 Stroke="{ThemeResource SystemAccentColor}" StrokeThickness="12"
                                 StrokeDashArray="3.14 3.14" StrokeDashOffset="0" />
                        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                            <TextBlock x:Name="HealthScoreText" Text="100%" FontSize="32" FontWeight="Bold"
                                       HorizontalAlignment="Center" Foreground="{ThemeResource SystemAccentColor}" />
                            <TextBlock Text="Health Score" Style="{StaticResource CaptionTextBlockStyle}"
                                       HorizontalAlignment="Center" Foreground="{ThemeResource SystemBaseMediumColor}" />
                        </StackPanel>
                    </Grid>

                    <!-- Health Details -->
                    <StackPanel Grid.Column="1" Spacing="12">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0" Spacing="4">
                                <TextBlock x:Name="TotalFilesText" Text="0" Style="{StaticResource SubheaderTextBlockStyle}" />
                                <TextBlock Text="Total Files" Style="{StaticResource CaptionTextBlockStyle}" />
                            </StackPanel>

                            <StackPanel Grid.Column="1" Spacing="4">
                                <TextBlock x:Name="VerifiedFilesText" Text="0" Style="{StaticResource SubheaderTextBlockStyle}" Foreground="#48BB78" />
                                <TextBlock Text="Verified" Style="{StaticResource CaptionTextBlockStyle}" />
                            </StackPanel>

                            <StackPanel Grid.Column="2" Spacing="4">
                                <TextBlock x:Name="PendingFilesText" Text="0" Style="{StaticResource SubheaderTextBlockStyle}" Foreground="#ED8936" />
                                <TextBlock Text="Pending" Style="{StaticResource CaptionTextBlockStyle}" />
                            </StackPanel>

                            <StackPanel Grid.Column="3" Spacing="4">
                                <TextBlock x:Name="FailedFilesText" Text="0" Style="{StaticResource SubheaderTextBlockStyle}" Foreground="#F56565" />
                                <TextBlock Text="Failed" Style="{StaticResource CaptionTextBlockStyle}" />
                            </StackPanel>
                        </Grid>

                        <!-- Progress Bar (shown during verification) -->
                        <ProgressBar x:Name="VerificationProgress" Visibility="Collapsed" IsIndeterminate="False" Value="0" />
                        <TextBlock x:Name="VerificationStatusText" Visibility="Collapsed"
                                   Style="{StaticResource CaptionTextBlockStyle}" Foreground="{ThemeResource SystemBaseMediumColor}" />

                        <!-- Last Verification -->
                        <StackPanel Orientation="Horizontal" Spacing="8">
                            <FontIcon Glyph="&#xE787;" FontSize="14" Foreground="{ThemeResource SystemBaseMediumColor}" />
                            <TextBlock x:Name="LastVerificationText" Text="Last full verification: Never"
                                       Style="{StaticResource CaptionTextBlockStyle}" Foreground="{ThemeResource SystemBaseMediumColor}" />
                        </StackPanel>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Storage Health Card -->
            <Border Style="{StaticResource CardStyle}">
                <StackPanel Spacing="16">
                    <StackPanel Orientation="Horizontal" Spacing="8">
                        <FontIcon Glyph="&#xE8B7;" Foreground="{ThemeResource SystemAccentColor}" />
                        <TextBlock Text="Storage Health" Style="{StaticResource SubtitleTextBlockStyle}" />
                    </StackPanel>

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0" Spacing="4">
                            <TextBlock x:Name="TotalCapacityText" Text="0 GB" Style="{StaticResource BodyStrongTextBlockStyle}" />
                            <TextBlock Text="Total Capacity" Style="{StaticResource CaptionTextBlockStyle}" />
                        </StackPanel>

                        <StackPanel Grid.Column="1" Spacing="4">
                            <TextBlock x:Name="UsedSpaceText" Text="0 GB" Style="{StaticResource BodyStrongTextBlockStyle}" />
                            <TextBlock Text="Used Space" Style="{StaticResource CaptionTextBlockStyle}" />
                        </StackPanel>

                        <StackPanel Grid.Column="2" Spacing="4">
                            <TextBlock x:Name="FreeSpaceText" Text="0 GB" Style="{StaticResource BodyStrongTextBlockStyle}" />
                            <TextBlock Text="Free Space" Style="{StaticResource CaptionTextBlockStyle}" />
                        </StackPanel>

                        <StackPanel Grid.Column="3" Spacing="4">
                            <TextBlock x:Name="DaysUntilFullText" Text="--" Style="{StaticResource BodyStrongTextBlockStyle}" />
                            <TextBlock Text="Days Until Full" Style="{StaticResource CaptionTextBlockStyle}" />
                        </StackPanel>
                    </Grid>

                    <!-- Storage Usage Bar -->
                    <Grid>
                        <ProgressBar x:Name="StorageUsageBar" Value="0" Maximum="100" Height="12" />
                        <TextBlock x:Name="StorageUsagePercent" Text="0%" HorizontalAlignment="Center" VerticalAlignment="Center"
                                   FontSize="10" Foreground="White" />
                    </Grid>

                    <StackPanel Orientation="Horizontal" Spacing="8">
                        <FontIcon Glyph="&#xE946;" FontSize="14" Foreground="{ThemeResource SystemBaseMediumColor}" />
                        <TextBlock x:Name="DriveTypeText" Text="Drive Type: Unknown"
                                   Style="{StaticResource CaptionTextBlockStyle}" Foreground="{ThemeResource SystemBaseMediumColor}" />
                    </StackPanel>
                </StackPanel>
            </Border>

            <!-- Issues and Recommendations -->
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <!-- Active Issues -->
                <Border Grid.Column="0" Style="{StaticResource CardStyle}" Margin="0,0,12,0">
                    <StackPanel Spacing="16">
                        <StackPanel Orientation="Horizontal" Spacing="8">
                            <FontIcon Glyph="&#xE7BA;" Foreground="#F56565" />
                            <TextBlock Text="Active Issues" Style="{StaticResource SubtitleTextBlockStyle}" />
                            <Border x:Name="IssueCountBadge" Background="#F56565" CornerRadius="10" Padding="8,2" Visibility="Collapsed">
                                <TextBlock x:Name="IssueCountText" Text="0" FontSize="12" Foreground="White" />
                            </Border>
                        </StackPanel>

                        <ListView x:Name="IssuesList" SelectionMode="None" MaxHeight="250">
                            <ListView.ItemTemplate>
                                <DataTemplate>
                                    <Grid Padding="8" ColumnSpacing="12">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto" />
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="Auto" />
                                        </Grid.ColumnDefinitions>

                                        <FontIcon Grid.Column="0" Glyph="&#xE7BA;" FontSize="16"
                                                  Foreground="{Binding Severity, Converter={StaticResource SeverityToColorConverter}}" />

                                        <StackPanel Grid.Column="1" Spacing="2">
                                            <TextBlock Text="{Binding Message}" TextWrapping="Wrap" />
                                            <TextBlock Text="{Binding SuggestedAction}" Style="{StaticResource CaptionTextBlockStyle}"
                                                       Foreground="{ThemeResource SystemBaseMediumColor}" />
                                        </StackPanel>

                                        <Button Grid.Column="2" Click="ResolveIssue_Click" Padding="8"
                                                Visibility="{Binding IsAutoFixable}" ToolTipService.ToolTip="Auto-fix">
                                            <FontIcon Glyph="&#xE930;" FontSize="12" />
                                        </Button>
                                    </Grid>
                                </DataTemplate>
                            </ListView.ItemTemplate>
                        </ListView>

                        <TextBlock x:Name="NoIssuesText" Text="No issues detected. Archive is healthy!"
                                   Visibility="Visible" Style="{StaticResource CaptionTextBlockStyle}"
                                   Foreground="#48BB78" HorizontalAlignment="Center" />
                    </StackPanel>
                </Border>

                <!-- Recommendations -->
                <Border Grid.Column="1" Style="{StaticResource CardStyle}" Margin="12,0,0,0">
                    <StackPanel Spacing="16">
                        <StackPanel Orientation="Horizontal" Spacing="8">
                            <FontIcon Glyph="&#xE8BD;" Foreground="{ThemeResource SystemAccentColor}" />
                            <TextBlock Text="Recommendations" Style="{StaticResource SubtitleTextBlockStyle}" />
                        </StackPanel>

                        <ListView x:Name="RecommendationsList" SelectionMode="None" MaxHeight="250">
                            <ListView.ItemTemplate>
                                <DataTemplate>
                                    <Grid Padding="8" ColumnSpacing="12">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto" />
                                            <ColumnDefinition Width="*" />
                                        </Grid.ColumnDefinitions>

                                        <FontIcon Grid.Column="0" Glyph="&#xE73E;" FontSize="14" Foreground="{ThemeResource SystemAccentColor}" />
                                        <TextBlock Grid.Column="1" Text="{Binding}" TextWrapping="Wrap" />
                                    </Grid>
                                </DataTemplate>
                            </ListView.ItemTemplate>
                        </ListView>

                        <TextBlock x:Name="NoRecommendationsText" Text="No recommendations at this time."
                                   Visibility="Visible" Style="{StaticResource CaptionTextBlockStyle}"
                                   Foreground="{ThemeResource SystemBaseMediumColor}" HorizontalAlignment="Center" />
                    </StackPanel>
                </Border>
            </Grid>

            <!-- Verification Schedule -->
            <Border Style="{StaticResource CardStyle}">
                <StackPanel Spacing="16">
                    <StackPanel Orientation="Horizontal" Spacing="8">
                        <FontIcon Glyph="&#xE823;" Foreground="{ThemeResource SystemAccentColor}" />
                        <TextBlock Text="Verification Schedule" Style="{StaticResource SubtitleTextBlockStyle}" />
                    </StackPanel>

                    <ToggleSwitch x:Name="EnableScheduleToggle" Header="Enable scheduled verification" IsOn="True" />

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>

                        <TimePicker x:Name="DailyVerificationTime" Grid.Column="0" Header="Daily verification time"
                                    ClockIdentifier="24HourClock" Time="03:00:00" />

                        <ComboBox x:Name="DailyScopeCombo" Grid.Column="1" Header="Daily scope" SelectedIndex="0" HorizontalAlignment="Stretch">
                            <ComboBoxItem Content="Last 7 Days" Tag="Last7Days" />
                            <ComboBoxItem Content="Last 30 Days" Tag="Last30Days" />
                            <ComboBoxItem Content="All Files" Tag="All" />
                        </ComboBox>
                    </Grid>

                    <ToggleSwitch x:Name="PauseDuringMarketToggle" Header="Pause verification during market hours" IsOn="True" />

                    <NumberBox x:Name="MaxConcurrentBox" Header="Max concurrent verifications" Value="4"
                               Minimum="1" Maximum="16" SpinButtonPlacementMode="Compact" />
                </StackPanel>
            </Border>

            <!-- Data Dictionary -->
            <Border Style="{StaticResource CardStyle}">
                <StackPanel Spacing="16">
                    <StackPanel Orientation="Horizontal" Spacing="8">
                        <FontIcon Glyph="&#xE82D;" Foreground="{ThemeResource SystemAccentColor}" />
                        <TextBlock Text="Data Dictionary &amp; Schema" Style="{StaticResource SubtitleTextBlockStyle}" />
                    </StackPanel>

                    <TextBlock Text="Generate comprehensive documentation for all data schemas and event types."
                               Style="{StaticResource CaptionTextBlockStyle}" Foreground="{ThemeResource SystemBaseMediumColor}" />

                    <StackPanel Orientation="Horizontal" Spacing="8">
                        <Button x:Name="GenerateDictionaryButton" Click="GenerateDictionary_Click">
                            <StackPanel Orientation="Horizontal" Spacing="6">
                                <FontIcon Glyph="&#xE82D;" FontSize="14" />
                                <TextBlock Text="Generate Dictionary" />
                            </StackPanel>
                        </Button>
                        <Button x:Name="ExportMarkdownButton" Click="ExportMarkdown_Click">
                            <StackPanel Orientation="Horizontal" Spacing="6">
                                <FontIcon Glyph="&#xEDE1;" FontSize="14" />
                                <TextBlock Text="Export as Markdown" />
                            </StackPanel>
                        </Button>
                        <Button x:Name="ExportJsonButton" Click="ExportJson_Click">
                            <StackPanel Orientation="Horizontal" Spacing="6">
                                <FontIcon Glyph="&#xE943;" FontSize="14" />
                                <TextBlock Text="Export as JSON" />
                            </StackPanel>
                        </Button>
                    </StackPanel>

                    <TextBlock x:Name="DictionaryStatusText" Text="Last generated: Never"
                               Style="{StaticResource CaptionTextBlockStyle}" Foreground="{ThemeResource SystemBaseMediumColor}" />
                </StackPanel>
            </Border>
        </StackPanel>
    </ScrollViewer>
</Page>
