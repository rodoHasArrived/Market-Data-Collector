<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="MarketDataCollector.Uwp.Views.DataCalendarPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:MarketDataCollector.Uwp.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="{ThemeResource SystemFillColorNeutralBackgroundBrush}" Padding="24,16">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0">
                    <TextBlock Text="Data Completeness Calendar" Style="{StaticResource TitleTextBlockStyle}" />
                    <TextBlock Text="Visualize data coverage and identify gaps across time"
                               Foreground="{ThemeResource SystemBaseMediumColor}" />
                </StackPanel>

                <StackPanel Grid.Column="1" Orientation="Horizontal" Spacing="8">
                    <ComboBox x:Name="YearSelector" SelectionChanged="YearSelector_SelectionChanged" MinWidth="100" />
                    <Button Click="Refresh_Click" Style="{StaticResource IconButtonStyle}" ToolTipService.ToolTip="Refresh">
                        <FontIcon Glyph="&#xE72C;" FontSize="16" />
                    </Button>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Content -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Padding="24">
            <StackPanel Spacing="24">
                <!-- Summary Stats -->
                <Grid ColumnSpacing="16">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <Border Grid.Column="0" Style="{StaticResource MetricCardSuccessStyle}">
                        <StackPanel>
                            <TextBlock x:Name="OverallCompletenessText" Text="--%" Style="{StaticResource MetricValueStyle}"
                                       Foreground="{StaticResource SuccessColorBrush}" />
                            <TextBlock Text="OVERALL COMPLETENESS" Style="{StaticResource MetricLabelStyle}" />
                        </StackPanel>
                    </Border>

                    <Border Grid.Column="1" Style="{StaticResource MetricCardInfoStyle}">
                        <StackPanel>
                            <TextBlock x:Name="TradingDaysText" Text="--" Style="{StaticResource MetricValueStyle}"
                                       Foreground="{StaticResource InfoColorBrush}" />
                            <TextBlock Text="TRADING DAYS" Style="{StaticResource MetricLabelStyle}" />
                        </StackPanel>
                    </Border>

                    <Border Grid.Column="2" Style="{StaticResource MetricCardWarningStyle}">
                        <StackPanel>
                            <TextBlock x:Name="DaysWithDataText" Text="--" Style="{StaticResource MetricValueStyle}"
                                       Foreground="{StaticResource WarningColorBrush}" />
                            <TextBlock Text="DAYS WITH DATA" Style="{StaticResource MetricLabelStyle}" />
                        </StackPanel>
                    </Border>

                    <Border Grid.Column="3" Style="{StaticResource MetricCardDangerStyle}">
                        <StackPanel>
                            <TextBlock x:Name="TotalGapsText" Text="--" Style="{StaticResource MetricValueStyle}"
                                       Foreground="{StaticResource ErrorColorBrush}" />
                            <TextBlock Text="TOTAL GAPS" Style="{StaticResource MetricLabelStyle}" />
                        </StackPanel>
                    </Border>
                </Grid>

                <!-- Legend -->
                <Border Style="{StaticResource CardStyle}" Padding="16">
                    <StackPanel Orientation="Horizontal" Spacing="24" HorizontalAlignment="Center">
                        <StackPanel Orientation="Horizontal" Spacing="8">
                            <Border Width="16" Height="16" CornerRadius="2" Background="#3fb950" />
                            <TextBlock Text="Complete (â‰¥99%)" FontSize="12" />
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Spacing="8">
                            <Border Width="16" Height="16" CornerRadius="2" Background="#58a6ff" />
                            <TextBlock Text="Good (95-98%)" FontSize="12" />
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Spacing="8">
                            <Border Width="16" Height="16" CornerRadius="2" Background="#d29922" />
                            <TextBlock Text="Partial (80-94%)" FontSize="12" />
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Spacing="8">
                            <Border Width="16" Height="16" CornerRadius="2" Background="#f85149" />
                            <TextBlock Text="Poor (&lt;80%)" FontSize="12" />
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Spacing="8">
                            <Border Width="16" Height="16" CornerRadius="2" Background="#21262d" />
                            <TextBlock Text="Missing (0%)" FontSize="12" />
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Spacing="8">
                            <Border Width="16" Height="16" CornerRadius="2" Background="#30363d" />
                            <TextBlock Text="Non-Trading" FontSize="12" />
                        </StackPanel>
                    </StackPanel>
                </Border>

                <!-- Calendar Grid -->
                <Border Style="{StaticResource CardStyle}">
                    <StackPanel Spacing="16">
                        <TextBlock Text="Year Overview" FontWeight="SemiBold" FontSize="16" />

                        <Grid x:Name="CalendarGrid" ColumnSpacing="8" RowSpacing="8">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="80" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>

                            <!-- Column Headers -->
                            <TextBlock Grid.Row="0" Grid.Column="1" Text="Mon" HorizontalAlignment="Center" FontSize="11" Foreground="{ThemeResource SystemBaseMediumColor}" />
                            <TextBlock Grid.Row="0" Grid.Column="2" Text="Tue" HorizontalAlignment="Center" FontSize="11" Foreground="{ThemeResource SystemBaseMediumColor}" />
                            <TextBlock Grid.Row="0" Grid.Column="3" Text="Wed" HorizontalAlignment="Center" FontSize="11" Foreground="{ThemeResource SystemBaseMediumColor}" />
                            <TextBlock Grid.Row="0" Grid.Column="4" Text="Thu" HorizontalAlignment="Center" FontSize="11" Foreground="{ThemeResource SystemBaseMediumColor}" />
                            <TextBlock Grid.Row="0" Grid.Column="5" Text="Fri" HorizontalAlignment="Center" FontSize="11" Foreground="{ThemeResource SystemBaseMediumColor}" />
                            <TextBlock Grid.Row="0" Grid.Column="6" Text="Sat" HorizontalAlignment="Center" FontSize="11" Foreground="{ThemeResource SystemBaseMediumColor}" />
                        </Grid>

                        <!-- Month Grids Container -->
                        <ItemsControl x:Name="MonthsContainer">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <StackPanel Spacing="24" />
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <StackPanel Spacing="8">
                                        <StackPanel Orientation="Horizontal" Spacing="12">
                                            <TextBlock Text="{Binding MonthName}" FontWeight="SemiBold" Width="80" />
                                            <TextBlock Text="{Binding CompletenessText}" Foreground="{ThemeResource SystemBaseMediumColor}" FontSize="12" />
                                        </StackPanel>
                                        <ItemsControl ItemsSource="{Binding WeekRows}">
                                            <ItemsControl.ItemsPanel>
                                                <ItemsPanelTemplate>
                                                    <StackPanel Orientation="Vertical" Spacing="2" />
                                                </ItemsPanelTemplate>
                                            </ItemsControl.ItemsPanel>
                                            <ItemsControl.ItemTemplate>
                                                <DataTemplate>
                                                    <ItemsControl ItemsSource="{Binding Days}">
                                                        <ItemsControl.ItemsPanel>
                                                            <ItemsPanelTemplate>
                                                                <StackPanel Orientation="Horizontal" Spacing="2" />
                                                            </ItemsPanelTemplate>
                                                        </ItemsControl.ItemsPanel>
                                                        <ItemsControl.ItemTemplate>
                                                            <DataTemplate>
                                                                <Border Width="16" Height="16" CornerRadius="2"
                                                                        Background="{Binding Color}"
                                                                        ToolTipService.ToolTip="{Binding Tooltip}" />
                                                            </DataTemplate>
                                                        </ItemsControl.ItemTemplate>
                                                    </ItemsControl>
                                                </DataTemplate>
                                            </ItemsControl.ItemTemplate>
                                        </ItemsControl>
                                    </StackPanel>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </StackPanel>
                </Border>

                <!-- Gap Analysis -->
                <Grid ColumnSpacing="24">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="350" />
                    </Grid.ColumnDefinitions>

                    <!-- Gap List -->
                    <Border Grid.Column="0" Style="{StaticResource CardStyle}">
                        <StackPanel Spacing="16">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>

                                <StackPanel Grid.Column="0" Orientation="Horizontal" Spacing="8">
                                    <FontIcon Glyph="&#xE7BA;" FontSize="20" Foreground="{StaticResource WarningColorBrush}" />
                                    <TextBlock Text="Data Gaps" FontWeight="SemiBold" FontSize="16" />
                                </StackPanel>

                                <Button Grid.Column="1" x:Name="RepairAllGapsButton" Click="RepairAllGaps_Click">
                                    <StackPanel Orientation="Horizontal" Spacing="8">
                                        <FontIcon Glyph="&#xE90F;" FontSize="14" />
                                        <TextBlock Text="Repair All" />
                                    </StackPanel>
                                </Button>
                            </Grid>

                            <ListView x:Name="GapsList" MaxHeight="400" SelectionMode="None">
                                <ListView.ItemTemplate>
                                    <DataTemplate>
                                        <Grid Padding="8" ColumnSpacing="12">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="80" />
                                                <ColumnDefinition Width="*" />
                                                <ColumnDefinition Width="Auto" />
                                                <ColumnDefinition Width="Auto" />
                                            </Grid.ColumnDefinitions>

                                            <TextBlock Grid.Column="0" Text="{Binding Symbol}" FontWeight="SemiBold" />
                                            <StackPanel Grid.Column="1">
                                                <TextBlock Text="{Binding DateRange}" />
                                                <TextBlock Text="{Binding GapType}" FontSize="11" Foreground="{ThemeResource SystemBaseMediumColor}" />
                                            </StackPanel>
                                            <TextBlock Grid.Column="2" Text="{Binding MissingEvents}" Foreground="{StaticResource ErrorColorBrush}" />
                                            <Button Grid.Column="3" Content="Repair" Tag="{Binding}" Click="RepairGap_Click"
                                                    Visibility="{Binding CanRepairVisibility}" Padding="8,4" />
                                        </Grid>
                                    </DataTemplate>
                                </ListView.ItemTemplate>
                            </ListView>

                            <TextBlock x:Name="NoGapsText" Text="No gaps detected" HorizontalAlignment="Center"
                                       Foreground="{ThemeResource SystemBaseMediumColor}" FontStyle="Italic" Visibility="Collapsed" />
                        </StackPanel>
                    </Border>

                    <!-- Coverage by Symbol -->
                    <Border Grid.Column="1" Style="{StaticResource CardStyle}">
                        <StackPanel Spacing="16">
                            <StackPanel Orientation="Horizontal" Spacing="8">
                                <FontIcon Glyph="&#xE9D9;" FontSize="20" Foreground="{ThemeResource SystemAccentColor}" />
                                <TextBlock Text="Coverage by Symbol" FontWeight="SemiBold" FontSize="16" />
                            </StackPanel>

                            <ListView x:Name="SymbolCoverageList" MaxHeight="400" SelectionMode="None">
                                <ListView.ItemTemplate>
                                    <DataTemplate>
                                        <Grid Padding="8,12" ColumnSpacing="12">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="60" />
                                                <ColumnDefinition Width="*" />
                                                <ColumnDefinition Width="50" />
                                            </Grid.ColumnDefinitions>

                                            <TextBlock Grid.Column="0" Text="{Binding Symbol}" FontWeight="SemiBold" />
                                            <ProgressBar Grid.Column="1" Value="{Binding Completeness}" Maximum="100"
                                                         Height="8" Foreground="{Binding BarColor}" />
                                            <TextBlock Grid.Column="2" Text="{Binding CompletenessText}" FontSize="12"
                                                       Foreground="{Binding TextColor}" HorizontalAlignment="Right" />
                                        </Grid>
                                    </DataTemplate>
                                </ListView.ItemTemplate>
                            </ListView>
                        </StackPanel>
                    </Border>
                </Grid>

                <!-- Loading Overlay -->
                <StackPanel x:Name="LoadingOverlay" Visibility="Collapsed" HorizontalAlignment="Center">
                    <ProgressRing IsActive="True" Width="40" Height="40" />
                    <TextBlock Text="Loading calendar data..." Margin="0,12,0,0" />
                </StackPanel>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>
