<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="MarketDataCollector.Uwp.Views.SymbolStoragePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:MarketDataCollector.Uwp.Views"
    xmlns:converters="using:MarketDataCollector.Uwp.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Page.Resources>
        <converters:BoolToVisibilityConverter x:Key="BoolToVisibility" />
        <converters:InverseBoolToVisibilityConverter x:Key="InverseBoolToVisibility" />
    </Page.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!-- Loading Overlay -->
        <Grid x:Name="LoadingOverlay" Grid.RowSpan="2"
              Background="{ThemeResource SystemFillColorNeutralBackgroundBrush}"
              Opacity="0.9" Visibility="Collapsed" Canvas.ZIndex="100">
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Spacing="16">
                <ProgressRing IsActive="True" Width="48" Height="48" />
                <TextBlock x:Name="LoadingText" Text="Loading symbol data..."
                           Style="{StaticResource SubtitleTextBlockStyle}"
                           HorizontalAlignment="Center" />
            </StackPanel>
        </Grid>

        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Padding="24"
                      AutomationProperties.Name="Symbol storage details"
                      AutomationProperties.HelpText="View collected data for a specific symbol">
            <StackPanel Spacing="24">
                <!-- Header -->
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0" Spacing="4">
                        <StackPanel Orientation="Horizontal" Spacing="16">
                            <TextBlock x:Name="SymbolTitle" Text="Symbol Details"
                                       Style="{StaticResource PageTitleStyle}"
                                       AutomationProperties.HeadingLevel="Level1" />
                            <Border x:Name="SymbolBadge" Background="{StaticResource InfoColorBrush}"
                                    CornerRadius="4" Padding="12,4" VerticalAlignment="Center">
                                <TextBlock x:Name="SymbolBadgeText" Text="AAPL"
                                           FontWeight="Bold" Foreground="White" />
                            </Border>
                        </StackPanel>
                        <TextBlock Text="View collected market data, storage statistics, and data quality for this symbol"
                                   Style="{StaticResource CardDescriptionStyle}" />
                    </StackPanel>

                    <StackPanel Grid.Column="1" Orientation="Horizontal" Spacing="8">
                        <Button x:Name="RefreshButton" Click="Refresh_Click"
                                Style="{StaticResource IconButtonStyle}"
                                AutomationProperties.Name="Refresh data"
                                ToolTipService.ToolTip="Refresh symbol data (F5)">
                            <FontIcon Glyph="&#xE72C;" FontSize="16" />
                            <Button.KeyboardAccelerators>
                                <KeyboardAccelerator Key="F5" />
                            </Button.KeyboardAccelerators>
                        </Button>
                        <Button x:Name="ExportButton" Click="Export_Click"
                                AutomationProperties.Name="Export symbol data"
                                ToolTipService.ToolTip="Export data for this symbol">
                            <StackPanel Orientation="Horizontal" Spacing="6">
                                <FontIcon Glyph="&#xEDE1;" FontSize="14" />
                                <TextBlock Text="Export" />
                            </StackPanel>
                        </Button>
                        <Button x:Name="BackfillButton" Click="Backfill_Click"
                                Style="{StaticResource PrimaryButtonStyle}"
                                AutomationProperties.Name="Run backfill for symbol"
                                ToolTipService.ToolTip="Download historical data for this symbol">
                            <StackPanel Orientation="Horizontal" Spacing="6">
                                <FontIcon Glyph="&#xE787;" FontSize="14" />
                                <TextBlock Text="Backfill" />
                            </StackPanel>
                        </Button>
                    </StackPanel>
                </Grid>

                <!-- Error Banner -->
                <InfoBar x:Name="ErrorInfoBar"
                         IsOpen="False"
                         IsClosable="True"
                         Severity="Error"
                         Title="Error loading symbol data"
                         AutomationProperties.LiveSetting="Polite" />

                <!-- Quick Stats Row -->
                <Grid ColumnSpacing="16">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <Border Grid.Column="0" Style="{StaticResource MetricCardSuccessStyle}">
                        <StackPanel Spacing="4">
                            <TextBlock x:Name="TotalEventsText" Text="0"
                                       Style="{StaticResource MetricValueStyle}"
                                       Foreground="{StaticResource SuccessColorBrush}" />
                            <TextBlock Text="TOTAL EVENTS" Style="{StaticResource MetricLabelStyle}" />
                        </StackPanel>
                    </Border>

                    <Border Grid.Column="1" Style="{StaticResource MetricCardInfoStyle}">
                        <StackPanel Spacing="4">
                            <TextBlock x:Name="StorageSizeText" Text="0 MB"
                                       Style="{StaticResource MetricValueStyle}"
                                       Foreground="{StaticResource InfoColorBrush}" />
                            <TextBlock Text="STORAGE SIZE" Style="{StaticResource MetricLabelStyle}" />
                        </StackPanel>
                    </Border>

                    <Border Grid.Column="2" Style="{StaticResource MetricCardWarningStyle}">
                        <StackPanel Spacing="4">
                            <TextBlock x:Name="DataGapsText" Text="0"
                                       Style="{StaticResource MetricValueStyle}"
                                       Foreground="{StaticResource WarningColorBrush}" />
                            <TextBlock Text="DATA GAPS" Style="{StaticResource MetricLabelStyle}" />
                        </StackPanel>
                    </Border>

                    <Border Grid.Column="3" Style="{StaticResource CardStyle}">
                        <StackPanel Spacing="4">
                            <TextBlock x:Name="DataQualityText" Text="100%"
                                       Style="{StaticResource MetricValueStyle}"
                                       Foreground="{StaticResource SuccessColorBrush}" />
                            <TextBlock Text="DATA QUALITY" Style="{StaticResource MetricLabelStyle}" />
                        </StackPanel>
                    </Border>
                </Grid>

                <!-- Symbol Info Card -->
                <Border Style="{StaticResource CardStyle}">
                    <StackPanel Spacing="16">
                        <StackPanel Orientation="Horizontal" Spacing="8">
                            <FontIcon Glyph="&#xE946;" Foreground="{ThemeResource SystemAccentColor}" />
                            <TextBlock Text="Symbol Information" Style="{StaticResource SubtitleTextBlockStyle}" />
                        </StackPanel>

                        <Grid ColumnSpacing="48" RowSpacing="16">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>

                            <StackPanel Grid.Row="0" Grid.Column="0" Spacing="4">
                                <TextBlock Text="Exchange" Style="{StaticResource CaptionTextBlockStyle}"
                                           Foreground="{ThemeResource SystemBaseMediumColor}" />
                                <TextBlock x:Name="ExchangeText" Text="--" FontWeight="SemiBold" />
                            </StackPanel>

                            <StackPanel Grid.Row="0" Grid.Column="1" Spacing="4">
                                <TextBlock Text="Provider" Style="{StaticResource CaptionTextBlockStyle}"
                                           Foreground="{ThemeResource SystemBaseMediumColor}" />
                                <TextBlock x:Name="ProviderText" Text="--" FontWeight="SemiBold" />
                            </StackPanel>

                            <StackPanel Grid.Row="0" Grid.Column="2" Spacing="4">
                                <TextBlock Text="Subscription Status" Style="{StaticResource CaptionTextBlockStyle}"
                                           Foreground="{ThemeResource SystemBaseMediumColor}" />
                                <StackPanel Orientation="Horizontal" Spacing="6">
                                    <Ellipse x:Name="SubscriptionStatusIndicator" Width="8" Height="8"
                                             Fill="{StaticResource SuccessColorBrush}" />
                                    <TextBlock x:Name="SubscriptionStatusText" Text="Active" FontWeight="SemiBold" />
                                </StackPanel>
                            </StackPanel>

                            <StackPanel Grid.Row="1" Grid.Column="0" Spacing="4">
                                <TextBlock Text="First Data Point" Style="{StaticResource CaptionTextBlockStyle}"
                                           Foreground="{ThemeResource SystemBaseMediumColor}" />
                                <TextBlock x:Name="FirstDataText" Text="--" />
                            </StackPanel>

                            <StackPanel Grid.Row="1" Grid.Column="1" Spacing="4">
                                <TextBlock Text="Last Data Point" Style="{StaticResource CaptionTextBlockStyle}"
                                           Foreground="{ThemeResource SystemBaseMediumColor}" />
                                <TextBlock x:Name="LastDataText" Text="--" />
                            </StackPanel>

                            <StackPanel Grid.Row="1" Grid.Column="2" Spacing="4">
                                <TextBlock Text="Collection Duration" Style="{StaticResource CaptionTextBlockStyle}"
                                           Foreground="{ThemeResource SystemBaseMediumColor}" />
                                <TextBlock x:Name="CollectionDurationText" Text="--" />
                            </StackPanel>
                        </Grid>
                    </StackPanel>
                </Border>

                <!-- Data Files Card -->
                <Border Style="{StaticResource CardStyle}">
                    <StackPanel Spacing="16">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0" Orientation="Horizontal" Spacing="8">
                                <FontIcon Glyph="&#xE8B7;" Foreground="{ThemeResource SystemAccentColor}" />
                                <TextBlock Text="Data Files" Style="{StaticResource SubtitleTextBlockStyle}" />
                                <Border Background="{ThemeResource SystemFillColorNeutralBackgroundBrush}"
                                        CornerRadius="12" Padding="8,4">
                                    <TextBlock x:Name="FileCountText" Text="0 files"
                                               Style="{StaticResource CaptionTextBlockStyle}" />
                                </Border>
                            </StackPanel>

                            <Button Grid.Column="1" Click="OpenFolder_Click"
                                    AutomationProperties.Name="Open data folder"
                                    ToolTipService.ToolTip="Open folder in File Explorer">
                                <StackPanel Orientation="Horizontal" Spacing="6">
                                    <FontIcon Glyph="&#xE838;" FontSize="14" />
                                    <TextBlock Text="Open Folder" />
                                </StackPanel>
                            </Button>
                        </Grid>

                        <!-- Files List -->
                        <ListView x:Name="FilesListView" MaxHeight="300" SelectionMode="Single"
                                  AutomationProperties.Name="Data files list">
                            <ListView.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <ItemsStackPanel Orientation="Vertical" />
                                </ItemsPanelTemplate>
                            </ListView.ItemsPanel>
                            <ListView.HeaderTemplate>
                                <DataTemplate>
                                    <Grid Padding="8,8" Background="{ThemeResource SystemFillColorNeutralBackgroundBrush}">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="200" />
                                            <ColumnDefinition Width="100" />
                                            <ColumnDefinition Width="100" />
                                            <ColumnDefinition Width="120" />
                                            <ColumnDefinition Width="*" />
                                        </Grid.ColumnDefinitions>

                                        <TextBlock Grid.Column="0" Text="File Name" FontWeight="SemiBold" />
                                        <TextBlock Grid.Column="1" Text="Type" FontWeight="SemiBold" />
                                        <TextBlock Grid.Column="2" Text="Size" FontWeight="SemiBold" />
                                        <TextBlock Grid.Column="3" Text="Modified" FontWeight="SemiBold" />
                                        <TextBlock Grid.Column="4" Text="Events" FontWeight="SemiBold" />
                                    </Grid>
                                </DataTemplate>
                            </ListView.HeaderTemplate>
                            <ListView.ItemTemplate>
                                <DataTemplate>
                                    <Grid Padding="8,10">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="200" />
                                            <ColumnDefinition Width="100" />
                                            <ColumnDefinition Width="100" />
                                            <ColumnDefinition Width="120" />
                                            <ColumnDefinition Width="*" />
                                        </Grid.ColumnDefinitions>

                                        <StackPanel Grid.Column="0" Orientation="Horizontal" Spacing="8">
                                            <FontIcon Glyph="{Binding FileIcon}" FontSize="14"
                                                      Foreground="{ThemeResource SystemAccentColor}" />
                                            <TextBlock Text="{Binding FileName}" TextTrimming="CharacterEllipsis" />
                                        </StackPanel>
                                        <Border Grid.Column="1" Background="{Binding TypeBackground}"
                                                CornerRadius="4" Padding="6,2" HorizontalAlignment="Left">
                                            <TextBlock Text="{Binding FileType}" FontSize="11" />
                                        </Border>
                                        <TextBlock Grid.Column="2" Text="{Binding FileSize}" />
                                        <TextBlock Grid.Column="3" Text="{Binding ModifiedDate}"
                                                   Foreground="{ThemeResource SystemBaseMediumColor}" />
                                        <TextBlock Grid.Column="4" Text="{Binding EventCount}" />
                                    </Grid>
                                </DataTemplate>
                            </ListView.ItemTemplate>
                        </ListView>

                        <!-- Empty State -->
                        <StackPanel x:Name="NoFilesPanel" Visibility="Collapsed"
                                    HorizontalAlignment="Center" Spacing="12" Padding="24">
                            <FontIcon Glyph="&#xE7B8;" FontSize="48"
                                      Foreground="{ThemeResource SystemBaseMediumColor}" />
                            <TextBlock Text="No data files found"
                                       Style="{StaticResource SubtitleTextBlockStyle}"
                                       HorizontalAlignment="Center" />
                            <TextBlock Text="Start collecting data or run a backfill to populate files"
                                       Style="{StaticResource CaptionTextBlockStyle}"
                                       Foreground="{ThemeResource SystemBaseMediumColor}"
                                       HorizontalAlignment="Center" />
                            <Button Content="Run Backfill" Click="Backfill_Click"
                                    Style="{StaticResource PrimaryButtonStyle}"
                                    HorizontalAlignment="Center" Margin="0,8,0,0" />
                        </StackPanel>
                    </StackPanel>
                </Border>

                <!-- Data Timeline Card -->
                <Border Style="{StaticResource CardStyle}">
                    <StackPanel Spacing="16">
                        <StackPanel Orientation="Horizontal" Spacing="8">
                            <FontIcon Glyph="&#xE823;" Foreground="{ThemeResource SystemAccentColor}" />
                            <TextBlock Text="Data Coverage Timeline" Style="{StaticResource SubtitleTextBlockStyle}" />
                        </StackPanel>

                        <Border Background="{ThemeResource SystemFillColorNeutralBackgroundBrush}"
                                CornerRadius="4" Padding="16,12">
                            <Grid Height="60">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="*" />
                                    <RowDefinition Height="Auto" />
                                </Grid.RowDefinitions>

                                <!-- Timeline bar -->
                                <Border Grid.Row="1" Background="{ThemeResource SystemBaseMediumLowColor}"
                                        Height="8" CornerRadius="4" VerticalAlignment="Center">
                                    <Border x:Name="CoverageBar" Background="{StaticResource SuccessColorBrush}"
                                            CornerRadius="4" HorizontalAlignment="Left" Width="0" />
                                </Border>

                                <!-- Timeline labels -->
                                <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="0,8,0,0">
                                    <TextBlock x:Name="TimelineStartText" Text="--"
                                               Style="{StaticResource CaptionTextBlockStyle}"
                                               Foreground="{ThemeResource SystemBaseMediumColor}" />
                                    <TextBlock Text=" - " Style="{StaticResource CaptionTextBlockStyle}"
                                               Foreground="{ThemeResource SystemBaseMediumColor}" />
                                    <TextBlock x:Name="TimelineEndText" Text="--"
                                               Style="{StaticResource CaptionTextBlockStyle}"
                                               Foreground="{ThemeResource SystemBaseMediumColor}" />
                                </StackPanel>
                            </Grid>
                        </Border>

                        <!-- Gap indicators -->
                        <StackPanel x:Name="GapsPanel" Spacing="8" Visibility="Collapsed">
                            <TextBlock Text="Detected Gaps" FontWeight="SemiBold"
                                       Foreground="{StaticResource WarningColorBrush}" />
                            <ListView x:Name="GapsListView" MaxHeight="150" SelectionMode="None">
                                <ListView.ItemTemplate>
                                    <DataTemplate>
                                        <Grid Padding="8,6" ColumnSpacing="16">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto" />
                                                <ColumnDefinition Width="*" />
                                                <ColumnDefinition Width="Auto" />
                                            </Grid.ColumnDefinitions>

                                            <FontIcon Grid.Column="0" Glyph="&#xE7BA;" FontSize="14"
                                                      Foreground="{StaticResource WarningColorBrush}" />
                                            <TextBlock Grid.Column="1" Text="{Binding Description}" />
                                            <Button Grid.Column="2" Content="Fill Gap" Click="FillGap_Click"
                                                    Tag="{Binding}" Padding="8,4" />
                                        </Grid>
                                    </DataTemplate>
                                </ListView.ItemTemplate>
                            </ListView>
                        </StackPanel>
                    </StackPanel>
                </Border>

                <!-- Quick Actions -->
                <Border Style="{StaticResource CardStyle}">
                    <StackPanel Spacing="16">
                        <StackPanel Orientation="Horizontal" Spacing="8">
                            <FontIcon Glyph="&#xE768;" Foreground="{ThemeResource SystemAccentColor}" />
                            <TextBlock Text="Quick Actions" Style="{StaticResource SubtitleTextBlockStyle}" />
                        </StackPanel>

                        <Grid ColumnSpacing="12">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>

                            <Button Grid.Column="0" Click="ViewLiveData_Click" HorizontalAlignment="Stretch"
                                    AutomationProperties.Name="View live data for symbol">
                                <StackPanel Spacing="8" Padding="8">
                                    <FontIcon Glyph="&#xE9D9;" FontSize="24"
                                              Foreground="{ThemeResource SystemAccentColor}" />
                                    <TextBlock Text="Live Data" HorizontalAlignment="Center" />
                                </StackPanel>
                            </Button>

                            <Button Grid.Column="1" Click="Backfill_Click" HorizontalAlignment="Stretch"
                                    AutomationProperties.Name="Download historical data">
                                <StackPanel Spacing="8" Padding="8">
                                    <FontIcon Glyph="&#xE787;" FontSize="24"
                                              Foreground="{StaticResource InfoColorBrush}" />
                                    <TextBlock Text="Backfill" HorizontalAlignment="Center" />
                                </StackPanel>
                            </Button>

                            <Button Grid.Column="2" Click="Export_Click" HorizontalAlignment="Stretch"
                                    AutomationProperties.Name="Export symbol data">
                                <StackPanel Spacing="8" Padding="8">
                                    <FontIcon Glyph="&#xEDE1;" FontSize="24"
                                              Foreground="{StaticResource SuccessColorBrush}" />
                                    <TextBlock Text="Export" HorizontalAlignment="Center" />
                                </StackPanel>
                            </Button>

                            <Button Grid.Column="3" Click="VerifyIntegrity_Click" HorizontalAlignment="Stretch"
                                    AutomationProperties.Name="Verify data integrity">
                                <StackPanel Spacing="8" Padding="8">
                                    <FontIcon Glyph="&#xE73E;" FontSize="24"
                                              Foreground="{StaticResource WarningColorBrush}" />
                                    <TextBlock Text="Verify" HorizontalAlignment="Center" />
                                </StackPanel>
                            </Button>
                        </Grid>
                    </StackPanel>
                </Border>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>
