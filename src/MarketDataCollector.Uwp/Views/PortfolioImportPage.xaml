<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="MarketDataCollector.Uwp.Views.PortfolioImportPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="380" />
        </Grid.ColumnDefinitions>

        <ScrollViewer Grid.Column="0" VerticalScrollBarVisibility="Auto" Padding="24">
            <StackPanel Spacing="24" MaxWidth="900">
                <!-- Header -->
                <StackPanel Orientation="Horizontal" Spacing="12">
                    <FontIcon Glyph="&#xE8B5;" FontSize="28" Foreground="{ThemeResource SystemAccentColor}" />
                    <TextBlock Text="Portfolio Import" Style="{StaticResource TitleTextBlockStyle}" VerticalAlignment="Center" />
                </StackPanel>

                <TextBlock Text="Import symbols from CSV or JSON files, or quickly add index constituents."
                           Style="{StaticResource BodyTextBlockStyle}"
                           Foreground="{ThemeResource SystemBaseMediumColor}" />

                <!-- File Import Section -->
                <Border Style="{StaticResource CardStyle}">
                    <StackPanel Spacing="16">
                        <StackPanel Orientation="Horizontal" Spacing="8">
                            <FontIcon Glyph="&#xE8E5;" Foreground="{ThemeResource SystemAccentColor}" />
                            <TextBlock Text="Import from File" Style="{StaticResource SubtitleTextBlockStyle}" />
                        </StackPanel>

                        <TextBlock Text="Supported formats: CSV, JSON, TXT (one symbol per line)"
                                   Style="{StaticResource CaptionTextBlockStyle}"
                                   Foreground="{ThemeResource SystemBaseMediumColor}" />

                        <Grid ColumnSpacing="12">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>

                            <TextBox x:Name="FilePathBox"
                                     Grid.Column="0"
                                     PlaceholderText="Select a file to import..."
                                     IsReadOnly="True" />
                            <Button Grid.Column="1" Content="Browse..." Click="BrowseFile_Click" />
                        </Grid>

                        <StackPanel Orientation="Horizontal" Spacing="8">
                            <Button x:Name="ParseFileButton"
                                    Content="Parse File"
                                    Style="{StaticResource AccentButtonStyle}"
                                    Click="ParseFile_Click"
                                    IsEnabled="False" />
                            <ProgressRing x:Name="ParseProgress" IsActive="False" Width="24" Height="24" />
                            <TextBlock x:Name="ParseStatusText"
                                       VerticalAlignment="Center"
                                       Style="{StaticResource CaptionTextBlockStyle}" />
                        </StackPanel>
                    </StackPanel>
                </Border>

                <!-- Parsed Results -->
                <Border x:Name="ParsedResultsCard" Style="{StaticResource CardStyle}" Visibility="Collapsed">
                    <StackPanel Spacing="16">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>

                            <StackPanel Orientation="Horizontal" Spacing="8">
                                <FontIcon Glyph="&#xE73E;" Foreground="#48BB78" />
                                <TextBlock Text="Parsed Symbols" Style="{StaticResource SubtitleTextBlockStyle}" />
                                <TextBlock x:Name="ParsedCountText"
                                           VerticalAlignment="Center"
                                           Foreground="{ThemeResource SystemBaseMediumColor}" />
                            </StackPanel>

                            <StackPanel Grid.Column="1" Orientation="Horizontal" Spacing="8">
                                <Button Content="Select All" Click="SelectAll_Click" />
                                <Button Content="Clear Selection" Click="ClearSelection_Click" />
                            </StackPanel>
                        </Grid>

                        <ListView x:Name="ParsedSymbolsList"
                                  SelectionMode="Multiple"
                                  MaxHeight="300">
                            <ListView.ItemTemplate>
                                <DataTemplate>
                                    <Grid Padding="8,4" ColumnSpacing="12">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="80" />
                                            <ColumnDefinition Width="100" />
                                            <ColumnDefinition Width="*" />
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Grid.Column="0" Text="{Binding Symbol}" FontWeight="SemiBold" />
                                        <TextBlock Grid.Column="1" Text="{Binding QuantityText}"
                                                   Foreground="{ThemeResource SystemBaseMediumColor}" />
                                        <TextBlock Grid.Column="2" Text="{Binding Exchange}"
                                                   Foreground="{ThemeResource SystemBaseMediumColor}" />
                                    </Grid>
                                </DataTemplate>
                            </ListView.ItemTemplate>
                        </ListView>
                    </StackPanel>
                </Border>

                <!-- Import Options -->
                <Border x:Name="ImportOptionsCard" Style="{StaticResource CardStyle}" Visibility="Collapsed">
                    <StackPanel Spacing="16">
                        <TextBlock Text="Import Options" Style="{StaticResource SubtitleTextBlockStyle}" />

                        <RadioButtons Header="Import As:">
                            <RadioButton x:Name="ImportAsSubscriptionsRadio"
                                         Content="Symbol Subscriptions (start collecting data)"
                                         IsChecked="True" />
                            <RadioButton x:Name="ImportAsWatchlistRadio"
                                         Content="Watchlist (for quick reference)" />
                        </RadioButtons>

                        <StackPanel x:Name="SubscriptionOptionsPanel" Spacing="12">
                            <CheckBox x:Name="EnableTradesCheck"
                                      Content="Subscribe to Trades"
                                      IsChecked="True" />
                            <CheckBox x:Name="EnableDepthCheck"
                                      Content="Subscribe to Market Depth (L2)" />
                            <ComboBox x:Name="DepthLevelsCombo"
                                      Header="Depth Levels"
                                      SelectedIndex="1"
                                      IsEnabled="False">
                                <ComboBoxItem Content="1 level" Tag="1" />
                                <ComboBoxItem Content="5 levels" Tag="5" />
                                <ComboBoxItem Content="10 levels" Tag="10" />
                                <ComboBoxItem Content="20 levels" Tag="20" />
                            </ComboBox>
                        </StackPanel>

                        <StackPanel x:Name="WatchlistOptionsPanel" Spacing="12" Visibility="Collapsed">
                            <TextBox x:Name="WatchlistNameBox"
                                     Header="Watchlist Name"
                                     PlaceholderText="My Portfolio" />
                        </StackPanel>

                        <StackPanel Orientation="Horizontal" Spacing="12">
                            <Button x:Name="ImportButton"
                                    Content="Import Selected"
                                    Style="{StaticResource AccentButtonStyle}"
                                    Click="Import_Click" />
                            <ProgressRing x:Name="ImportProgress" IsActive="False" Width="24" Height="24" />
                            <TextBlock x:Name="ImportStatusText"
                                       VerticalAlignment="Center"
                                       Style="{StaticResource CaptionTextBlockStyle}" />
                        </StackPanel>
                    </StackPanel>
                </Border>

                <!-- Import Results -->
                <Border x:Name="ImportResultsCard" Style="{StaticResource CardStyle}" Visibility="Collapsed">
                    <StackPanel Spacing="16">
                        <StackPanel Orientation="Horizontal" Spacing="8">
                            <FontIcon x:Name="ImportResultIcon" Glyph="&#xE73E;" Foreground="#48BB78" />
                            <TextBlock Text="Import Complete" Style="{StaticResource SubtitleTextBlockStyle}" />
                        </StackPanel>

                        <Grid ColumnSpacing="24">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0">
                                <TextBlock x:Name="ImportedCountText" Text="0"
                                           Style="{StaticResource SubheaderTextBlockStyle}"
                                           Foreground="#48BB78" />
                                <TextBlock Text="Imported" Style="{StaticResource CaptionTextBlockStyle}" />
                            </StackPanel>
                            <StackPanel Grid.Column="1">
                                <TextBlock x:Name="SkippedCountText" Text="0"
                                           Style="{StaticResource SubheaderTextBlockStyle}"
                                           Foreground="#ED8936" />
                                <TextBlock Text="Skipped" Style="{StaticResource CaptionTextBlockStyle}" />
                            </StackPanel>
                            <StackPanel Grid.Column="2">
                                <TextBlock x:Name="FailedCountText" Text="0"
                                           Style="{StaticResource SubheaderTextBlockStyle}"
                                           Foreground="#F56565" />
                                <TextBlock Text="Failed" Style="{StaticResource CaptionTextBlockStyle}" />
                            </StackPanel>
                        </Grid>

                        <ListView x:Name="ImportErrorsList"
                                  SelectionMode="None"
                                  MaxHeight="150"
                                  Visibility="Collapsed">
                            <ListView.ItemTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding}"
                                               Foreground="#F56565"
                                               TextWrapping="Wrap" />
                                </DataTemplate>
                            </ListView.ItemTemplate>
                        </ListView>
                    </StackPanel>
                </Border>
            </StackPanel>
        </ScrollViewer>

        <!-- Right Panel - Quick Import -->
        <ScrollViewer Grid.Column="1" VerticalScrollBarVisibility="Auto" Padding="12,24,24,24">
            <StackPanel Spacing="16">
                <!-- Index Quick Import -->
                <Border Style="{StaticResource CardStyle}">
                    <StackPanel Spacing="16">
                        <StackPanel Orientation="Horizontal" Spacing="8">
                            <FontIcon Glyph="&#xE9D9;" Foreground="{ThemeResource SystemAccentColor}" FontSize="16" />
                            <TextBlock Text="Quick Index Import" Style="{StaticResource SubtitleTextBlockStyle}" />
                        </StackPanel>

                        <TextBlock Text="Quickly add all constituents from a major index:"
                                   Style="{StaticResource CaptionTextBlockStyle}"
                                   Foreground="{ThemeResource SystemBaseMediumColor}"
                                   TextWrapping="Wrap" />

                        <StackPanel Spacing="8">
                            <Button Content="S&amp;P 500 (Top 30)" Tag="SP500"
                                    HorizontalAlignment="Stretch"
                                    Click="QuickImportIndex_Click" />
                            <Button Content="Nasdaq-100 (Top 20)" Tag="QQQ"
                                    HorizontalAlignment="Stretch"
                                    Click="QuickImportIndex_Click" />
                            <Button Content="Dow Jones 30" Tag="DIA"
                                    HorizontalAlignment="Stretch"
                                    Click="QuickImportIndex_Click" />
                            <Button Content="Russell 2000 Sample" Tag="IWM"
                                    HorizontalAlignment="Stretch"
                                    Click="QuickImportIndex_Click" />
                        </StackPanel>
                    </StackPanel>
                </Border>

                <!-- Common ETFs -->
                <Border Style="{StaticResource CardStyle}">
                    <StackPanel Spacing="16">
                        <TextBlock Text="Popular ETFs" Style="{StaticResource BodyStrongTextBlockStyle}" />

                        <StackPanel Spacing="8">
                            <Button Content="Major Market ETFs" Tag="SPY,QQQ,IWM,DIA,VTI"
                                    HorizontalAlignment="Stretch"
                                    Click="QuickImportSymbols_Click" />
                            <Button Content="Sector ETFs" Tag="XLF,XLK,XLE,XLV,XLI"
                                    HorizontalAlignment="Stretch"
                                    Click="QuickImportSymbols_Click" />
                            <Button Content="Bond ETFs" Tag="TLT,IEF,SHY,HYG,LQD"
                                    HorizontalAlignment="Stretch"
                                    Click="QuickImportSymbols_Click" />
                            <Button Content="Commodity ETFs" Tag="GLD,SLV,USO,UNG"
                                    HorizontalAlignment="Stretch"
                                    Click="QuickImportSymbols_Click" />
                        </StackPanel>
                    </StackPanel>
                </Border>

                <!-- Manual Entry -->
                <Border Style="{StaticResource CardStyle}">
                    <StackPanel Spacing="16">
                        <TextBlock Text="Manual Entry" Style="{StaticResource BodyStrongTextBlockStyle}" />

                        <TextBox x:Name="ManualSymbolsBox"
                                 Header="Symbols (comma-separated)"
                                 PlaceholderText="AAPL,MSFT,GOOGL"
                                 AcceptsReturn="True"
                                 TextWrapping="Wrap"
                                 Height="80" />

                        <Button Content="Add Symbols"
                                Style="{StaticResource AccentButtonStyle}"
                                HorizontalAlignment="Stretch"
                                Click="AddManualSymbols_Click" />
                    </StackPanel>
                </Border>

                <!-- File Format Help -->
                <Border Style="{StaticResource CardStyle}">
                    <StackPanel Spacing="12">
                        <TextBlock Text="Supported File Formats" Style="{StaticResource BodyStrongTextBlockStyle}" />

                        <RichTextBlock FontSize="12" Foreground="{ThemeResource SystemBaseMediumColor}">
                            <Paragraph>
                                <Bold>CSV:</Bold> Symbol column auto-detected
                            </Paragraph>
                            <Paragraph>
                                <Bold>JSON:</Bold> Array or object with symbols property
                            </Paragraph>
                            <Paragraph>
                                <Bold>TXT:</Bold> One symbol per line
                            </Paragraph>
                        </RichTextBlock>

                        <TextBlock Text="Example CSV format:"
                                   Style="{StaticResource CaptionTextBlockStyle}"
                                   FontWeight="SemiBold" />
                        <Border Background="{ThemeResource SystemFillColorNeutralBackgroundBrush}"
                                CornerRadius="4" Padding="8">
                            <TextBlock Text="symbol,quantity&#x0a;AAPL,100&#x0a;MSFT,50"
                                       FontFamily="Consolas"
                                       FontSize="11" />
                        </Border>
                    </StackPanel>
                </Border>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>
