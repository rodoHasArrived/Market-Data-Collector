<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="MarketDataCollector.Uwp.Views.ProviderHealthPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:MarketDataCollector.Uwp.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="24">
        <StackPanel Spacing="24" MaxWidth="1400">
            <!-- Header -->
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <StackPanel Grid.Column="0" Orientation="Horizontal" Spacing="12">
                    <FontIcon Glyph="&#xE9D9;" FontSize="28" Foreground="{ThemeResource SystemAccentColor}" />
                    <StackPanel>
                        <TextBlock Text="Provider Health Dashboard" Style="{StaticResource TitleTextBlockStyle}" />
                        <TextBlock Text="Monitor and compare health metrics across data providers"
                                   Style="{StaticResource CaptionTextBlockStyle}"
                                   Foreground="{ThemeResource SystemBaseMediumColor}" />
                    </StackPanel>
                </StackPanel>
                <StackPanel Grid.Column="1" Orientation="Horizontal" Spacing="8">
                    <Button Content="Refresh" Click="Refresh_Click">
                        <Button.KeyboardAccelerators>
                            <KeyboardAccelerator Key="F5" />
                        </Button.KeyboardAccelerators>
                    </Button>
                    <Button Content="Configure Thresholds" Click="ConfigureThresholds_Click" />
                </StackPanel>
            </Grid>

            <!-- Provider Overview Cards -->
            <TextBlock Text="Provider Overview" Style="{StaticResource SubtitleTextBlockStyle}" />
            <GridView x:Name="ProviderCardsGrid"
                      SelectionMode="Single"
                      IsItemClickEnabled="True"
                      ItemClick="ProviderCard_Click">
                <GridView.ItemTemplate>
                    <DataTemplate>
                        <Border Width="280" Height="200"
                                Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                                BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                                BorderThickness="1"
                                CornerRadius="8"
                                Padding="16">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="*" />
                                    <RowDefinition Height="Auto" />
                                </Grid.RowDefinitions>

                                <!-- Header -->
                                <Grid Grid.Row="0">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="Auto" />
                                    </Grid.ColumnDefinitions>
                                    <StackPanel Grid.Column="0">
                                        <TextBlock Text="{Binding ProviderName}"
                                                   Style="{StaticResource BodyStrongTextBlockStyle}" />
                                        <TextBlock Text="{Binding ProviderId}"
                                                   Style="{StaticResource CaptionTextBlockStyle}"
                                                   Foreground="{ThemeResource SystemBaseMediumColor}" />
                                    </StackPanel>
                                    <Border Grid.Column="1"
                                            Width="12" Height="12"
                                            CornerRadius="6"
                                            Background="{Binding StatusColor}" />
                                </Grid>

                                <!-- Overall Score -->
                                <StackPanel Grid.Row="1" Orientation="Horizontal" Spacing="8" Margin="0,12,0,8">
                                    <TextBlock Text="{Binding ScoreDisplay}"
                                               FontSize="36"
                                               FontWeight="Bold"
                                               Foreground="{Binding ScoreColor}" />
                                    <TextBlock Text="/ 100"
                                               FontSize="16"
                                               VerticalAlignment="Bottom"
                                               Margin="0,0,0,8"
                                               Foreground="{ThemeResource SystemBaseMediumColor}" />
                                </StackPanel>

                                <!-- Mini Breakdown -->
                                <Grid Grid.Row="2" RowSpacing="4">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="Auto" />
                                    </Grid.RowDefinitions>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="Auto" />
                                    </Grid.ColumnDefinitions>

                                    <TextBlock Grid.Row="0" Grid.Column="0" Text="Stability" FontSize="12" />
                                    <TextBlock Grid.Row="0" Grid.Column="1" Text="{Binding StabilityDisplay}" FontSize="12" HorizontalAlignment="Right" />

                                    <TextBlock Grid.Row="1" Grid.Column="0" Text="Latency" FontSize="12" />
                                    <TextBlock Grid.Row="1" Grid.Column="1" Text="{Binding LatencyDisplay}" FontSize="12" HorizontalAlignment="Right" />

                                    <TextBlock Grid.Row="2" Grid.Column="0" Text="Completeness" FontSize="12" />
                                    <TextBlock Grid.Row="2" Grid.Column="1" Text="{Binding CompletenessDisplay}" FontSize="12" HorizontalAlignment="Right" />

                                    <TextBlock Grid.Row="3" Grid.Column="0" Text="Reconnects" FontSize="12" />
                                    <TextBlock Grid.Row="3" Grid.Column="1" Text="{Binding ReconnectsDisplay}" FontSize="12" HorizontalAlignment="Right" />
                                </Grid>

                                <!-- Status Footer -->
                                <TextBlock Grid.Row="3"
                                           Text="{Binding StatusText}"
                                           Style="{StaticResource CaptionTextBlockStyle}"
                                           Foreground="{Binding StatusColor}"
                                           HorizontalAlignment="Right" />
                            </Grid>
                        </Border>
                    </DataTemplate>
                </GridView.ItemTemplate>
            </GridView>

            <!-- Detailed Health Breakdown -->
            <Border x:Name="DetailPanel" Style="{StaticResource CardStyle}" Visibility="Collapsed">
                <StackPanel Spacing="16">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>
                        <StackPanel Grid.Column="0" Orientation="Horizontal" Spacing="8">
                            <FontIcon Glyph="&#xE9F5;" Foreground="{ThemeResource SystemAccentColor}" />
                            <TextBlock x:Name="DetailProviderName" Text="Provider Details" Style="{StaticResource SubtitleTextBlockStyle}" />
                        </StackPanel>
                        <Button Grid.Column="1" Content="Close" Click="CloseDetail_Click" />
                    </Grid>

                    <Grid ColumnSpacing="24">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>

                        <!-- Score Breakdown -->
                        <Border Grid.Column="0"
                                Background="{ThemeResource CardBackgroundFillColorSecondaryBrush}"
                                CornerRadius="8"
                                Padding="16">
                            <StackPanel Spacing="16">
                                <TextBlock Text="Health Score Breakdown" Style="{StaticResource BodyStrongTextBlockStyle}" />

                                <!-- Connection Stability -->
                                <StackPanel Spacing="4">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="Auto" />
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Grid.Column="0" Text="Connection Stability (30%)" />
                                        <TextBlock x:Name="StabilityScoreText" Grid.Column="1" Text="95.2" FontWeight="SemiBold" />
                                    </Grid>
                                    <ProgressBar x:Name="StabilityBar" Minimum="0" Maximum="100" Value="95.2" />
                                </StackPanel>

                                <!-- Latency Consistency -->
                                <StackPanel Spacing="4">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="Auto" />
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Grid.Column="0" Text="Latency Consistency (25%)" />
                                        <TextBlock x:Name="LatencyScoreText" Grid.Column="1" Text="91.0" FontWeight="SemiBold" />
                                    </Grid>
                                    <ProgressBar x:Name="LatencyBar" Minimum="0" Maximum="100" Value="91.0" />
                                </StackPanel>

                                <!-- Data Completeness -->
                                <StackPanel Spacing="4">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="Auto" />
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Grid.Column="0" Text="Data Completeness (25%)" />
                                        <TextBlock x:Name="CompletenessScoreText" Grid.Column="1" Text="99.8" FontWeight="SemiBold" />
                                    </Grid>
                                    <ProgressBar x:Name="CompletenessBar" Minimum="0" Maximum="100" Value="99.8" />
                                </StackPanel>

                                <!-- Reconnection Frequency -->
                                <StackPanel Spacing="4">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="Auto" />
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Grid.Column="0" Text="Reconnection Frequency (20%)" />
                                        <TextBlock x:Name="ReconnectionScoreText" Grid.Column="1" Text="100" FontWeight="SemiBold" />
                                    </Grid>
                                    <ProgressBar x:Name="ReconnectionBar" Minimum="0" Maximum="100" Value="100" />
                                </StackPanel>

                                <!-- Overall Score -->
                                <Border BorderBrush="{ThemeResource SystemAccentColor}"
                                        BorderThickness="0,1,0,0"
                                        Padding="0,16,0,0"
                                        Margin="0,8,0,0">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="Auto" />
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Grid.Column="0" Text="Overall Score" FontWeight="Bold" FontSize="16" />
                                        <TextBlock x:Name="OverallScoreText" Grid.Column="1" Text="96.5" FontWeight="Bold" FontSize="24" Foreground="{ThemeResource SystemAccentColor}" />
                                    </Grid>
                                </Border>
                            </StackPanel>
                        </Border>

                        <!-- Real-Time Metrics -->
                        <Border Grid.Column="1"
                                Background="{ThemeResource CardBackgroundFillColorSecondaryBrush}"
                                CornerRadius="8"
                                Padding="16">
                            <StackPanel Spacing="16">
                                <TextBlock Text="Real-Time Metrics" Style="{StaticResource BodyStrongTextBlockStyle}" />

                                <Grid RowSpacing="12">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="Auto" />
                                    </Grid.RowDefinitions>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="Auto" />
                                    </Grid.ColumnDefinitions>

                                    <TextBlock Grid.Row="0" Grid.Column="0" Text="Average Latency" />
                                    <TextBlock x:Name="AvgLatencyText" Grid.Row="0" Grid.Column="1" Text="45 ms" FontWeight="SemiBold" HorizontalAlignment="Right" />

                                    <TextBlock Grid.Row="1" Grid.Column="0" Text="P99 Latency" />
                                    <TextBlock x:Name="P99LatencyText" Grid.Row="1" Grid.Column="1" Text="112 ms" FontWeight="SemiBold" HorizontalAlignment="Right" />

                                    <TextBlock Grid.Row="2" Grid.Column="0" Text="Messages/sec" />
                                    <TextBlock x:Name="MsgPerSecText" Grid.Row="2" Grid.Column="1" Text="1,842" FontWeight="SemiBold" HorizontalAlignment="Right" />

                                    <TextBlock Grid.Row="3" Grid.Column="0" Text="Uptime" />
                                    <TextBlock x:Name="UptimeText" Grid.Row="3" Grid.Column="1" Text="99.9%" FontWeight="SemiBold" HorizontalAlignment="Right" />

                                    <TextBlock Grid.Row="4" Grid.Column="0" Text="Reconnects (1h)" />
                                    <TextBlock x:Name="ReconnectsText" Grid.Row="4" Grid.Column="1" Text="0" FontWeight="SemiBold" HorizontalAlignment="Right" />

                                    <TextBlock Grid.Row="5" Grid.Column="0" Text="Errors (1h)" />
                                    <TextBlock x:Name="ErrorsText" Grid.Row="5" Grid.Column="1" Text="0" FontWeight="SemiBold" HorizontalAlignment="Right" />
                                </Grid>

                                <Border BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                                        BorderThickness="0,1,0,0"
                                        Padding="0,12,0,0"
                                        Margin="0,8,0,0">
                                    <StackPanel Spacing="4">
                                        <TextBlock Text="Last Updated" Style="{StaticResource CaptionTextBlockStyle}" />
                                        <TextBlock x:Name="LastUpdatedText" Text="Just now" />
                                    </StackPanel>
                                </Border>
                            </StackPanel>
                        </Border>

                        <!-- Health Trend Chart (Placeholder) -->
                        <Border Grid.Column="2"
                                Background="{ThemeResource CardBackgroundFillColorSecondaryBrush}"
                                CornerRadius="8"
                                Padding="16">
                            <StackPanel Spacing="16">
                                <TextBlock Text="24-Hour Trend" Style="{StaticResource BodyStrongTextBlockStyle}" />

                                <Canvas x:Name="TrendChart" Height="200" Background="Transparent">
                                    <!-- Chart will be drawn in code-behind -->
                                </Canvas>

                                <StackPanel Orientation="Horizontal" Spacing="16" HorizontalAlignment="Center">
                                    <StackPanel Orientation="Horizontal" Spacing="4">
                                        <Border Width="12" Height="3" Background="{ThemeResource SystemAccentColor}" />
                                        <TextBlock Text="Health Score" Style="{StaticResource CaptionTextBlockStyle}" />
                                    </StackPanel>
                                    <StackPanel Orientation="Horizontal" Spacing="4">
                                        <Border Width="12" Height="3" Background="Orange" />
                                        <TextBlock Text="Latency" Style="{StaticResource CaptionTextBlockStyle}" />
                                    </StackPanel>
                                </StackPanel>
                            </StackPanel>
                        </Border>
                    </Grid>
                </StackPanel>
            </Border>

            <!-- Provider Comparison -->
            <Border Style="{StaticResource CardStyle}">
                <StackPanel Spacing="16">
                    <StackPanel Orientation="Horizontal" Spacing="8">
                        <FontIcon Glyph="&#xE8EF;" Foreground="{ThemeResource SystemAccentColor}" />
                        <TextBlock Text="Provider Comparison" Style="{StaticResource SubtitleTextBlockStyle}" />
                    </StackPanel>

                    <ListView x:Name="ComparisonList" SelectionMode="None">
                        <ListView.HeaderTemplate>
                            <DataTemplate>
                                <Grid Padding="12,8" Background="{ThemeResource SystemFillColorNeutralBackgroundBrush}">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="150" />
                                        <ColumnDefinition Width="80" />
                                        <ColumnDefinition Width="100" />
                                        <ColumnDefinition Width="100" />
                                        <ColumnDefinition Width="100" />
                                        <ColumnDefinition Width="100" />
                                        <ColumnDefinition Width="100" />
                                        <ColumnDefinition Width="*" />
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Grid.Column="0" Text="Provider" FontWeight="SemiBold" />
                                    <TextBlock Grid.Column="1" Text="Status" FontWeight="SemiBold" />
                                    <TextBlock Grid.Column="2" Text="Score" FontWeight="SemiBold" HorizontalAlignment="Center" />
                                    <TextBlock Grid.Column="3" Text="Stability" FontWeight="SemiBold" HorizontalAlignment="Center" />
                                    <TextBlock Grid.Column="4" Text="Latency" FontWeight="SemiBold" HorizontalAlignment="Center" />
                                    <TextBlock Grid.Column="5" Text="Completeness" FontWeight="SemiBold" HorizontalAlignment="Center" />
                                    <TextBlock Grid.Column="6" Text="Reconnects" FontWeight="SemiBold" HorizontalAlignment="Center" />
                                    <TextBlock Grid.Column="7" Text="Rank" FontWeight="SemiBold" HorizontalAlignment="Center" />
                                </Grid>
                            </DataTemplate>
                        </ListView.HeaderTemplate>
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <Grid Padding="12,12">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="150" />
                                        <ColumnDefinition Width="80" />
                                        <ColumnDefinition Width="100" />
                                        <ColumnDefinition Width="100" />
                                        <ColumnDefinition Width="100" />
                                        <ColumnDefinition Width="100" />
                                        <ColumnDefinition Width="100" />
                                        <ColumnDefinition Width="*" />
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Grid.Column="0" Text="{Binding ProviderName}" FontWeight="SemiBold" VerticalAlignment="Center" />
                                    <StackPanel Grid.Column="1" Orientation="Horizontal" Spacing="4" VerticalAlignment="Center">
                                        <Border Width="8" Height="8" CornerRadius="4" Background="{Binding StatusColor}" />
                                        <TextBlock Text="{Binding StatusText}" FontSize="12" />
                                    </StackPanel>
                                    <TextBlock Grid.Column="2" Text="{Binding ScoreDisplay}" FontWeight="Bold" Foreground="{Binding ScoreColor}" HorizontalAlignment="Center" VerticalAlignment="Center" />
                                    <TextBlock Grid.Column="3" Text="{Binding StabilityDisplay}" HorizontalAlignment="Center" VerticalAlignment="Center" />
                                    <TextBlock Grid.Column="4" Text="{Binding LatencyDisplay}" HorizontalAlignment="Center" VerticalAlignment="Center" />
                                    <TextBlock Grid.Column="5" Text="{Binding CompletenessDisplay}" HorizontalAlignment="Center" VerticalAlignment="Center" />
                                    <TextBlock Grid.Column="6" Text="{Binding ReconnectsDisplay}" HorizontalAlignment="Center" VerticalAlignment="Center" />
                                    <Border Grid.Column="7"
                                            Background="{Binding RankColor}"
                                            CornerRadius="4"
                                            Padding="8,4"
                                            HorizontalAlignment="Center">
                                        <TextBlock Text="{Binding RankDisplay}" FontWeight="SemiBold" />
                                    </Border>
                                </Grid>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </StackPanel>
            </Border>

            <!-- Failover Thresholds -->
            <Border Style="{StaticResource CardStyle}">
                <StackPanel Spacing="16">
                    <StackPanel Orientation="Horizontal" Spacing="8">
                        <FontIcon Glyph="&#xE7BA;" Foreground="{ThemeResource SystemAccentColor}" />
                        <TextBlock Text="Failover Thresholds" Style="{StaticResource SubtitleTextBlockStyle}" />
                    </StackPanel>

                    <InfoBar x:Name="ThresholdsInfoBar" IsOpen="True" IsClosable="False" Severity="Informational"
                             Title="Automatic Failover"
                             Message="When a provider's health drops below thresholds, traffic is automatically routed to the next-best provider." />

                    <Grid ColumnSpacing="24" RowSpacing="16">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>

                        <NumberBox x:Name="MinHealthScoreBox"
                                   Grid.Row="0" Grid.Column="0"
                                   Header="Min Health Score"
                                   Value="70"
                                   Minimum="0"
                                   Maximum="100"
                                   SpinButtonPlacementMode="Inline" />

                        <NumberBox x:Name="MaxLatencyBox"
                                   Grid.Row="0" Grid.Column="1"
                                   Header="Max Latency (ms)"
                                   Value="500"
                                   Minimum="50"
                                   Maximum="5000"
                                   SpinButtonPlacementMode="Inline" />

                        <NumberBox x:Name="MaxReconnectsBox"
                                   Grid.Row="0" Grid.Column="2"
                                   Header="Max Reconnects/Hour"
                                   Value="5"
                                   Minimum="1"
                                   Maximum="20"
                                   SpinButtonPlacementMode="Inline" />

                        <NumberBox x:Name="MinCompletenessBox"
                                   Grid.Row="0" Grid.Column="3"
                                   Header="Min Completeness (%)"
                                   Value="95"
                                   Minimum="0"
                                   Maximum="100"
                                   SpinButtonPlacementMode="Inline" />

                        <ToggleSwitch x:Name="AutoFailoverToggle"
                                      Grid.Row="1" Grid.Column="0"
                                      Header="Auto Failover"
                                      IsOn="True"
                                      OnContent="Enabled"
                                      OffContent="Disabled" />

                        <StackPanel Grid.Row="1" Grid.Column="3"
                                    Orientation="Horizontal"
                                    Spacing="8"
                                    HorizontalAlignment="Right"
                                    VerticalAlignment="Bottom">
                            <Button Content="Reset to Defaults" Click="ResetThresholds_Click" />
                            <Button Content="Save Thresholds"
                                    Style="{StaticResource AccentButtonStyle}"
                                    Click="SaveThresholds_Click" />
                        </StackPanel>
                    </Grid>
                </StackPanel>
            </Border>

            <InfoBar x:Name="ActionInfoBar" IsOpen="False" IsClosable="True" />
        </StackPanel>
    </ScrollViewer>
</Page>
