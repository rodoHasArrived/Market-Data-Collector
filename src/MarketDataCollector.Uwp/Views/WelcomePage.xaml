<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="MarketDataCollector.Uwp.Views.WelcomePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:MarketDataCollector.Uwp.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Progress Indicator -->
        <StackPanel Grid.Row="0" Padding="48,32,48,16">
            <ProgressBar x:Name="SetupProgress" Value="0" Maximum="100" Height="4" CornerRadius="2" />
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Spacing="48" Margin="0,16,0,0">
                <StackPanel x:Name="Step1Indicator" Orientation="Horizontal" Spacing="8">
                    <Border Width="28" Height="28" CornerRadius="14" Background="{ThemeResource SystemAccentColor}">
                        <TextBlock Text="1" Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center" FontWeight="SemiBold" />
                    </Border>
                    <TextBlock Text="Welcome" VerticalAlignment="Center" />
                </StackPanel>
                <StackPanel x:Name="Step2Indicator" Orientation="Horizontal" Spacing="8" Opacity="0.5">
                    <Border Width="28" Height="28" CornerRadius="14" Background="{ThemeResource SystemBaseMediumColor}">
                        <TextBlock Text="2" Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center" FontWeight="SemiBold" />
                    </Border>
                    <TextBlock Text="Provider" VerticalAlignment="Center" />
                </StackPanel>
                <StackPanel x:Name="Step3Indicator" Orientation="Horizontal" Spacing="8" Opacity="0.5">
                    <Border Width="28" Height="28" CornerRadius="14" Background="{ThemeResource SystemBaseMediumColor}">
                        <TextBlock Text="3" Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center" FontWeight="SemiBold" />
                    </Border>
                    <TextBlock Text="Symbols" VerticalAlignment="Center" />
                </StackPanel>
                <StackPanel x:Name="Step4Indicator" Orientation="Horizontal" Spacing="8" Opacity="0.5">
                    <Border Width="28" Height="28" CornerRadius="14" Background="{ThemeResource SystemBaseMediumColor}">
                        <TextBlock Text="4" Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center" FontWeight="SemiBold" />
                    </Border>
                    <TextBlock Text="Ready" VerticalAlignment="Center" />
                </StackPanel>
            </StackPanel>
        </StackPanel>

        <!-- Content Area - Step Pages -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <Grid Padding="48,16,48,32">
                <!-- Step 1: Welcome -->
                <StackPanel x:Name="Step1Content" Spacing="24" MaxWidth="700" HorizontalAlignment="Center">
                    <StackPanel HorizontalAlignment="Center" Spacing="16">
                        <FontIcon Glyph="&#xE9D9;" FontSize="72" Foreground="{ThemeResource SystemAccentColor}" HorizontalAlignment="Center" />
                        <TextBlock Text="Welcome to Market Data Collector" Style="{StaticResource TitleTextBlockStyle}" HorizontalAlignment="Center" />
                        <TextBlock Text="Your professional-grade solution for capturing real-time and historical market data"
                                   Style="{StaticResource SubtitleTextBlockStyle}" HorizontalAlignment="Center" TextAlignment="Center"
                                   Foreground="{ThemeResource SystemBaseMediumColor}" />
                    </StackPanel>

                    <!-- Feature Highlights -->
                    <Grid ColumnSpacing="24" RowSpacing="16" Margin="0,24,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>

                        <Border Grid.Row="0" Grid.Column="0" Style="{StaticResource CardStyle}">
                            <StackPanel Spacing="12">
                                <FontIcon Glyph="&#xE8AB;" FontSize="32" Foreground="{StaticResource SuccessColorBrush}" />
                                <TextBlock Text="Real-Time Streaming" FontWeight="SemiBold" />
                                <TextBlock Text="Capture live trades, quotes, and order book data from multiple providers" TextWrapping="Wrap"
                                           Foreground="{ThemeResource SystemBaseMediumColor}" />
                            </StackPanel>
                        </Border>

                        <Border Grid.Row="0" Grid.Column="1" Style="{StaticResource CardStyle}">
                            <StackPanel Spacing="12">
                                <FontIcon Glyph="&#xE787;" FontSize="32" Foreground="{StaticResource InfoColorBrush}" />
                                <TextBlock Text="Historical Backfill" FontWeight="SemiBold" />
                                <TextBlock Text="Download years of historical data from 9+ providers with automatic fallback" TextWrapping="Wrap"
                                           Foreground="{ThemeResource SystemBaseMediumColor}" />
                            </StackPanel>
                        </Border>

                        <Border Grid.Row="1" Grid.Column="0" Style="{StaticResource CardStyle}">
                            <StackPanel Spacing="12">
                                <FontIcon Glyph="&#xE8B7;" FontSize="32" Foreground="{StaticResource WarningColorBrush}" />
                                <TextBlock Text="Smart Storage" FontWeight="SemiBold" />
                                <TextBlock Text="Automatic compression, archiving, and organization of your market data" TextWrapping="Wrap"
                                           Foreground="{ThemeResource SystemBaseMediumColor}" />
                            </StackPanel>
                        </Border>

                        <Border Grid.Row="1" Grid.Column="1" Style="{StaticResource CardStyle}">
                            <StackPanel Spacing="12">
                                <FontIcon Glyph="&#xE9F5;" FontSize="32" Foreground="{StaticResource AccentPurpleBrush}" />
                                <TextBlock Text="Data Integrity" FontWeight="SemiBold" />
                                <TextBlock Text="Built-in verification, gap detection, and quality monitoring tools" TextWrapping="Wrap"
                                           Foreground="{ThemeResource SystemBaseMediumColor}" />
                            </StackPanel>
                        </Border>
                    </Grid>
                </StackPanel>

                <!-- Step 2: Provider Selection -->
                <StackPanel x:Name="Step2Content" Spacing="24" MaxWidth="600" HorizontalAlignment="Center" Visibility="Collapsed">
                    <StackPanel HorizontalAlignment="Center" Spacing="8">
                        <FontIcon Glyph="&#xE703;" FontSize="48" Foreground="{ThemeResource SystemAccentColor}" HorizontalAlignment="Center" />
                        <TextBlock Text="Choose Your Data Provider" Style="{StaticResource TitleTextBlockStyle}" HorizontalAlignment="Center" />
                        <TextBlock Text="Select your primary source for real-time market data"
                                   Style="{StaticResource BodyTextBlockStyle}" HorizontalAlignment="Center"
                                   Foreground="{ThemeResource SystemBaseMediumColor}" />
                    </StackPanel>

                    <StackPanel Spacing="12">
                        <!-- Interactive Brokers -->
                        <Border x:Name="IBProviderCard" Style="{StaticResource CardStyle}" Padding="16" PointerPressed="ProviderCard_PointerPressed" Tag="IB">
                            <Grid ColumnSpacing="16">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>
                                <Border Grid.Column="0" Width="48" Height="48" CornerRadius="8" Background="#1A58a6ff">
                                    <FontIcon Glyph="&#xE912;" FontSize="24" Foreground="{StaticResource InfoColorBrush}" />
                                </Border>
                                <StackPanel Grid.Column="1" Spacing="4">
                                    <TextBlock Text="Interactive Brokers" FontWeight="SemiBold" />
                                    <TextBlock Text="Professional-grade L2 depth, tick-by-tick data via TWS/Gateway" TextWrapping="Wrap"
                                               Foreground="{ThemeResource SystemBaseMediumColor}" FontSize="12" />
                                    <StackPanel Orientation="Horizontal" Spacing="8">
                                        <Border Background="#1A3fb950" CornerRadius="4" Padding="6,2">
                                            <TextBlock Text="L2 Depth" FontSize="11" Foreground="{StaticResource SuccessColorBrush}" />
                                        </Border>
                                        <Border Background="#1A58a6ff" CornerRadius="4" Padding="6,2">
                                            <TextBlock Text="Tick-by-Tick" FontSize="11" Foreground="{StaticResource InfoColorBrush}" />
                                        </Border>
                                    </StackPanel>
                                </StackPanel>
                                <RadioButton x:Name="IBRadio" Grid.Column="2" GroupName="Provider" VerticalAlignment="Center" IsChecked="True" />
                            </Grid>
                        </Border>

                        <!-- Alpaca -->
                        <Border x:Name="AlpacaProviderCard" Style="{StaticResource CardStyle}" Padding="16" PointerPressed="ProviderCard_PointerPressed" Tag="Alpaca">
                            <Grid ColumnSpacing="16">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>
                                <Border Grid.Column="0" Width="48" Height="48" CornerRadius="8" Background="#1Ad29922">
                                    <FontIcon Glyph="&#xE8AB;" FontSize="24" Foreground="{StaticResource WarningColorBrush}" />
                                </Border>
                                <StackPanel Grid.Column="1" Spacing="4">
                                    <TextBlock Text="Alpaca Markets" FontWeight="SemiBold" />
                                    <TextBlock Text="Commission-free trading API with real-time WebSocket streaming" TextWrapping="Wrap"
                                               Foreground="{ThemeResource SystemBaseMediumColor}" FontSize="12" />
                                    <StackPanel Orientation="Horizontal" Spacing="8">
                                        <Border Background="#1A3fb950" CornerRadius="4" Padding="6,2">
                                            <TextBlock Text="Free Tier" FontSize="11" Foreground="{StaticResource SuccessColorBrush}" />
                                        </Border>
                                        <Border Background="#1Ad29922" CornerRadius="4" Padding="6,2">
                                            <TextBlock Text="REST + WebSocket" FontSize="11" Foreground="{StaticResource WarningColorBrush}" />
                                        </Border>
                                    </StackPanel>
                                </StackPanel>
                                <RadioButton x:Name="AlpacaRadio" Grid.Column="2" GroupName="Provider" VerticalAlignment="Center" />
                            </Grid>
                        </Border>

                        <!-- Polygon -->
                        <Border x:Name="PolygonProviderCard" Style="{StaticResource CardStyle}" Padding="16" PointerPressed="ProviderCard_PointerPressed" Tag="Polygon">
                            <Grid ColumnSpacing="16">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>
                                <Border Grid.Column="0" Width="48" Height="48" CornerRadius="8" Background="#1Aa371f7">
                                    <FontIcon Glyph="&#xE9D9;" FontSize="24" Foreground="{StaticResource AccentPurpleBrush}" />
                                </Border>
                                <StackPanel Grid.Column="1" Spacing="4">
                                    <TextBlock Text="Polygon.io" FontWeight="SemiBold" />
                                    <TextBlock Text="Comprehensive market data API with trades, quotes, and aggregates" TextWrapping="Wrap"
                                               Foreground="{ThemeResource SystemBaseMediumColor}" FontSize="12" />
                                    <StackPanel Orientation="Horizontal" Spacing="8">
                                        <Border Background="#1Aa371f7" CornerRadius="4" Padding="6,2">
                                            <TextBlock Text="Real-Time" FontSize="11" Foreground="{StaticResource AccentPurpleBrush}" />
                                        </Border>
                                        <Border Background="#1A58a6ff" CornerRadius="4" Padding="6,2">
                                            <TextBlock Text="Historical" FontSize="11" Foreground="{StaticResource InfoColorBrush}" />
                                        </Border>
                                    </StackPanel>
                                </StackPanel>
                                <RadioButton x:Name="PolygonRadio" Grid.Column="2" GroupName="Provider" VerticalAlignment="Center" />
                            </Grid>
                        </Border>
                    </StackPanel>

                    <!-- API Credentials Section -->
                    <Border Style="{StaticResource CardStyle}" x:Name="CredentialsPanel" Visibility="Collapsed">
                        <StackPanel Spacing="16">
                            <StackPanel Orientation="Horizontal" Spacing="8">
                                <FontIcon Glyph="&#xE72E;" FontSize="20" Foreground="{ThemeResource SystemAccentColor}" />
                                <TextBlock Text="API Credentials" FontWeight="SemiBold" />
                            </StackPanel>

                            <TextBlock x:Name="CredentialsHelpText" TextWrapping="Wrap" Foreground="{ThemeResource SystemBaseMediumColor}" />

                            <StackPanel x:Name="AlpacaCredentials" Spacing="12" Visibility="Collapsed">
                                <TextBox x:Name="AlpacaKeyIdBox" Header="API Key ID" PlaceholderText="Enter your Alpaca API Key ID" />
                                <PasswordBox x:Name="AlpacaSecretBox" Header="Secret Key" PlaceholderText="Enter your Alpaca Secret Key" />
                                <CheckBox x:Name="AlpacaSandboxCheck" Content="Use Paper Trading (Sandbox)" IsChecked="True" />
                            </StackPanel>

                            <StackPanel x:Name="PolygonCredentials" Spacing="12" Visibility="Collapsed">
                                <TextBox x:Name="PolygonKeyBox" Header="API Key" PlaceholderText="Enter your Polygon.io API Key" />
                            </StackPanel>

                            <StackPanel x:Name="IBCredentials" Spacing="12" Visibility="Collapsed">
                                <TextBox x:Name="IBHostBox" Header="TWS/Gateway Host" PlaceholderText="127.0.0.1" Text="127.0.0.1" />
                                <NumberBox x:Name="IBPortBox" Header="Port" Value="7496" Minimum="1" Maximum="65535" SpinButtonPlacementMode="Inline" />
                                <CheckBox x:Name="IBPaperCheck" Content="Use Paper Trading Account" />
                            </StackPanel>

                            <InfoBar x:Name="CredentialsInfoBar" IsOpen="False" IsClosable="True" Severity="Informational"
                                     Title="Credentials are stored securely"
                                     Message="Your API keys are stored in the Windows Credential Manager for security." />
                        </StackPanel>
                    </Border>
                </StackPanel>

                <!-- Step 3: Symbol Selection -->
                <StackPanel x:Name="Step3Content" Spacing="24" MaxWidth="600" HorizontalAlignment="Center" Visibility="Collapsed">
                    <StackPanel HorizontalAlignment="Center" Spacing="8">
                        <FontIcon Glyph="&#xE9D9;" FontSize="48" Foreground="{ThemeResource SystemAccentColor}" HorizontalAlignment="Center" />
                        <TextBlock Text="Add Your First Symbols" Style="{StaticResource TitleTextBlockStyle}" HorizontalAlignment="Center" />
                        <TextBlock Text="Choose the securities you want to track"
                                   Style="{StaticResource BodyTextBlockStyle}" HorizontalAlignment="Center"
                                   Foreground="{ThemeResource SystemBaseMediumColor}" />
                    </StackPanel>

                    <!-- Quick Add Popular Symbols -->
                    <Border Style="{StaticResource CardStyle}">
                        <StackPanel Spacing="16">
                            <TextBlock Text="Popular Symbols" FontWeight="SemiBold" />
                            <TextBlock Text="Click to add these commonly tracked securities" Foreground="{ThemeResource SystemBaseMediumColor}" FontSize="12" />

                            <StackPanel Orientation="Horizontal" Spacing="8">
                                <Button x:Name="AddSPYButton" Content="SPY" Click="QuickAddSymbol_Click" Tag="SPY" Style="{StaticResource AccentButtonStyle}" />
                                <Button x:Name="AddQQQButton" Content="QQQ" Click="QuickAddSymbol_Click" Tag="QQQ" />
                                <Button x:Name="AddAAPLButton" Content="AAPL" Click="QuickAddSymbol_Click" Tag="AAPL" />
                                <Button x:Name="AddMSFTButton" Content="MSFT" Click="QuickAddSymbol_Click" Tag="MSFT" />
                                <Button x:Name="AddTSLAButton" Content="TSLA" Click="QuickAddSymbol_Click" Tag="TSLA" />
                                <Button x:Name="AddAMZNButton" Content="AMZN" Click="QuickAddSymbol_Click" Tag="AMZN" />
                            </StackPanel>
                        </StackPanel>
                    </Border>

                    <!-- Custom Symbol Entry -->
                    <Border Style="{StaticResource CardStyle}">
                        <StackPanel Spacing="16">
                            <TextBlock Text="Add Custom Symbol" FontWeight="SemiBold" />

                            <Grid ColumnSpacing="12">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>
                                <AutoSuggestBox x:Name="CustomSymbolBox" Grid.Column="0" PlaceholderText="Enter symbol (e.g., NVDA, META)"
                                                QueryIcon="Find" QuerySubmitted="CustomSymbol_QuerySubmitted" />
                                <Button Grid.Column="1" Content="Add" Click="AddCustomSymbol_Click" Style="{StaticResource AccentButtonStyle}" />
                            </Grid>

                            <!-- Subscription Options -->
                            <StackPanel Orientation="Horizontal" Spacing="16">
                                <CheckBox x:Name="SubscribeTradesCheck" Content="Trades" IsChecked="True" />
                                <CheckBox x:Name="SubscribeDepthCheck" Content="Market Depth" />
                                <CheckBox x:Name="SubscribeQuotesCheck" Content="Quotes" IsChecked="True" />
                            </StackPanel>
                        </StackPanel>
                    </Border>

                    <!-- Selected Symbols List -->
                    <Border Style="{StaticResource CardStyle}">
                        <StackPanel Spacing="12">
                            <StackPanel Orientation="Horizontal" Spacing="8">
                                <TextBlock Text="Your Watchlist" FontWeight="SemiBold" />
                                <Border Background="{ThemeResource SystemAccentColor}" CornerRadius="10" Padding="8,2">
                                    <TextBlock x:Name="SelectedSymbolsCount" Text="0" FontSize="12" Foreground="White" />
                                </Border>
                            </StackPanel>

                            <ListView x:Name="SelectedSymbolsList" MaxHeight="200" SelectionMode="None">
                                <ListView.ItemTemplate>
                                    <DataTemplate>
                                        <Grid Padding="8,4" ColumnSpacing="12">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="80" />
                                                <ColumnDefinition Width="*" />
                                                <ColumnDefinition Width="Auto" />
                                            </Grid.ColumnDefinitions>
                                            <TextBlock Grid.Column="0" Text="{Binding Symbol}" FontWeight="SemiBold" VerticalAlignment="Center" />
                                            <TextBlock Grid.Column="1" Text="{Binding SubscriptionText}" Foreground="{ThemeResource SystemBaseMediumColor}"
                                                       VerticalAlignment="Center" FontSize="12" />
                                            <Button Grid.Column="2" Content="&#xE74D;" FontFamily="Segoe MDL2 Assets" Click="RemoveSymbol_Click"
                                                    Tag="{Binding Symbol}" Background="Transparent" Padding="8,4" />
                                        </Grid>
                                    </DataTemplate>
                                </ListView.ItemTemplate>
                            </ListView>

                            <TextBlock x:Name="NoSymbolsText" Text="No symbols added yet. Add at least one symbol to continue."
                                       Foreground="{ThemeResource SystemBaseMediumColor}" FontStyle="Italic" />
                        </StackPanel>
                    </Border>
                </StackPanel>

                <!-- Step 4: All Done -->
                <StackPanel x:Name="Step4Content" Spacing="24" MaxWidth="600" HorizontalAlignment="Center" Visibility="Collapsed">
                    <StackPanel HorizontalAlignment="Center" Spacing="16">
                        <FontIcon Glyph="&#xE73E;" FontSize="72" Foreground="{StaticResource SuccessColorBrush}" HorizontalAlignment="Center" />
                        <TextBlock Text="You're All Set!" Style="{StaticResource TitleTextBlockStyle}" HorizontalAlignment="Center" />
                        <TextBlock Text="Your Market Data Collector is configured and ready to go"
                                   Style="{StaticResource SubtitleTextBlockStyle}" HorizontalAlignment="Center" TextAlignment="Center"
                                   Foreground="{ThemeResource SystemBaseMediumColor}" />
                    </StackPanel>

                    <!-- Setup Summary -->
                    <Border Style="{StaticResource CardStyle}">
                        <StackPanel Spacing="16">
                            <TextBlock Text="Configuration Summary" FontWeight="SemiBold" />

                            <Grid RowSpacing="12">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="140" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                </Grid.RowDefinitions>

                                <TextBlock Grid.Row="0" Grid.Column="0" Text="Data Provider:" Foreground="{ThemeResource SystemBaseMediumColor}" />
                                <TextBlock x:Name="SummaryProvider" Grid.Row="0" Grid.Column="1" FontWeight="SemiBold" />

                                <TextBlock Grid.Row="1" Grid.Column="0" Text="Symbols:" Foreground="{ThemeResource SystemBaseMediumColor}" />
                                <TextBlock x:Name="SummarySymbols" Grid.Row="1" Grid.Column="1" FontWeight="SemiBold" TextWrapping="Wrap" />

                                <TextBlock Grid.Row="2" Grid.Column="0" Text="Data Types:" Foreground="{ThemeResource SystemBaseMediumColor}" />
                                <TextBlock x:Name="SummaryDataTypes" Grid.Row="2" Grid.Column="1" FontWeight="SemiBold" />
                            </Grid>
                        </StackPanel>
                    </Border>

                    <!-- Next Steps -->
                    <Border Style="{StaticResource CardStyle}">
                        <StackPanel Spacing="16">
                            <TextBlock Text="What's Next?" FontWeight="SemiBold" />

                            <StackPanel Spacing="12">
                                <StackPanel Orientation="Horizontal" Spacing="12">
                                    <Border Width="32" Height="32" CornerRadius="16" Background="{ThemeResource SystemAccentColor}">
                                        <TextBlock Text="1" Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center" />
                                    </Border>
                                    <StackPanel>
                                        <TextBlock Text="Start Collecting Data" FontWeight="SemiBold" />
                                        <TextBlock Text="Click 'Start Collector' on the dashboard to begin streaming" Foreground="{ThemeResource SystemBaseMediumColor}" FontSize="12" />
                                    </StackPanel>
                                </StackPanel>

                                <StackPanel Orientation="Horizontal" Spacing="12">
                                    <Border Width="32" Height="32" CornerRadius="16" Background="{ThemeResource SystemBaseMediumColor}">
                                        <TextBlock Text="2" Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center" />
                                    </Border>
                                    <StackPanel>
                                        <TextBlock Text="Download Historical Data" FontWeight="SemiBold" />
                                        <TextBlock Text="Use Backfill to download years of historical data" Foreground="{ThemeResource SystemBaseMediumColor}" FontSize="12" />
                                    </StackPanel>
                                </StackPanel>

                                <StackPanel Orientation="Horizontal" Spacing="12">
                                    <Border Width="32" Height="32" CornerRadius="16" Background="{ThemeResource SystemBaseMediumColor}">
                                        <TextBlock Text="3" Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center" />
                                    </Border>
                                    <StackPanel>
                                        <TextBlock Text="Monitor Your Data" FontWeight="SemiBold" />
                                        <TextBlock Text="Check data quality, storage usage, and system health" Foreground="{ThemeResource SystemBaseMediumColor}" FontSize="12" />
                                    </StackPanel>
                                </StackPanel>
                            </StackPanel>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </Grid>
        </ScrollViewer>

        <!-- Navigation Buttons -->
        <Border Grid.Row="2" Background="{ThemeResource SystemFillColorNeutralBackgroundBrush}" Padding="48,16">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <Button x:Name="BackButton" Grid.Column="0" Click="Back_Click" Visibility="Collapsed">
                    <StackPanel Orientation="Horizontal" Spacing="8">
                        <FontIcon Glyph="&#xE72B;" FontSize="14" />
                        <TextBlock Text="Back" />
                    </StackPanel>
                </Button>

                <StackPanel Grid.Column="1" HorizontalAlignment="Center">
                    <HyperlinkButton x:Name="SkipButton" Content="Skip setup and go to dashboard" Click="Skip_Click" />
                </StackPanel>

                <Button x:Name="NextButton" Grid.Column="2" Style="{StaticResource AccentButtonStyle}" Click="Next_Click">
                    <StackPanel Orientation="Horizontal" Spacing="8">
                        <TextBlock Text="Get Started" />
                        <FontIcon Glyph="&#xE72A;" FontSize="14" />
                    </StackPanel>
                </Button>
            </Grid>
        </Border>
    </Grid>
</Page>
