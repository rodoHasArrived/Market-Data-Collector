<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="MarketDataCollector.Uwp.Views.KeyboardShortcutsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:MarketDataCollector.Uwp.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="24"
                  AutomationProperties.Name="Keyboard shortcuts reference">
        <StackPanel Spacing="24" MaxWidth="900">
            <!-- Header -->
            <StackPanel Orientation="Horizontal" Spacing="12">
                <FontIcon Glyph="&#xE92E;" FontSize="28" Foreground="{ThemeResource SystemAccentColor}" />
                <TextBlock Text="Keyboard Shortcuts" Style="{StaticResource TitleTextBlockStyle}" VerticalAlignment="Center"
                           AutomationProperties.HeadingLevel="Level1" />
            </StackPanel>

            <TextBlock Text="Use these keyboard shortcuts to quickly navigate and control the application."
                       Style="{StaticResource BodyTextBlockStyle}"
                       Foreground="{ThemeResource SystemBaseMediumColor}" />

            <!-- Global Shortcuts -->
            <Border Style="{StaticResource CardStyle}">
                <StackPanel Spacing="16">
                    <TextBlock Text="Global Shortcuts" Style="{StaticResource SubtitleTextBlockStyle}"
                               AutomationProperties.HeadingLevel="Level2" />
                    <TextBlock Text="Available throughout the application"
                               Style="{StaticResource CaptionTextBlockStyle}"
                               Foreground="{ThemeResource SystemBaseMediumColor}" />

                    <Grid RowSpacing="12" ColumnSpacing="24">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="150" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>

                        <Border Grid.Row="0" Grid.Column="0" Background="{ThemeResource SystemFillColorNeutralBackgroundBrush}"
                                CornerRadius="4" Padding="8,4" HorizontalAlignment="Left">
                            <TextBlock Text="Ctrl + S" FontFamily="Cascadia Code" FontWeight="SemiBold" />
                        </Border>
                        <TextBlock Grid.Row="0" Grid.Column="1" Text="Start data collector" VerticalAlignment="Center" />

                        <Border Grid.Row="1" Grid.Column="0" Background="{ThemeResource SystemFillColorNeutralBackgroundBrush}"
                                CornerRadius="4" Padding="8,4" HorizontalAlignment="Left">
                            <TextBlock Text="Ctrl + Shift + S" FontFamily="Cascadia Code" FontWeight="SemiBold" />
                        </Border>
                        <TextBlock Grid.Row="1" Grid.Column="1" Text="Stop data collector" VerticalAlignment="Center" />

                        <Border Grid.Row="2" Grid.Column="0" Background="{ThemeResource SystemFillColorNeutralBackgroundBrush}"
                                CornerRadius="4" Padding="8,4" HorizontalAlignment="Left">
                            <TextBlock Text="F5" FontFamily="Cascadia Code" FontWeight="SemiBold" />
                        </Border>
                        <TextBlock Grid.Row="2" Grid.Column="1" Text="Refresh current page data" VerticalAlignment="Center" />

                        <Border Grid.Row="3" Grid.Column="0" Background="{ThemeResource SystemFillColorNeutralBackgroundBrush}"
                                CornerRadius="4" Padding="8,4" HorizontalAlignment="Left">
                            <TextBlock Text="Ctrl + ," FontFamily="Cascadia Code" FontWeight="SemiBold" />
                        </Border>
                        <TextBlock Grid.Row="3" Grid.Column="1" Text="Open Settings" VerticalAlignment="Center" />

                        <Border Grid.Row="4" Grid.Column="0" Background="{ThemeResource SystemFillColorNeutralBackgroundBrush}"
                                CornerRadius="4" Padding="8,4" HorizontalAlignment="Left">
                            <TextBlock Text="F1" FontFamily="Cascadia Code" FontWeight="SemiBold" />
                        </Border>
                        <TextBlock Grid.Row="4" Grid.Column="1" Text="Open Help" VerticalAlignment="Center" />
                    </Grid>
                </StackPanel>
            </Border>

            <!-- Navigation Shortcuts -->
            <Border Style="{StaticResource CardStyle}">
                <StackPanel Spacing="16">
                    <TextBlock Text="Navigation" Style="{StaticResource SubtitleTextBlockStyle}"
                               AutomationProperties.HeadingLevel="Level2" />

                    <Grid RowSpacing="12" ColumnSpacing="24">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="150" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>

                        <Border Grid.Row="0" Grid.Column="0" Background="{ThemeResource SystemFillColorNeutralBackgroundBrush}"
                                CornerRadius="4" Padding="8,4" HorizontalAlignment="Left">
                            <TextBlock Text="Alt + Left" FontFamily="Cascadia Code" FontWeight="SemiBold" />
                        </Border>
                        <TextBlock Grid.Row="0" Grid.Column="1" Text="Navigate back" VerticalAlignment="Center" />

                        <Border Grid.Row="1" Grid.Column="0" Background="{ThemeResource SystemFillColorNeutralBackgroundBrush}"
                                CornerRadius="4" Padding="8,4" HorizontalAlignment="Left">
                            <TextBlock Text="Alt + Right" FontFamily="Cascadia Code" FontWeight="SemiBold" />
                        </Border>
                        <TextBlock Grid.Row="1" Grid.Column="1" Text="Navigate forward" VerticalAlignment="Center" />

                        <Border Grid.Row="2" Grid.Column="0" Background="{ThemeResource SystemFillColorNeutralBackgroundBrush}"
                                CornerRadius="4" Padding="8,4" HorizontalAlignment="Left">
                            <TextBlock Text="Ctrl + Tab" FontFamily="Cascadia Code" FontWeight="SemiBold" />
                        </Border>
                        <TextBlock Grid.Row="2" Grid.Column="1" Text="Cycle through sections" VerticalAlignment="Center" />
                    </Grid>
                </StackPanel>
            </Border>

            <!-- Symbols Page Shortcuts -->
            <Border Style="{StaticResource CardStyle}">
                <StackPanel Spacing="16">
                    <TextBlock Text="Symbols Page" Style="{StaticResource SubtitleTextBlockStyle}"
                               AutomationProperties.HeadingLevel="Level2" />

                    <Grid RowSpacing="12" ColumnSpacing="24">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="150" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>

                        <Border Grid.Row="0" Grid.Column="0" Background="{ThemeResource SystemFillColorNeutralBackgroundBrush}"
                                CornerRadius="4" Padding="8,4" HorizontalAlignment="Left">
                            <TextBlock Text="Ctrl + F" FontFamily="Cascadia Code" FontWeight="SemiBold" />
                        </Border>
                        <TextBlock Grid.Row="0" Grid.Column="1" Text="Focus search box / Find symbol" VerticalAlignment="Center" />

                        <Border Grid.Row="1" Grid.Column="0" Background="{ThemeResource SystemFillColorNeutralBackgroundBrush}"
                                CornerRadius="4" Padding="8,4" HorizontalAlignment="Left">
                            <TextBlock Text="Ctrl + N" FontFamily="Cascadia Code" FontWeight="SemiBold" />
                        </Border>
                        <TextBlock Grid.Row="1" Grid.Column="1" Text="Add new symbol" VerticalAlignment="Center" />

                        <Border Grid.Row="2" Grid.Column="0" Background="{ThemeResource SystemFillColorNeutralBackgroundBrush}"
                                CornerRadius="4" Padding="8,4" HorizontalAlignment="Left">
                            <TextBlock Text="Delete" FontFamily="Cascadia Code" FontWeight="SemiBold" />
                        </Border>
                        <TextBlock Grid.Row="2" Grid.Column="1" Text="Delete selected symbol" VerticalAlignment="Center" />
                    </Grid>
                </StackPanel>
            </Border>

            <!-- Backfill Page Shortcuts -->
            <Border Style="{StaticResource CardStyle}">
                <StackPanel Spacing="16">
                    <TextBlock Text="Backfill Page" Style="{StaticResource SubtitleTextBlockStyle}"
                               AutomationProperties.HeadingLevel="Level2" />

                    <Grid RowSpacing="12" ColumnSpacing="24">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="150" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>

                        <Border Grid.Row="0" Grid.Column="0" Background="{ThemeResource SystemFillColorNeutralBackgroundBrush}"
                                CornerRadius="4" Padding="8,4" HorizontalAlignment="Left">
                            <TextBlock Text="Ctrl + R" FontFamily="Cascadia Code" FontWeight="SemiBold" />
                        </Border>
                        <TextBlock Grid.Row="0" Grid.Column="1" Text="Start backfill operation" VerticalAlignment="Center" />

                        <Border Grid.Row="1" Grid.Column="0" Background="{ThemeResource SystemFillColorNeutralBackgroundBrush}"
                                CornerRadius="4" Padding="8,4" HorizontalAlignment="Left">
                            <TextBlock Text="Escape" FontFamily="Cascadia Code" FontWeight="SemiBold" />
                        </Border>
                        <TextBlock Grid.Row="1" Grid.Column="1" Text="Cancel running backfill" VerticalAlignment="Center" />
                    </Grid>
                </StackPanel>
            </Border>

            <!-- Dashboard Shortcuts -->
            <Border Style="{StaticResource CardStyle}">
                <StackPanel Spacing="16">
                    <TextBlock Text="Dashboard" Style="{StaticResource SubtitleTextBlockStyle}"
                               AutomationProperties.HeadingLevel="Level2" />

                    <Grid RowSpacing="12" ColumnSpacing="24">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="150" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>

                        <Border Grid.Row="0" Grid.Column="0" Background="{ThemeResource SystemFillColorNeutralBackgroundBrush}"
                                CornerRadius="4" Padding="8,4" HorizontalAlignment="Left">
                            <TextBlock Text="Space" FontFamily="Cascadia Code" FontWeight="SemiBold" />
                        </Border>
                        <TextBlock Grid.Row="0" Grid.Column="1" Text="Pause/resume data updates" VerticalAlignment="Center" />

                        <Border Grid.Row="1" Grid.Column="0" Background="{ThemeResource SystemFillColorNeutralBackgroundBrush}"
                                CornerRadius="4" Padding="8,4" HorizontalAlignment="Left">
                            <TextBlock Text="E" FontFamily="Cascadia Code" FontWeight="SemiBold" />
                        </Border>
                        <TextBlock Grid.Row="1" Grid.Column="1" Text="Expand/collapse integrity events" VerticalAlignment="Center" />

                        <Border Grid.Row="2" Grid.Column="0" Background="{ThemeResource SystemFillColorNeutralBackgroundBrush}"
                                CornerRadius="4" Padding="8,4" HorizontalAlignment="Left">
                            <TextBlock Text="L" FontFamily="Cascadia Code" FontWeight="SemiBold" />
                        </Border>
                        <TextBlock Grid.Row="2" Grid.Column="1" Text="View logs" VerticalAlignment="Center" />
                    </Grid>
                </StackPanel>
            </Border>

            <!-- Tips -->
            <Border Style="{StaticResource CardStyle}">
                <StackPanel Spacing="12">
                    <StackPanel Orientation="Horizontal" Spacing="8">
                        <FontIcon Glyph="&#xE82F;" FontSize="16" Foreground="{ThemeResource SystemAccentColor}" />
                        <TextBlock Text="Tips" Style="{StaticResource SubtitleTextBlockStyle}"
                                   AutomationProperties.HeadingLevel="Level2" />
                    </StackPanel>

                    <StackPanel Spacing="8">
                        <TextBlock TextWrapping="Wrap">
                            <Run FontWeight="SemiBold">Tab navigation:</Run>
                            <Run>Use Tab and Shift+Tab to navigate between controls. Press Enter or Space to activate buttons.</Run>
                        </TextBlock>
                        <TextBlock TextWrapping="Wrap">
                            <Run FontWeight="SemiBold">Context menus:</Run>
                            <Run>Right-click or press Shift+F10 on list items for additional options.</Run>
                        </TextBlock>
                        <TextBlock TextWrapping="Wrap">
                            <Run FontWeight="SemiBold">Tooltips:</Run>
                            <Run>Hover over buttons to see keyboard shortcuts displayed in tooltips.</Run>
                        </TextBlock>
                    </StackPanel>
                </StackPanel>
            </Border>

            <!-- Quick Reference Card -->
            <Border Background="{ThemeResource SystemFillColorNeutralBackgroundBrush}"
                    CornerRadius="8" Padding="16">
                <StackPanel Orientation="Horizontal" Spacing="24">
                    <StackPanel>
                        <TextBlock Text="Most Used" FontWeight="SemiBold" Margin="0,0,0,8" />
                        <StackPanel Orientation="Horizontal" Spacing="8">
                            <Border Background="{ThemeResource SystemFillColorAttentionBackgroundBrush}"
                                    CornerRadius="4" Padding="6,2">
                                <TextBlock Text="Ctrl+S" FontSize="11" FontFamily="Cascadia Code" />
                            </Border>
                            <TextBlock Text="Start" VerticalAlignment="Center" FontSize="12" />
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Spacing="8" Margin="0,4,0,0">
                            <Border Background="{ThemeResource SystemFillColorAttentionBackgroundBrush}"
                                    CornerRadius="4" Padding="6,2">
                                <TextBlock Text="F5" FontSize="11" FontFamily="Cascadia Code" />
                            </Border>
                            <TextBlock Text="Refresh" VerticalAlignment="Center" FontSize="12" />
                        </StackPanel>
                    </StackPanel>

                    <StackPanel>
                        <TextBlock Text="&#xA0;" FontWeight="SemiBold" Margin="0,0,0,8" />
                        <StackPanel Orientation="Horizontal" Spacing="8">
                            <Border Background="{ThemeResource SystemFillColorAttentionBackgroundBrush}"
                                    CornerRadius="4" Padding="6,2">
                                <TextBlock Text="Ctrl+F" FontSize="11" FontFamily="Cascadia Code" />
                            </Border>
                            <TextBlock Text="Search" VerticalAlignment="Center" FontSize="12" />
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Spacing="8" Margin="0,4,0,0">
                            <Border Background="{ThemeResource SystemFillColorAttentionBackgroundBrush}"
                                    CornerRadius="4" Padding="6,2">
                                <TextBlock Text="Ctrl+R" FontSize="11" FontFamily="Cascadia Code" />
                            </Border>
                            <TextBlock Text="Backfill" VerticalAlignment="Center" FontSize="12" />
                        </StackPanel>
                    </StackPanel>

                    <StackPanel>
                        <TextBlock Text="&#xA0;" FontWeight="SemiBold" Margin="0,0,0,8" />
                        <StackPanel Orientation="Horizontal" Spacing="8">
                            <Border Background="{ThemeResource SystemFillColorAttentionBackgroundBrush}"
                                    CornerRadius="4" Padding="6,2">
                                <TextBlock Text="Ctrl+," FontSize="11" FontFamily="Cascadia Code" />
                            </Border>
                            <TextBlock Text="Settings" VerticalAlignment="Center" FontSize="12" />
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Spacing="8" Margin="0,4,0,0">
                            <Border Background="{ThemeResource SystemFillColorAttentionBackgroundBrush}"
                                    CornerRadius="4" Padding="6,2">
                                <TextBlock Text="F1" FontSize="11" FontFamily="Cascadia Code" />
                            </Border>
                            <TextBlock Text="Help" VerticalAlignment="Center" FontSize="12" />
                        </StackPanel>
                    </StackPanel>
                </StackPanel>
            </Border>
        </StackPanel>
    </ScrollViewer>
</Page>
