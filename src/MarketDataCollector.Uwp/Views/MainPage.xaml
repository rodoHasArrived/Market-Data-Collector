<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="MarketDataCollector.Uwp.Views.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:MarketDataCollector.Uwp.Views"
    xmlns:vm="using:MarketDataCollector.Uwp.ViewModels"
    xmlns:converters="using:MarketDataCollector.Uwp.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Page.Resources>
        <converters:BoolToVisibilityConverter x:Key="BoolToVisibility" />
        <converters:InverseBoolToVisibilityConverter x:Key="InverseBoolToVisibility" />
        <converters:BoolToConnectionStatusConverter x:Key="BoolToConnectionStatus" />
    </Page.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!-- In-App Notification Banner -->
        <Border x:Name="NotificationBanner" Grid.Row="0" Visibility="Collapsed"
                Padding="16,12" CornerRadius="0,0,8,8"
                Background="{ThemeResource SystemFillColorCriticalBackgroundBrush}">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <FontIcon x:Name="NotificationIcon" Grid.Column="0" Glyph="&#xE946;"
                          FontSize="20" Margin="0,0,12,0" Foreground="White"
                          VerticalAlignment="Center" />

                <StackPanel Grid.Column="1" VerticalAlignment="Center">
                    <TextBlock x:Name="NotificationTitle" Text="Notification"
                               FontWeight="SemiBold" Foreground="White" />
                    <TextBlock x:Name="NotificationMessage" Text="Message here"
                               FontSize="13" Foreground="White" Opacity="0.9"
                               TextTrimming="CharacterEllipsis" />
                </StackPanel>

                <Button x:Name="NotificationActionButton" Grid.Column="2"
                        Content="View" Click="NotificationAction_Click"
                        Margin="12,0" Visibility="Collapsed"
                        Background="Transparent" Foreground="White"
                        BorderBrush="White" BorderThickness="1" />

                <Button x:Name="NotificationDismissButton" Grid.Column="3"
                        Click="DismissNotification_Click"
                        Background="Transparent" BorderThickness="0" Padding="8">
                    <FontIcon Glyph="&#xE711;" FontSize="14" Foreground="White" />
                </Button>
            </Grid>
        </Border>

        <NavigationView
            x:Name="NavView"
            Grid.Row="1"
            IsBackButtonVisible="Collapsed"
            IsSettingsVisible="True"
            PaneDisplayMode="Left"
            SelectionChanged="NavView_SelectionChanged">

        <!-- Search Box in Header -->
        <NavigationView.AutoSuggestBox>
            <AutoSuggestBox x:Name="SearchBox"
                            PlaceholderText="Search symbols, pages, actions..."
                            QueryIcon="Find"
                            TextChanged="SearchBox_TextChanged"
                            QuerySubmitted="SearchBox_QuerySubmitted"
                            SuggestionChosen="SearchBox_SuggestionChosen" />
        </NavigationView.AutoSuggestBox>

        <NavigationView.MenuItems>
            <!-- Primary Navigation -->
            <NavigationViewItem Content="Dashboard" Tag="Dashboard" IsSelected="True"
                                AutomationProperties.Name="Dashboard - View system overview and metrics"
                                ToolTipService.ToolTip="System overview and real-time metrics">
                <NavigationViewItem.Icon>
                    <FontIcon Glyph="&#xE80F;" />
                </NavigationViewItem.Icon>
            </NavigationViewItem>
            <NavigationViewItem Content="Watchlist" Tag="Watchlist"
                                AutomationProperties.Name="Watchlist - View favorite symbols"
                                ToolTipService.ToolTip="Quick access to your favorite symbols">
                <NavigationViewItem.Icon>
                    <FontIcon Glyph="&#xE728;" />
                </NavigationViewItem.Icon>
            </NavigationViewItem>

            <NavigationViewItemSeparator />

            <!-- Data Sources Section -->
            <NavigationViewItemHeader Content="DATA SOURCES" />
            <NavigationViewItem Content="Provider" Tag="Provider"
                                AutomationProperties.Name="Data Provider - Configure active data provider"
                                ToolTipService.ToolTip="Configure active data provider">
                <NavigationViewItem.Icon>
                    <FontIcon Glyph="&#xE703;" />
                </NavigationViewItem.Icon>
            </NavigationViewItem>
            <NavigationViewItem Content="Multi-Source" Tag="DataSources"
                                AutomationProperties.Name="Multi-Source Config - Configure multiple data sources"
                                ToolTipService.ToolTip="Configure multiple data sources and failover">
                <NavigationViewItem.Icon>
                    <FontIcon Glyph="&#xE943;" />
                </NavigationViewItem.Icon>
            </NavigationViewItem>
            <NavigationViewItem Content="Plugins" Tag="Plugins"
                                AutomationProperties.Name="Plugins - Manage extensions and plugins"
                                ToolTipService.ToolTip="Manage extensions and plugins">
                <NavigationViewItem.Icon>
                    <FontIcon Glyph="&#xEA86;" />
                </NavigationViewItem.Icon>
            </NavigationViewItem>

            <NavigationViewItemSeparator />

            <!-- Data Management Section -->
            <NavigationViewItemHeader Content="DATA" />
            <NavigationViewItem Content="Live Data" Tag="LiveData"
                                AutomationProperties.Name="Live Data - Real-time market data viewer"
                                ToolTipService.ToolTip="View real-time trades, quotes, and order book">
                <NavigationViewItem.Icon>
                    <FontIcon Glyph="&#xE9D9;" />
                </NavigationViewItem.Icon>
            </NavigationViewItem>
            <NavigationViewItem Content="Symbols" Tag="Symbols"
                                AutomationProperties.Name="Symbols - Manage symbol subscriptions"
                                ToolTipService.ToolTip="Manage symbol subscriptions">
                <NavigationViewItem.Icon>
                    <FontIcon Glyph="&#xE8D4;" />
                </NavigationViewItem.Icon>
            </NavigationViewItem>
            <NavigationViewItem Content="Mapping" Tag="SymbolMapping"
                                AutomationProperties.Name="Symbol Mapping - Cross-reference provider symbols"
                                ToolTipService.ToolTip="Cross-reference symbols across providers">
                <NavigationViewItem.Icon>
                    <FontIcon Glyph="&#xE8AB;" />
                </NavigationViewItem.Icon>
            </NavigationViewItem>
            <NavigationViewItem Content="Storage" Tag="Storage"
                                AutomationProperties.Name="Storage - View storage usage and settings"
                                ToolTipService.ToolTip="View storage usage and data lifecycle">
                <NavigationViewItem.Icon>
                    <FontIcon Glyph="&#xE8B7;" />
                </NavigationViewItem.Icon>
            </NavigationViewItem>
            <NavigationViewItem Content="Backfill" Tag="Backfill"
                                AutomationProperties.Name="Backfill - Download historical data"
                                ToolTipService.ToolTip="Download historical market data">
                <NavigationViewItem.Icon>
                    <FontIcon Glyph="&#xE787;" />
                </NavigationViewItem.Icon>
            </NavigationViewItem>
            <NavigationViewItem Content="Portfolio Import" Tag="PortfolioImport"
                                AutomationProperties.Name="Portfolio Import - Import symbols from files"
                                ToolTipService.ToolTip="Import symbols from CSV, JSON, or index constituents">
                <NavigationViewItem.Icon>
                    <FontIcon Glyph="&#xE8B5;" />
                </NavigationViewItem.Icon>
            </NavigationViewItem>
            <NavigationViewItem Content="Index Subscription" Tag="IndexSubscription"
                                AutomationProperties.Name="Index Subscription - Subscribe to index constituents"
                                ToolTipService.ToolTip="Subscribe to S&amp;P 500, Nasdaq 100, and sector ETFs">
                <NavigationViewItem.Icon>
                    <FontIcon Glyph="&#xE8EC;" />
                </NavigationViewItem.Icon>
            </NavigationViewItem>
            <NavigationViewItem Content="Schedules" Tag="Schedules"
                                AutomationProperties.Name="Schedules - Manage scheduled tasks"
                                ToolTipService.ToolTip="Manage backfill and maintenance schedules">
                <NavigationViewItem.Icon>
                    <FontIcon Glyph="&#xE823;" />
                </NavigationViewItem.Icon>
            </NavigationViewItem>

            <NavigationViewItemSeparator />

            <!-- Monitoring Section -->
            <NavigationViewItemHeader Content="MONITORING" />
            <NavigationViewItem Content="Data Quality" Tag="DataQuality"
                                AutomationProperties.Name="Data Quality - Monitor data quality scores"
                                ToolTipService.ToolTip="Monitor quality scores, alerts, and trends">
                <NavigationViewItem.Icon>
                    <FontIcon Glyph="&#xE9F5;" />
                </NavigationViewItem.Icon>
            </NavigationViewItem>
            <NavigationViewItem Content="Sessions" Tag="CollectionSessions"
                                AutomationProperties.Name="Collection Sessions - View session history"
                                ToolTipService.ToolTip="View collection session history and uptime">
                <NavigationViewItem.Icon>
                    <FontIcon Glyph="&#xE8F1;" />
                </NavigationViewItem.Icon>
            </NavigationViewItem>
            <NavigationViewItem Content="Archive Health" Tag="ArchiveHealth"
                                AutomationProperties.Name="Archive Health - Monitor data integrity"
                                ToolTipService.ToolTip="Monitor archive integrity and data quality">
                <NavigationViewItem.Icon>
                    <FontIcon Glyph="&#xE7BA;" />
                </NavigationViewItem.Icon>
            </NavigationViewItem>
            <NavigationViewItem Content="Service Manager" Tag="ServiceManager"
                                AutomationProperties.Name="Service Manager - Control collector services"
                                ToolTipService.ToolTip="Start, stop, and monitor collector services">
                <NavigationViewItem.Icon>
                    <FontIcon Glyph="&#xE912;" />
                </NavigationViewItem.Icon>
            </NavigationViewItem>
            <NavigationViewItem Content="System Health" Tag="SystemHealth"
                                AutomationProperties.Name="System Health - Connection diagnostics"
                                ToolTipService.ToolTip="View connection health and diagnostics">
                <NavigationViewItem.Icon>
                    <FontIcon Glyph="&#xE770;" />
                </NavigationViewItem.Icon>
            </NavigationViewItem>
            <NavigationViewItem Content="Diagnostics" Tag="Diagnostics"
                                AutomationProperties.Name="Diagnostics - Run diagnostic tests"
                                ToolTipService.ToolTip="Dry-run, preflight checks, and diagnostic bundles">
                <NavigationViewItem.Icon>
                    <FontIcon Glyph="&#xE9D9;" />
                </NavigationViewItem.Icon>
            </NavigationViewItem>

            <NavigationViewItemSeparator />

            <!-- Tools Section -->
            <NavigationViewItemHeader Content="TOOLS" />
            <NavigationViewItem Content="Export" Tag="DataExport"
                                AutomationProperties.Name="Data Export - Export collected data"
                                ToolTipService.ToolTip="Export data to various formats">
                <NavigationViewItem.Icon>
                    <FontIcon Glyph="&#xEDE1;" />
                </NavigationViewItem.Icon>
            </NavigationViewItem>
            <NavigationViewItem Content="Analysis Export" Tag="AnalysisExport"
                                AutomationProperties.Name="Analysis Export - Advanced data export"
                                ToolTipService.ToolTip="Export for research, ML, and advanced analysis">
                <NavigationViewItem.Icon>
                    <FontIcon Glyph="&#xE9F9;" />
                </NavigationViewItem.Icon>
            </NavigationViewItem>
            <NavigationViewItem Content="Event Replay" Tag="EventReplay"
                                AutomationProperties.Name="Event Replay - Replay historical events"
                                ToolTipService.ToolTip="Replay JSONL market data files">
                <NavigationViewItem.Icon>
                    <FontIcon Glyph="&#xE768;" />
                </NavigationViewItem.Icon>
            </NavigationViewItem>
            <NavigationViewItem Content="Package Manager" Tag="PackageManager"
                                AutomationProperties.Name="Package Manager - Manage data packages"
                                ToolTipService.ToolTip="Create, import, and validate portable packages">
                <NavigationViewItem.Icon>
                    <FontIcon Glyph="&#xE7B8;" />
                </NavigationViewItem.Icon>
            </NavigationViewItem>
            <NavigationViewItem Content="Trading Hours" Tag="TradingHours"
                                AutomationProperties.Name="Trading Hours - Configure market hours"
                                ToolTipService.ToolTip="Configure market hours and holidays">
                <NavigationViewItem.Icon>
                    <FontIcon Glyph="&#xE823;" />
                </NavigationViewItem.Icon>
            </NavigationViewItem>

            <NavigationViewItemSeparator />

            <!-- Integrations Section -->
            <NavigationViewItemHeader Content="INTEGRATIONS" />
            <NavigationViewItem Content="Lean Backtesting" Tag="LeanIntegration"
                                AutomationProperties.Name="Lean Integration - QuantConnect Lean backtesting"
                                ToolTipService.ToolTip="Configure and run QuantConnect Lean backtests">
                <NavigationViewItem.Icon>
                    <FontIcon Glyph="&#xE9F5;" />
                </NavigationViewItem.Icon>
            </NavigationViewItem>
            <NavigationViewItem Content="Messaging Hub" Tag="MessagingHub"
                                AutomationProperties.Name="Messaging Hub - MassTransit message bus"
                                ToolTipService.ToolTip="View message bus status and consumers">
                <NavigationViewItem.Icon>
                    <FontIcon Glyph="&#xE715;" />
                </NavigationViewItem.Icon>
            </NavigationViewItem>

            <NavigationViewItemSeparator />

            <!-- Help Section -->
            <NavigationViewItemHeader Content="SUPPORT" />
            <NavigationViewItem Content="Help" Tag="Help"
                                AutomationProperties.Name="Help - Documentation and support"
                                ToolTipService.ToolTip="Documentation, guides, and support">
                <NavigationViewItem.Icon>
                    <FontIcon Glyph="&#xE897;" />
                </NavigationViewItem.Icon>
            </NavigationViewItem>
        </NavigationView.MenuItems>

        <Frame x:Name="ContentFrame" Padding="24">
            <!-- Default content - Dashboard -->
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <StackPanel Spacing="24" Padding="0,0,24,24">
                    <!-- Header -->
                    <TextBlock Text="Market Data Collector" Style="{StaticResource TitleTextBlockStyle}" />

                    <!-- Status Cards Row -->
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>

                        <!-- System Status Card -->
                        <Border Grid.Column="0" Style="{StaticResource CardStyle}" Margin="0,0,12,0">
                            <StackPanel Spacing="16">
                                <StackPanel Orientation="Horizontal" Spacing="8">
                                    <FontIcon Glyph="&#xE704;" Foreground="{ThemeResource SystemAccentColor}" />
                                    <TextBlock Text="System Status" Style="{StaticResource SubtitleTextBlockStyle}" />
                                </StackPanel>

                                <StackPanel Orientation="Horizontal" Spacing="8">
                                    <Ellipse Width="12" Height="12"
                                             Fill="{x:Bind ViewModel.IsConnected, Mode=OneWay, Converter={StaticResource BoolToConnectionStatus}}" />
                                    <TextBlock Text="{x:Bind ViewModel.ConnectionStatusText, Mode=OneWay}" />
                                </StackPanel>

                                <TextBlock Text="{x:Bind ViewModel.LastUpdateText, Mode=OneWay}"
                                           Style="{StaticResource CaptionTextBlockStyle}"
                                           Foreground="{ThemeResource SystemBaseMediumColor}" />

                                <!-- Metrics Grid -->
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="*" />
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="Auto" />
                                    </Grid.RowDefinitions>

                                    <StackPanel Grid.Row="0" Grid.Column="0" Margin="0,8">
                                        <TextBlock Text="{x:Bind ViewModel.PublishedCount, Mode=OneWay}"
                                                   Style="{StaticResource SubheaderTextBlockStyle}"
                                                   Foreground="{ThemeResource SystemAccentColor}" />
                                        <TextBlock Text="Published" Style="{StaticResource CaptionTextBlockStyle}" />
                                    </StackPanel>

                                    <StackPanel Grid.Row="0" Grid.Column="1" Margin="0,8">
                                        <TextBlock Text="{x:Bind ViewModel.DroppedCount, Mode=OneWay}"
                                                   Style="{StaticResource SubheaderTextBlockStyle}"
                                                   Foreground="#F56565" />
                                        <TextBlock Text="Dropped" Style="{StaticResource CaptionTextBlockStyle}" />
                                    </StackPanel>

                                    <StackPanel Grid.Row="1" Grid.Column="0" Margin="0,8">
                                        <TextBlock Text="{x:Bind ViewModel.IntegrityCount, Mode=OneWay}"
                                                   Style="{StaticResource SubheaderTextBlockStyle}"
                                                   Foreground="#ED8936" />
                                        <TextBlock Text="Integrity" Style="{StaticResource CaptionTextBlockStyle}" />
                                    </StackPanel>

                                    <StackPanel Grid.Row="1" Grid.Column="1" Margin="0,8">
                                        <TextBlock Text="{x:Bind ViewModel.HistoricalBarsCount, Mode=OneWay}"
                                                   Style="{StaticResource SubheaderTextBlockStyle}"
                                                   Foreground="#48BB78" />
                                        <TextBlock Text="Historical Bars" Style="{StaticResource CaptionTextBlockStyle}" />
                                    </StackPanel>
                                </Grid>

                                <Button Content="Refresh Status" Command="{x:Bind ViewModel.RefreshStatusCommand}"
                                        Style="{StaticResource AccentButtonStyle}" />
                            </StackPanel>
                        </Border>

                        <!-- Data Provider Card -->
                        <Border Grid.Column="1" Style="{StaticResource CardStyle}" Margin="12,0,0,0">
                            <StackPanel Spacing="16">
                                <StackPanel Orientation="Horizontal" Spacing="8">
                                    <FontIcon Glyph="&#xE703;" Foreground="{ThemeResource SystemAccentColor}" />
                                    <TextBlock Text="Data Provider" Style="{StaticResource SubtitleTextBlockStyle}" />
                                </StackPanel>

                                <ComboBox x:Name="DataSourceCombo"
                                          Header="Active Provider"
                                          ItemsSource="{x:Bind ViewModel.DataSources}"
                                          SelectedItem="{x:Bind ViewModel.SelectedDataSource, Mode=TwoWay}"
                                          HorizontalAlignment="Stretch" />

                                <Border Background="{ThemeResource SystemFillColorSolidNeutralBackgroundBrush}"
                                        CornerRadius="4" Padding="12">
                                    <TextBlock Text="{x:Bind ViewModel.ProviderDescription, Mode=OneWay}"
                                               TextWrapping="Wrap"
                                               Style="{StaticResource CaptionTextBlockStyle}" />
                                </Border>

                                <Button Content="Save Provider" Command="{x:Bind ViewModel.SaveDataSourceCommand}"
                                        Style="{StaticResource AccentButtonStyle}" />
                            </StackPanel>
                        </Border>
                    </Grid>

                    <!-- Quick Actions -->
                    <Border Style="{StaticResource CardStyle}">
                        <StackPanel Spacing="16">
                            <StackPanel Orientation="Horizontal" Spacing="8">
                                <FontIcon Glyph="&#xE768;" Foreground="{ThemeResource SystemAccentColor}" />
                                <TextBlock Text="Quick Actions" Style="{StaticResource SubtitleTextBlockStyle}" />
                            </StackPanel>

                            <StackPanel Orientation="Horizontal" Spacing="12">
                                <Button Content="Start Collector" Style="{StaticResource AccentButtonStyle}">
                                    <Button.KeyboardAccelerators>
                                        <KeyboardAccelerator Modifiers="Control" Key="S" />
                                    </Button.KeyboardAccelerators>
                                </Button>
                                <Button Content="Stop Collector" />
                                <Button Content="Run Backfill" Command="{x:Bind ViewModel.NavigateToBackfillCommand}" />
                                <Button Content="View Logs" />
                            </StackPanel>
                        </StackPanel>
                    </Border>

                    <!-- Subscribed Symbols -->
                    <Border Style="{StaticResource CardStyle}">
                        <StackPanel Spacing="16">
                            <StackPanel Orientation="Horizontal" Spacing="8">
                                <FontIcon Glyph="&#xE9D9;" Foreground="{ThemeResource SystemAccentColor}" />
                                <TextBlock Text="Subscribed Symbols" Style="{StaticResource SubtitleTextBlockStyle}" />
                                <TextBlock Text="{x:Bind ViewModel.SymbolCount, Mode=OneWay}"
                                           Foreground="{ThemeResource SystemBaseMediumColor}"
                                           VerticalAlignment="Center" />
                            </StackPanel>

                            <ListView ItemsSource="{x:Bind ViewModel.Symbols, Mode=OneWay}"
                                      SelectionMode="None"
                                      MaxHeight="300">
                                <ListView.ItemTemplate>
                                    <DataTemplate>
                                        <Grid Padding="8" ColumnSpacing="16">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="100" />
                                                <ColumnDefinition Width="80" />
                                                <ColumnDefinition Width="80" />
                                                <ColumnDefinition Width="60" />
                                                <ColumnDefinition Width="*" />
                                            </Grid.ColumnDefinitions>

                                            <TextBlock Grid.Column="0" Text="{Binding Symbol}" FontWeight="SemiBold" />
                                            <TextBlock Grid.Column="1" Text="{Binding TradesText}" />
                                            <TextBlock Grid.Column="2" Text="{Binding DepthText}" />
                                            <TextBlock Grid.Column="3" Text="{Binding DepthLevels}" />
                                            <TextBlock Grid.Column="4" Text="{Binding Exchange}"
                                                       Foreground="{ThemeResource SystemBaseMediumColor}" />
                                        </Grid>
                                    </DataTemplate>
                                </ListView.ItemTemplate>
                            </ListView>

                            <Button Content="Manage Symbols" Command="{x:Bind ViewModel.NavigateToSymbolsCommand}" />
                        </StackPanel>
                    </Border>

                    <!-- Configuration Path -->
                    <Border Style="{StaticResource CardStyle}" Background="{ThemeResource SystemFillColorSolidNeutralBackgroundBrush}">
                        <StackPanel Spacing="8">
                            <TextBlock Text="Configuration" Style="{StaticResource CaptionTextBlockStyle}" />
                            <TextBlock Text="{x:Bind ViewModel.ConfigPath, Mode=OneWay}"
                                       FontFamily="Consolas"
                                       IsTextSelectionEnabled="True" />
                        </StackPanel>
                    </Border>
                </StackPanel>
            </ScrollViewer>
        </Frame>
    </NavigationView>
    </Grid>
</Page>
