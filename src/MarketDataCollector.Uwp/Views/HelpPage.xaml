<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="MarketDataCollector.Uwp.Views.HelpPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:MarketDataCollector.Uwp.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="24">
        <StackPanel Spacing="24" MaxWidth="1000">
            <!-- Header -->
            <StackPanel Orientation="Horizontal" Spacing="12">
                <FontIcon Glyph="&#xE897;" FontSize="28" Foreground="{ThemeResource SystemAccentColor}" />
                <TextBlock Text="Help &amp; Getting Started" Style="{StaticResource TitleTextBlockStyle}" VerticalAlignment="Center" />
            </StackPanel>

            <TextBlock Text="Learn how to use Market Data Collector with interactive tutorials, documentation, and keyboard shortcuts."
                       Style="{StaticResource BodyTextBlockStyle}"
                       Foreground="{ThemeResource SystemBaseMediumColor}" />

            <!-- Quick Start Tutorial -->
            <Border Style="{StaticResource CardStyle}">
                <StackPanel Spacing="16">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0" Orientation="Horizontal" Spacing="8">
                            <FontIcon Glyph="&#xE768;" Foreground="{ThemeResource SystemAccentColor}" />
                            <TextBlock Text="Interactive Quick Start" Style="{StaticResource SubtitleTextBlockStyle}" />
                        </StackPanel>

                        <Button Grid.Column="1" x:Name="StartTutorialButton"
                                Content="Start Tutorial"
                                Style="{StaticResource AccentButtonStyle}"
                                Click="StartTutorial_Click" />
                    </Grid>

                    <TextBlock Text="New to Market Data Collector? Follow our step-by-step tutorial to get up and running in minutes."
                               TextWrapping="Wrap"
                               Foreground="{ThemeResource SystemBaseMediumColor}" />

                    <!-- Tutorial Progress -->
                    <StackPanel x:Name="TutorialProgressPanel" Visibility="Collapsed" Spacing="12">
                        <ProgressBar x:Name="TutorialProgressBar" Value="0" Maximum="5" />

                        <ListView x:Name="TutorialStepsList" SelectionMode="None">
                            <ListView.ItemTemplate>
                                <DataTemplate>
                                    <Grid Padding="8" ColumnSpacing="12">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="32" />
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="Auto" />
                                        </Grid.ColumnDefinitions>

                                        <Border Grid.Column="0" Width="28" Height="28"
                                                CornerRadius="14"
                                                Background="{Binding StepBackground}">
                                            <TextBlock Text="{Binding StepNumber}"
                                                       HorizontalAlignment="Center"
                                                       VerticalAlignment="Center"
                                                       FontWeight="SemiBold" />
                                        </Border>

                                        <StackPanel Grid.Column="1">
                                            <TextBlock Text="{Binding Title}" FontWeight="SemiBold" />
                                            <TextBlock Text="{Binding Description}"
                                                       Style="{StaticResource CaptionTextBlockStyle}"
                                                       TextWrapping="Wrap"
                                                       Foreground="{ThemeResource SystemBaseMediumColor}" />
                                        </StackPanel>

                                        <FontIcon Grid.Column="2" Glyph="{Binding StatusGlyph}"
                                                  Foreground="{Binding StatusColor}" />
                                    </Grid>
                                </DataTemplate>
                            </ListView.ItemTemplate>
                        </ListView>
                    </StackPanel>

                    <!-- Quick Start Steps Preview -->
                    <Grid ColumnSpacing="16" RowSpacing="16">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>

                        <Border Grid.Column="0" Background="{ThemeResource SystemFillColorNeutralBackgroundBrush}"
                                CornerRadius="8" Padding="12">
                            <StackPanel Spacing="8" HorizontalAlignment="Center">
                                <FontIcon Glyph="&#xE703;" FontSize="24" Foreground="{ThemeResource SystemAccentColor}" />
                                <TextBlock Text="1. Provider" HorizontalAlignment="Center" FontWeight="SemiBold" />
                                <TextBlock Text="Select data source" HorizontalAlignment="Center"
                                           Style="{StaticResource CaptionTextBlockStyle}"
                                           Foreground="{ThemeResource SystemBaseMediumColor}" />
                            </StackPanel>
                        </Border>

                        <Border Grid.Column="1" Background="{ThemeResource SystemFillColorNeutralBackgroundBrush}"
                                CornerRadius="8" Padding="12">
                            <StackPanel Spacing="8" HorizontalAlignment="Center">
                                <FontIcon Glyph="&#xE72E;" FontSize="24" Foreground="{ThemeResource SystemAccentColor}" />
                                <TextBlock Text="2. Credentials" HorizontalAlignment="Center" FontWeight="SemiBold" />
                                <TextBlock Text="Enter API keys" HorizontalAlignment="Center"
                                           Style="{StaticResource CaptionTextBlockStyle}"
                                           Foreground="{ThemeResource SystemBaseMediumColor}" />
                            </StackPanel>
                        </Border>

                        <Border Grid.Column="2" Background="{ThemeResource SystemFillColorNeutralBackgroundBrush}"
                                CornerRadius="8" Padding="12">
                            <StackPanel Spacing="8" HorizontalAlignment="Center">
                                <FontIcon Glyph="&#xE9D9;" FontSize="24" Foreground="{ThemeResource SystemAccentColor}" />
                                <TextBlock Text="3. Symbols" HorizontalAlignment="Center" FontWeight="SemiBold" />
                                <TextBlock Text="Add subscriptions" HorizontalAlignment="Center"
                                           Style="{StaticResource CaptionTextBlockStyle}"
                                           Foreground="{ThemeResource SystemBaseMediumColor}" />
                            </StackPanel>
                        </Border>

                        <Border Grid.Column="3" Background="{ThemeResource SystemFillColorNeutralBackgroundBrush}"
                                CornerRadius="8" Padding="12">
                            <StackPanel Spacing="8" HorizontalAlignment="Center">
                                <FontIcon Glyph="&#xE8B7;" FontSize="24" Foreground="{ThemeResource SystemAccentColor}" />
                                <TextBlock Text="4. Storage" HorizontalAlignment="Center" FontWeight="SemiBold" />
                                <TextBlock Text="Configure output" HorizontalAlignment="Center"
                                           Style="{StaticResource CaptionTextBlockStyle}"
                                           Foreground="{ThemeResource SystemBaseMediumColor}" />
                            </StackPanel>
                        </Border>

                        <Border Grid.Column="4" Background="{ThemeResource SystemFillColorNeutralBackgroundBrush}"
                                CornerRadius="8" Padding="12">
                            <StackPanel Spacing="8" HorizontalAlignment="Center">
                                <FontIcon Glyph="&#xE768;" FontSize="24" Foreground="{ThemeResource SystemAccentColor}" />
                                <TextBlock Text="5. Start" HorizontalAlignment="Center" FontWeight="SemiBold" />
                                <TextBlock Text="Begin collecting" HorizontalAlignment="Center"
                                           Style="{StaticResource CaptionTextBlockStyle}"
                                           Foreground="{ThemeResource SystemBaseMediumColor}" />
                            </StackPanel>
                        </Border>
                    </Grid>
                </StackPanel>
            </Border>

            <!-- Feature Discovery -->
            <Border Style="{StaticResource CardStyle}">
                <StackPanel Spacing="16">
                    <StackPanel Orientation="Horizontal" Spacing="8">
                        <FontIcon Glyph="&#xE721;" Foreground="{ThemeResource SystemAccentColor}" />
                        <TextBlock Text="Feature Discovery" Style="{StaticResource SubtitleTextBlockStyle}" />
                    </StackPanel>

                    <AutoSuggestBox x:Name="FeatureSearchBox"
                                    PlaceholderText="Search features and documentation..."
                                    QueryIcon="Find"
                                    QuerySubmitted="FeatureSearch_QuerySubmitted" />

                    <GridView x:Name="FeatureCardsGrid" SelectionMode="None">
                        <GridView.ItemTemplate>
                            <DataTemplate>
                                <Border Background="{ThemeResource SystemFillColorNeutralBackgroundBrush}"
                                        CornerRadius="8" Padding="16" Width="200" Height="120">
                                    <StackPanel Spacing="8">
                                        <FontIcon Glyph="{Binding Icon}" FontSize="24"
                                                  Foreground="{ThemeResource SystemAccentColor}" />
                                        <TextBlock Text="{Binding Title}" FontWeight="SemiBold" />
                                        <TextBlock Text="{Binding Description}"
                                                   Style="{StaticResource CaptionTextBlockStyle}"
                                                   TextWrapping="Wrap"
                                                   Foreground="{ThemeResource SystemBaseMediumColor}"
                                                   MaxLines="2" />
                                    </StackPanel>
                                </Border>
                            </DataTemplate>
                        </GridView.ItemTemplate>
                    </GridView>
                </StackPanel>
            </Border>

            <!-- Keyboard Shortcuts -->
            <Border Style="{StaticResource CardStyle}">
                <StackPanel Spacing="16">
                    <StackPanel Orientation="Horizontal" Spacing="8">
                        <FontIcon Glyph="&#xE765;" Foreground="{ThemeResource SystemAccentColor}" />
                        <TextBlock Text="Keyboard Shortcuts" Style="{StaticResource SubtitleTextBlockStyle}" />
                    </StackPanel>

                    <Grid ColumnSpacing="48">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>

                        <!-- Navigation Shortcuts -->
                        <StackPanel Grid.Column="0" Spacing="12">
                            <TextBlock Text="Navigation" FontWeight="SemiBold" />

                            <Grid ColumnSpacing="16">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="120" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                </Grid.RowDefinitions>

                                <Border Grid.Row="0" Grid.Column="0" Style="{StaticResource KeyboardShortcutStyle}">
                                    <TextBlock Text="Ctrl + 1" />
                                </Border>
                                <TextBlock Grid.Row="0" Grid.Column="1" Text="Go to Dashboard" VerticalAlignment="Center" />

                                <Border Grid.Row="1" Grid.Column="0" Style="{StaticResource KeyboardShortcutStyle}">
                                    <TextBlock Text="Ctrl + 2" />
                                </Border>
                                <TextBlock Grid.Row="1" Grid.Column="1" Text="Go to Symbols" VerticalAlignment="Center" />

                                <Border Grid.Row="2" Grid.Column="0" Style="{StaticResource KeyboardShortcutStyle}">
                                    <TextBlock Text="Ctrl + 3" />
                                </Border>
                                <TextBlock Grid.Row="2" Grid.Column="1" Text="Go to Storage" VerticalAlignment="Center" />

                                <Border Grid.Row="3" Grid.Column="0" Style="{StaticResource KeyboardShortcutStyle}">
                                    <TextBlock Text="Ctrl + ," />
                                </Border>
                                <TextBlock Grid.Row="3" Grid.Column="1" Text="Open Settings" VerticalAlignment="Center" />

                                <Border Grid.Row="4" Grid.Column="0" Style="{StaticResource KeyboardShortcutStyle}">
                                    <TextBlock Text="F1" />
                                </Border>
                                <TextBlock Grid.Row="4" Grid.Column="1" Text="Open Help" VerticalAlignment="Center" />
                            </Grid>
                        </StackPanel>

                        <!-- Action Shortcuts -->
                        <StackPanel Grid.Column="1" Spacing="12">
                            <TextBlock Text="Actions" FontWeight="SemiBold" />

                            <Grid ColumnSpacing="16">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="120" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                </Grid.RowDefinitions>

                                <Border Grid.Row="0" Grid.Column="0" Style="{StaticResource KeyboardShortcutStyle}">
                                    <TextBlock Text="Ctrl + S" />
                                </Border>
                                <TextBlock Grid.Row="0" Grid.Column="1" Text="Start Collector" VerticalAlignment="Center" />

                                <Border Grid.Row="1" Grid.Column="0" Style="{StaticResource KeyboardShortcutStyle}">
                                    <TextBlock Text="Ctrl + Shift + S" />
                                </Border>
                                <TextBlock Grid.Row="1" Grid.Column="1" Text="Stop Collector" VerticalAlignment="Center" />

                                <Border Grid.Row="2" Grid.Column="0" Style="{StaticResource KeyboardShortcutStyle}">
                                    <TextBlock Text="Ctrl + R" />
                                </Border>
                                <TextBlock Grid.Row="2" Grid.Column="1" Text="Refresh Status" VerticalAlignment="Center" />

                                <Border Grid.Row="3" Grid.Column="0" Style="{StaticResource KeyboardShortcutStyle}">
                                    <TextBlock Text="Ctrl + N" />
                                </Border>
                                <TextBlock Grid.Row="3" Grid.Column="1" Text="Add New Symbol" VerticalAlignment="Center" />

                                <Border Grid.Row="4" Grid.Column="0" Style="{StaticResource KeyboardShortcutStyle}">
                                    <TextBlock Text="Ctrl + E" />
                                </Border>
                                <TextBlock Grid.Row="4" Grid.Column="1" Text="Export Data" VerticalAlignment="Center" />
                            </Grid>
                        </StackPanel>
                    </Grid>
                </StackPanel>
            </Border>

            <!-- Documentation Links -->
            <Border Style="{StaticResource CardStyle}">
                <StackPanel Spacing="16">
                    <StackPanel Orientation="Horizontal" Spacing="8">
                        <FontIcon Glyph="&#xE8A5;" Foreground="{ThemeResource SystemAccentColor}" />
                        <TextBlock Text="Documentation" Style="{StaticResource SubtitleTextBlockStyle}" />
                    </StackPanel>

                    <Grid ColumnSpacing="16" RowSpacing="16">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>

                        <Button Grid.Row="0" Grid.Column="0" HorizontalAlignment="Stretch"
                                Click="OpenArchitectureDoc_Click">
                            <StackPanel Orientation="Horizontal" Spacing="8">
                                <FontIcon Glyph="&#xE8EC;" FontSize="16" />
                                <TextBlock Text="Architecture Guide" />
                            </StackPanel>
                        </Button>

                        <Button Grid.Row="0" Grid.Column="1" HorizontalAlignment="Stretch"
                                Click="OpenConfigurationDoc_Click">
                            <StackPanel Orientation="Horizontal" Spacing="8">
                                <FontIcon Glyph="&#xE713;" FontSize="16" />
                                <TextBlock Text="Configuration Reference" />
                            </StackPanel>
                        </Button>

                        <Button Grid.Row="0" Grid.Column="2" HorizontalAlignment="Stretch"
                                Click="OpenApiDoc_Click">
                            <StackPanel Orientation="Horizontal" Spacing="8">
                                <FontIcon Glyph="&#xE943;" FontSize="16" />
                                <TextBlock Text="API Documentation" />
                            </StackPanel>
                        </Button>

                        <Button Grid.Row="1" Grid.Column="0" HorizontalAlignment="Stretch"
                                Click="OpenLeanIntegrationDoc_Click">
                            <StackPanel Orientation="Horizontal" Spacing="8">
                                <FontIcon Glyph="&#xE9F5;" FontSize="16" />
                                <TextBlock Text="QuantConnect Integration" />
                            </StackPanel>
                        </Button>

                        <Button Grid.Row="1" Grid.Column="1" HorizontalAlignment="Stretch"
                                Click="OpenIBSetupDoc_Click">
                            <StackPanel Orientation="Horizontal" Spacing="8">
                                <FontIcon Glyph="&#xE703;" FontSize="16" />
                                <TextBlock Text="Interactive Brokers Setup" />
                            </StackPanel>
                        </Button>

                        <Button Grid.Row="1" Grid.Column="2" HorizontalAlignment="Stretch"
                                Click="OpenOperatorRunbookDoc_Click">
                            <StackPanel Orientation="Horizontal" Spacing="8">
                                <FontIcon Glyph="&#xE756;" FontSize="16" />
                                <TextBlock Text="Operator Runbook" />
                            </StackPanel>
                        </Button>
                    </Grid>
                </StackPanel>
            </Border>

            <!-- Video Tutorials -->
            <Border Style="{StaticResource CardStyle}">
                <StackPanel Spacing="16">
                    <StackPanel Orientation="Horizontal" Spacing="8">
                        <FontIcon Glyph="&#xE714;" Foreground="{ThemeResource SystemAccentColor}" />
                        <TextBlock Text="Video Tutorials" Style="{StaticResource SubtitleTextBlockStyle}" />
                    </StackPanel>

                    <GridView SelectionMode="None">
                        <GridViewItem>
                            <Border Background="{ThemeResource SystemFillColorNeutralBackgroundBrush}"
                                    CornerRadius="8" Width="240">
                                <StackPanel>
                                    <Border Background="#2D3748" Height="135" CornerRadius="8,8,0,0">
                                        <FontIcon Glyph="&#xE768;" FontSize="48" Foreground="White"
                                                  HorizontalAlignment="Center" VerticalAlignment="Center" />
                                    </Border>
                                    <StackPanel Padding="12" Spacing="4">
                                        <TextBlock Text="Getting Started" FontWeight="SemiBold" />
                                        <TextBlock Text="5:30 • Beginner"
                                                   Style="{StaticResource CaptionTextBlockStyle}"
                                                   Foreground="{ThemeResource SystemBaseMediumColor}" />
                                    </StackPanel>
                                </StackPanel>
                            </Border>
                        </GridViewItem>

                        <GridViewItem>
                            <Border Background="{ThemeResource SystemFillColorNeutralBackgroundBrush}"
                                    CornerRadius="8" Width="240">
                                <StackPanel>
                                    <Border Background="#2D3748" Height="135" CornerRadius="8,8,0,0">
                                        <FontIcon Glyph="&#xE703;" FontSize="48" Foreground="White"
                                                  HorizontalAlignment="Center" VerticalAlignment="Center" />
                                    </Border>
                                    <StackPanel Padding="12" Spacing="4">
                                        <TextBlock Text="IB TWS Configuration" FontWeight="SemiBold" />
                                        <TextBlock Text="8:15 • Intermediate"
                                                   Style="{StaticResource CaptionTextBlockStyle}"
                                                   Foreground="{ThemeResource SystemBaseMediumColor}" />
                                    </StackPanel>
                                </StackPanel>
                            </Border>
                        </GridViewItem>

                        <GridViewItem>
                            <Border Background="{ThemeResource SystemFillColorNeutralBackgroundBrush}"
                                    CornerRadius="8" Width="240">
                                <StackPanel>
                                    <Border Background="#2D3748" Height="135" CornerRadius="8,8,0,0">
                                        <FontIcon Glyph="&#xE9F5;" FontSize="48" Foreground="White"
                                                  HorizontalAlignment="Center" VerticalAlignment="Center" />
                                    </Border>
                                    <StackPanel Padding="12" Spacing="4">
                                        <TextBlock Text="QuantConnect Backtesting" FontWeight="SemiBold" />
                                        <TextBlock Text="12:45 • Advanced"
                                                   Style="{StaticResource CaptionTextBlockStyle}"
                                                   Foreground="{ThemeResource SystemBaseMediumColor}" />
                                    </StackPanel>
                                </StackPanel>
                            </Border>
                        </GridViewItem>
                    </GridView>
                </StackPanel>
            </Border>

            <!-- FAQ -->
            <Border Style="{StaticResource CardStyle}">
                <StackPanel Spacing="16">
                    <StackPanel Orientation="Horizontal" Spacing="8">
                        <FontIcon Glyph="&#xE9CE;" Foreground="{ThemeResource SystemAccentColor}" />
                        <TextBlock Text="Frequently Asked Questions" Style="{StaticResource SubtitleTextBlockStyle}" />
                    </StackPanel>

                    <Expander Header="How do I connect to Interactive Brokers?" IsExpanded="False" HorizontalAlignment="Stretch">
                        <TextBlock TextWrapping="Wrap" Padding="0,8,0,0">
                            1. Install and run TWS (Trader Workstation) or IB Gateway
                            2. Enable API connections in TWS: Edit → Global Configuration → API → Settings
                            3. Set the port (7496 for live, 7497 for paper trading)
                            4. Start the collector with the --ib-host and --ib-port arguments
                        </TextBlock>
                    </Expander>

                    <Expander Header="What data providers are supported?" IsExpanded="False" HorizontalAlignment="Stretch">
                        <TextBlock TextWrapping="Wrap" Padding="0,8,0,0">
                            • Interactive Brokers (IB) - Full Level 2 depth and tick-by-tick trades
                            • Alpaca - Real-time trades and quotes via WebSocket (free IEX tier available)
                            • Historical backfill from Yahoo Finance, Stooq, and Nasdaq Data Link
                        </TextBlock>
                    </Expander>

                    <Expander Header="How do I export data for backtesting?" IsExpanded="False" HorizontalAlignment="Stretch">
                        <TextBlock TextWrapping="Wrap" Padding="0,8,0,0">
                            Use the Data Export page to export collected data in various formats:
                            • CSV for general analysis tools
                            • Parquet for efficient columnar storage
                            • QuantConnect Lean format for algorithmic backtesting
                            • Direct database export to PostgreSQL, TimescaleDB, or ClickHouse
                        </TextBlock>
                    </Expander>

                    <Expander Header="Where is my data stored?" IsExpanded="False" HorizontalAlignment="Stretch">
                        <TextBlock TextWrapping="Wrap" Padding="0,8,0,0">
                            By default, data is stored in the 'data' folder relative to the application directory.
                            You can configure the storage location, naming convention, and compression settings
                            in the Storage page. Files are organized by symbol, type, and date in JSONL format.
                        </TextBlock>
                    </Expander>

                    <Expander Header="How do I schedule automated data collection?" IsExpanded="False" HorizontalAlignment="Stretch">
                        <TextBlock TextWrapping="Wrap" Padding="0,8,0,0">
                            Use the Service Manager to configure auto-start with Windows and set up
                            scheduled collection based on trading hours. The Trading Hours Manager lets
                            you configure market sessions and holidays for different exchanges.
                        </TextBlock>
                    </Expander>
                </StackPanel>
            </Border>

            <!-- Support -->
            <Border Style="{StaticResource CardStyle}">
                <StackPanel Spacing="16">
                    <StackPanel Orientation="Horizontal" Spacing="8">
                        <FontIcon Glyph="&#xE8F2;" Foreground="{ThemeResource SystemAccentColor}" />
                        <TextBlock Text="Get Support" Style="{StaticResource SubtitleTextBlockStyle}" />
                    </StackPanel>

                    <Grid ColumnSpacing="16">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>

                        <Border Grid.Column="0" Background="{ThemeResource SystemFillColorNeutralBackgroundBrush}"
                                CornerRadius="8" Padding="16">
                            <StackPanel Spacing="8" HorizontalAlignment="Center">
                                <FontIcon Glyph="&#xE774;" FontSize="32" Foreground="{ThemeResource SystemAccentColor}" />
                                <TextBlock Text="GitHub Issues" HorizontalAlignment="Center" FontWeight="SemiBold" />
                                <TextBlock Text="Report bugs and request features" HorizontalAlignment="Center"
                                           Style="{StaticResource CaptionTextBlockStyle}"
                                           Foreground="{ThemeResource SystemBaseMediumColor}" />
                                <HyperlinkButton Content="Open GitHub"
                                                 NavigateUri="https://github.com/example/market-data-collector/issues"
                                                 HorizontalAlignment="Center" />
                            </StackPanel>
                        </Border>

                        <Border Grid.Column="1" Background="{ThemeResource SystemFillColorNeutralBackgroundBrush}"
                                CornerRadius="8" Padding="16">
                            <StackPanel Spacing="8" HorizontalAlignment="Center">
                                <FontIcon Glyph="&#xE715;" FontSize="32" Foreground="{ThemeResource SystemAccentColor}" />
                                <TextBlock Text="Community Discord" HorizontalAlignment="Center" FontWeight="SemiBold" />
                                <TextBlock Text="Chat with other users" HorizontalAlignment="Center"
                                           Style="{StaticResource CaptionTextBlockStyle}"
                                           Foreground="{ThemeResource SystemBaseMediumColor}" />
                                <HyperlinkButton Content="Join Discord"
                                                 NavigateUri="https://discord.gg/example"
                                                 HorizontalAlignment="Center" />
                            </StackPanel>
                        </Border>

                        <Border Grid.Column="2" Background="{ThemeResource SystemFillColorNeutralBackgroundBrush}"
                                CornerRadius="8" Padding="16">
                            <StackPanel Spacing="8" HorizontalAlignment="Center">
                                <FontIcon Glyph="&#xE8BD;" FontSize="32" Foreground="{ThemeResource SystemAccentColor}" />
                                <TextBlock Text="Email Support" HorizontalAlignment="Center" FontWeight="SemiBold" />
                                <TextBlock Text="Direct assistance" HorizontalAlignment="Center"
                                           Style="{StaticResource CaptionTextBlockStyle}"
                                           Foreground="{ThemeResource SystemBaseMediumColor}" />
                                <HyperlinkButton Content="Contact Us"
                                                 NavigateUri="mailto:support@example.com"
                                                 HorizontalAlignment="Center" />
                            </StackPanel>
                        </Border>
                    </Grid>
                </StackPanel>
            </Border>

            <InfoBar x:Name="ActionInfoBar" IsOpen="False" IsClosable="True" />
        </StackPanel>
    </ScrollViewer>

    <Page.Resources>
        <Style x:Key="KeyboardShortcutStyle" TargetType="Border">
            <Setter Property="Background" Value="{ThemeResource SystemFillColorNeutralBackgroundBrush}" />
            <Setter Property="CornerRadius" Value="4" />
            <Setter Property="Padding" Value="8,4" />
            <Setter Property="Margin" Value="0,4" />
        </Style>
    </Page.Resources>
</Page>
