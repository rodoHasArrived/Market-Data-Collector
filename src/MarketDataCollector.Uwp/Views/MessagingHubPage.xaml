<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="MarketDataCollector.Uwp.Views.MessagingHubPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="380" />
        </Grid.ColumnDefinitions>

        <ScrollViewer Grid.Column="0" VerticalScrollBarVisibility="Auto" Padding="24">
            <StackPanel Spacing="24" MaxWidth="900">
                <!-- Header -->
                <StackPanel Orientation="Horizontal" Spacing="12">
                    <FontIcon Glyph="&#xE8F4;" FontSize="28" Foreground="{ThemeResource SystemAccentColor}" />
                    <TextBlock Text="Messaging Hub" Style="{StaticResource TitleTextBlockStyle}" VerticalAlignment="Center" />
                </StackPanel>

                <TextBlock Text="Monitor MassTransit message bus activity, consumers, and endpoints."
                           Style="{StaticResource BodyTextBlockStyle}"
                           Foreground="{ThemeResource SystemBaseMediumColor}" />

                <!-- Connection Status -->
                <Border Style="{StaticResource CardStyle}">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0" Spacing="8">
                            <StackPanel Orientation="Horizontal" Spacing="8">
                                <Ellipse x:Name="ConnectionIndicator" Width="12" Height="12" Fill="#F56565" />
                                <TextBlock x:Name="ConnectionStatusText" Text="Disconnected"
                                           Style="{StaticResource SubtitleTextBlockStyle}" />
                            </StackPanel>
                            <TextBlock x:Name="ConnectionDetailsText"
                                       Text="Transport: InMemory | Publishing: Disabled"
                                       Style="{StaticResource CaptionTextBlockStyle}"
                                       Foreground="{ThemeResource SystemBaseMediumColor}" />
                        </StackPanel>

                        <StackPanel Grid.Column="1" Orientation="Horizontal" Spacing="8">
                            <Button Content="Test Connection" Click="TestConnection_Click" />
                            <Button Content="Refresh" Click="Refresh_Click" />
                        </StackPanel>
                    </Grid>
                </Border>

                <!-- Statistics -->
                <Border Style="{StaticResource CardStyle}">
                    <StackPanel Spacing="16">
                        <TextBlock Text="Message Statistics" Style="{StaticResource SubtitleTextBlockStyle}" />

                        <Grid ColumnSpacing="24">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0">
                                <TextBlock x:Name="PublishedCountText" Text="0"
                                           Style="{StaticResource SubheaderTextBlockStyle}"
                                           Foreground="{ThemeResource SystemAccentColor}" />
                                <TextBlock Text="Published" Style="{StaticResource CaptionTextBlockStyle}" />
                            </StackPanel>

                            <StackPanel Grid.Column="1">
                                <TextBlock x:Name="ConsumedCountText" Text="0"
                                           Style="{StaticResource SubheaderTextBlockStyle}"
                                           Foreground="#48BB78" />
                                <TextBlock Text="Consumed" Style="{StaticResource CaptionTextBlockStyle}" />
                            </StackPanel>

                            <StackPanel Grid.Column="2">
                                <TextBlock x:Name="FailedCountText" Text="0"
                                           Style="{StaticResource SubheaderTextBlockStyle}"
                                           Foreground="#F56565" />
                                <TextBlock Text="Failed" Style="{StaticResource CaptionTextBlockStyle}" />
                            </StackPanel>

                            <StackPanel Grid.Column="3">
                                <TextBlock x:Name="LatencyText" Text="0ms"
                                           Style="{StaticResource SubheaderTextBlockStyle}"
                                           Foreground="{ThemeResource SystemAccentColor}" />
                                <TextBlock Text="Avg Latency" Style="{StaticResource CaptionTextBlockStyle}" />
                            </StackPanel>
                        </Grid>

                        <Grid ColumnSpacing="24">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0">
                                <TextBlock x:Name="PublishRateText" Text="0/s"
                                           FontSize="18" FontWeight="SemiBold" />
                                <TextBlock Text="Publish Rate" Style="{StaticResource CaptionTextBlockStyle}" />
                            </StackPanel>

                            <StackPanel Grid.Column="1">
                                <TextBlock x:Name="ConsumeRateText" Text="0/s"
                                           FontSize="18" FontWeight="SemiBold" />
                                <TextBlock Text="Consume Rate" Style="{StaticResource CaptionTextBlockStyle}" />
                            </StackPanel>
                        </Grid>
                    </StackPanel>
                </Border>

                <!-- Configuration -->
                <Border Style="{StaticResource CardStyle}">
                    <Expander Header="Configuration" IsExpanded="False" HorizontalAlignment="Stretch"
                              HorizontalContentAlignment="Stretch">
                        <StackPanel Spacing="16" Margin="0,16,0,0">
                            <ComboBox x:Name="TransportTypeCombo" Header="Transport Type" HorizontalAlignment="Stretch">
                                <ComboBoxItem Content="In Memory" Tag="InMemory" IsSelected="True" />
                                <ComboBoxItem Content="RabbitMQ" Tag="RabbitMQ" />
                                <ComboBoxItem Content="Azure Service Bus" Tag="AzureServiceBus" />
                                <ComboBoxItem Content="Amazon SQS" Tag="AmazonSqs" />
                            </ComboBox>

                            <TextBox x:Name="HostBox" Header="Host" PlaceholderText="localhost" />

                            <Grid ColumnSpacing="12">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="100" />
                                </Grid.ColumnDefinitions>

                                <TextBox x:Name="UsernameBox" Header="Username" PlaceholderText="guest" />
                                <NumberBox x:Name="PortBox" Header="Port" Value="5672" Grid.Column="1" />
                            </Grid>

                            <PasswordBox x:Name="PasswordBox" Header="Password" PlaceholderText="Password" />

                            <ToggleSwitch x:Name="EnablePublishingToggle" Header="Enable Publishing"
                                          OffContent="Disabled" OnContent="Enabled" />

                            <Button Content="Save Configuration"
                                    Style="{StaticResource AccentButtonStyle}"
                                    Click="SaveConfig_Click" />
                        </StackPanel>
                    </Expander>
                </Border>

                <!-- Consumers -->
                <Border Style="{StaticResource CardStyle}">
                    <StackPanel Spacing="16">
                        <TextBlock Text="Active Consumers" Style="{StaticResource SubtitleTextBlockStyle}" />

                        <ListView x:Name="ConsumersList" SelectionMode="None" MaxHeight="250">
                            <ListView.ItemTemplate>
                                <DataTemplate>
                                    <Grid Padding="8,4" ColumnSpacing="12">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="24" />
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="100" />
                                            <ColumnDefinition Width="80" />
                                        </Grid.ColumnDefinitions>

                                        <Ellipse Grid.Column="0" Width="10" Height="10"
                                                 Fill="{Binding StatusColor}"
                                                 VerticalAlignment="Center" />
                                        <StackPanel Grid.Column="1">
                                            <TextBlock Text="{Binding Name}" FontWeight="SemiBold" />
                                            <TextBlock Text="{Binding MessageType}"
                                                       Style="{StaticResource CaptionTextBlockStyle}"
                                                       Foreground="{ThemeResource SystemBaseMediumColor}" />
                                        </StackPanel>
                                        <TextBlock Grid.Column="2" Text="{Binding ConsumedText}"
                                                   HorizontalAlignment="Right" VerticalAlignment="Center" />
                                        <TextBlock Grid.Column="3" Text="{Binding AvgTimeText}"
                                                   HorizontalAlignment="Right" VerticalAlignment="Center"
                                                   Foreground="{ThemeResource SystemBaseMediumColor}" />
                                    </Grid>
                                </DataTemplate>
                            </ListView.ItemTemplate>
                        </ListView>

                        <TextBlock x:Name="NoConsumersText" Text="No active consumers"
                                   Style="{StaticResource CaptionTextBlockStyle}"
                                   Foreground="{ThemeResource SystemBaseMediumColor}" />
                    </StackPanel>
                </Border>

                <!-- Endpoints -->
                <Border Style="{StaticResource CardStyle}">
                    <StackPanel Spacing="16">
                        <TextBlock Text="Endpoints" Style="{StaticResource SubtitleTextBlockStyle}" />

                        <ListView x:Name="EndpointsList" SelectionMode="None" MaxHeight="200">
                            <ListView.ItemTemplate>
                                <DataTemplate>
                                    <Grid Padding="8,4" ColumnSpacing="12">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="24" />
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="80" />
                                            <ColumnDefinition Width="60" />
                                        </Grid.ColumnDefinitions>

                                        <FontIcon Grid.Column="0" Glyph="{Binding TypeIcon}"
                                                  FontSize="14" VerticalAlignment="Center" />
                                        <StackPanel Grid.Column="1">
                                            <TextBlock Text="{Binding Name}" FontWeight="SemiBold" />
                                            <TextBlock Text="{Binding Address}"
                                                       Style="{StaticResource CaptionTextBlockStyle}"
                                                       Foreground="{ThemeResource SystemBaseMediumColor}"
                                                       TextTrimming="CharacterEllipsis" />
                                        </StackPanel>
                                        <TextBlock Grid.Column="2" Text="{Binding PendingText}"
                                                   HorizontalAlignment="Right" VerticalAlignment="Center" />
                                        <Border Grid.Column="3" Background="{Binding HealthBackground}"
                                                CornerRadius="4" Padding="6,2"
                                                HorizontalAlignment="Right" VerticalAlignment="Center">
                                            <TextBlock Text="{Binding HealthText}" FontSize="11" />
                                        </Border>
                                    </Grid>
                                </DataTemplate>
                            </ListView.ItemTemplate>
                        </ListView>

                        <TextBlock x:Name="NoEndpointsText" Text="No endpoints configured"
                                   Style="{StaticResource CaptionTextBlockStyle}"
                                   Foreground="{ThemeResource SystemBaseMediumColor}" />
                    </StackPanel>
                </Border>

                <!-- Error Queue -->
                <Border Style="{StaticResource CardStyle}">
                    <StackPanel Spacing="16">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>

                            <StackPanel Orientation="Horizontal" Spacing="8">
                                <FontIcon Glyph="&#xEA39;" Foreground="#F56565" />
                                <TextBlock Text="Error Queue" Style="{StaticResource SubtitleTextBlockStyle}" />
                                <TextBlock x:Name="ErrorCountBadge" Text="(0)"
                                           Foreground="{ThemeResource SystemBaseMediumColor}"
                                           VerticalAlignment="Center" />
                            </StackPanel>

                            <Button Grid.Column="1" Content="Clear All" Click="ClearErrors_Click" />
                        </Grid>

                        <ListView x:Name="ErrorMessagesList" SelectionMode="None" MaxHeight="250">
                            <ListView.ItemTemplate>
                                <DataTemplate>
                                    <Grid Padding="8" RowSpacing="4">
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="Auto" />
                                        </Grid.RowDefinitions>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="Auto" />
                                        </Grid.ColumnDefinitions>

                                        <TextBlock Grid.Row="0" Grid.Column="0"
                                                   Text="{Binding MessageType}" FontWeight="SemiBold" />
                                        <TextBlock Grid.Row="0" Grid.Column="1"
                                                   Text="{Binding TimestampText}"
                                                   Style="{StaticResource CaptionTextBlockStyle}"
                                                   Foreground="{ThemeResource SystemBaseMediumColor}" />

                                        <TextBlock Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2"
                                                   Text="{Binding Error}"
                                                   Foreground="#F56565"
                                                   TextTrimming="CharacterEllipsis" />
                                    </Grid>
                                </DataTemplate>
                            </ListView.ItemTemplate>
                        </ListView>

                        <TextBlock x:Name="NoErrorsText" Text="No errors in queue"
                                   Style="{StaticResource CaptionTextBlockStyle}"
                                   Foreground="{ThemeResource SystemBaseMediumColor}" />
                    </StackPanel>
                </Border>
            </StackPanel>
        </ScrollViewer>

        <!-- Right Panel -->
        <ScrollViewer Grid.Column="1" VerticalScrollBarVisibility="Auto" Padding="12,24,24,24">
            <StackPanel Spacing="16">
                <!-- Recent Activity -->
                <Border Style="{StaticResource CardStyle}">
                    <StackPanel Spacing="12">
                        <StackPanel Orientation="Horizontal" Spacing="8">
                            <TextBlock Text="Recent Activity" Style="{StaticResource BodyStrongTextBlockStyle}" />
                            <ToggleSwitch x:Name="LiveActivityToggle" IsOn="True"
                                          OffContent="" OnContent=""
                                          Toggled="LiveActivity_Toggled" />
                        </StackPanel>

                        <ListView x:Name="RecentActivityList" SelectionMode="None" MaxHeight="300">
                            <ListView.ItemTemplate>
                                <DataTemplate>
                                    <Grid Padding="4" ColumnSpacing="8">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto" />
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="Auto" />
                                        </Grid.ColumnDefinitions>

                                        <FontIcon Grid.Column="0" Glyph="{Binding DirectionIcon}"
                                                  Foreground="{Binding DirectionColor}" FontSize="12" />
                                        <StackPanel Grid.Column="1">
                                            <TextBlock Text="{Binding MessageType}" FontSize="12" />
                                            <TextBlock Text="{Binding Symbol}"
                                                       Style="{StaticResource CaptionTextBlockStyle}"
                                                       Foreground="{ThemeResource SystemBaseMediumColor}" />
                                        </StackPanel>
                                        <TextBlock Grid.Column="2" Text="{Binding TimeText}"
                                                   Style="{StaticResource CaptionTextBlockStyle}"
                                                   Foreground="{ThemeResource SystemBaseMediumColor}" />
                                    </Grid>
                                </DataTemplate>
                            </ListView.ItemTemplate>
                        </ListView>
                    </StackPanel>
                </Border>

                <!-- Message Type Breakdown -->
                <Border Style="{StaticResource CardStyle}">
                    <StackPanel Spacing="12">
                        <TextBlock Text="Message Types" Style="{StaticResource BodyStrongTextBlockStyle}" />

                        <ListView x:Name="MessageTypesList" SelectionMode="None" MaxHeight="200">
                            <ListView.ItemTemplate>
                                <DataTemplate>
                                    <Grid Padding="4" ColumnSpacing="8">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="Auto" />
                                        </Grid.ColumnDefinitions>

                                        <TextBlock Grid.Column="0" Text="{Binding Type}" />
                                        <TextBlock Grid.Column="1" Text="{Binding CountText}" FontWeight="SemiBold" />
                                    </Grid>
                                </DataTemplate>
                            </ListView.ItemTemplate>
                        </ListView>
                    </StackPanel>
                </Border>

                <!-- Info -->
                <Border Style="{StaticResource CardStyle}"
                        Background="{ThemeResource SystemFillColorNeutralBackgroundBrush}">
                    <StackPanel Spacing="8">
                        <TextBlock Text="About MassTransit" Style="{StaticResource BodyStrongTextBlockStyle}" />

                        <TextBlock Text="MassTransit is a distributed application framework for .NET that provides a consistent abstraction over message transports."
                                   Style="{StaticResource CaptionTextBlockStyle}"
                                   TextWrapping="Wrap" />
                    </StackPanel>
                </Border>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>
