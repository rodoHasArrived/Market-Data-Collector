<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="MarketDataCollector.Uwp.Views.ChartingPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:MarketDataCollector.Uwp.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="{ThemeResource SystemFillColorNeutralBackgroundBrush}" Padding="24,16">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <Grid Grid.Row="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0">
                        <TextBlock Text="Advanced Charts" Style="{StaticResource TitleTextBlockStyle}" />
                        <TextBlock Text="Interactive candlestick charts with technical indicators"
                                   Foreground="{ThemeResource SystemBaseMediumColor}" />
                    </StackPanel>

                    <Button Grid.Column="1" Click="Refresh_Click" Style="{StaticResource IconButtonStyle}" ToolTipService.ToolTip="Refresh">
                        <FontIcon Glyph="&#xE72C;" FontSize="16" />
                    </Button>
                </Grid>

                <!-- Chart Controls -->
                <StackPanel Grid.Row="1" Orientation="Horizontal" Spacing="12" Margin="0,16,0,0">
                    <ComboBox x:Name="SymbolSelector" PlaceholderText="Symbol" MinWidth="120"
                              SelectionChanged="SymbolSelector_SelectionChanged" />

                    <ComboBox x:Name="TimeframeSelector" SelectedIndex="6" MinWidth="100"
                              SelectionChanged="TimeframeSelector_SelectionChanged">
                        <ComboBoxItem Content="1 Min" Tag="Minute1" />
                        <ComboBoxItem Content="5 Min" Tag="Minute5" />
                        <ComboBoxItem Content="15 Min" Tag="Minute15" />
                        <ComboBoxItem Content="30 Min" Tag="Minute30" />
                        <ComboBoxItem Content="1 Hour" Tag="Hour1" />
                        <ComboBoxItem Content="4 Hour" Tag="Hour4" />
                        <ComboBoxItem Content="Daily" Tag="Daily" />
                        <ComboBoxItem Content="Weekly" Tag="Weekly" />
                        <ComboBoxItem Content="Monthly" Tag="Monthly" />
                    </ComboBox>

                    <CalendarDatePicker x:Name="FromDatePicker" PlaceholderText="From" DateChanged="DatePicker_DateChanged" />
                    <CalendarDatePicker x:Name="ToDatePicker" PlaceholderText="To" DateChanged="DatePicker_DateChanged" />

                    <Border Width="1" Background="{ThemeResource SystemBaseMediumColor}" Margin="8,0" />

                    <DropDownButton Content="Indicators">
                        <DropDownButton.Flyout>
                            <MenuFlyout x:Name="IndicatorsFlyout" />
                        </DropDownButton.Flyout>
                    </DropDownButton>

                    <DropDownButton Content="Drawing Tools">
                        <DropDownButton.Flyout>
                            <MenuFlyout>
                                <MenuFlyoutItem Text="Trend Line" Click="DrawingTool_Click" Tag="trendline">
                                    <MenuFlyoutItem.Icon>
                                        <FontIcon Glyph="&#xE91B;" />
                                    </MenuFlyoutItem.Icon>
                                </MenuFlyoutItem>
                                <MenuFlyoutItem Text="Horizontal Line" Click="DrawingTool_Click" Tag="horizontal">
                                    <MenuFlyoutItem.Icon>
                                        <FontIcon Glyph="&#xE738;" />
                                    </MenuFlyoutItem.Icon>
                                </MenuFlyoutItem>
                                <MenuFlyoutItem Text="Fibonacci" Click="DrawingTool_Click" Tag="fibonacci">
                                    <MenuFlyoutItem.Icon>
                                        <FontIcon Glyph="&#xE9D9;" />
                                    </MenuFlyoutItem.Icon>
                                </MenuFlyoutItem>
                                <MenuFlyoutSeparator />
                                <MenuFlyoutItem Text="Clear All" Click="ClearDrawings_Click">
                                    <MenuFlyoutItem.Icon>
                                        <FontIcon Glyph="&#xE74D;" />
                                    </MenuFlyoutItem.Icon>
                                </MenuFlyoutItem>
                            </MenuFlyout>
                        </DropDownButton.Flyout>
                    </DropDownButton>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Content -->
        <Grid Grid.Row="1" Padding="24" ColumnSpacing="24">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="280" />
            </Grid.ColumnDefinitions>

            <!-- Main Chart Area -->
            <Grid Grid.Column="0" RowSpacing="16">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="150" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <!-- Price Chart -->
                <Border Grid.Row="0" Style="{StaticResource CardStyle}">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>

                        <!-- Chart Header with Price Info -->
                        <Grid Grid.Row="0" Margin="0,0,0,16">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0" Orientation="Horizontal" Spacing="24">
                                <StackPanel>
                                    <TextBlock x:Name="CurrentPriceText" Text="--" FontSize="28" FontWeight="Bold" />
                                    <StackPanel Orientation="Horizontal" Spacing="8">
                                        <TextBlock x:Name="PriceChangeText" Text="--" FontSize="14" />
                                        <TextBlock x:Name="PriceChangePercentText" Text="--" FontSize="14" />
                                    </StackPanel>
                                </StackPanel>

                                <StackPanel Spacing="2">
                                    <StackPanel Orientation="Horizontal" Spacing="8">
                                        <TextBlock Text="O" FontSize="11" Foreground="{ThemeResource SystemBaseMediumColor}" Width="12" />
                                        <TextBlock x:Name="OpenText" Text="--" FontSize="12" FontFamily="Consolas" />
                                    </StackPanel>
                                    <StackPanel Orientation="Horizontal" Spacing="8">
                                        <TextBlock Text="H" FontSize="11" Foreground="{ThemeResource SystemBaseMediumColor}" Width="12" />
                                        <TextBlock x:Name="HighText" Text="--" FontSize="12" FontFamily="Consolas"
                                                   Foreground="{StaticResource SuccessColorBrush}" />
                                    </StackPanel>
                                    <StackPanel Orientation="Horizontal" Spacing="8">
                                        <TextBlock Text="L" FontSize="11" Foreground="{ThemeResource SystemBaseMediumColor}" Width="12" />
                                        <TextBlock x:Name="LowText" Text="--" FontSize="12" FontFamily="Consolas"
                                                   Foreground="{StaticResource ErrorColorBrush}" />
                                    </StackPanel>
                                    <StackPanel Orientation="Horizontal" Spacing="8">
                                        <TextBlock Text="C" FontSize="11" Foreground="{ThemeResource SystemBaseMediumColor}" Width="12" />
                                        <TextBlock x:Name="CloseText" Text="--" FontSize="12" FontFamily="Consolas" />
                                    </StackPanel>
                                </StackPanel>

                                <StackPanel Spacing="2">
                                    <TextBlock Text="Volume" FontSize="11" Foreground="{ThemeResource SystemBaseMediumColor}" />
                                    <TextBlock x:Name="VolumeText" Text="--" FontSize="12" FontFamily="Consolas" />
                                    <TextBlock Text="Avg Volume" FontSize="11" Foreground="{ThemeResource SystemBaseMediumColor}" />
                                    <TextBlock x:Name="AvgVolumeText" Text="--" FontSize="12" FontFamily="Consolas" />
                                </StackPanel>
                            </StackPanel>

                            <StackPanel Grid.Column="1" Orientation="Horizontal" Spacing="8">
                                <TextBlock x:Name="ActiveIndicatorsText" Text=""
                                           Foreground="{ThemeResource SystemBaseMediumColor}" FontSize="11"
                                           VerticalAlignment="Center" />
                            </StackPanel>
                        </Grid>

                        <!-- Candlestick Chart Canvas -->
                        <Grid Grid.Row="1" x:Name="ChartContainer">
                            <!-- Price Axis -->
                            <StackPanel x:Name="PriceAxisPanel" HorizontalAlignment="Right" Width="60">
                                <ItemsControl x:Name="PriceAxisLabels">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <TextBlock Text="{Binding}" FontSize="10" FontFamily="Consolas"
                                                       Foreground="{ThemeResource SystemBaseMediumColor}"
                                                       HorizontalAlignment="Right" Margin="0,4" />
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </StackPanel>

                            <!-- Candlesticks -->
                            <ScrollViewer x:Name="ChartScrollViewer" HorizontalScrollBarVisibility="Auto"
                                          VerticalScrollBarVisibility="Disabled" Margin="0,0,65,0">
                                <ItemsControl x:Name="CandlestickChart">
                                    <ItemsControl.ItemsPanel>
                                        <ItemsPanelTemplate>
                                            <StackPanel Orientation="Horizontal" />
                                        </ItemsPanelTemplate>
                                    </ItemsControl.ItemsPanel>
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <Grid Width="12" ToolTipService.ToolTip="{Binding Tooltip}">
                                                <!-- Wick -->
                                                <Border Width="1" Background="{Binding WickColor}"
                                                        Height="{Binding WickHeight}"
                                                        VerticalAlignment="Top"
                                                        Margin="{Binding WickMargin}" />
                                                <!-- Body -->
                                                <Border Width="8" Background="{Binding BodyColor}"
                                                        Height="{Binding BodyHeight}"
                                                        VerticalAlignment="Top"
                                                        Margin="{Binding BodyMargin}"
                                                        CornerRadius="1" />
                                            </Grid>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </ScrollViewer>

                            <!-- No Data Message -->
                            <TextBlock x:Name="NoChartDataText" Text="Select a symbol to view chart"
                                       HorizontalAlignment="Center" VerticalAlignment="Center"
                                       Foreground="{ThemeResource SystemBaseMediumColor}" FontStyle="Italic" />
                        </Grid>
                    </Grid>
                </Border>

                <!-- Volume Chart -->
                <Border Grid.Row="1" Style="{StaticResource CardStyle}">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>

                        <TextBlock Grid.Row="0" Text="Volume" FontWeight="SemiBold" FontSize="14" Margin="0,0,0,8" />

                        <ScrollViewer Grid.Row="1" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Disabled">
                            <ItemsControl x:Name="VolumeChart">
                                <ItemsControl.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <StackPanel Orientation="Horizontal" VerticalAlignment="Bottom" />
                                    </ItemsPanelTemplate>
                                </ItemsControl.ItemsPanel>
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border Width="10" Margin="1,0"
                                                Height="{Binding Height}"
                                                Background="{Binding Color}"
                                                VerticalAlignment="Bottom"
                                                ToolTipService.ToolTip="{Binding Tooltip}" />
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </ScrollViewer>
                    </Grid>
                </Border>

                <!-- Indicator Panels Container -->
                <StackPanel Grid.Row="2" x:Name="IndicatorPanelsContainer" Spacing="16" />
            </Grid>

            <!-- Side Panel -->
            <StackPanel Grid.Column="1" Spacing="16">
                <!-- Volume Profile -->
                <Border Style="{StaticResource CardStyle}">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>

                        <StackPanel Grid.Row="0" Orientation="Horizontal" Spacing="8" Margin="0,0,0,16">
                            <FontIcon Glyph="&#xE9D9;" FontSize="16" Foreground="{ThemeResource SystemAccentColor}" />
                            <TextBlock Text="Volume Profile" FontWeight="SemiBold" FontSize="14" />
                        </StackPanel>

                        <Grid Grid.Row="1">
                            <ItemsControl x:Name="VolumeProfileChart" MaxHeight="300">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Grid Height="12" Margin="0,1">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="50" />
                                                <ColumnDefinition Width="*" />
                                            </Grid.ColumnDefinitions>
                                            <TextBlock Grid.Column="0" Text="{Binding PriceLabel}" FontSize="10" FontFamily="Consolas"
                                                       Foreground="{ThemeResource SystemBaseMediumColor}" VerticalAlignment="Center" />
                                            <Border Grid.Column="1" Height="10" HorizontalAlignment="Left"
                                                    Width="{Binding BarWidth}" Background="{Binding BarColor}"
                                                    CornerRadius="2" />
                                        </Grid>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>

                            <TextBlock x:Name="NoVolumeProfileText" Text="No volume profile data"
                                       HorizontalAlignment="Center" VerticalAlignment="Center"
                                       Foreground="{ThemeResource SystemBaseMediumColor}" FontStyle="Italic" />
                        </Grid>

                        <!-- POC and Value Area -->
                        <StackPanel Grid.Row="1" VerticalAlignment="Bottom" Spacing="4">
                            <StackPanel Orientation="Horizontal" Spacing="8">
                                <TextBlock Text="POC:" FontSize="11" Foreground="{ThemeResource SystemBaseMediumColor}" Width="35" />
                                <TextBlock x:Name="PocText" Text="--" FontSize="11" FontFamily="Consolas" />
                            </StackPanel>
                            <StackPanel Orientation="Horizontal" Spacing="8">
                                <TextBlock Text="VAH:" FontSize="11" Foreground="{ThemeResource SystemBaseMediumColor}" Width="35" />
                                <TextBlock x:Name="VahText" Text="--" FontSize="11" FontFamily="Consolas" />
                            </StackPanel>
                            <StackPanel Orientation="Horizontal" Spacing="8">
                                <TextBlock Text="VAL:" FontSize="11" Foreground="{ThemeResource SystemBaseMediumColor}" Width="35" />
                                <TextBlock x:Name="ValText" Text="--" FontSize="11" FontFamily="Consolas" />
                            </StackPanel>
                        </StackPanel>
                    </Grid>
                </Border>

                <!-- Technical Indicators Summary -->
                <Border Style="{StaticResource CardStyle}">
                    <StackPanel>
                        <StackPanel Orientation="Horizontal" Spacing="8" Margin="0,0,0,16">
                            <FontIcon Glyph="&#xE9F5;" FontSize="16" Foreground="{ThemeResource SystemAccentColor}" />
                            <TextBlock Text="Indicator Values" FontWeight="SemiBold" FontSize="14" />
                        </StackPanel>

                        <ListView x:Name="IndicatorValuesList" SelectionMode="None" MaxHeight="250">
                            <ListView.ItemTemplate>
                                <DataTemplate>
                                    <Grid Padding="0,4">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="Auto" />
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Grid.Column="0" Text="{Binding Name}" FontSize="12" />
                                        <TextBlock Grid.Column="1" Text="{Binding Value}" FontSize="12" FontFamily="Consolas"
                                                   Foreground="{Binding ValueColor}" FontWeight="SemiBold" />
                                    </Grid>
                                </DataTemplate>
                            </ListView.ItemTemplate>
                        </ListView>

                        <TextBlock x:Name="NoIndicatorsText" Text="Add indicators from the toolbar"
                                   Foreground="{ThemeResource SystemBaseMediumColor}" FontStyle="Italic"
                                   FontSize="12" HorizontalAlignment="Center" />
                    </StackPanel>
                </Border>

                <!-- Chart Statistics -->
                <Border Style="{StaticResource CardStyle}">
                    <StackPanel Spacing="8">
                        <TextBlock Text="Period Statistics" FontWeight="SemiBold" FontSize="14" Margin="0,0,0,8" />

                        <Grid ColumnSpacing="8">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>

                            <TextBlock Grid.Row="0" Grid.Column="0" Text="High" FontSize="11" Foreground="{ThemeResource SystemBaseMediumColor}" />
                            <TextBlock Grid.Row="0" Grid.Column="1" x:Name="PeriodHighText" Text="--" FontSize="11" FontFamily="Consolas"
                                       Foreground="{StaticResource SuccessColorBrush}" HorizontalAlignment="Right" />

                            <TextBlock Grid.Row="1" Grid.Column="0" Text="Low" FontSize="11" Foreground="{ThemeResource SystemBaseMediumColor}" />
                            <TextBlock Grid.Row="1" Grid.Column="1" x:Name="PeriodLowText" Text="--" FontSize="11" FontFamily="Consolas"
                                       Foreground="{StaticResource ErrorColorBrush}" HorizontalAlignment="Right" />

                            <TextBlock Grid.Row="2" Grid.Column="0" Text="Total Volume" FontSize="11" Foreground="{ThemeResource SystemBaseMediumColor}" />
                            <TextBlock Grid.Row="2" Grid.Column="1" x:Name="PeriodVolumeText" Text="--" FontSize="11" FontFamily="Consolas" HorizontalAlignment="Right" />

                            <TextBlock Grid.Row="3" Grid.Column="0" Text="Candles" FontSize="11" Foreground="{ThemeResource SystemBaseMediumColor}" />
                            <TextBlock Grid.Row="3" Grid.Column="1" x:Name="CandleCountText" Text="--" FontSize="11" FontFamily="Consolas" HorizontalAlignment="Right" />
                        </Grid>
                    </StackPanel>
                </Border>
            </StackPanel>

            <!-- Loading Overlay -->
            <Border x:Name="LoadingOverlay" Grid.ColumnSpan="2" Visibility="Collapsed"
                    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}" Opacity="0.8">
                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                    <ProgressRing IsActive="True" Width="40" Height="40" />
                    <TextBlock Text="Loading chart data..." Margin="0,12,0,0" />
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</Page>
