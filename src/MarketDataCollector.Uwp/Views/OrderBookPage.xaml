<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="MarketDataCollector.Uwp.Views.OrderBookPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:MarketDataCollector.Uwp.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="{ThemeResource SystemFillColorNeutralBackgroundBrush}" Padding="24,16">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0">
                    <TextBlock Text="Live Order Book" Style="{StaticResource TitleTextBlockStyle}" />
                    <TextBlock Text="Real-time L2 depth visualization and order flow analysis"
                               Foreground="{ThemeResource SystemBaseMediumColor}" />
                </StackPanel>

                <StackPanel Grid.Column="1" Orientation="Horizontal" Spacing="12">
                    <ComboBox x:Name="SymbolSelector" PlaceholderText="Select Symbol" MinWidth="150"
                              SelectionChanged="SymbolSelector_SelectionChanged" />
                    <ComboBox x:Name="DepthLevelSelector" SelectedIndex="1" MinWidth="80">
                        <ComboBoxItem Content="5 levels" Tag="5" />
                        <ComboBoxItem Content="10 levels" Tag="10" />
                        <ComboBoxItem Content="20 levels" Tag="20" />
                        <ComboBoxItem Content="50 levels" Tag="50" />
                    </ComboBox>
                    <ToggleButton x:Name="StreamToggle" Click="StreamToggle_Click" Padding="12,8">
                        <StackPanel Orientation="Horizontal" Spacing="8">
                            <FontIcon x:Name="StreamIcon" Glyph="&#xE768;" FontSize="16" />
                            <TextBlock x:Name="StreamText" Text="Start" />
                        </StackPanel>
                    </ToggleButton>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Content -->
        <Grid Grid.Row="1" Padding="24" ColumnSpacing="24" RowSpacing="24">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="350" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <!-- Order Flow Stats -->
            <Grid Grid.Row="0" Grid.ColumnSpan="2" ColumnSpacing="16">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <Border Grid.Column="0" Style="{StaticResource MetricCardInfoStyle}">
                    <StackPanel>
                        <TextBlock x:Name="MidPriceText" Text="--" Style="{StaticResource MetricValueStyle}"
                                   Foreground="{StaticResource InfoColorBrush}" />
                        <TextBlock Text="MID PRICE" Style="{StaticResource MetricLabelStyle}" />
                    </StackPanel>
                </Border>

                <Border Grid.Column="1" Style="{StaticResource MetricCardSuccessStyle}">
                    <StackPanel>
                        <TextBlock x:Name="BestBidText" Text="--" Style="{StaticResource MetricValueStyle}"
                                   Foreground="{StaticResource SuccessColorBrush}" />
                        <TextBlock Text="BEST BID" Style="{StaticResource MetricLabelStyle}" />
                    </StackPanel>
                </Border>

                <Border Grid.Column="2" Style="{StaticResource MetricCardDangerStyle}">
                    <StackPanel>
                        <TextBlock x:Name="BestAskText" Text="--" Style="{StaticResource MetricValueStyle}"
                                   Foreground="{StaticResource ErrorColorBrush}" />
                        <TextBlock Text="BEST ASK" Style="{StaticResource MetricLabelStyle}" />
                    </StackPanel>
                </Border>

                <Border Grid.Column="3" Style="{StaticResource MetricCardWarningStyle}">
                    <StackPanel>
                        <TextBlock x:Name="SpreadText" Text="--" Style="{StaticResource MetricValueStyle}"
                                   Foreground="{StaticResource WarningColorBrush}" />
                        <TextBlock Text="SPREAD (BPS)" Style="{StaticResource MetricLabelStyle}" />
                    </StackPanel>
                </Border>

                <Border Grid.Column="4" Style="{StaticResource CardStyle}">
                    <StackPanel>
                        <TextBlock x:Name="ImbalanceText" Text="--" Style="{StaticResource MetricValueStyle}" />
                        <TextBlock Text="IMBALANCE" Style="{StaticResource MetricLabelStyle}" />
                    </StackPanel>
                </Border>

                <Border Grid.Column="5" Style="{StaticResource CardStyle}">
                    <StackPanel>
                        <TextBlock x:Name="VwapText" Text="--" Style="{StaticResource MetricValueStyle}" />
                        <TextBlock Text="VWAP" Style="{StaticResource MetricLabelStyle}" />
                    </StackPanel>
                </Border>
            </Grid>

            <!-- Order Book Heatmap -->
            <Border Grid.Row="1" Grid.Column="0" Style="{StaticResource CardStyle}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>

                    <StackPanel Grid.Row="0" Orientation="Horizontal" Spacing="8" Margin="0,0,0,16">
                        <FontIcon Glyph="&#xE9D9;" FontSize="20" Foreground="{ThemeResource SystemAccentColor}" />
                        <TextBlock Text="Order Book Depth" FontWeight="SemiBold" FontSize="16" />
                    </StackPanel>

                    <Grid Grid.Row="1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>

                        <!-- Bid Side -->
                        <StackPanel Grid.Column="0">
                            <Grid Margin="0,0,0,8">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="80" />
                                    <ColumnDefinition Width="80" />
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0" Text="Size" FontSize="11" Foreground="{ThemeResource SystemBaseMediumColor}" HorizontalAlignment="Right" />
                                <TextBlock Grid.Column="1" Text="Price" FontSize="11" Foreground="{ThemeResource SystemBaseMediumColor}" HorizontalAlignment="Right" />
                                <TextBlock Grid.Column="2" Text="Total" FontSize="11" Foreground="{ThemeResource SystemBaseMediumColor}" HorizontalAlignment="Right" />
                            </Grid>
                            <ListView x:Name="BidLevelsList" SelectionMode="None" MaxHeight="500">
                                <ListView.ItemTemplate>
                                    <DataTemplate>
                                        <Grid Padding="4,2">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*" />
                                                <ColumnDefinition Width="80" />
                                                <ColumnDefinition Width="80" />
                                            </Grid.ColumnDefinitions>
                                            <!-- Size bar background -->
                                            <Border Grid.ColumnSpan="3" HorizontalAlignment="Right"
                                                    Width="{Binding BarWidth}" Height="20"
                                                    Background="{StaticResource SuccessColorBrush}" Opacity="0.2" />
                                            <TextBlock Grid.Column="0" Text="{Binding Size}" HorizontalAlignment="Right" FontFamily="Consolas" FontSize="12" />
                                            <TextBlock Grid.Column="1" Text="{Binding Price}" HorizontalAlignment="Right" FontFamily="Consolas" FontSize="12"
                                                       Foreground="{StaticResource SuccessColorBrush}" FontWeight="SemiBold" />
                                            <TextBlock Grid.Column="2" Text="{Binding Cumulative}" HorizontalAlignment="Right" FontFamily="Consolas" FontSize="12"
                                                       Foreground="{ThemeResource SystemBaseMediumColor}" />
                                        </Grid>
                                    </DataTemplate>
                                </ListView.ItemTemplate>
                            </ListView>
                        </StackPanel>

                        <!-- Spread Indicator -->
                        <Border Grid.Column="1" Width="2" Background="{ThemeResource SystemBaseMediumColor}" Margin="16,0" />

                        <!-- Ask Side -->
                        <StackPanel Grid.Column="2">
                            <Grid Margin="0,0,0,8">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="80" />
                                    <ColumnDefinition Width="80" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0" Text="Total" FontSize="11" Foreground="{ThemeResource SystemBaseMediumColor}" />
                                <TextBlock Grid.Column="1" Text="Price" FontSize="11" Foreground="{ThemeResource SystemBaseMediumColor}" />
                                <TextBlock Grid.Column="2" Text="Size" FontSize="11" Foreground="{ThemeResource SystemBaseMediumColor}" />
                            </Grid>
                            <ListView x:Name="AskLevelsList" SelectionMode="None" MaxHeight="500">
                                <ListView.ItemTemplate>
                                    <DataTemplate>
                                        <Grid Padding="4,2">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="80" />
                                                <ColumnDefinition Width="80" />
                                                <ColumnDefinition Width="*" />
                                            </Grid.ColumnDefinitions>
                                            <!-- Size bar background -->
                                            <Border Grid.ColumnSpan="3" HorizontalAlignment="Left"
                                                    Width="{Binding BarWidth}" Height="20"
                                                    Background="{StaticResource ErrorColorBrush}" Opacity="0.2" />
                                            <TextBlock Grid.Column="0" Text="{Binding Cumulative}" FontFamily="Consolas" FontSize="12"
                                                       Foreground="{ThemeResource SystemBaseMediumColor}" />
                                            <TextBlock Grid.Column="1" Text="{Binding Price}" FontFamily="Consolas" FontSize="12"
                                                       Foreground="{StaticResource ErrorColorBrush}" FontWeight="SemiBold" />
                                            <TextBlock Grid.Column="2" Text="{Binding Size}" FontFamily="Consolas" FontSize="12" />
                                        </Grid>
                                    </DataTemplate>
                                </ListView.ItemTemplate>
                            </ListView>
                        </StackPanel>
                    </Grid>

                    <!-- No Data Message -->
                    <TextBlock x:Name="NoOrderBookText" Grid.Row="1" Text="Select a symbol and start streaming to view order book"
                               HorizontalAlignment="Center" VerticalAlignment="Center"
                               Foreground="{ThemeResource SystemBaseMediumColor}" FontStyle="Italic" />
                </Grid>
            </Border>

            <!-- Time and Sales -->
            <Border Grid.Row="1" Grid.Column="1" Style="{StaticResource CardStyle}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>

                    <StackPanel Grid.Row="0" Orientation="Horizontal" Spacing="8" Margin="0,0,0,16">
                        <FontIcon Glyph="&#xE916;" FontSize="20" Foreground="{ThemeResource SystemAccentColor}" />
                        <TextBlock Text="Time &amp; Sales" FontWeight="SemiBold" FontSize="16" />
                    </StackPanel>

                    <!-- Volume Summary -->
                    <Grid Grid.Row="1" Margin="0,0,0,16" ColumnSpacing="8">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>

                        <Border Grid.Column="0" Background="{ThemeResource SystemFillColorNeutralBackgroundBrush}"
                                CornerRadius="4" Padding="8">
                            <StackPanel HorizontalAlignment="Center">
                                <TextBlock x:Name="TotalVolumeText" Text="--" FontWeight="SemiBold" HorizontalAlignment="Center" />
                                <TextBlock Text="Total" FontSize="11" Foreground="{ThemeResource SystemBaseMediumColor}" HorizontalAlignment="Center" />
                            </StackPanel>
                        </Border>

                        <Border Grid.Column="1" Background="{ThemeResource SystemFillColorNeutralBackgroundBrush}"
                                CornerRadius="4" Padding="8">
                            <StackPanel HorizontalAlignment="Center">
                                <TextBlock x:Name="BuyVolumeText" Text="--" FontWeight="SemiBold"
                                           Foreground="{StaticResource SuccessColorBrush}" HorizontalAlignment="Center" />
                                <TextBlock Text="Buy" FontSize="11" Foreground="{ThemeResource SystemBaseMediumColor}" HorizontalAlignment="Center" />
                            </StackPanel>
                        </Border>

                        <Border Grid.Column="2" Background="{ThemeResource SystemFillColorNeutralBackgroundBrush}"
                                CornerRadius="4" Padding="8">
                            <StackPanel HorizontalAlignment="Center">
                                <TextBlock x:Name="SellVolumeText" Text="--" FontWeight="SemiBold"
                                           Foreground="{StaticResource ErrorColorBrush}" HorizontalAlignment="Center" />
                                <TextBlock Text="Sell" FontSize="11" Foreground="{ThemeResource SystemBaseMediumColor}" HorizontalAlignment="Center" />
                            </StackPanel>
                        </Border>
                    </Grid>

                    <!-- Trade List -->
                    <ListView x:Name="TradesList" Grid.Row="2" SelectionMode="None">
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <Grid Padding="4,6" ColumnSpacing="8">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="70" />
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="60" />
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Grid.Column="0" Text="{Binding Time}" FontFamily="Consolas" FontSize="11"
                                               Foreground="{ThemeResource SystemBaseMediumColor}" />
                                    <TextBlock Grid.Column="1" Text="{Binding Price}" FontFamily="Consolas" FontSize="12"
                                               Foreground="{Binding PriceColor}" FontWeight="SemiBold" />
                                    <TextBlock Grid.Column="2" Text="{Binding Size}" FontFamily="Consolas" FontSize="12"
                                               HorizontalAlignment="Right" />
                                </Grid>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>

                    <TextBlock x:Name="NoTradesText" Grid.Row="2" Text="No trades yet"
                               HorizontalAlignment="Center" VerticalAlignment="Center"
                               Foreground="{ThemeResource SystemBaseMediumColor}" FontStyle="Italic" />
                </Grid>
            </Border>

            <!-- Depth Chart -->
            <Border Grid.Row="2" Grid.ColumnSpan="2" Style="{StaticResource CardStyle}" Height="200">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>

                    <StackPanel Grid.Row="0" Orientation="Horizontal" Spacing="8" Margin="0,0,0,16">
                        <FontIcon Glyph="&#xE9D9;" FontSize="20" Foreground="{ThemeResource SystemAccentColor}" />
                        <TextBlock Text="Cumulative Depth" FontWeight="SemiBold" FontSize="16" />
                        <TextBlock x:Name="DepthImbalanceText" Text="" Margin="16,0,0,0"
                                   Foreground="{ThemeResource SystemBaseMediumColor}" />
                    </StackPanel>

                    <!-- Depth Chart Visualization -->
                    <Grid Grid.Row="1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>

                        <!-- Bid Depth Bars -->
                        <ItemsControl x:Name="BidDepthBars" Grid.Column="0">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" />
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Width="8" Margin="1,0" VerticalAlignment="Bottom"
                                            Height="{Binding BarHeight}" Background="{StaticResource SuccessColorBrush}"
                                            Opacity="0.7" ToolTipService.ToolTip="{Binding Tooltip}" />
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>

                        <!-- Ask Depth Bars -->
                        <ItemsControl x:Name="AskDepthBars" Grid.Column="1">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" />
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Width="8" Margin="1,0" VerticalAlignment="Bottom"
                                            Height="{Binding BarHeight}" Background="{StaticResource ErrorColorBrush}"
                                            Opacity="0.7" ToolTipService.ToolTip="{Binding Tooltip}" />
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </Grid>

                    <TextBlock x:Name="NoDepthText" Grid.Row="1" Text="Depth chart will appear when streaming"
                               HorizontalAlignment="Center" VerticalAlignment="Center"
                               Foreground="{ThemeResource SystemBaseMediumColor}" FontStyle="Italic" />
                </Grid>
            </Border>

            <!-- Connection Status -->
            <Border x:Name="ConnectionStatus" Grid.Row="2" Grid.ColumnSpan="2" Visibility="Collapsed"
                    Background="{ThemeResource SystemFillColorCautionBackgroundBrush}"
                    CornerRadius="4" Padding="12,8" HorizontalAlignment="Center">
                <StackPanel Orientation="Horizontal" Spacing="8">
                    <ProgressRing IsActive="True" Width="16" Height="16" />
                    <TextBlock x:Name="ConnectionStatusText" Text="Connecting..." />
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</Page>
