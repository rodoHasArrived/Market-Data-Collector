<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="MarketDataCollector.Uwp.Views.DashboardPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:MarketDataCollector.Uwp.Views"
    xmlns:converters="using:MarketDataCollector.Uwp.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Page.Resources>
        <converters:BoolToConnectionStatusConverter x:Key="BoolToConnectionStatus" />
    </Page.Resources>

    <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="24"
                  AutomationProperties.Name="Dashboard content">
        <StackPanel Spacing="24">
            <!-- Header with Quick Actions -->
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Orientation="Horizontal" Spacing="16">
                    <StackPanel Spacing="2">
                        <StackPanel Orientation="Horizontal" Spacing="12">
                            <TextBlock Text="Dashboard"
                                       Style="{StaticResource PageTitleStyle}"
                                       VerticalAlignment="Center"
                                       AutomationProperties.HeadingLevel="Level1" />
                            <Border x:Name="CollectorStatusBadge"
                                    Background="{StaticResource SuccessColorBrush}"
                                    CornerRadius="4"
                                    Padding="10,4"
                                    VerticalAlignment="Center"
                                    AutomationProperties.Name="Collector status">
                                <StackPanel Orientation="Horizontal" Spacing="6">
                                    <Ellipse Width="6" Height="6" Fill="White" VerticalAlignment="Center" />
                                    <TextBlock x:Name="CollectorStatusText"
                                               Text="Running"
                                               FontSize="12"
                                               FontWeight="SemiBold"
                                               Foreground="White" />
                                </StackPanel>
                            </Border>
                        </StackPanel>
                        <TextBlock Text="Real-time market data monitoring and collection status"
                                   Style="{StaticResource CardDescriptionStyle}"
                                   Margin="0" />
                    </StackPanel>
                </StackPanel>

                <!-- Quick Actions -->
                <StackPanel Grid.Column="1" Orientation="Horizontal" Spacing="8">
                    <Button x:Name="StartCollectorButton"
                            Click="StartCollector_Click"
                            Style="{StaticResource PrimaryButtonStyle}"
                            AutomationProperties.Name="Start collector"
                            ToolTipService.ToolTip="Start data collection (Ctrl+S)">
                        <StackPanel Orientation="Horizontal" Spacing="6">
                            <FontIcon Glyph="&#xE768;" FontSize="14" />
                            <TextBlock Text="Start" />
                        </StackPanel>
                        <Button.KeyboardAccelerators>
                            <KeyboardAccelerator Modifiers="Control" Key="S" />
                        </Button.KeyboardAccelerators>
                    </Button>
                    <Button x:Name="StopCollectorButton"
                            Click="StopCollector_Click"
                            Style="{StaticResource GhostButtonStyle}"
                            AutomationProperties.Name="Stop collector"
                            ToolTipService.ToolTip="Stop data collection">
                        <StackPanel Orientation="Horizontal" Spacing="6">
                            <FontIcon Glyph="&#xE71A;" FontSize="14" />
                            <TextBlock Text="Stop" />
                        </StackPanel>
                    </Button>
                    <Button Command="{x:Bind ViewModel.RefreshStatusCommand}"
                            Style="{StaticResource IconButtonStyle}"
                            AutomationProperties.Name="Refresh status"
                            ToolTipService.ToolTip="Refresh dashboard data (F5)">
                        <FontIcon Glyph="&#xE72C;" FontSize="16" />
                        <Button.KeyboardAccelerators>
                            <KeyboardAccelerator Key="F5" />
                        </Button.KeyboardAccelerators>
                    </Button>
                </StackPanel>
            </Grid>

            <!-- Console-Inspired Metrics Grid -->
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <!-- Published - Success Card -->
                <Border Grid.Column="0" Style="{StaticResource MetricCardSuccessStyle}" Margin="0,0,8,0">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>

                        <!-- Trend Badge -->
                        <Border Grid.Row="0" HorizontalAlignment="Right"
                                Background="#1A3fb950" CornerRadius="4" Padding="8,4" Margin="0,0,0,8">
                            <TextBlock x:Name="PublishedRateText" Text="+1,234/s"
                                       FontSize="11" FontWeight="SemiBold"
                                       Foreground="{StaticResource SuccessColorBrush}" />
                        </Border>

                        <TextBlock Grid.Row="1" Text="{x:Bind ViewModel.PublishedCount, Mode=OneWay}"
                                   Style="{StaticResource MetricValueStyle}"
                                   Foreground="{StaticResource SuccessColorBrush}" />
                        <TextBlock Grid.Row="2" Text="PUBLISHED EVENTS"
                                   Style="{StaticResource MetricLabelStyle}" Margin="0,8,0,12" />

                        <!-- Sparkline -->
                        <Canvas x:Name="PublishedSparkline" Grid.Row="3" Height="30" Background="Transparent">
                            <Polyline x:Name="PublishedSparklinePath"
                                      Stroke="{StaticResource SuccessColorBrush}"
                                      StrokeThickness="2" />
                        </Canvas>
                    </Grid>
                </Border>

                <!-- Dropped - Danger Card -->
                <Border Grid.Column="1" Style="{StaticResource MetricCardDangerStyle}" Margin="8,0">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>

                        <Border Grid.Row="0" HorizontalAlignment="Right"
                                Background="#1Af85149" CornerRadius="4" Padding="8,4" Margin="0,0,0,8">
                            <TextBlock x:Name="DroppedRateText" Text="0.01%"
                                       FontSize="11" FontWeight="SemiBold"
                                       Foreground="{StaticResource ErrorColorBrush}" />
                        </Border>

                        <TextBlock Grid.Row="1" Text="{x:Bind ViewModel.DroppedCount, Mode=OneWay}"
                                   Style="{StaticResource MetricValueStyle}"
                                   Foreground="{StaticResource ErrorColorBrush}" />
                        <TextBlock Grid.Row="2" Text="DROPPED EVENTS"
                                   Style="{StaticResource MetricLabelStyle}" Margin="0,8,0,12" />

                        <Canvas x:Name="DroppedSparkline" Grid.Row="3" Height="30" Background="Transparent">
                            <Polyline x:Name="DroppedSparklinePath"
                                      Stroke="{StaticResource ErrorColorBrush}" StrokeThickness="2" />
                        </Canvas>
                    </Grid>
                </Border>

                <!-- Integrity - Warning Card -->
                <Border Grid.Column="2" Style="{StaticResource MetricCardWarningStyle}" Margin="8,0">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>

                        <Border Grid.Row="0" HorizontalAlignment="Right"
                                Background="#1Ad29922" CornerRadius="4" Padding="8,4" Margin="0,0,0,8">
                            <TextBlock x:Name="IntegrityRateText" Text="2 gaps"
                                       FontSize="11" FontWeight="SemiBold"
                                       Foreground="{StaticResource WarningColorBrush}" />
                        </Border>

                        <TextBlock Grid.Row="1" Text="{x:Bind ViewModel.IntegrityCount, Mode=OneWay}"
                                   Style="{StaticResource MetricValueStyle}"
                                   Foreground="{StaticResource WarningColorBrush}" />
                        <TextBlock Grid.Row="2" Text="INTEGRITY EVENTS"
                                   Style="{StaticResource MetricLabelStyle}" Margin="0,8,0,12" />

                        <Canvas x:Name="IntegritySparkline" Grid.Row="3" Height="30" Background="Transparent">
                            <Polyline x:Name="IntegritySparklinePath"
                                      Stroke="{StaticResource WarningColorBrush}" StrokeThickness="2" />
                        </Canvas>
                    </Grid>
                </Border>

                <!-- Historical Bars - Info Card -->
                <Border Grid.Column="3" Style="{StaticResource MetricCardInfoStyle}" Margin="8,0,0,0">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>

                        <Border Grid.Row="0" HorizontalAlignment="Right"
                                Background="#1A58a6ff" CornerRadius="4" Padding="8,4" Margin="0,0,0,8">
                            <TextBlock x:Name="HistoricalTrendText" Text="Last: 2h ago"
                                       FontSize="11" FontWeight="SemiBold"
                                       Foreground="{StaticResource InfoColorBrush}" />
                        </Border>

                        <TextBlock Grid.Row="1" Text="{x:Bind ViewModel.HistoricalBarsCount, Mode=OneWay}"
                                   Style="{StaticResource MetricValueStyle}"
                                   Foreground="{StaticResource InfoColorBrush}" />
                        <TextBlock Grid.Row="2" Text="HISTORICAL BARS"
                                   Style="{StaticResource MetricLabelStyle}" Margin="0,8,0,12" />

                        <Canvas x:Name="HistoricalSparkline" Grid.Row="3" Height="30" Background="Transparent">
                            <Polyline x:Name="HistoricalSparklinePath"
                                      Stroke="{StaticResource InfoColorBrush}" StrokeThickness="2" />
                        </Canvas>
                    </Grid>
                </Border>
            </Grid>

            <!-- Throughput Graph -->
            <Border Style="{StaticResource CardStyle}">
                <StackPanel Spacing="12">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0" Orientation="Horizontal" Spacing="8">
                            <FontIcon Glyph="&#xE9D9;" Foreground="{ThemeResource SystemAccentColor}" />
                            <TextBlock Text="Event Throughput" Style="{StaticResource SubtitleTextBlockStyle}" />
                        </StackPanel>

                        <StackPanel Grid.Column="1" Orientation="Horizontal" Spacing="8">
                            <ComboBox x:Name="ThroughputTimeRange" SelectedIndex="1" MinWidth="100">
                                <ComboBoxItem Content="1 min" Tag="1" />
                                <ComboBoxItem Content="5 min" Tag="5" />
                                <ComboBoxItem Content="15 min" Tag="15" />
                                <ComboBoxItem Content="1 hour" Tag="60" />
                            </ComboBox>
                        </StackPanel>
                    </Grid>

                    <!-- Throughput Chart Area -->
                    <Border Background="{ThemeResource SystemFillColorNeutralBackgroundBrush}"
                            CornerRadius="4" Padding="12">
                        <Grid Height="150">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*" />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>

                            <!-- Y-axis labels -->
                            <StackPanel Grid.Row="0" VerticalAlignment="Stretch" Width="50" HorizontalAlignment="Left">
                                <TextBlock Text="2000/s" Style="{StaticResource CaptionTextBlockStyle}"
                                           Foreground="{ThemeResource SystemBaseMediumColor}" />
                                <TextBlock Text="1500/s" Style="{StaticResource CaptionTextBlockStyle}"
                                           Foreground="{ThemeResource SystemBaseMediumColor}" Margin="0,30,0,0" />
                                <TextBlock Text="1000/s" Style="{StaticResource CaptionTextBlockStyle}"
                                           Foreground="{ThemeResource SystemBaseMediumColor}" Margin="0,30,0,0" />
                                <TextBlock Text="500/s" Style="{StaticResource CaptionTextBlockStyle}"
                                           Foreground="{ThemeResource SystemBaseMediumColor}" Margin="0,30,0,0" />
                            </StackPanel>

                            <!-- Chart -->
                            <Canvas x:Name="ThroughputChart" Grid.Row="0" Margin="55,0,0,0">
                                <Polyline x:Name="ThroughputChartPath" Stroke="{ThemeResource SystemAccentColor}"
                                          StrokeThickness="2" />
                                <Polygon x:Name="ThroughputChartFill" Fill="{ThemeResource SystemAccentColor}"
                                         Opacity="0.2" />
                            </Canvas>

                            <!-- X-axis labels -->
                            <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="55,8,0,0"
                                        HorizontalAlignment="Stretch">
                                <TextBlock Text="-5m" Style="{StaticResource CaptionTextBlockStyle}"
                                           Foreground="{ThemeResource SystemBaseMediumColor}" />
                                <TextBlock Text="-4m" Style="{StaticResource CaptionTextBlockStyle}"
                                           Foreground="{ThemeResource SystemBaseMediumColor}" Margin="60,0,0,0" />
                                <TextBlock Text="-3m" Style="{StaticResource CaptionTextBlockStyle}"
                                           Foreground="{ThemeResource SystemBaseMediumColor}" Margin="60,0,0,0" />
                                <TextBlock Text="-2m" Style="{StaticResource CaptionTextBlockStyle}"
                                           Foreground="{ThemeResource SystemBaseMediumColor}" Margin="60,0,0,0" />
                                <TextBlock Text="-1m" Style="{StaticResource CaptionTextBlockStyle}"
                                           Foreground="{ThemeResource SystemBaseMediumColor}" Margin="60,0,0,0" />
                                <TextBlock Text="Now" Style="{StaticResource CaptionTextBlockStyle}"
                                           Foreground="{ThemeResource SystemBaseMediumColor}" Margin="60,0,0,0" />
                            </StackPanel>
                        </Grid>
                    </Border>

                    <!-- Throughput Stats -->
                    <Grid ColumnSpacing="24">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0">
                            <TextBlock Text="Current" Style="{StaticResource CaptionTextBlockStyle}" />
                            <TextBlock x:Name="CurrentThroughputText" Text="1,234/s"
                                       Style="{StaticResource BodyTextBlockStyle}" FontWeight="SemiBold" />
                        </StackPanel>
                        <StackPanel Grid.Column="1">
                            <TextBlock Text="Average" Style="{StaticResource CaptionTextBlockStyle}" />
                            <TextBlock x:Name="AvgThroughputText" Text="1,156/s"
                                       Style="{StaticResource BodyTextBlockStyle}" FontWeight="SemiBold" />
                        </StackPanel>
                        <StackPanel Grid.Column="2">
                            <TextBlock Text="Peak" Style="{StaticResource CaptionTextBlockStyle}" />
                            <TextBlock x:Name="PeakThroughputText" Text="2,045/s"
                                       Style="{StaticResource BodyTextBlockStyle}" FontWeight="SemiBold" />
                        </StackPanel>
                        <StackPanel Grid.Column="3">
                            <TextBlock Text="Data Health" Style="{StaticResource CaptionTextBlockStyle}" />
                            <StackPanel Orientation="Horizontal" Spacing="4">
                                <TextBlock x:Name="DataHealthText" Text="99.9%"
                                           Style="{StaticResource BodyTextBlockStyle}" FontWeight="SemiBold"
                                           Foreground="#48BB78" />
                                <FontIcon x:Name="DataHealthIcon" Glyph="&#xE73E;" FontSize="14" Foreground="#48BB78" />
                            </StackPanel>
                        </StackPanel>
                    </Grid>
                </StackPanel>
            </Border>

            <!-- Quick Actions Panel -->
            <Border Style="{StaticResource CardStyle}">
                <StackPanel Spacing="16">
                    <!-- Header with Stream Status Badges and Uptime -->
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0" Orientation="Horizontal" Spacing="8">
                            <FontIcon Glyph="&#xE768;" Foreground="{ThemeResource SystemAccentColor}" />
                            <TextBlock Text="Quick Actions" Style="{StaticResource SubtitleTextBlockStyle}" />
                        </StackPanel>

                        <!-- Active Stream Status Badges -->
                        <StackPanel Grid.Column="1" Orientation="Horizontal" Spacing="12" Margin="24,0,0,0" VerticalAlignment="Center">
                            <Border x:Name="TradesStreamBadge" Background="#48BB78" CornerRadius="4" Padding="8,4">
                                <StackPanel Orientation="Horizontal" Spacing="6">
                                    <FontIcon Glyph="&#xE8AB;" FontSize="12" Foreground="White" />
                                    <TextBlock x:Name="TradesStreamText" Text="Trades" FontSize="12" Foreground="White" FontWeight="SemiBold" />
                                    <TextBlock x:Name="TradesStreamCount" Text="(5)" FontSize="11" Foreground="White" Opacity="0.9" />
                                </StackPanel>
                            </Border>
                            <Border x:Name="DepthStreamBadge" Background="#48BB78" CornerRadius="4" Padding="8,4">
                                <StackPanel Orientation="Horizontal" Spacing="6">
                                    <FontIcon Glyph="&#xE8A1;" FontSize="12" Foreground="White" />
                                    <TextBlock x:Name="DepthStreamText" Text="Depth" FontSize="12" Foreground="White" FontWeight="SemiBold" />
                                    <TextBlock x:Name="DepthStreamCount" Text="(3)" FontSize="11" Foreground="White" Opacity="0.9" />
                                </StackPanel>
                            </Border>
                            <Border x:Name="QuotesStreamBadge" Background="#A0AEC0" CornerRadius="4" Padding="8,4">
                                <StackPanel Orientation="Horizontal" Spacing="6">
                                    <FontIcon Glyph="&#xE8D4;" FontSize="12" Foreground="White" />
                                    <TextBlock x:Name="QuotesStreamText" Text="Quotes" FontSize="12" Foreground="White" FontWeight="SemiBold" />
                                    <TextBlock x:Name="QuotesStreamCount" Text="(0)" FontSize="11" Foreground="White" Opacity="0.9" />
                                </StackPanel>
                            </Border>
                        </StackPanel>

                        <!-- Collector Uptime Timer -->
                        <StackPanel Grid.Column="2" Orientation="Horizontal" Spacing="8" VerticalAlignment="Center">
                            <FontIcon Glyph="&#xE916;" FontSize="14" Foreground="{ThemeResource SystemBaseMediumColor}" />
                            <StackPanel>
                                <TextBlock Text="Collector Uptime" Style="{StaticResource CaptionTextBlockStyle}" Foreground="{ThemeResource SystemBaseMediumColor}" />
                                <TextBlock x:Name="CollectorUptimeText" Text="0h 0m 0s" FontWeight="SemiBold" FontSize="14" />
                            </StackPanel>
                        </StackPanel>
                    </Grid>

                    <!-- Collector Control Buttons -->
                    <Border Background="{ThemeResource SystemFillColorNeutralBackgroundBrush}" CornerRadius="4" Padding="12">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0" Orientation="Horizontal" Spacing="8">
                                <Button x:Name="QuickStartCollectorButton" Style="{StaticResource AccentButtonStyle}" Click="QuickStartCollector_Click">
                                    <StackPanel Orientation="Horizontal" Spacing="6">
                                        <FontIcon Glyph="&#xE768;" FontSize="14" />
                                        <TextBlock Text="Start Collector" />
                                    </StackPanel>
                                </Button>
                                <Button x:Name="QuickStopCollectorButton" Click="QuickStopCollector_Click">
                                    <StackPanel Orientation="Horizontal" Spacing="6">
                                        <FontIcon Glyph="&#xE71A;" FontSize="14" />
                                        <TextBlock Text="Stop Collector" />
                                    </StackPanel>
                                </Button>
                                <Button x:Name="QuickPauseCollectorButton" Click="QuickPauseCollector_Click">
                                    <StackPanel Orientation="Horizontal" Spacing="6">
                                        <FontIcon x:Name="PauseButtonIcon" Glyph="&#xE769;" FontSize="14" />
                                        <TextBlock x:Name="PauseButtonText" Text="Pause Collection" />
                                    </StackPanel>
                                </Button>
                                <Rectangle Width="1" Fill="{ThemeResource SystemBaseMediumColor}" Margin="8,4" />
                                <Button Click="ViewLogs_Click">
                                    <StackPanel Orientation="Horizontal" Spacing="6">
                                        <FontIcon Glyph="&#xE756;" FontSize="14" />
                                        <TextBlock Text="View Logs" />
                                    </StackPanel>
                                </Button>
                                <Button Click="RunBackfill_Click">
                                    <StackPanel Orientation="Horizontal" Spacing="6">
                                        <FontIcon Glyph="&#xE787;" FontSize="14" />
                                        <TextBlock Text="Backfill" />
                                    </StackPanel>
                                </Button>
                            </StackPanel>
                        </Grid>
                    </Border>

                    <!-- Quick Add Symbol -->
                    <StackPanel Spacing="8">
                        <TextBlock Text="Quick Add Symbol" Style="{StaticResource CaptionTextBlockStyle}" />
                        <Grid ColumnSpacing="8">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>

                            <AutoSuggestBox x:Name="QuickAddSymbolBox"
                                            Grid.Column="0"
                                            PlaceholderText="Enter symbol (e.g., AAPL)"
                                            QueryIcon="Find"
                                            TextChanged="QuickAddSymbol_TextChanged"
                                            QuerySubmitted="QuickAddSymbol_QuerySubmitted" />
                            <CheckBox x:Name="QuickAddTradesCheck" Grid.Column="1" Content="Trades" IsChecked="True" />
                            <CheckBox x:Name="QuickAddDepthCheck" Grid.Column="2" Content="Depth" />
                            <CheckBox x:Name="QuickAddQuotesCheck" Grid.Column="3" Content="Quotes" />
                            <Button Grid.Column="4" Content="Add" Style="{StaticResource AccentButtonStyle}"
                                    Click="QuickAddSymbol_Click" />
                        </Grid>
                    </StackPanel>
                </StackPanel>
            </Border>

            <!-- Connection Status -->
            <Border Style="{StaticResource CardStyle}">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0" Orientation="Horizontal" Spacing="12">
                        <Ellipse Width="16" Height="16"
                                 Fill="{x:Bind ViewModel.IsConnected, Mode=OneWay, Converter={StaticResource BoolToConnectionStatus}}" />
                        <StackPanel>
                            <TextBlock Text="{x:Bind ViewModel.ConnectionStatusText, Mode=OneWay}"
                                       Style="{StaticResource SubtitleTextBlockStyle}" />
                            <TextBlock Text="{x:Bind ViewModel.LastUpdateText, Mode=OneWay}"
                                       Style="{StaticResource CaptionTextBlockStyle}"
                                       Foreground="{ThemeResource SystemBaseMediumColor}" />
                        </StackPanel>
                    </StackPanel>

                    <StackPanel Grid.Column="2" Orientation="Horizontal" Spacing="16">
                        <StackPanel>
                            <TextBlock Text="Uptime" Style="{StaticResource CaptionTextBlockStyle}" />
                            <TextBlock x:Name="UptimeText" Text="2h 34m" FontWeight="SemiBold" />
                        </StackPanel>
                        <StackPanel>
                            <TextBlock Text="Latency" Style="{StaticResource CaptionTextBlockStyle}" />
                            <TextBlock x:Name="LatencyText" Text="12ms" FontWeight="SemiBold" Foreground="#48BB78" />
                        </StackPanel>
                        <ProgressRing IsActive="{x:Bind ViewModel.IsLoading, Mode=OneWay}"
                                      Width="20" Height="20" />
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Active Provider -->
            <Border Style="{StaticResource CardStyle}">
                <StackPanel Spacing="12">
                    <TextBlock Text="Active Data Provider" Style="{StaticResource SubtitleTextBlockStyle}" />
                    <StackPanel Orientation="Horizontal" Spacing="12">
                        <Border Background="{ThemeResource SystemAccentColorLight2}" CornerRadius="4" Padding="12,6">
                            <TextBlock Text="{x:Bind ViewModel.SelectedDataSource, Mode=OneWay}"
                                       FontWeight="SemiBold" />
                        </Border>
                        <TextBlock Text="{x:Bind ViewModel.ProviderDescription, Mode=OneWay}"
                                   VerticalAlignment="Center"
                                   Foreground="{ThemeResource SystemBaseMediumColor}" />
                    </StackPanel>
                </StackPanel>
            </Border>

            <!-- Enhanced Symbol Performance Summary -->
            <Border Style="{StaticResource CardStyle}">
                <StackPanel Spacing="12">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0" Orientation="Horizontal" Spacing="8">
                            <TextBlock Text="Symbol Performance" Style="{StaticResource SubtitleTextBlockStyle}" />
                            <Border Background="{ThemeResource SystemFillColorNeutralBackgroundBrush}"
                                    CornerRadius="12" Padding="8,4">
                                <TextBlock Text="{x:Bind ViewModel.SymbolCount, Mode=OneWay}"
                                           Style="{StaticResource CaptionTextBlockStyle}" />
                            </Border>
                        </StackPanel>

                        <StackPanel Grid.Column="1" Orientation="Horizontal" Spacing="8">
                            <ComboBox x:Name="SymbolSortCombo" SelectedIndex="0" MinWidth="120">
                                <ComboBoxItem Content="By Rate" />
                                <ComboBoxItem Content="By Name" />
                                <ComboBoxItem Content="By Status" />
                            </ComboBox>
                        </StackPanel>
                    </Grid>

                    <ListView x:Name="SymbolPerformanceList"
                              ItemsSource="{x:Bind ViewModel.Symbols, Mode=OneWay}"
                              SelectionMode="None"
                              MaxHeight="300"
                              AutomationProperties.Name="Symbol performance list">
                        <!-- Enable virtualization for better performance -->
                        <ListView.ItemsPanel>
                            <ItemsPanelTemplate>
                                <ItemsStackPanel Orientation="Vertical" />
                            </ItemsPanelTemplate>
                        </ListView.ItemsPanel>
                        <ListView.HeaderTemplate>
                            <DataTemplate>
                                <Grid Padding="8,4" Background="{ThemeResource SystemFillColorNeutralBackgroundBrush}">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="80" />
                                        <ColumnDefinition Width="80" />
                                        <ColumnDefinition Width="80" />
                                        <ColumnDefinition Width="100" />
                                        <ColumnDefinition Width="100" />
                                        <ColumnDefinition Width="80" />
                                        <ColumnDefinition Width="*" />
                                    </Grid.ColumnDefinitions>

                                    <TextBlock Grid.Column="0" Text="Symbol" FontWeight="SemiBold" />
                                    <TextBlock Grid.Column="1" Text="Status" FontWeight="SemiBold" />
                                    <TextBlock Grid.Column="2" Text="Rate" FontWeight="SemiBold" />
                                    <TextBlock Grid.Column="3" Text="Events" FontWeight="SemiBold" />
                                    <TextBlock Grid.Column="4" Text="Last Event" FontWeight="SemiBold" />
                                    <TextBlock Grid.Column="5" Text="Health" FontWeight="SemiBold" />
                                    <TextBlock Grid.Column="6" Text="Trend" FontWeight="SemiBold" />
                                </Grid>
                            </DataTemplate>
                        </ListView.HeaderTemplate>
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <Grid Padding="8,8">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="80" />
                                        <ColumnDefinition Width="80" />
                                        <ColumnDefinition Width="80" />
                                        <ColumnDefinition Width="100" />
                                        <ColumnDefinition Width="100" />
                                        <ColumnDefinition Width="80" />
                                        <ColumnDefinition Width="*" />
                                    </Grid.ColumnDefinitions>

                                    <TextBlock Grid.Column="0" Text="{Binding Symbol}" FontWeight="SemiBold" />
                                    <StackPanel Grid.Column="1" Orientation="Horizontal" Spacing="4">
                                        <Ellipse Width="8" Height="8" Fill="{Binding StatusColor}" />
                                        <TextBlock Text="{Binding StatusText}" />
                                    </StackPanel>
                                    <TextBlock Grid.Column="2" Text="{Binding EventRate}"
                                               Foreground="{ThemeResource SystemAccentColor}" />
                                    <TextBlock Grid.Column="3" Text="{Binding TotalEvents}" />
                                    <TextBlock Grid.Column="4" Text="{Binding LastEventTime}"
                                               Foreground="{ThemeResource SystemBaseMediumColor}" />
                                    <StackPanel Grid.Column="5" Orientation="Horizontal" Spacing="4">
                                        <TextBlock Text="{Binding HealthScore}" Foreground="{Binding HealthColor}" />
                                        <FontIcon Glyph="{Binding HealthIcon}" FontSize="12"
                                                  Foreground="{Binding HealthColor}" />
                                    </StackPanel>
                                    <!-- Mini sparkline for trend -->
                                    <Canvas Grid.Column="6" Height="20" Width="60">
                                        <Polyline Points="{Binding TrendPoints}" Stroke="{Binding TrendColor}"
                                                  StrokeThickness="1.5" />
                                    </Canvas>
                                </Grid>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </StackPanel>
            </Border>

            <!-- Two Column Layout: Activity Feed + Data Freshness -->
            <Grid ColumnSpacing="24">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="350" />
                </Grid.ColumnDefinitions>

                <!-- Activity Feed -->
                <Border Grid.Column="0" Style="{StaticResource CardStyle}">
                    <StackPanel Spacing="12">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0" Orientation="Horizontal" Spacing="8">
                                <FontIcon Glyph="&#xE823;" FontSize="16" Foreground="{ThemeResource SystemAccentColor}" />
                                <TextBlock Text="Recent Activity" Style="{StaticResource SubtitleTextBlockStyle}" />
                            </StackPanel>

                            <Button Grid.Column="1" Click="ViewAllActivity_Click" Padding="8,4">
                                <StackPanel Orientation="Horizontal" Spacing="4">
                                    <TextBlock Text="View All" FontSize="12" />
                                    <FontIcon Glyph="&#xE72A;" FontSize="10" />
                                </StackPanel>
                            </Button>
                        </Grid>

                        <ListView x:Name="ActivityFeedList" MaxHeight="250" SelectionMode="None"
                                  AutomationProperties.Name="Recent activity list">
                            <!-- Enable virtualization for better performance -->
                            <ListView.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <ItemsStackPanel Orientation="Vertical" />
                                </ItemsPanelTemplate>
                            </ListView.ItemsPanel>
                            <ListView.ItemTemplate>
                                <DataTemplate>
                                    <Grid Padding="8,10" ColumnSpacing="12">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto" />
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="Auto" />
                                        </Grid.ColumnDefinitions>

                                        <!-- Activity Icon -->
                                        <Border Grid.Column="0" Width="36" Height="36" CornerRadius="18"
                                                Background="{Binding IconBackground}">
                                            <FontIcon Glyph="{Binding Icon}" FontSize="14" Foreground="White"
                                                      HorizontalAlignment="Center" VerticalAlignment="Center" />
                                        </Border>

                                        <!-- Activity Details -->
                                        <StackPanel Grid.Column="1" Spacing="2">
                                            <TextBlock Text="{Binding Title}" FontWeight="SemiBold" />
                                            <TextBlock Text="{Binding Description}" FontSize="12"
                                                       Foreground="{ThemeResource SystemBaseMediumColor}"
                                                       TextTrimming="CharacterEllipsis" />
                                        </StackPanel>

                                        <!-- Timestamp -->
                                        <TextBlock Grid.Column="2" Text="{Binding RelativeTime}" FontSize="11"
                                                   Foreground="{ThemeResource SystemBaseMediumColor}"
                                                   VerticalAlignment="Top" />
                                    </Grid>
                                </DataTemplate>
                            </ListView.ItemTemplate>
                        </ListView>

                        <TextBlock x:Name="NoActivityText" Text="No recent activity"
                                   Foreground="{ThemeResource SystemBaseMediumColor}"
                                   FontStyle="Italic" HorizontalAlignment="Center" Visibility="Collapsed" />
                    </StackPanel>
                </Border>

                <!-- Data Freshness Panel -->
                <Border Grid.Column="1" Style="{StaticResource CardStyle}">
                    <StackPanel Spacing="16">
                        <StackPanel Orientation="Horizontal" Spacing="8">
                            <FontIcon Glyph="&#xE916;" FontSize="16" Foreground="{ThemeResource SystemAccentColor}" />
                            <TextBlock Text="Data Freshness" Style="{StaticResource SubtitleTextBlockStyle}" />
                        </StackPanel>

                        <!-- Overall Freshness Score -->
                        <Border Background="{ThemeResource SystemFillColorNeutralBackgroundBrush}"
                                CornerRadius="8" Padding="16">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>

                                <StackPanel Grid.Column="0" Margin="0,0,16,0">
                                    <TextBlock x:Name="FreshnessScoreText" Text="98%"
                                               FontSize="32" FontWeight="Bold"
                                               Foreground="{StaticResource SuccessColorBrush}" />
                                    <TextBlock Text="Overall Health" FontSize="12"
                                               Foreground="{ThemeResource SystemBaseMediumColor}" />
                                </StackPanel>

                                <StackPanel Grid.Column="1" Spacing="8">
                                    <StackPanel Orientation="Horizontal" Spacing="8">
                                        <Ellipse Width="8" Height="8" Fill="{StaticResource SuccessColorBrush}" />
                                        <TextBlock Text="All streams active" FontSize="12" />
                                    </StackPanel>
                                    <StackPanel Orientation="Horizontal" Spacing="8">
                                        <Ellipse Width="8" Height="8" Fill="{StaticResource SuccessColorBrush}" />
                                        <TextBlock Text="No data gaps detected" FontSize="12" />
                                    </StackPanel>
                                </StackPanel>
                            </Grid>
                        </Border>

                        <!-- Per-Symbol Freshness -->
                        <StackPanel Spacing="8">
                            <TextBlock Text="Symbol Status" FontWeight="SemiBold" FontSize="13" />

                            <StackPanel x:Name="SymbolFreshnessList" Spacing="8">
                                <!-- Sample freshness indicators - populated dynamically -->
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="60" />
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="Auto" />
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Grid.Column="0" Text="SPY" FontWeight="SemiBold" />
                                    <ProgressBar Grid.Column="1" Value="100" Maximum="100" Height="6" Margin="8,0"
                                                 Foreground="{StaticResource SuccessColorBrush}" />
                                    <TextBlock Grid.Column="2" Text="Live" FontSize="11"
                                               Foreground="{StaticResource SuccessColorBrush}" />
                                </Grid>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="60" />
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="Auto" />
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Grid.Column="0" Text="QQQ" FontWeight="SemiBold" />
                                    <ProgressBar Grid.Column="1" Value="100" Maximum="100" Height="6" Margin="8,0"
                                                 Foreground="{StaticResource SuccessColorBrush}" />
                                    <TextBlock Grid.Column="2" Text="Live" FontSize="11"
                                               Foreground="{StaticResource SuccessColorBrush}" />
                                </Grid>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="60" />
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="Auto" />
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Grid.Column="0" Text="AAPL" FontWeight="SemiBold" />
                                    <ProgressBar Grid.Column="1" Value="85" Maximum="100" Height="6" Margin="8,0"
                                                 Foreground="{StaticResource WarningColorBrush}" />
                                    <TextBlock Grid.Column="2" Text="5s ago" FontSize="11"
                                               Foreground="{StaticResource WarningColorBrush}" />
                                </Grid>
                            </StackPanel>
                        </StackPanel>

                        <!-- Last Update Time -->
                        <Border Background="{ThemeResource SystemFillColorNeutralBackgroundBrush}"
                                CornerRadius="4" Padding="12,8">
                            <StackPanel Orientation="Horizontal" Spacing="8">
                                <FontIcon Glyph="&#xE787;" FontSize="12" Foreground="{ThemeResource SystemBaseMediumColor}" />
                                <TextBlock x:Name="LastDataUpdateText" Text="Last update: Just now" FontSize="12"
                                           Foreground="{ThemeResource SystemBaseMediumColor}" />
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </Border>
            </Grid>

            <!-- Quick Stats Summary -->
            <Border Style="{StaticResource CardStyle}"
                    AutomationProperties.Name="Quick statistics summary">
                <Grid ColumnSpacing="24">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0" HorizontalAlignment="Center" Spacing="4">
                        <TextBlock x:Name="TotalEventsToday"
                                   Text="1.2M"
                                   Style="{StaticResource DataValueStyle}"
                                   Foreground="{StaticResource InfoColorBrush}"
                                   HorizontalAlignment="Center"
                                   AutomationProperties.Name="Total events today: 1.2 million" />
                        <TextBlock Text="EVENTS TODAY"
                                   Style="{StaticResource DataLabelStyle}"
                                   HorizontalAlignment="Center" />
                    </StackPanel>

                    <StackPanel Grid.Column="1" HorizontalAlignment="Center" Spacing="4">
                        <TextBlock x:Name="ActiveSymbolsCount"
                                   Text="8"
                                   Style="{StaticResource DataValueStyle}"
                                   Foreground="{StaticResource SuccessColorBrush}"
                                   HorizontalAlignment="Center"
                                   AutomationProperties.Name="Active symbols: 8" />
                        <TextBlock Text="ACTIVE SYMBOLS"
                                   Style="{StaticResource DataLabelStyle}"
                                   HorizontalAlignment="Center" />
                    </StackPanel>

                    <StackPanel Grid.Column="2" HorizontalAlignment="Center" Spacing="4">
                        <TextBlock x:Name="StorageUsedText"
                                   Text="2.4 GB"
                                   Style="{StaticResource DataValueStyle}"
                                   Foreground="{StaticResource AccentCyanBrush}"
                                   HorizontalAlignment="Center"
                                   AutomationProperties.Name="Storage used: 2.4 gigabytes" />
                        <TextBlock Text="STORAGE USED"
                                   Style="{StaticResource DataLabelStyle}"
                                   HorizontalAlignment="Center" />
                    </StackPanel>

                    <StackPanel Grid.Column="3" HorizontalAlignment="Center" Spacing="4">
                        <TextBlock x:Name="DataQualityText"
                                   Text="99.8%"
                                   Style="{StaticResource DataValueStyle}"
                                   Foreground="{StaticResource SuccessColorBrush}"
                                   HorizontalAlignment="Center"
                                   AutomationProperties.Name="Data quality: 99.8 percent" />
                        <TextBlock Text="DATA QUALITY"
                                   Style="{StaticResource DataLabelStyle}"
                                   HorizontalAlignment="Center" />
                    </StackPanel>

                    <StackPanel Grid.Column="4" HorizontalAlignment="Center" Spacing="4">
                        <TextBlock x:Name="AvgLatencyText"
                                   Text="12ms"
                                   Style="{StaticResource DataValueStyle}"
                                   Foreground="{StaticResource SuccessColorBrush}"
                                   HorizontalAlignment="Center"
                                   AutomationProperties.Name="Average latency: 12 milliseconds" />
                        <TextBlock Text="AVG LATENCY"
                                   Style="{StaticResource DataLabelStyle}"
                                   HorizontalAlignment="Center" />
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Data Integrity Alerts Panel -->
            <Border Style="{StaticResource CardStyle}">
                <StackPanel Spacing="12">
                    <!-- Header with expand/collapse -->
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0" Orientation="Horizontal" Spacing="12">
                            <FontIcon Glyph="&#xE814;" FontSize="20" Foreground="{StaticResource WarningColorBrush}" />
                            <TextBlock Text="Data Integrity Alerts" Style="{StaticResource SubtitleTextBlockStyle}" />

                            <!-- Alert summary badges -->
                            <Border x:Name="CriticalAlertsBadge" Background="#F85149" CornerRadius="10"
                                    Padding="8,2" Margin="8,0,0,0" Visibility="Collapsed">
                                <StackPanel Orientation="Horizontal" Spacing="4">
                                    <FontIcon Glyph="&#xE7BA;" FontSize="10" Foreground="White" />
                                    <TextBlock x:Name="CriticalAlertsCount" Text="0" FontSize="11"
                                               Foreground="White" FontWeight="SemiBold" />
                                </StackPanel>
                            </Border>
                            <Border x:Name="WarningAlertsBadge" Background="#D29922" CornerRadius="10"
                                    Padding="8,2" Visibility="Collapsed">
                                <StackPanel Orientation="Horizontal" Spacing="4">
                                    <FontIcon Glyph="&#xE7BA;" FontSize="10" Foreground="White" />
                                    <TextBlock x:Name="WarningAlertsCount" Text="0" FontSize="11"
                                               Foreground="White" FontWeight="SemiBold" />
                                </StackPanel>
                            </Border>
                        </StackPanel>

                        <StackPanel Grid.Column="1" Orientation="Horizontal" Spacing="8">
                            <Button x:Name="ClearIntegrityAlertsButton" Click="ClearIntegrityAlerts_Click"
                                    Padding="8,4" ToolTipService.ToolTip="Clear all alerts">
                                <StackPanel Orientation="Horizontal" Spacing="4">
                                    <FontIcon Glyph="&#xE74D;" FontSize="12" />
                                    <TextBlock Text="Clear" FontSize="12" />
                                </StackPanel>
                            </Button>
                            <Button x:Name="ExpandIntegrityPanelButton" Click="ExpandIntegrityPanel_Click" Padding="8,4">
                                <StackPanel Orientation="Horizontal" Spacing="4">
                                    <FontIcon x:Name="ExpandIntegrityIcon" Glyph="&#xE70D;" FontSize="12" />
                                    <TextBlock x:Name="ExpandIntegrityText" Text="Show Details" FontSize="12" />
                                </StackPanel>
                            </Button>
                        </StackPanel>
                    </Grid>

                    <!-- Summary stats row -->
                    <Grid x:Name="IntegritySummaryGrid">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>

                        <Border Grid.Column="0" Background="{ThemeResource SystemFillColorNeutralBackgroundBrush}"
                                CornerRadius="4" Padding="12,8" Margin="0,0,4,0">
                            <StackPanel>
                                <TextBlock x:Name="IntegrityTotalEventsText" Text="0" FontSize="20" FontWeight="Bold" />
                                <TextBlock Text="Total Events" Style="{StaticResource CaptionTextBlockStyle}"
                                           Foreground="{ThemeResource SystemBaseMediumColor}" />
                            </StackPanel>
                        </Border>

                        <Border Grid.Column="1" Background="{ThemeResource SystemFillColorNeutralBackgroundBrush}"
                                CornerRadius="4" Padding="12,8" Margin="4,0">
                            <StackPanel>
                                <TextBlock x:Name="IntegrityLast24hText" Text="0" FontSize="20" FontWeight="Bold"
                                           Foreground="{StaticResource WarningColorBrush}" />
                                <TextBlock Text="Last 24 Hours" Style="{StaticResource CaptionTextBlockStyle}"
                                           Foreground="{ThemeResource SystemBaseMediumColor}" />
                            </StackPanel>
                        </Border>

                        <Border Grid.Column="2" Background="{ThemeResource SystemFillColorNeutralBackgroundBrush}"
                                CornerRadius="4" Padding="12,8" Margin="4,0">
                            <StackPanel>
                                <TextBlock x:Name="IntegrityUnacknowledgedText" Text="0" FontSize="20" FontWeight="Bold"
                                           Foreground="{StaticResource ErrorColorBrush}" />
                                <TextBlock Text="Unacknowledged" Style="{StaticResource CaptionTextBlockStyle}"
                                           Foreground="{ThemeResource SystemBaseMediumColor}" />
                            </StackPanel>
                        </Border>

                        <Border Grid.Column="3" Background="{ThemeResource SystemFillColorNeutralBackgroundBrush}"
                                CornerRadius="4" Padding="12,8" Margin="4,0,0,0">
                            <StackPanel>
                                <TextBlock x:Name="IntegrityMostAffectedText" Text="N/A" FontSize="14" FontWeight="Bold" />
                                <TextBlock Text="Most Affected" Style="{StaticResource CaptionTextBlockStyle}"
                                           Foreground="{ThemeResource SystemBaseMediumColor}" />
                            </StackPanel>
                        </Border>
                    </Grid>

                    <!-- Expandable details panel -->
                    <StackPanel x:Name="IntegrityDetailsPanel" Visibility="Collapsed" Spacing="8">
                        <Rectangle Fill="{ThemeResource SystemBaseMediumLowColor}" Height="1" Margin="0,4" />

                        <TextBlock Text="Recent Integrity Events" Style="{StaticResource BodyStrongTextBlockStyle}" />

                        <ListView x:Name="IntegrityEventsList" MaxHeight="300" SelectionMode="None"
                                  AutomationProperties.Name="Integrity events list">
                            <!-- Enable virtualization for better performance -->
                            <ListView.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <ItemsStackPanel Orientation="Vertical" />
                                </ItemsPanelTemplate>
                            </ListView.ItemsPanel>
                            <ListView.ItemTemplate>
                                <DataTemplate>
                                    <Grid Padding="8,10" ColumnSpacing="12">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto" />
                                            <ColumnDefinition Width="80" />
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="Auto" />
                                            <ColumnDefinition Width="Auto" />
                                        </Grid.ColumnDefinitions>

                                        <!-- Severity indicator -->
                                        <Border Grid.Column="0" Width="4" CornerRadius="2">
                                            <Border.Background>
                                                <SolidColorBrush Color="{Binding SeverityColor}" />
                                            </Border.Background>
                                        </Border>

                                        <!-- Symbol -->
                                        <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                            <TextBlock Text="{Binding Symbol}" FontWeight="SemiBold" />
                                            <TextBlock Text="{Binding EventTypeName}" FontSize="11"
                                                       Foreground="{ThemeResource SystemBaseMediumColor}" />
                                        </StackPanel>

                                        <!-- Description -->
                                        <TextBlock Grid.Column="2" Text="{Binding Description}"
                                                   VerticalAlignment="Center" TextTrimming="CharacterEllipsis" />

                                        <!-- Timestamp -->
                                        <TextBlock Grid.Column="3" Text="{Binding RelativeTime}" FontSize="11"
                                                   Foreground="{ThemeResource SystemBaseMediumColor}"
                                                   VerticalAlignment="Center" />

                                        <!-- Acknowledge button -->
                                        <Button Grid.Column="4" Click="AcknowledgeIntegrityEvent_Click"
                                                Tag="{Binding Id}" Padding="6,4"
                                                Visibility="{Binding IsNotAcknowledged}">
                                            <FontIcon Glyph="&#xE73E;" FontSize="12" />
                                        </Button>
                                    </Grid>
                                </DataTemplate>
                            </ListView.ItemTemplate>
                        </ListView>

                        <TextBlock x:Name="NoIntegrityEventsText" Text="No integrity events recorded"
                                   Foreground="{ThemeResource SystemBaseMediumColor}" FontStyle="Italic"
                                   HorizontalAlignment="Center" Visibility="Collapsed" />

                        <!-- Actions row -->
                        <StackPanel Orientation="Horizontal" Spacing="8" HorizontalAlignment="Right">
                            <Button Click="ViewAllIntegrityEvents_Click">
                                <StackPanel Orientation="Horizontal" Spacing="4">
                                    <TextBlock Text="View All Events" FontSize="12" />
                                    <FontIcon Glyph="&#xE72A;" FontSize="10" />
                                </StackPanel>
                            </Button>
                            <Button Click="ExportIntegrityReport_Click">
                                <StackPanel Orientation="Horizontal" Spacing="4">
                                    <FontIcon Glyph="&#xE78C;" FontSize="12" />
                                    <TextBlock Text="Export Report" FontSize="12" />
                                </StackPanel>
                            </Button>
                        </StackPanel>
                    </StackPanel>
                </StackPanel>
            </Border>

            <InfoBar x:Name="DashboardInfoBar" IsOpen="False" IsClosable="True" />
        </StackPanel>
    </ScrollViewer>
</Page>
