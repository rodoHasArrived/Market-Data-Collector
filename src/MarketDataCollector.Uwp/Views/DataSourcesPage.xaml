<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="MarketDataCollector.Uwp.Views.DataSourcesPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:MarketDataCollector.Uwp.Views"
    xmlns:models="using:MarketDataCollector.Uwp.Models"
    xmlns:converters="using:MarketDataCollector.Uwp.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Page.Resources>
        <converters:BoolToVisibilityConverter x:Key="BoolToVisibility" />
        <converters:InverseBoolToVisibilityConverter x:Key="InverseBoolToVisibility" />
    </Page.Resources>

    <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="24">
        <StackPanel Spacing="24" MaxWidth="900">
            <!-- Header -->
            <StackPanel Orientation="Horizontal" Spacing="12">
                <FontIcon Glyph="&#xE943;" FontSize="28" Foreground="{ThemeResource SystemAccentColor}" />
                <TextBlock Text="Data Sources Configuration" Style="{StaticResource TitleTextBlockStyle}" VerticalAlignment="Center" />
            </StackPanel>

            <TextBlock Text="Configure multiple data sources for real-time streaming and historical data collection."
                       Style="{StaticResource BodyTextBlockStyle}"
                       Foreground="{ThemeResource SystemBaseMediumColor}" />

            <!-- Global Settings Card -->
            <Border Style="{StaticResource CardStyle}">
                <StackPanel Spacing="16">
                    <StackPanel Orientation="Horizontal" Spacing="8">
                        <FontIcon Glyph="&#xE713;" Foreground="{ThemeResource SystemAccentColor}" />
                        <TextBlock Text="Failover Settings" Style="{StaticResource SubtitleTextBlockStyle}" />
                    </StackPanel>

                    <Grid ColumnSpacing="16" RowSpacing="12">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>

                        <ToggleSwitch x:Name="EnableFailoverToggle"
                                      Grid.Column="0"
                                      Header="Enable Automatic Failover"
                                      IsOn="True"
                                      Toggled="EnableFailoverToggle_Toggled" />

                        <NumberBox x:Name="FailoverTimeoutBox"
                                   Grid.Column="1"
                                   Header="Failover Timeout (seconds)"
                                   Value="30"
                                   Minimum="5"
                                   Maximum="300"
                                   SpinButtonPlacementMode="Inline"
                                   ValueChanged="FailoverTimeoutBox_ValueChanged" />
                    </Grid>

                    <InfoBar IsOpen="True" IsClosable="False" Severity="Informational"
                             Title="Failover"
                             Message="When enabled, the system will automatically switch to the next available data source if the primary source fails." />
                </StackPanel>
            </Border>

            <!-- Default Sources Card -->
            <Border Style="{StaticResource CardStyle}">
                <StackPanel Spacing="16">
                    <StackPanel Orientation="Horizontal" Spacing="8">
                        <FontIcon Glyph="&#xE734;" Foreground="{ThemeResource SystemAccentColor}" />
                        <TextBlock Text="Default Data Sources" Style="{StaticResource SubtitleTextBlockStyle}" />
                    </StackPanel>

                    <Grid ColumnSpacing="16">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>

                        <ComboBox x:Name="DefaultRealTimeCombo"
                                  Grid.Column="0"
                                  Header="Default Real-Time Source"
                                  HorizontalAlignment="Stretch"
                                  DisplayMemberPath="Name"
                                  SelectionChanged="DefaultRealTimeCombo_SelectionChanged" />

                        <ComboBox x:Name="DefaultHistoricalCombo"
                                  Grid.Column="1"
                                  Header="Default Historical Source"
                                  HorizontalAlignment="Stretch"
                                  DisplayMemberPath="Name"
                                  SelectionChanged="DefaultHistoricalCombo_SelectionChanged" />
                    </Grid>
                </StackPanel>
            </Border>

            <!-- Data Sources List -->
            <Border Style="{StaticResource CardStyle}">
                <StackPanel Spacing="16">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>

                        <StackPanel Orientation="Horizontal" Spacing="8">
                            <FontIcon Glyph="&#xE8F1;" Foreground="{ThemeResource SystemAccentColor}" />
                            <TextBlock Text="Configured Data Sources" Style="{StaticResource SubtitleTextBlockStyle}" />
                            <TextBlock x:Name="SourceCountText" Text="(0)"
                                       Foreground="{ThemeResource SystemBaseMediumColor}"
                                       VerticalAlignment="Center" />
                        </StackPanel>

                        <Button Grid.Column="1"
                                Content="Add Data Source"
                                Style="{StaticResource AccentButtonStyle}"
                                Click="AddDataSource_Click">
                            <Button.KeyboardAccelerators>
                                <KeyboardAccelerator Modifiers="Control" Key="N" />
                            </Button.KeyboardAccelerators>
                        </Button>
                    </Grid>

                    <ListView x:Name="DataSourcesList"
                              SelectionMode="None"
                              ItemsSource="{x:Bind DataSources}"
                              MaxHeight="400">
                        <ListView.ItemTemplate>
                            <DataTemplate x:DataType="models:DataSourceConfig">
                                <Grid Padding="12" ColumnSpacing="12" Background="{ThemeResource SystemFillColorNeutralBackgroundBrush}"
                                      CornerRadius="8" Margin="0,4">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="Auto" />
                                    </Grid.ColumnDefinitions>

                                    <!-- Enable Toggle -->
                                    <ToggleSwitch Grid.Column="0"
                                                  IsOn="{x:Bind Enabled, Mode=TwoWay}"
                                                  OnContent=""
                                                  OffContent=""
                                                  MinWidth="50" />

                                    <!-- Source Info -->
                                    <StackPanel Grid.Column="1" Spacing="4" VerticalAlignment="Center">
                                        <StackPanel Orientation="Horizontal" Spacing="8">
                                            <TextBlock Text="{x:Bind Name}" FontWeight="SemiBold" />
                                            <Border Background="{ThemeResource SystemAccentColorLight2}"
                                                    CornerRadius="4" Padding="6,2">
                                                <TextBlock Text="{x:Bind Provider}" FontSize="11" />
                                            </Border>
                                            <Border Background="{ThemeResource SystemFillColorNeutralBrush}"
                                                    CornerRadius="4" Padding="6,2">
                                                <TextBlock Text="{x:Bind Type}" FontSize="11"
                                                           Foreground="{ThemeResource SystemBaseMediumColor}" />
                                            </Border>
                                        </StackPanel>
                                        <TextBlock Text="{x:Bind Description}"
                                                   Style="{StaticResource CaptionTextBlockStyle}"
                                                   Foreground="{ThemeResource SystemBaseMediumColor}"
                                                   TextTrimming="CharacterEllipsis" />
                                    </StackPanel>

                                    <!-- Priority -->
                                    <StackPanel Grid.Column="2" VerticalAlignment="Center" Spacing="2">
                                        <TextBlock Text="Priority" Style="{StaticResource CaptionTextBlockStyle}"
                                                   Foreground="{ThemeResource SystemBaseMediumColor}" />
                                        <TextBlock Text="{x:Bind Priority}" FontWeight="SemiBold" />
                                    </StackPanel>

                                    <!-- Edit Button -->
                                    <Button Grid.Column="3"
                                            Content="Edit"
                                            Tag="{x:Bind Id}"
                                            Click="EditDataSource_Click"
                                            VerticalAlignment="Center" />

                                    <!-- Delete Button -->
                                    <Button Grid.Column="4"
                                            Content="Delete"
                                            Tag="{x:Bind Id}"
                                            Click="DeleteDataSource_Click"
                                            VerticalAlignment="Center" />
                                </Grid>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>

                    <TextBlock x:Name="NoSourcesText"
                               Text="No data sources configured. Click 'Add Data Source' to get started."
                               Style="{StaticResource BodyTextBlockStyle}"
                               Foreground="{ThemeResource SystemBaseMediumColor}"
                               Visibility="Collapsed"
                               HorizontalAlignment="Center"
                               Margin="0,24" />
                </StackPanel>
            </Border>

            <!-- Add/Edit Data Source Dialog Content -->
            <Border x:Name="EditPanel" Style="{StaticResource CardStyle}" Visibility="Collapsed">
                <StackPanel Spacing="16">
                    <StackPanel Orientation="Horizontal" Spacing="8">
                        <FontIcon Glyph="&#xE70F;" Foreground="{ThemeResource SystemAccentColor}" />
                        <TextBlock x:Name="EditPanelTitle" Text="Add Data Source" Style="{StaticResource SubtitleTextBlockStyle}" />
                    </StackPanel>

                    <!-- Basic Info -->
                    <Grid ColumnSpacing="16" RowSpacing="12">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>

                        <TextBox x:Name="SourceNameBox"
                                 Grid.Row="0" Grid.Column="0"
                                 Header="Name *"
                                 PlaceholderText="My Data Source" />

                        <ComboBox x:Name="ProviderCombo"
                                  Grid.Row="0" Grid.Column="1"
                                  Header="Provider *"
                                  HorizontalAlignment="Stretch"
                                  SelectionChanged="ProviderCombo_SelectionChanged">
                            <ComboBoxItem Content="Interactive Brokers (IB)" Tag="IB" />
                            <ComboBoxItem Content="Alpaca" Tag="Alpaca" />
                            <ComboBoxItem Content="Polygon.io" Tag="Polygon" />
                        </ComboBox>

                        <ComboBox x:Name="TypeCombo"
                                  Grid.Row="1" Grid.Column="0"
                                  Header="Data Type *"
                                  HorizontalAlignment="Stretch">
                            <ComboBoxItem Content="Real-Time" Tag="RealTime" IsSelected="True" />
                            <ComboBoxItem Content="Historical" Tag="Historical" />
                            <ComboBoxItem Content="Both" Tag="Both" />
                        </ComboBox>

                        <NumberBox x:Name="PriorityBox"
                                   Grid.Row="1" Grid.Column="1"
                                   Header="Priority (lower = higher)"
                                   Value="100"
                                   Minimum="1"
                                   Maximum="1000"
                                   SpinButtonPlacementMode="Inline" />

                        <TextBox x:Name="DescriptionBox"
                                 Grid.Row="2" Grid.ColumnSpan="2"
                                 Header="Description"
                                 PlaceholderText="Optional description for this data source" />
                    </Grid>

                    <!-- Provider-specific settings -->

                    <!-- IB Settings -->
                    <Border x:Name="IBSettingsPanel" Visibility="Visible"
                            Background="{ThemeResource SystemFillColorNeutralBackgroundBrush}"
                            CornerRadius="8" Padding="16">
                        <StackPanel Spacing="12">
                            <TextBlock Text="Interactive Brokers Settings" FontWeight="SemiBold" />

                            <Grid ColumnSpacing="16" RowSpacing="12">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                </Grid.RowDefinitions>

                                <TextBox x:Name="IBHostBox"
                                         Grid.Row="0" Grid.Column="0"
                                         Header="Host"
                                         Text="127.0.0.1" />

                                <NumberBox x:Name="IBPortBox"
                                           Grid.Row="0" Grid.Column="1"
                                           Header="Port"
                                           Value="7496"
                                           Minimum="1"
                                           Maximum="65535" />

                                <NumberBox x:Name="IBClientIdBox"
                                           Grid.Row="0" Grid.Column="2"
                                           Header="Client ID"
                                           Value="0"
                                           Minimum="0"
                                           Maximum="9999" />

                                <CheckBox x:Name="IBPaperTradingCheck"
                                          Grid.Row="1" Grid.Column="0"
                                          Content="Paper Trading" />

                                <CheckBox x:Name="IBSubscribeDepthCheck"
                                          Grid.Row="1" Grid.Column="1"
                                          Content="Subscribe Depth"
                                          IsChecked="True" />

                                <CheckBox x:Name="IBTickByTickCheck"
                                          Grid.Row="1" Grid.Column="2"
                                          Content="Tick-by-Tick"
                                          IsChecked="True" />
                            </Grid>
                        </StackPanel>
                    </Border>

                    <!-- Alpaca Settings -->
                    <Border x:Name="AlpacaSettingsPanel" Visibility="Collapsed"
                            Background="{ThemeResource SystemFillColorNeutralBackgroundBrush}"
                            CornerRadius="8" Padding="16">
                        <StackPanel Spacing="12">
                            <TextBlock Text="Alpaca Settings" FontWeight="SemiBold" />

                            <InfoBar IsOpen="True" IsClosable="False" Severity="Informational"
                                     Title="Secure Credentials"
                                     Message="API credentials are stored securely. Use the Provider page to manage credentials." />

                            <Grid ColumnSpacing="16" RowSpacing="12">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>

                                <ComboBox x:Name="AlpacaFeedCombo"
                                          Grid.Column="0"
                                          Header="Feed Type"
                                          HorizontalAlignment="Stretch">
                                    <ComboBoxItem Content="IEX (Free)" Tag="iex" IsSelected="True" />
                                    <ComboBoxItem Content="SIP (Paid)" Tag="sip" />
                                    <ComboBoxItem Content="Delayed SIP" Tag="delayed_sip" />
                                </ComboBox>

                                <ComboBox x:Name="AlpacaEnvironmentCombo"
                                          Grid.Column="1"
                                          Header="Environment"
                                          HorizontalAlignment="Stretch">
                                    <ComboBoxItem Content="Production" Tag="false" IsSelected="True" />
                                    <ComboBoxItem Content="Sandbox" Tag="true" />
                                </ComboBox>
                            </Grid>

                            <CheckBox x:Name="AlpacaSubscribeQuotesCheck"
                                      Content="Subscribe to Quotes (BBO)" />
                        </StackPanel>
                    </Border>

                    <!-- Polygon Settings -->
                    <Border x:Name="PolygonSettingsPanel" Visibility="Collapsed"
                            Background="{ThemeResource SystemFillColorNeutralBackgroundBrush}"
                            CornerRadius="8" Padding="16">
                        <StackPanel Spacing="12">
                            <TextBlock Text="Polygon.io Settings" FontWeight="SemiBold" />

                            <Grid ColumnSpacing="16" RowSpacing="12">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                </Grid.RowDefinitions>

                                <PasswordBox x:Name="PolygonApiKeyBox"
                                             Grid.Row="0" Grid.Column="0"
                                             Header="API Key"
                                             PlaceholderText="Your Polygon API key" />

                                <ComboBox x:Name="PolygonFeedCombo"
                                          Grid.Row="0" Grid.Column="1"
                                          Header="Feed"
                                          HorizontalAlignment="Stretch">
                                    <ComboBoxItem Content="Stocks" Tag="stocks" IsSelected="True" />
                                    <ComboBoxItem Content="Options" Tag="options" />
                                    <ComboBoxItem Content="Forex" Tag="forex" />
                                    <ComboBoxItem Content="Crypto" Tag="crypto" />
                                </ComboBox>

                                <CheckBox x:Name="PolygonDelayedCheck"
                                          Grid.Row="1" Grid.Column="0"
                                          Content="Use Delayed Data (15 min)" />

                                <StackPanel Grid.Row="1" Grid.Column="1" Orientation="Horizontal" Spacing="16">
                                    <CheckBox x:Name="PolygonTradesCheck"
                                              Content="Trades"
                                              IsChecked="True" />
                                    <CheckBox x:Name="PolygonQuotesCheck"
                                              Content="Quotes" />
                                    <CheckBox x:Name="PolygonAggregatesCheck"
                                              Content="Aggregates" />
                                </StackPanel>
                            </Grid>
                        </StackPanel>
                    </Border>

                    <!-- Symbols Configuration -->
                    <Border Background="{ThemeResource SystemFillColorNeutralBackgroundBrush}"
                            CornerRadius="8" Padding="16">
                        <StackPanel Spacing="12">
                            <StackPanel Orientation="Horizontal" Spacing="8">
                                <TextBlock Text="Symbols (Optional)" FontWeight="SemiBold" />
                                <TextBlock Text="Leave empty to use global symbol list"
                                           Style="{StaticResource CaptionTextBlockStyle}"
                                           Foreground="{ThemeResource SystemBaseMediumColor}"
                                           VerticalAlignment="Center" />
                            </StackPanel>

                            <TextBox x:Name="SymbolsBox"
                                     PlaceholderText="AAPL, MSFT, GOOGL (comma separated)"
                                     AcceptsReturn="False" />
                        </StackPanel>
                    </Border>

                    <!-- Action Buttons -->
                    <StackPanel Orientation="Horizontal" Spacing="12">
                        <Button x:Name="SaveSourceButton"
                                Content="Save Data Source"
                                Style="{StaticResource AccentButtonStyle}"
                                Click="SaveDataSource_Click" />
                        <Button Content="Cancel"
                                Click="CancelEdit_Click" />
                        <ProgressRing x:Name="SaveProgress" IsActive="False" Width="20" Height="20" />
                    </StackPanel>
                </StackPanel>
            </Border>

            <!-- Status InfoBar -->
            <InfoBar x:Name="StatusInfoBar" IsOpen="False" IsClosable="True" />
        </StackPanel>
    </ScrollViewer>
</Page>
