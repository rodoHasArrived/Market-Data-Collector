<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="MarketDataCollector.Uwp.Views.AdvancedAnalyticsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:MarketDataCollector.Uwp.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Spacing="24" Padding="24">
            <!-- Header -->
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <StackPanel Orientation="Horizontal" Spacing="12">
                    <FontIcon Glyph="&#xE9F9;" FontSize="28" Foreground="{ThemeResource SystemAccentColor}" />
                    <TextBlock Text="Advanced Analytics" Style="{StaticResource TitleTextBlockStyle}" VerticalAlignment="Center" />
                </StackPanel>

                <StackPanel Grid.Column="1" Orientation="Horizontal" Spacing="8">
                    <Button x:Name="RefreshButton" Click="Refresh_Click">
                        <StackPanel Orientation="Horizontal" Spacing="8">
                            <FontIcon Glyph="&#xE72C;" FontSize="14" />
                            <TextBlock Text="Refresh All" />
                        </StackPanel>
                    </Button>
                </StackPanel>
            </Grid>

            <!-- Quality Summary Cards -->
            <Grid ColumnSpacing="16">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <Border Grid.Column="0" Style="{StaticResource CardStyle}">
                    <StackPanel Spacing="8" HorizontalAlignment="Center">
                        <TextBlock x:Name="OverallScoreText" Text="--" Style="{StaticResource HeaderTextBlockStyle}"
                                   Foreground="{ThemeResource SystemAccentColor}" HorizontalAlignment="Center" />
                        <TextBlock Text="Overall Quality" Style="{StaticResource CaptionTextBlockStyle}" HorizontalAlignment="Center" />
                        <Border x:Name="GradeBadge" Background="{ThemeResource SystemFillColorSuccessBackgroundBrush}"
                                CornerRadius="4" Padding="12,4" HorizontalAlignment="Center">
                            <TextBlock x:Name="GradeText" Text="--" FontWeight="SemiBold" />
                        </Border>
                    </StackPanel>
                </Border>

                <Border Grid.Column="1" Style="{StaticResource CardStyle}">
                    <StackPanel Spacing="8" HorizontalAlignment="Center">
                        <TextBlock x:Name="CompletenessText" Text="--%"  Style="{StaticResource HeaderTextBlockStyle}"
                                   Foreground="#48BB78" HorizontalAlignment="Center" />
                        <TextBlock Text="Completeness" Style="{StaticResource CaptionTextBlockStyle}" HorizontalAlignment="Center" />
                    </StackPanel>
                </Border>

                <Border Grid.Column="2" Style="{StaticResource CardStyle}">
                    <StackPanel Spacing="8" HorizontalAlignment="Center">
                        <TextBlock x:Name="GapCountText" Text="--" Style="{StaticResource HeaderTextBlockStyle}"
                                   Foreground="#ED8936" HorizontalAlignment="Center" />
                        <TextBlock Text="Data Gaps" Style="{StaticResource CaptionTextBlockStyle}" HorizontalAlignment="Center" />
                    </StackPanel>
                </Border>

                <Border Grid.Column="3" Style="{StaticResource CardStyle}">
                    <StackPanel Spacing="8" HorizontalAlignment="Center">
                        <TextBlock x:Name="AnomalyCountText" Text="--" Style="{StaticResource HeaderTextBlockStyle}"
                                   Foreground="#F56565" HorizontalAlignment="Center" />
                        <TextBlock Text="Anomalies" Style="{StaticResource CaptionTextBlockStyle}" HorizontalAlignment="Center" />
                    </StackPanel>
                </Border>
            </Grid>

            <!-- Gap Analysis Section -->
            <Border Style="{StaticResource CardStyle}">
                <StackPanel Spacing="16">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>

                        <StackPanel Orientation="Horizontal" Spacing="8">
                            <FontIcon Glyph="&#xE7BA;" Foreground="{ThemeResource SystemAccentColor}" FontSize="20" />
                            <TextBlock Text="Gap Analysis" Style="{StaticResource SubtitleTextBlockStyle}" />
                        </StackPanel>

                        <StackPanel Grid.Column="1" Orientation="Horizontal" Spacing="8">
                            <ComboBox x:Name="GapSymbolCombo" Width="120" PlaceholderText="All Symbols">
                                <ComboBoxItem Content="All Symbols" Tag="" IsSelected="True" />
                            </ComboBox>
                            <Button Content="Analyze Gaps" Click="AnalyzeGaps_Click" />
                            <Button x:Name="RepairGapsButton" Content="Repair Gaps" Click="RepairGaps_Click" IsEnabled="False" />
                        </StackPanel>
                    </Grid>

                    <ProgressBar x:Name="GapAnalysisProgress" IsIndeterminate="True" Visibility="Collapsed" />

                    <!-- Gap Summary -->
                    <Border x:Name="GapSummaryCard" Background="{ThemeResource SystemFillColorNeutralBackgroundBrush}"
                            CornerRadius="4" Padding="16" Visibility="Collapsed">
                        <Grid ColumnSpacing="24">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>

                            <StackPanel>
                                <TextBlock x:Name="TotalGapsText" Text="0" Style="{StaticResource SubheaderTextBlockStyle}" />
                                <TextBlock Text="Total Gaps" Style="{StaticResource CaptionTextBlockStyle}" />
                            </StackPanel>

                            <StackPanel Grid.Column="1">
                                <TextBlock x:Name="TotalGapDurationText" Text="0h 0m" Style="{StaticResource SubheaderTextBlockStyle}" />
                                <TextBlock Text="Total Duration" Style="{StaticResource CaptionTextBlockStyle}" />
                            </StackPanel>

                            <StackPanel Grid.Column="2">
                                <TextBlock x:Name="RepairableGapsText" Text="0" Style="{StaticResource SubheaderTextBlockStyle}" />
                                <TextBlock Text="Repairable" Style="{StaticResource CaptionTextBlockStyle}" />
                            </StackPanel>
                        </Grid>
                    </Border>

                    <!-- Gap List -->
                    <ListView x:Name="GapsList" SelectionMode="None" MaxHeight="250">
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <Grid Padding="12,8" Background="{ThemeResource SystemFillColorNeutralBackgroundBrush}"
                                      CornerRadius="4" Margin="0,2">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="80" />
                                        <ColumnDefinition Width="80" />
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="80" />
                                        <ColumnDefinition Width="Auto" />
                                    </Grid.ColumnDefinitions>

                                    <TextBlock Text="{Binding Symbol}" FontWeight="SemiBold" />
                                    <TextBlock Grid.Column="1" Text="{Binding EventType}"
                                               Foreground="{ThemeResource SystemBaseMediumColor}" />
                                    <TextBlock Grid.Column="2" Text="{Binding TimeRange}" />
                                    <TextBlock Grid.Column="3" Text="{Binding DurationText}"
                                               Foreground="{ThemeResource SystemAccentColor}" />
                                    <Border Grid.Column="4" Background="{Binding RepairableBackground}"
                                            CornerRadius="4" Padding="8,2">
                                        <TextBlock Text="{Binding RepairableText}" FontSize="11" />
                                    </Border>
                                </Grid>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </StackPanel>
            </Border>

            <!-- Cross-Provider Comparison -->
            <Border Style="{StaticResource CardStyle}">
                <StackPanel Spacing="16">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>

                        <StackPanel Orientation="Horizontal" Spacing="8">
                            <FontIcon Glyph="&#xE8AB;" Foreground="{ThemeResource SystemAccentColor}" FontSize="20" />
                            <TextBlock Text="Cross-Provider Comparison" Style="{StaticResource SubtitleTextBlockStyle}" />
                        </StackPanel>

                        <StackPanel Grid.Column="1" Orientation="Horizontal" Spacing="8">
                            <TextBox x:Name="CompareSymbolBox" PlaceholderText="Symbol" Width="100" />
                            <DatePicker x:Name="CompareDatePicker" />
                            <Button Content="Compare" Click="CompareProviders_Click" />
                        </StackPanel>
                    </Grid>

                    <ProgressBar x:Name="ComparisonProgress" IsIndeterminate="True" Visibility="Collapsed" />

                    <!-- Comparison Results -->
                    <Border x:Name="ComparisonResultsCard" Visibility="Collapsed"
                            Background="{ThemeResource SystemFillColorNeutralBackgroundBrush}"
                            CornerRadius="4" Padding="16">
                        <StackPanel Spacing="12">
                            <Grid ColumnSpacing="24">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>

                                <StackPanel>
                                    <TextBlock x:Name="ConsistencyScoreText" Text="--%"
                                               Style="{StaticResource SubheaderTextBlockStyle}"
                                               Foreground="{ThemeResource SystemAccentColor}" />
                                    <TextBlock Text="Consistency Score" Style="{StaticResource CaptionTextBlockStyle}" />
                                </StackPanel>

                                <StackPanel Grid.Column="1">
                                    <TextBlock x:Name="DiscrepancyCountText" Text="0"
                                               Style="{StaticResource SubheaderTextBlockStyle}" />
                                    <TextBlock Text="Discrepancies" Style="{StaticResource CaptionTextBlockStyle}" />
                                </StackPanel>
                            </Grid>

                            <ListView x:Name="DiscrepanciesList" SelectionMode="None" MaxHeight="150">
                                <ListView.ItemTemplate>
                                    <DataTemplate>
                                        <Grid Padding="8,4">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="120" />
                                                <ColumnDefinition Width="100" />
                                                <ColumnDefinition Width="*" />
                                                <ColumnDefinition Width="100" />
                                            </Grid.ColumnDefinitions>
                                            <TextBlock Text="{Binding TimestampText}" />
                                            <TextBlock Grid.Column="1" Text="{Binding DiscrepancyType}" />
                                            <TextBlock Grid.Column="2" Text="{Binding Values}" />
                                            <TextBlock Grid.Column="3" Text="{Binding DifferenceText}"
                                                       Foreground="{ThemeResource SystemAccentColor}" />
                                        </Grid>
                                    </DataTemplate>
                                </ListView.ItemTemplate>
                            </ListView>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </Border>

            <!-- Latency Analysis -->
            <Border Style="{StaticResource CardStyle}">
                <StackPanel Spacing="16">
                    <StackPanel Orientation="Horizontal" Spacing="8">
                        <FontIcon Glyph="&#xE916;" Foreground="{ThemeResource SystemAccentColor}" FontSize="20" />
                        <TextBlock Text="Provider Latency" Style="{StaticResource SubtitleTextBlockStyle}" />
                    </StackPanel>

                    <ListView x:Name="LatencyList" SelectionMode="None">
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <Grid Padding="12" Background="{ThemeResource SystemFillColorNeutralBackgroundBrush}"
                                      CornerRadius="4" Margin="0,4">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="120" />
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="80" />
                                        <ColumnDefinition Width="80" />
                                        <ColumnDefinition Width="80" />
                                    </Grid.ColumnDefinitions>

                                    <TextBlock Text="{Binding Provider}" FontWeight="SemiBold" VerticalAlignment="Center" />

                                    <!-- Latency Bar -->
                                    <Grid Grid.Column="1" VerticalAlignment="Center">
                                        <ProgressBar Value="{Binding LatencyPercent}" Maximum="100" Height="8"
                                                     Background="{ThemeResource SystemFillColorNeutralBackgroundBrush}" />
                                    </Grid>

                                    <TextBlock Grid.Column="2" Text="{Binding P50Text}" VerticalAlignment="Center"
                                               HorizontalAlignment="Right" />
                                    <TextBlock Grid.Column="3" Text="{Binding P95Text}" VerticalAlignment="Center"
                                               HorizontalAlignment="Right" Foreground="#ED8936" />
                                    <TextBlock Grid.Column="4" Text="{Binding P99Text}" VerticalAlignment="Center"
                                               HorizontalAlignment="Right" Foreground="#F56565" />
                                </Grid>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="120" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="80" />
                            <ColumnDefinition Width="80" />
                            <ColumnDefinition Width="80" />
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="" />
                        <TextBlock Grid.Column="2" Text="P50" Style="{StaticResource CaptionTextBlockStyle}"
                                   HorizontalAlignment="Right" />
                        <TextBlock Grid.Column="3" Text="P95" Style="{StaticResource CaptionTextBlockStyle}"
                                   HorizontalAlignment="Right" />
                        <TextBlock Grid.Column="4" Text="P99" Style="{StaticResource CaptionTextBlockStyle}"
                                   HorizontalAlignment="Right" />
                    </Grid>
                </StackPanel>
            </Border>

            <!-- Rate Limits -->
            <Border Style="{StaticResource CardStyle}">
                <StackPanel Spacing="16">
                    <StackPanel Orientation="Horizontal" Spacing="8">
                        <FontIcon Glyph="&#xE8CB;" Foreground="{ThemeResource SystemAccentColor}" FontSize="20" />
                        <TextBlock Text="Provider Rate Limits" Style="{StaticResource SubtitleTextBlockStyle}" />
                    </StackPanel>

                    <ListView x:Name="RateLimitsList" SelectionMode="None">
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <Grid Padding="12" Background="{ThemeResource SystemFillColorNeutralBackgroundBrush}"
                                      CornerRadius="4" Margin="0,4">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="120" />
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="Auto" />
                                    </Grid.ColumnDefinitions>

                                    <TextBlock Text="{Binding Provider}" FontWeight="SemiBold" VerticalAlignment="Center" />

                                    <!-- Usage Bar -->
                                    <Grid Grid.Column="1" VerticalAlignment="Center" Margin="12,0">
                                        <ProgressBar Value="{Binding UsagePercent}" Maximum="100" Height="8"
                                                     Foreground="{Binding UsageColor}" />
                                    </Grid>

                                    <TextBlock Grid.Column="2" Text="{Binding UsageText}" VerticalAlignment="Center" Margin="12,0" />

                                    <Border Grid.Column="3" Background="{Binding StatusBackground}"
                                            CornerRadius="4" Padding="8,4">
                                        <TextBlock Text="{Binding StatusText}" FontSize="11" />
                                    </Border>
                                </Grid>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </StackPanel>
            </Border>

            <!-- Detailed Quality Report -->
            <Border Style="{StaticResource CardStyle}">
                <StackPanel Spacing="16">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>

                        <StackPanel Orientation="Horizontal" Spacing="8">
                            <FontIcon Glyph="&#xE9F5;" Foreground="{ThemeResource SystemAccentColor}" FontSize="20" />
                            <TextBlock Text="Symbol Quality Report" Style="{StaticResource SubtitleTextBlockStyle}" />
                        </StackPanel>

                        <Button Grid.Column="1" Content="Generate Full Report" Click="GenerateReport_Click" />
                    </Grid>

                    <ListView x:Name="SymbolQualityList" SelectionMode="None" MaxHeight="300">
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <Grid Padding="12" Background="{ThemeResource SystemFillColorNeutralBackgroundBrush}"
                                      CornerRadius="4" Margin="0,4">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="80" />
                                        <ColumnDefinition Width="60" />
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="80" />
                                        <ColumnDefinition Width="80" />
                                        <ColumnDefinition Width="60" />
                                    </Grid.ColumnDefinitions>

                                    <TextBlock Text="{Binding Symbol}" FontWeight="SemiBold" VerticalAlignment="Center" />

                                    <Border Grid.Column="1" Background="{Binding GradeBackground}"
                                            CornerRadius="4" Padding="8,2" HorizontalAlignment="Left" VerticalAlignment="Center">
                                        <TextBlock Text="{Binding Grade}" FontWeight="SemiBold" FontSize="12" />
                                    </Border>

                                    <!-- Quality Bar -->
                                    <Grid Grid.Column="2" VerticalAlignment="Center" Margin="12,0">
                                        <ProgressBar Value="{Binding OverallScore}" Maximum="100" Height="6" />
                                    </Grid>

                                    <TextBlock Grid.Column="3" Text="{Binding CompletenessText}" VerticalAlignment="Center"
                                               HorizontalAlignment="Right" />
                                    <TextBlock Grid.Column="4" Text="{Binding IntegrityText}" VerticalAlignment="Center"
                                               HorizontalAlignment="Right" />
                                    <TextBlock Grid.Column="5" Text="{Binding IssueCount}" VerticalAlignment="Center"
                                               HorizontalAlignment="Right" Foreground="#F56565" />
                                </Grid>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="80" />
                            <ColumnDefinition Width="60" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="80" />
                            <ColumnDefinition Width="80" />
                            <ColumnDefinition Width="60" />
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="Symbol" Style="{StaticResource CaptionTextBlockStyle}" />
                        <TextBlock Grid.Column="1" Text="Grade" Style="{StaticResource CaptionTextBlockStyle}" />
                        <TextBlock Grid.Column="2" Text="Quality Score" Style="{StaticResource CaptionTextBlockStyle}" Margin="12,0" />
                        <TextBlock Grid.Column="3" Text="Complete" Style="{StaticResource CaptionTextBlockStyle}" HorizontalAlignment="Right" />
                        <TextBlock Grid.Column="4" Text="Integrity" Style="{StaticResource CaptionTextBlockStyle}" HorizontalAlignment="Right" />
                        <TextBlock Grid.Column="5" Text="Issues" Style="{StaticResource CaptionTextBlockStyle}" HorizontalAlignment="Right" />
                    </Grid>
                </StackPanel>
            </Border>

            <!-- Recommendations -->
            <Border x:Name="RecommendationsCard" Style="{StaticResource CardStyle}" Visibility="Collapsed">
                <StackPanel Spacing="12">
                    <StackPanel Orientation="Horizontal" Spacing="8">
                        <FontIcon Glyph="&#xE946;" Foreground="#ED8936" FontSize="20" />
                        <TextBlock Text="Recommendations" Style="{StaticResource SubtitleTextBlockStyle}" />
                    </StackPanel>

                    <ListView x:Name="RecommendationsList" SelectionMode="None">
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <Grid Padding="8,4">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="*" />
                                    </Grid.ColumnDefinitions>
                                    <FontIcon Glyph="&#xE946;" FontSize="14" Foreground="#ED8936" Margin="0,0,12,0" />
                                    <TextBlock Grid.Column="1" Text="{Binding}" TextWrapping="Wrap" />
                                </Grid>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </StackPanel>
            </Border>

            <!-- Status InfoBar -->
            <InfoBar x:Name="StatusInfoBar" IsOpen="False" IsClosable="True" />
        </StackPanel>
    </ScrollViewer>
</Page>
