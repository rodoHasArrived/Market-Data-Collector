<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="MarketDataCollector.Uwp.Views.AdminMaintenancePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:MarketDataCollector.Uwp.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Spacing="24" Padding="24">
            <!-- Header -->
            <StackPanel Orientation="Horizontal" Spacing="12">
                <FontIcon Glyph="&#xE912;" FontSize="28" Foreground="{ThemeResource SystemAccentColor}" />
                <TextBlock Text="Admin &amp; Maintenance" Style="{StaticResource TitleTextBlockStyle}" VerticalAlignment="Center" />
            </StackPanel>

            <!-- Quick Actions Bar -->
            <Border Style="{StaticResource CardStyle}">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>

                    <StackPanel>
                        <TextBlock Text="Quick Actions" Style="{StaticResource SubtitleTextBlockStyle}" />
                        <TextBlock Text="Run maintenance tasks or check system status"
                                   Style="{StaticResource CaptionTextBlockStyle}"
                                   Foreground="{ThemeResource SystemBaseMediumColor}" />
                    </StackPanel>

                    <StackPanel Grid.Column="1" Orientation="Horizontal" Spacing="8">
                        <Button x:Name="QuickCheckButton" Click="QuickCheck_Click">
                            <StackPanel Orientation="Horizontal" Spacing="8">
                                <FontIcon Glyph="&#xE73E;" FontSize="14" />
                                <TextBlock Text="Quick Check" />
                            </StackPanel>
                        </Button>
                        <Button x:Name="RunMaintenanceButton" Click="RunMaintenance_Click" Style="{StaticResource AccentButtonStyle}">
                            <StackPanel Orientation="Horizontal" Spacing="8">
                                <FontIcon Glyph="&#xE895;" FontSize="14" />
                                <TextBlock Text="Run Maintenance Now" />
                            </StackPanel>
                        </Button>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Quick Check Results -->
            <Border x:Name="QuickCheckResultsCard" Style="{StaticResource CardStyle}" Visibility="Collapsed">
                <StackPanel Spacing="12">
                    <StackPanel Orientation="Horizontal" Spacing="12">
                        <FontIcon x:Name="QuickCheckIcon" Glyph="&#xE73E;" FontSize="24" />
                        <StackPanel>
                            <TextBlock x:Name="QuickCheckStatusText" Text="System Status" Style="{StaticResource SubtitleTextBlockStyle}" />
                            <TextBlock x:Name="QuickCheckOverallText" Text="" Style="{StaticResource CaptionTextBlockStyle}" />
                        </StackPanel>
                    </StackPanel>

                    <ListView x:Name="QuickCheckList" SelectionMode="None" MaxHeight="200">
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <Grid Padding="8,4">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="Auto" />
                                    </Grid.ColumnDefinitions>
                                    <FontIcon Glyph="{Binding StatusIcon}" FontSize="14" Foreground="{Binding StatusColor}" Margin="0,0,12,0" />
                                    <TextBlock Grid.Column="1" Text="{Binding Name}" />
                                    <TextBlock Grid.Column="2" Text="{Binding Details}" Style="{StaticResource CaptionTextBlockStyle}"
                                               Foreground="{ThemeResource SystemBaseMediumColor}" />
                                </Grid>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </StackPanel>
            </Border>

            <Grid ColumnSpacing="24">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <!-- Maintenance Schedule -->
                <Border Grid.Column="0" Style="{StaticResource CardStyle}">
                    <StackPanel Spacing="16">
                        <StackPanel Orientation="Horizontal" Spacing="8">
                            <FontIcon Glyph="&#xE823;" Foreground="{ThemeResource SystemAccentColor}" FontSize="20" />
                            <TextBlock Text="Maintenance Schedule" Style="{StaticResource SubtitleTextBlockStyle}" />
                        </StackPanel>

                        <ToggleSwitch x:Name="EnableScheduleToggle" Header="Enable Scheduled Maintenance"
                                      Toggled="EnableSchedule_Toggled" />

                        <ComboBox x:Name="ScheduleFrequencyCombo" Header="Frequency" HorizontalAlignment="Stretch"
                                  SelectionChanged="ScheduleFrequency_Changed">
                            <ComboBoxItem Content="Daily at 2 AM" Tag="0 2 * * *" />
                            <ComboBoxItem Content="Daily at 4 AM" Tag="0 4 * * *" />
                            <ComboBoxItem Content="Weekly (Sunday 3 AM)" Tag="0 3 * * 0" />
                            <ComboBoxItem Content="Weekly (Saturday 3 AM)" Tag="0 3 * * 6" />
                            <ComboBoxItem Content="Monthly (1st at 3 AM)" Tag="0 3 1 * *" />
                        </ComboBox>

                        <StackPanel Spacing="8">
                            <TextBlock Text="Operations to Run" FontWeight="SemiBold" />
                            <CheckBox x:Name="RunCompressionCheck" Content="Compress older files" IsChecked="True" />
                            <CheckBox x:Name="RunCleanupCheck" Content="Clean up temp files" IsChecked="True" />
                            <CheckBox x:Name="RunIntegrityCheck" Content="Verify data integrity" IsChecked="True" />
                            <CheckBox x:Name="RunTierMigrationCheck" Content="Migrate to archive tier" IsChecked="False" />
                        </StackPanel>

                        <Border Background="{ThemeResource SystemFillColorNeutralBackgroundBrush}"
                                CornerRadius="4" Padding="12">
                            <StackPanel Spacing="4">
                                <TextBlock Text="Next Run" FontWeight="SemiBold" Style="{StaticResource CaptionTextBlockStyle}" />
                                <TextBlock x:Name="NextRunText" Text="Not scheduled" />
                                <TextBlock Text="Last Run" FontWeight="SemiBold" Style="{StaticResource CaptionTextBlockStyle}" Margin="0,8,0,0" />
                                <TextBlock x:Name="LastRunText" Text="Never" />
                            </StackPanel>
                        </Border>

                        <Button Content="Save Schedule" Click="SaveSchedule_Click" Style="{StaticResource AccentButtonStyle}" />
                    </StackPanel>
                </Border>

                <!-- Storage Tiers -->
                <Border Grid.Column="1" Style="{StaticResource CardStyle}">
                    <StackPanel Spacing="16">
                        <StackPanel Orientation="Horizontal" Spacing="8">
                            <FontIcon Glyph="&#xE8B7;" Foreground="{ThemeResource SystemAccentColor}" FontSize="20" />
                            <TextBlock Text="Storage Tiers" Style="{StaticResource SubtitleTextBlockStyle}" />
                        </StackPanel>

                        <ListView x:Name="TiersList" SelectionMode="None" MaxHeight="250">
                            <ListView.ItemTemplate>
                                <DataTemplate>
                                    <Border Background="{ThemeResource SystemFillColorNeutralBackgroundBrush}"
                                            CornerRadius="4" Padding="12" Margin="0,4">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*" />
                                                <ColumnDefinition Width="Auto" />
                                            </Grid.ColumnDefinitions>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto" />
                                                <RowDefinition Height="Auto" />
                                                <RowDefinition Height="Auto" />
                                            </Grid.RowDefinitions>

                                            <TextBlock Text="{Binding Name}" FontWeight="SemiBold" />
                                            <TextBlock Grid.Column="1" Text="{Binding SizeText}"
                                                       Foreground="{ThemeResource SystemAccentColor}" />

                                            <TextBlock Grid.Row="1" Grid.ColumnSpan="2" Text="{Binding Path}"
                                                       Style="{StaticResource CaptionTextBlockStyle}"
                                                       Foreground="{ThemeResource SystemBaseMediumColor}"
                                                       TextTrimming="CharacterEllipsis" />

                                            <StackPanel Grid.Row="2" Grid.ColumnSpan="2" Orientation="Horizontal" Spacing="12" Margin="0,4,0,0">
                                                <TextBlock Text="{Binding FileCountText}" Style="{StaticResource CaptionTextBlockStyle}" />
                                                <TextBlock Text="{Binding RetentionText}" Style="{StaticResource CaptionTextBlockStyle}" />
                                            </StackPanel>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ListView.ItemTemplate>
                        </ListView>

                        <ToggleSwitch x:Name="AutoMigrationToggle" Header="Enable Auto-Migration"
                                      OffContent="Off" OnContent="On" />

                        <Button Content="Migrate Now" Click="MigrateNow_Click" />
                    </StackPanel>
                </Border>
            </Grid>

            <!-- Retention Policies -->
            <Border Style="{StaticResource CardStyle}">
                <StackPanel Spacing="16">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>

                        <StackPanel Orientation="Horizontal" Spacing="8">
                            <FontIcon Glyph="&#xE74D;" Foreground="{ThemeResource SystemAccentColor}" FontSize="20" />
                            <TextBlock Text="Retention Policies" Style="{StaticResource SubtitleTextBlockStyle}" />
                        </StackPanel>

                        <Button Grid.Column="1" Content="Add Policy" Click="AddPolicy_Click" />
                    </Grid>

                    <ListView x:Name="PoliciesList" SelectionMode="None">
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <Grid Padding="12" Background="{ThemeResource SystemFillColorNeutralBackgroundBrush}"
                                      CornerRadius="4" Margin="0,4">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="Auto" />
                                    </Grid.ColumnDefinitions>

                                    <StackPanel>
                                        <TextBlock Text="{Binding Name}" FontWeight="SemiBold" />
                                        <TextBlock Text="{Binding Description}" Style="{StaticResource CaptionTextBlockStyle}"
                                                   Foreground="{ThemeResource SystemBaseMediumColor}" />
                                    </StackPanel>

                                    <TextBlock Grid.Column="1" Text="{Binding RetentionText}" VerticalAlignment="Center" Margin="12,0" />

                                    <ToggleSwitch Grid.Column="2" IsOn="{Binding Enabled}" OnContent="" OffContent="" VerticalAlignment="Center" />

                                    <StackPanel Grid.Column="3" Orientation="Horizontal" Spacing="4">
                                        <Button Content="Edit" Click="EditPolicy_Click" Tag="{Binding Id}" Padding="8,4" />
                                        <Button Content="Delete" Click="DeletePolicy_Click" Tag="{Binding Id}" Padding="8,4" />
                                    </StackPanel>
                                </Grid>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>

                    <StackPanel Orientation="Horizontal" Spacing="8">
                        <Button Content="Apply Retention Policies" Click="ApplyRetention_Click" Style="{StaticResource AccentButtonStyle}" />
                        <Button Content="Preview Cleanup" Click="PreviewCleanup_Click" />
                    </StackPanel>
                </StackPanel>
            </Border>

            <!-- Cleanup Preview / Results -->
            <Border x:Name="CleanupResultsCard" Style="{StaticResource CardStyle}" Visibility="Collapsed">
                <StackPanel Spacing="12">
                    <StackPanel Orientation="Horizontal" Spacing="8">
                        <FontIcon Glyph="&#xE74D;" Foreground="{ThemeResource SystemAccentColor}" FontSize="20" />
                        <TextBlock Text="Cleanup Preview" Style="{StaticResource SubtitleTextBlockStyle}" />
                    </StackPanel>

                    <Grid ColumnSpacing="24">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>

                        <StackPanel>
                            <TextBlock x:Name="CleanupFilesText" Text="0" Style="{StaticResource SubheaderTextBlockStyle}" Foreground="{ThemeResource SystemAccentColor}" />
                            <TextBlock Text="Files to delete" Style="{StaticResource CaptionTextBlockStyle}" />
                        </StackPanel>

                        <StackPanel Grid.Column="1">
                            <TextBlock x:Name="CleanupSizeText" Text="0 MB" Style="{StaticResource SubheaderTextBlockStyle}" Foreground="{ThemeResource SystemAccentColor}" />
                            <TextBlock Text="Space to free" Style="{StaticResource CaptionTextBlockStyle}" />
                        </StackPanel>

                        <Button Grid.Column="2" Content="Execute Cleanup" Click="ExecuteCleanup_Click"
                                Style="{StaticResource AccentButtonStyle}" VerticalAlignment="Center" />
                    </Grid>

                    <ListView x:Name="CleanupFilesList" SelectionMode="None" MaxHeight="200">
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <Grid Padding="8,4">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="Auto" />
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Text="{Binding Path}" TextTrimming="CharacterEllipsis" />
                                    <TextBlock Grid.Column="1" Text="{Binding SizeText}" Margin="12,0"
                                               Foreground="{ThemeResource SystemBaseMediumColor}" />
                                    <TextBlock Grid.Column="2" Text="{Binding Reason}"
                                               Style="{StaticResource CaptionTextBlockStyle}"
                                               Foreground="{ThemeResource SystemBaseMediumColor}" />
                                </Grid>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </StackPanel>
            </Border>

            <!-- Maintenance History -->
            <Border Style="{StaticResource CardStyle}">
                <StackPanel Spacing="12">
                    <StackPanel Orientation="Horizontal" Spacing="8">
                        <FontIcon Glyph="&#xE81C;" Foreground="{ThemeResource SystemAccentColor}" FontSize="20" />
                        <TextBlock Text="Maintenance History" Style="{StaticResource SubtitleTextBlockStyle}" />
                    </StackPanel>

                    <ListView x:Name="HistoryList" SelectionMode="None" MaxHeight="200">
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <Grid Padding="8,4">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="Auto" />
                                    </Grid.ColumnDefinitions>
                                    <FontIcon Glyph="{Binding StatusIcon}" FontSize="14" Foreground="{Binding StatusColor}" Margin="0,0,12,0" />
                                    <TextBlock Grid.Column="1" Text="{Binding TimeText}" />
                                    <TextBlock Grid.Column="2" Text="{Binding OperationsText}" Margin="12,0"
                                               Style="{StaticResource CaptionTextBlockStyle}" />
                                    <TextBlock Grid.Column="3" Text="{Binding DurationText}"
                                               Foreground="{ThemeResource SystemBaseMediumColor}" />
                                </Grid>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </StackPanel>
            </Border>

            <!-- Status InfoBar -->
            <InfoBar x:Name="StatusInfoBar" IsOpen="False" IsClosable="True" />
        </StackPanel>
    </ScrollViewer>
</Page>
