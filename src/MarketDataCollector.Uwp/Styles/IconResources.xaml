    <!-- ICON STYLES -->
    <!-- ========================================== -->

    <!-- Small Icon (12px) -->
    <Style x:Key="IconSmallStyle" TargetType="FontIcon">
        <Setter Property="FontSize" Value="12" />
        <Setter Property="FontFamily" Value="Segoe MDL2 Assets" />
    </Style>

    <!-- Medium Icon (16px) - Default -->
    <Style x:Key="IconMediumStyle" TargetType="FontIcon">
        <Setter Property="FontSize" Value="16" />
        <Setter Property="FontFamily" Value="Segoe MDL2 Assets" />
    </Style>

    <!-- Large Icon (20px) -->
    <Style x:Key="IconLargeStyle" TargetType="FontIcon">
        <Setter Property="FontSize" Value="20" />
        <Setter Property="FontFamily" Value="Segoe MDL2 Assets" />
    </Style>

    <!-- Extra Large Icon (24px) -->
    <Style x:Key="IconXLargeStyle" TargetType="FontIcon">
        <Setter Property="FontSize" Value="24" />
        <Setter Property="FontFamily" Value="Segoe MDL2 Assets" />
    </Style>

    <!-- Hero Icon (32px) -->
    <Style x:Key="IconHeroStyle" TargetType="FontIcon">
        <Setter Property="FontSize" Value="32" />
        <Setter Property="FontFamily" Value="Segoe MDL2 Assets" />
    </Style>

    <!-- Accent Icon Styles -->
    <Style x:Key="IconSuccessStyle" TargetType="FontIcon" BasedOn="{StaticResource IconMediumStyle}">
        <Setter Property="Foreground" Value="{StaticResource SuccessColorBrush}" />
    </Style>

    <Style x:Key="IconWarningStyle" TargetType="FontIcon" BasedOn="{StaticResource IconMediumStyle}">
        <Setter Property="Foreground" Value="{StaticResource WarningColorBrush}" />
    </Style>

    <Style x:Key="IconErrorStyle" TargetType="FontIcon" BasedOn="{StaticResource IconMediumStyle}">
        <Setter Property="Foreground" Value="{StaticResource ErrorColorBrush}" />
    </Style>

    <Style x:Key="IconInfoStyle" TargetType="FontIcon" BasedOn="{StaticResource IconMediumStyle}">
        <Setter Property="Foreground" Value="{StaticResource InfoColorBrush}" />
    </Style>

    <Style x:Key="IconMutedStyle" TargetType="FontIcon" BasedOn="{StaticResource IconMediumStyle}">
        <Setter Property="Foreground" Value="{StaticResource ConsoleTextMutedBrush}" />
    </Style>

