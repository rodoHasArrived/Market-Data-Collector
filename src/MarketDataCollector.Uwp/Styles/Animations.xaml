<?xml version="1.0" encoding="utf-8"?>
<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- ========================================== -->
    <!-- ANIMATION TIMING FUNCTIONS -->
    <!-- ========================================== -->

    <!-- Standard easing for most animations -->
    <CubicBezierEasingFunction x:Key="StandardEasing" ControlPoint1="0.4,0" ControlPoint2="0.2,1" />

    <!-- Deceleration easing for entering elements -->
    <CubicBezierEasingFunction x:Key="DecelerateEasing" ControlPoint1="0,0" ControlPoint2="0.2,1" />

    <!-- Acceleration easing for exiting elements -->
    <CubicBezierEasingFunction x:Key="AccelerateEasing" ControlPoint1="0.4,0" ControlPoint2="1,1" />

    <!-- Sharp easing for quick micro-interactions -->
    <CubicBezierEasingFunction x:Key="SharpEasing" ControlPoint1="0.4,0" ControlPoint2="0.6,1" />

    <!-- ========================================== -->
    <!-- DURATION CONSTANTS -->
    <!-- ========================================== -->

    <Duration x:Key="InstantDuration">0:0:0.05</Duration>
    <Duration x:Key="QuickDuration">0:0:0.15</Duration>
    <Duration x:Key="NormalDuration">0:0:0.25</Duration>
    <Duration x:Key="SlowDuration">0:0:0.4</Duration>
    <Duration x:Key="EnterDuration">0:0:0.3</Duration>
    <Duration x:Key="ExitDuration">0:0:0.2</Duration>

    <!-- ========================================== -->
    <!-- FADE ANIMATIONS -->
    <!-- ========================================== -->

    <!-- Fade In -->
    <Storyboard x:Key="FadeInStoryboard">
        <DoubleAnimation
            Storyboard.TargetProperty="Opacity"
            From="0" To="1"
            Duration="{StaticResource NormalDuration}">
            <DoubleAnimation.EasingFunction>
                <CubicBezierEasingFunction ControlPoint1="0,0" ControlPoint2="0.2,1" />
            </DoubleAnimation.EasingFunction>
        </DoubleAnimation>
    </Storyboard>

    <!-- Fade Out -->
    <Storyboard x:Key="FadeOutStoryboard">
        <DoubleAnimation
            Storyboard.TargetProperty="Opacity"
            From="1" To="0"
            Duration="{StaticResource QuickDuration}">
            <DoubleAnimation.EasingFunction>
                <CubicBezierEasingFunction ControlPoint1="0.4,0" ControlPoint2="1,1" />
            </DoubleAnimation.EasingFunction>
        </DoubleAnimation>
    </Storyboard>

    <!-- ========================================== -->
    <!-- SLIDE ANIMATIONS -->
    <!-- ========================================== -->

    <!-- Slide In From Right -->
    <Storyboard x:Key="SlideInFromRightStoryboard">
        <DoubleAnimation
            Storyboard.TargetProperty="(UIElement.RenderTransform).(TranslateTransform.X)"
            From="50" To="0"
            Duration="{StaticResource EnterDuration}">
            <DoubleAnimation.EasingFunction>
                <CubicBezierEasingFunction ControlPoint1="0,0" ControlPoint2="0.2,1" />
            </DoubleAnimation.EasingFunction>
        </DoubleAnimation>
        <DoubleAnimation
            Storyboard.TargetProperty="Opacity"
            From="0" To="1"
            Duration="{StaticResource NormalDuration}">
            <DoubleAnimation.EasingFunction>
                <CubicBezierEasingFunction ControlPoint1="0,0" ControlPoint2="0.2,1" />
            </DoubleAnimation.EasingFunction>
        </DoubleAnimation>
    </Storyboard>

    <!-- Slide In From Left -->
    <Storyboard x:Key="SlideInFromLeftStoryboard">
        <DoubleAnimation
            Storyboard.TargetProperty="(UIElement.RenderTransform).(TranslateTransform.X)"
            From="-50" To="0"
            Duration="{StaticResource EnterDuration}">
            <DoubleAnimation.EasingFunction>
                <CubicBezierEasingFunction ControlPoint1="0,0" ControlPoint2="0.2,1" />
            </DoubleAnimation.EasingFunction>
        </DoubleAnimation>
        <DoubleAnimation
            Storyboard.TargetProperty="Opacity"
            From="0" To="1"
            Duration="{StaticResource NormalDuration}">
            <DoubleAnimation.EasingFunction>
                <CubicBezierEasingFunction ControlPoint1="0,0" ControlPoint2="0.2,1" />
            </DoubleAnimation.EasingFunction>
        </DoubleAnimation>
    </Storyboard>

    <!-- Slide In From Bottom -->
    <Storyboard x:Key="SlideInFromBottomStoryboard">
        <DoubleAnimation
            Storyboard.TargetProperty="(UIElement.RenderTransform).(TranslateTransform.Y)"
            From="30" To="0"
            Duration="{StaticResource EnterDuration}">
            <DoubleAnimation.EasingFunction>
                <CubicBezierEasingFunction ControlPoint1="0,0" ControlPoint2="0.2,1" />
            </DoubleAnimation.EasingFunction>
        </DoubleAnimation>
        <DoubleAnimation
            Storyboard.TargetProperty="Opacity"
            From="0" To="1"
            Duration="{StaticResource NormalDuration}">
            <DoubleAnimation.EasingFunction>
                <CubicBezierEasingFunction ControlPoint1="0,0" ControlPoint2="0.2,1" />
            </DoubleAnimation.EasingFunction>
        </DoubleAnimation>
    </Storyboard>

    <!-- Slide In From Top -->
    <Storyboard x:Key="SlideInFromTopStoryboard">
        <DoubleAnimation
            Storyboard.TargetProperty="(UIElement.RenderTransform).(TranslateTransform.Y)"
            From="-30" To="0"
            Duration="{StaticResource EnterDuration}">
            <DoubleAnimation.EasingFunction>
                <CubicBezierEasingFunction ControlPoint1="0,0" ControlPoint2="0.2,1" />
            </DoubleAnimation.EasingFunction>
        </DoubleAnimation>
        <DoubleAnimation
            Storyboard.TargetProperty="Opacity"
            From="0" To="1"
            Duration="{StaticResource NormalDuration}">
            <DoubleAnimation.EasingFunction>
                <CubicBezierEasingFunction ControlPoint1="0,0" ControlPoint2="0.2,1" />
            </DoubleAnimation.EasingFunction>
        </DoubleAnimation>
    </Storyboard>

    <!-- ========================================== -->
    <!-- SCALE ANIMATIONS -->
    <!-- ========================================== -->

    <!-- Scale In (Pop) -->
    <Storyboard x:Key="ScaleInStoryboard">
        <DoubleAnimation
            Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleX)"
            From="0.9" To="1"
            Duration="{StaticResource NormalDuration}">
            <DoubleAnimation.EasingFunction>
                <CubicBezierEasingFunction ControlPoint1="0,0" ControlPoint2="0.2,1" />
            </DoubleAnimation.EasingFunction>
        </DoubleAnimation>
        <DoubleAnimation
            Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleY)"
            From="0.9" To="1"
            Duration="{StaticResource NormalDuration}">
            <DoubleAnimation.EasingFunction>
                <CubicBezierEasingFunction ControlPoint1="0,0" ControlPoint2="0.2,1" />
            </DoubleAnimation.EasingFunction>
        </DoubleAnimation>
        <DoubleAnimation
            Storyboard.TargetProperty="Opacity"
            From="0" To="1"
            Duration="{StaticResource QuickDuration}" />
    </Storyboard>

    <!-- Scale Out -->
    <Storyboard x:Key="ScaleOutStoryboard">
        <DoubleAnimation
            Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleX)"
            From="1" To="0.9"
            Duration="{StaticResource QuickDuration}">
            <DoubleAnimation.EasingFunction>
                <CubicBezierEasingFunction ControlPoint1="0.4,0" ControlPoint2="1,1" />
            </DoubleAnimation.EasingFunction>
        </DoubleAnimation>
        <DoubleAnimation
            Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleY)"
            From="1" To="0.9"
            Duration="{StaticResource QuickDuration}">
            <DoubleAnimation.EasingFunction>
                <CubicBezierEasingFunction ControlPoint1="0.4,0" ControlPoint2="1,1" />
            </DoubleAnimation.EasingFunction>
        </DoubleAnimation>
        <DoubleAnimation
            Storyboard.TargetProperty="Opacity"
            From="1" To="0"
            Duration="{StaticResource QuickDuration}" />
    </Storyboard>

    <!-- ========================================== -->
    <!-- PULSE ANIMATIONS -->
    <!-- ========================================== -->

    <!-- Pulse Animation (for live indicators) -->
    <Storyboard x:Key="PulseStoryboard" RepeatBehavior="Forever">
        <DoubleAnimationUsingKeyFrames
            Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleX)">
            <EasingDoubleKeyFrame KeyTime="0:0:0" Value="1" />
            <EasingDoubleKeyFrame KeyTime="0:0:0.5" Value="1.2">
                <EasingDoubleKeyFrame.EasingFunction>
                    <CubicBezierEasingFunction ControlPoint1="0.4,0" ControlPoint2="0.2,1" />
                </EasingDoubleKeyFrame.EasingFunction>
            </EasingDoubleKeyFrame>
            <EasingDoubleKeyFrame KeyTime="0:0:1" Value="1">
                <EasingDoubleKeyFrame.EasingFunction>
                    <CubicBezierEasingFunction ControlPoint1="0.4,0" ControlPoint2="0.2,1" />
                </EasingDoubleKeyFrame.EasingFunction>
            </EasingDoubleKeyFrame>
        </DoubleAnimationUsingKeyFrames>
        <DoubleAnimationUsingKeyFrames
            Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleY)">
            <EasingDoubleKeyFrame KeyTime="0:0:0" Value="1" />
            <EasingDoubleKeyFrame KeyTime="0:0:0.5" Value="1.2">
                <EasingDoubleKeyFrame.EasingFunction>
                    <CubicBezierEasingFunction ControlPoint1="0.4,0" ControlPoint2="0.2,1" />
                </EasingDoubleKeyFrame.EasingFunction>
            </EasingDoubleKeyFrame>
            <EasingDoubleKeyFrame KeyTime="0:0:1" Value="1">
                <EasingDoubleKeyFrame.EasingFunction>
                    <CubicBezierEasingFunction ControlPoint1="0.4,0" ControlPoint2="0.2,1" />
                </EasingDoubleKeyFrame.EasingFunction>
            </EasingDoubleKeyFrame>
        </DoubleAnimationUsingKeyFrames>
        <DoubleAnimationUsingKeyFrames
            Storyboard.TargetProperty="Opacity">
            <EasingDoubleKeyFrame KeyTime="0:0:0" Value="1" />
            <EasingDoubleKeyFrame KeyTime="0:0:0.5" Value="0.6" />
            <EasingDoubleKeyFrame KeyTime="0:0:1" Value="1" />
        </DoubleAnimationUsingKeyFrames>
    </Storyboard>

    <!-- Subtle Pulse (gentler) -->
    <Storyboard x:Key="SubtlePulseStoryboard" RepeatBehavior="Forever">
        <DoubleAnimationUsingKeyFrames
            Storyboard.TargetProperty="Opacity">
            <EasingDoubleKeyFrame KeyTime="0:0:0" Value="1" />
            <EasingDoubleKeyFrame KeyTime="0:0:0.75" Value="0.5" />
            <EasingDoubleKeyFrame KeyTime="0:0:1.5" Value="1" />
        </DoubleAnimationUsingKeyFrames>
    </Storyboard>

    <!-- ========================================== -->
    <!-- SHAKE ANIMATIONS -->
    <!-- ========================================== -->

    <!-- Shake Animation (for error feedback) -->
    <Storyboard x:Key="ShakeStoryboard">
        <DoubleAnimationUsingKeyFrames
            Storyboard.TargetProperty="(UIElement.RenderTransform).(TranslateTransform.X)">
            <EasingDoubleKeyFrame KeyTime="0:0:0" Value="0" />
            <EasingDoubleKeyFrame KeyTime="0:0:0.05" Value="-8" />
            <EasingDoubleKeyFrame KeyTime="0:0:0.1" Value="8" />
            <EasingDoubleKeyFrame KeyTime="0:0:0.15" Value="-6" />
            <EasingDoubleKeyFrame KeyTime="0:0:0.2" Value="6" />
            <EasingDoubleKeyFrame KeyTime="0:0:0.25" Value="-4" />
            <EasingDoubleKeyFrame KeyTime="0:0:0.3" Value="4" />
            <EasingDoubleKeyFrame KeyTime="0:0:0.35" Value="0" />
        </DoubleAnimationUsingKeyFrames>
    </Storyboard>

    <!-- ========================================== -->
    <!-- ROTATION ANIMATIONS -->
    <!-- ========================================== -->

    <!-- Spin Animation (for loading indicators) -->
    <Storyboard x:Key="SpinStoryboard" RepeatBehavior="Forever">
        <DoubleAnimation
            Storyboard.TargetProperty="(UIElement.RenderTransform).(RotateTransform.Angle)"
            From="0" To="360"
            Duration="0:0:1" />
    </Storyboard>

    <!-- ========================================== -->
    <!-- SKELETON LOADING ANIMATION -->
    <!-- ========================================== -->

    <!-- Skeleton Shimmer -->
    <Storyboard x:Key="SkeletonShimmerStoryboard" RepeatBehavior="Forever">
        <DoubleAnimation
            Storyboard.TargetProperty="(UIElement.RenderTransform).(TranslateTransform.X)"
            From="-100" To="300"
            Duration="0:0:1.5">
            <DoubleAnimation.EasingFunction>
                <LinearEasingFunction />
            </DoubleAnimation.EasingFunction>
        </DoubleAnimation>
    </Storyboard>

    <!-- ========================================== -->
    <!-- HIGHLIGHT ANIMATIONS -->
    <!-- ========================================== -->

    <!-- Flash Highlight (for new items) -->
    <Storyboard x:Key="FlashHighlightStoryboard">
        <ColorAnimationUsingKeyFrames
            Storyboard.TargetProperty="(Border.Background).(SolidColorBrush.Color)">
            <EasingColorKeyFrame KeyTime="0:0:0" Value="#333fb950" />
            <EasingColorKeyFrame KeyTime="0:0:0.3" Value="#333fb950" />
            <EasingColorKeyFrame KeyTime="0:0:0.8" Value="Transparent">
                <EasingColorKeyFrame.EasingFunction>
                    <CubicBezierEasingFunction ControlPoint1="0.4,0" ControlPoint2="0.2,1" />
                </EasingColorKeyFrame.EasingFunction>
            </EasingColorKeyFrame>
        </ColorAnimationUsingKeyFrames>
    </Storyboard>

    <!-- ========================================== -->
    <!-- ACCORDION/EXPAND ANIMATIONS -->
    <!-- ========================================== -->

    <!-- Expand Height -->
    <Storyboard x:Key="ExpandHeightStoryboard">
        <DoubleAnimation
            Storyboard.TargetProperty="(FrameworkElement.MaxHeight)"
            From="0" To="500"
            Duration="{StaticResource NormalDuration}">
            <DoubleAnimation.EasingFunction>
                <CubicBezierEasingFunction ControlPoint1="0,0" ControlPoint2="0.2,1" />
            </DoubleAnimation.EasingFunction>
        </DoubleAnimation>
        <DoubleAnimation
            Storyboard.TargetProperty="Opacity"
            From="0" To="1"
            Duration="{StaticResource QuickDuration}" />
    </Storyboard>

    <!-- Collapse Height -->
    <Storyboard x:Key="CollapseHeightStoryboard">
        <DoubleAnimation
            Storyboard.TargetProperty="(FrameworkElement.MaxHeight)"
            From="500" To="0"
            Duration="{StaticResource QuickDuration}">
            <DoubleAnimation.EasingFunction>
                <CubicBezierEasingFunction ControlPoint1="0.4,0" ControlPoint2="1,1" />
            </DoubleAnimation.EasingFunction>
        </DoubleAnimation>
        <DoubleAnimation
            Storyboard.TargetProperty="Opacity"
            From="1" To="0"
            Duration="{StaticResource QuickDuration}" />
    </Storyboard>

    <!-- ========================================== -->
    <!-- FLICK GESTURE ANIMATIONS -->
    <!-- ========================================== -->

    <!-- Right Flick Reveal Animation (for triggering dropdown menus) -->
    <Storyboard x:Key="RightFlickRevealStoryboard">
        <DoubleAnimationUsingKeyFrames
            Storyboard.TargetProperty="(UIElement.RenderTransform).(TranslateTransform.X)">
            <EasingDoubleKeyFrame KeyTime="0:0:0" Value="0" />
            <EasingDoubleKeyFrame KeyTime="0:0:0.15" Value="30">
                <EasingDoubleKeyFrame.EasingFunction>
                    <CubicBezierEasingFunction ControlPoint1="0.4,0" ControlPoint2="0.2,1" />
                </EasingDoubleKeyFrame.EasingFunction>
            </EasingDoubleKeyFrame>
            <EasingDoubleKeyFrame KeyTime="0:0:0.3" Value="0">
                <EasingDoubleKeyFrame.EasingFunction>
                    <CubicBezierEasingFunction ControlPoint1="0.4,0" ControlPoint2="0.2,1" />
                </EasingDoubleKeyFrame.EasingFunction>
            </EasingDoubleKeyFrame>
        </DoubleAnimationUsingKeyFrames>
    </Storyboard>

    <!-- Left Flick Dismiss Animation -->
    <Storyboard x:Key="LeftFlickDismissStoryboard">
        <DoubleAnimationUsingKeyFrames
            Storyboard.TargetProperty="(UIElement.RenderTransform).(TranslateTransform.X)">
            <EasingDoubleKeyFrame KeyTime="0:0:0" Value="0" />
            <EasingDoubleKeyFrame KeyTime="0:0:0.15" Value="-30">
                <EasingDoubleKeyFrame.EasingFunction>
                    <CubicBezierEasingFunction ControlPoint1="0.4,0" ControlPoint2="0.2,1" />
                </EasingDoubleKeyFrame.EasingFunction>
            </EasingDoubleKeyFrame>
            <EasingDoubleKeyFrame KeyTime="0:0:0.3" Value="0">
                <EasingDoubleKeyFrame.EasingFunction>
                    <CubicBezierEasingFunction ControlPoint1="0.4,0" ControlPoint2="0.2,1" />
                </EasingDoubleKeyFrame.EasingFunction>
            </EasingDoubleKeyFrame>
        </DoubleAnimationUsingKeyFrames>
    </Storyboard>

    <!-- ========================================== -->
    <!-- DROPDOWN MENU ANIMATIONS -->
    <!-- ========================================== -->

    <!-- Dropdown Menu Open Animation -->
    <Storyboard x:Key="DropdownMenuOpenStoryboard">
        <DoubleAnimation
            Storyboard.TargetProperty="(UIElement.RenderTransform).(CompositeTransform.ScaleY)"
            From="0" To="1"
            Duration="0:0:0.2">
            <DoubleAnimation.EasingFunction>
                <CubicBezierEasingFunction ControlPoint1="0,0" ControlPoint2="0.2,1" />
            </DoubleAnimation.EasingFunction>
        </DoubleAnimation>
        <DoubleAnimation
            Storyboard.TargetProperty="(UIElement.RenderTransform).(CompositeTransform.ScaleX)"
            From="0.95" To="1"
            Duration="0:0:0.2">
            <DoubleAnimation.EasingFunction>
                <CubicBezierEasingFunction ControlPoint1="0,0" ControlPoint2="0.2,1" />
            </DoubleAnimation.EasingFunction>
        </DoubleAnimation>
        <DoubleAnimation
            Storyboard.TargetProperty="Opacity"
            From="0" To="1"
            Duration="0:0:0.15" />
    </Storyboard>

    <!-- Dropdown Menu Close Animation -->
    <Storyboard x:Key="DropdownMenuCloseStoryboard">
        <DoubleAnimation
            Storyboard.TargetProperty="(UIElement.RenderTransform).(CompositeTransform.ScaleY)"
            From="1" To="0"
            Duration="0:0:0.15">
            <DoubleAnimation.EasingFunction>
                <CubicBezierEasingFunction ControlPoint1="0.4,0" ControlPoint2="1,1" />
            </DoubleAnimation.EasingFunction>
        </DoubleAnimation>
        <DoubleAnimation
            Storyboard.TargetProperty="Opacity"
            From="1" To="0"
            Duration="0:0:0.1" />
    </Storyboard>

    <!-- Dropdown Menu Item Hover Animation -->
    <Storyboard x:Key="DropdownItemHoverStoryboard">
        <DoubleAnimation
            Storyboard.TargetProperty="(UIElement.RenderTransform).(TranslateTransform.X)"
            To="4"
            Duration="0:0:0.1">
            <DoubleAnimation.EasingFunction>
                <CubicBezierEasingFunction ControlPoint1="0.4,0" ControlPoint2="0.6,1" />
            </DoubleAnimation.EasingFunction>
        </DoubleAnimation>
    </Storyboard>

    <!-- Dropdown Menu Item Unhover Animation -->
    <Storyboard x:Key="DropdownItemUnhoverStoryboard">
        <DoubleAnimation
            Storyboard.TargetProperty="(UIElement.RenderTransform).(TranslateTransform.X)"
            To="0"
            Duration="0:0:0.1">
            <DoubleAnimation.EasingFunction>
                <CubicBezierEasingFunction ControlPoint1="0.4,0" ControlPoint2="0.6,1" />
            </DoubleAnimation.EasingFunction>
        </DoubleAnimation>
    </Storyboard>

    <!-- ========================================== -->
    <!-- EDGE SWIPE MENU ANIMATIONS -->
    <!-- ========================================== -->

    <!-- Edge Menu Slide In -->
    <Storyboard x:Key="EdgeMenuSlideInStoryboard">
        <DoubleAnimation
            Storyboard.TargetProperty="(UIElement.RenderTransform).(TranslateTransform.X)"
            From="-320" To="0"
            Duration="0:0:0.3">
            <DoubleAnimation.EasingFunction>
                <CubicBezierEasingFunction ControlPoint1="0,0" ControlPoint2="0.2,1" />
            </DoubleAnimation.EasingFunction>
        </DoubleAnimation>
        <DoubleAnimation
            Storyboard.TargetProperty="Opacity"
            From="0" To="1"
            Duration="0:0:0.2" />
    </Storyboard>

    <!-- Edge Menu Slide Out -->
    <Storyboard x:Key="EdgeMenuSlideOutStoryboard">
        <DoubleAnimation
            Storyboard.TargetProperty="(UIElement.RenderTransform).(TranslateTransform.X)"
            From="0" To="-320"
            Duration="0:0:0.25">
            <DoubleAnimation.EasingFunction>
                <CubicBezierEasingFunction ControlPoint1="0.4,0" ControlPoint2="1,1" />
            </DoubleAnimation.EasingFunction>
        </DoubleAnimation>
        <DoubleAnimation
            Storyboard.TargetProperty="Opacity"
            From="1" To="0"
            Duration="0:0:0.2" />
    </Storyboard>

    <!-- Menu Overlay Fade In -->
    <Storyboard x:Key="MenuOverlayFadeInStoryboard">
        <DoubleAnimation
            Storyboard.TargetProperty="Opacity"
            From="0" To="0.5"
            Duration="0:0:0.25">
            <DoubleAnimation.EasingFunction>
                <CubicBezierEasingFunction ControlPoint1="0,0" ControlPoint2="0.2,1" />
            </DoubleAnimation.EasingFunction>
        </DoubleAnimation>
    </Storyboard>

    <!-- Menu Overlay Fade Out -->
    <Storyboard x:Key="MenuOverlayFadeOutStoryboard">
        <DoubleAnimation
            Storyboard.TargetProperty="Opacity"
            From="0.5" To="0"
            Duration="0:0:0.2">
            <DoubleAnimation.EasingFunction>
                <CubicBezierEasingFunction ControlPoint1="0.4,0" ControlPoint2="1,1" />
            </DoubleAnimation.EasingFunction>
        </DoubleAnimation>
    </Storyboard>

    <!-- ========================================== -->
    <!-- CASCADING MENU ITEM ANIMATIONS -->
    <!-- ========================================== -->

    <!-- Stagger delay durations for cascading effects -->
    <Duration x:Key="StaggerDelay1">0:0:0.03</Duration>
    <Duration x:Key="StaggerDelay2">0:0:0.06</Duration>
    <Duration x:Key="StaggerDelay3">0:0:0.09</Duration>
    <Duration x:Key="StaggerDelay4">0:0:0.12</Duration>
    <Duration x:Key="StaggerDelay5">0:0:0.15</Duration>

    <!-- Menu Item Cascade In -->
    <Storyboard x:Key="MenuItemCascadeInStoryboard">
        <DoubleAnimation
            Storyboard.TargetProperty="(UIElement.RenderTransform).(TranslateTransform.X)"
            From="-20" To="0"
            Duration="0:0:0.2">
            <DoubleAnimation.EasingFunction>
                <CubicBezierEasingFunction ControlPoint1="0,0" ControlPoint2="0.2,1" />
            </DoubleAnimation.EasingFunction>
        </DoubleAnimation>
        <DoubleAnimation
            Storyboard.TargetProperty="Opacity"
            From="0" To="1"
            Duration="0:0:0.15" />
    </Storyboard>

    <!-- Navigation Arrow Bounce -->
    <Storyboard x:Key="NavigationArrowBounceStoryboard">
        <DoubleAnimationUsingKeyFrames
            Storyboard.TargetProperty="(UIElement.RenderTransform).(TranslateTransform.X)">
            <EasingDoubleKeyFrame KeyTime="0:0:0" Value="0" />
            <EasingDoubleKeyFrame KeyTime="0:0:0.1" Value="5" />
            <EasingDoubleKeyFrame KeyTime="0:0:0.2" Value="0" />
            <EasingDoubleKeyFrame KeyTime="0:0:0.3" Value="5" />
            <EasingDoubleKeyFrame KeyTime="0:0:0.4" Value="0" />
        </DoubleAnimationUsingKeyFrames>
    </Storyboard>

</ResourceDictionary>
