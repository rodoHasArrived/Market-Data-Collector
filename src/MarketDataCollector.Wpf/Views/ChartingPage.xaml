<Page x:Class="MarketDataCollector.Wpf.Views.ChartingPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Background="{DynamicResource ConsoleBackgroundDarkBrush}"
      Loaded="OnPageLoaded">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!-- Header & Controls -->
        <Border Grid.Row="0" Background="{DynamicResource ConsoleBackgroundBrush}" Padding="24,16">
            <StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0,0,0,12">
                    <TextBlock Text="&#xE9D9;" FontFamily="{StaticResource SymbolThemeFontFamily}"
                               FontSize="28" Foreground="{StaticResource InfoColorBrush}" VerticalAlignment="Center" />
                    <TextBlock Text="Advanced Charts" Style="{StaticResource PageTitleStyle}" Margin="12,0,0,0" VerticalAlignment="Center" />
                </StackPanel>

                <WrapPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,0,16,4">
                        <TextBlock Text="Symbol" Style="{StaticResource FormLabelStyle}" VerticalAlignment="Center" Margin="0,0,8,0" />
                        <ComboBox x:Name="SymbolCombo" MinWidth="120" SelectionChanged="Symbol_SelectionChanged" />
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" Margin="0,0,16,4">
                        <TextBlock Text="Timeframe" Style="{StaticResource FormLabelStyle}" VerticalAlignment="Center" Margin="0,0,8,0" />
                        <ComboBox x:Name="TimeframeCombo" MinWidth="100" SelectedIndex="6" SelectionChanged="Timeframe_SelectionChanged">
                            <ComboBoxItem Content="1 Min" Tag="Minute1" />
                            <ComboBoxItem Content="5 Min" Tag="Minute5" />
                            <ComboBoxItem Content="15 Min" Tag="Minute15" />
                            <ComboBoxItem Content="30 Min" Tag="Minute30" />
                            <ComboBoxItem Content="1 Hour" Tag="Hour1" />
                            <ComboBoxItem Content="4 Hour" Tag="Hour4" />
                            <ComboBoxItem Content="Daily" Tag="Daily" />
                            <ComboBoxItem Content="Weekly" Tag="Weekly" />
                            <ComboBoxItem Content="Monthly" Tag="Monthly" />
                        </ComboBox>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" Margin="0,0,16,4">
                        <TextBlock Text="From" Style="{StaticResource FormLabelStyle}" VerticalAlignment="Center" Margin="0,0,8,0" />
                        <DatePicker x:Name="FromDatePicker" SelectedDateChanged="DatePicker_Changed" />
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" Margin="0,0,16,4">
                        <TextBlock Text="To" Style="{StaticResource FormLabelStyle}" VerticalAlignment="Center" Margin="0,0,8,0" />
                        <DatePicker x:Name="ToDatePicker" SelectedDateChanged="DatePicker_Changed" />
                    </StackPanel>

                    <Button Content="Refresh" Click="Refresh_Click" Margin="0,0,8,4" Style="{StaticResource FormButtonStyle}" />

                    <StackPanel Orientation="Horizontal" Margin="16,0,0,4">
                        <TextBlock Text="Indicators:" Style="{StaticResource FormLabelStyle}" VerticalAlignment="Center" Margin="0,0,8,0" />
                        <CheckBox Content="SMA" Click="Indicator_Click" Tag="sma" Foreground="{DynamicResource ConsoleTextBrush}" Margin="0,0,8,0" />
                        <CheckBox Content="EMA" Click="Indicator_Click" Tag="ema" Foreground="{DynamicResource ConsoleTextBrush}" Margin="0,0,8,0" />
                        <CheckBox Content="RSI" Click="Indicator_Click" Tag="rsi" Foreground="{DynamicResource ConsoleTextBrush}" Margin="0,0,8,0" />
                        <CheckBox Content="MACD" Click="Indicator_Click" Tag="macd" Foreground="{DynamicResource ConsoleTextBrush}" Margin="0,0,8,0" />
                        <CheckBox Content="BB" Click="Indicator_Click" Tag="bb" Foreground="{DynamicResource ConsoleTextBrush}" Margin="0,0,8,0" />
                        <CheckBox Content="VWAP" Click="Indicator_Click" Tag="vwap" Foreground="{DynamicResource ConsoleTextBrush}" Margin="0,0,8,0" />
                        <CheckBox Content="ATR" Click="Indicator_Click" Tag="atr" Foreground="{DynamicResource ConsoleTextBrush}" Margin="0,0,8,0" />
                    </StackPanel>
                </WrapPanel>
            </StackPanel>
        </Border>

        <!-- Content -->
        <Grid Grid.Row="1" Margin="24,16">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="280" />
            </Grid.ColumnDefinitions>

            <Grid Grid.Column="0" Margin="0,0,16,0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="150" />
                </Grid.RowDefinitions>

                <!-- Price Header -->
                <Border Grid.Row="0" Style="{StaticResource CardStyle}" Margin="0,0,0,8" Padding="16">
                    <StackPanel Orientation="Horizontal">
                        <StackPanel Margin="0,0,32,0">
                            <TextBlock x:Name="CurrentPriceText" Text="--" FontSize="28" FontWeight="Bold" Foreground="{DynamicResource ConsoleTextBrush}" />
                            <StackPanel Orientation="Horizontal">
                                <TextBlock x:Name="PriceChangeText" Text="--" FontSize="14" Margin="0,0,8,0" />
                                <TextBlock x:Name="PriceChangePercentText" Text="--" FontSize="14" />
                            </StackPanel>
                        </StackPanel>

                        <UniformGrid Rows="2" Columns="4" Margin="0,0,32,0">
                            <TextBlock Text="O" FontSize="11" Foreground="{StaticResource ConsoleTextMutedBrush}" />
                            <TextBlock x:Name="OpenText" Text="--" FontSize="12" FontFamily="Consolas" Foreground="{DynamicResource ConsoleTextBrush}" />
                            <TextBlock Text="Volume" FontSize="11" Foreground="{StaticResource ConsoleTextMutedBrush}" />
                            <TextBlock x:Name="VolumeText" Text="--" FontSize="12" FontFamily="Consolas" Foreground="{DynamicResource ConsoleTextBrush}" />
                            <TextBlock Text="H" FontSize="11" Foreground="{StaticResource ConsoleTextMutedBrush}" />
                            <TextBlock x:Name="HighText" Text="--" FontSize="12" FontFamily="Consolas" Foreground="{StaticResource SuccessColorBrush}" />
                            <TextBlock Text="L" FontSize="11" Foreground="{StaticResource ConsoleTextMutedBrush}" />
                            <TextBlock x:Name="LowText" Text="--" FontSize="12" FontFamily="Consolas" Foreground="{StaticResource ErrorColorBrush}" />
                        </UniformGrid>

                        <TextBlock x:Name="ActiveIndicatorsText" Text="" FontSize="11" Foreground="{StaticResource ConsoleTextMutedBrush}" VerticalAlignment="Center" />
                    </StackPanel>
                </Border>

                <!-- Candlestick Chart -->
                <Border Grid.Row="1" Style="{StaticResource CardStyle}" Margin="0,0,0,8">
                    <Grid>
                        <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Disabled">
                            <ItemsControl x:Name="CandlestickChart">
                                <ItemsControl.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <StackPanel Orientation="Horizontal" />
                                    </ItemsPanelTemplate>
                                </ItemsControl.ItemsPanel>
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Grid Width="12" ToolTip="{Binding Tooltip}">
                                            <Border Width="1" Background="{Binding WickBrush}"
                                                    Height="{Binding WickHeight}" VerticalAlignment="Top"
                                                    Margin="{Binding WickMargin}" />
                                            <Border Width="8" Background="{Binding BodyBrush}"
                                                    Height="{Binding BodyHeight}" VerticalAlignment="Top"
                                                    Margin="{Binding BodyMargin}" CornerRadius="1" />
                                        </Grid>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </ScrollViewer>

                        <TextBlock x:Name="NoChartDataText" Text="Select a symbol to view chart"
                                   HorizontalAlignment="Center" VerticalAlignment="Center"
                                   Foreground="{StaticResource ConsoleTextMutedBrush}" FontStyle="Italic" />
                    </Grid>
                </Border>

                <!-- Volume Chart -->
                <Border Grid.Row="2" Style="{StaticResource CardStyle}">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>

                        <TextBlock Grid.Row="0" Text="Volume" FontWeight="SemiBold" FontSize="14"
                                   Foreground="{DynamicResource ConsoleTextBrush}" Margin="0,0,0,8" />

                        <ScrollViewer Grid.Row="1" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Disabled">
                            <ItemsControl x:Name="VolumeChart">
                                <ItemsControl.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <StackPanel Orientation="Horizontal" VerticalAlignment="Bottom" />
                                    </ItemsPanelTemplate>
                                </ItemsControl.ItemsPanel>
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border Width="10" Margin="1,0"
                                                Height="{Binding Height}" Background="{Binding BarBrush}"
                                                VerticalAlignment="Bottom" ToolTip="{Binding Tooltip}" />
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </ScrollViewer>
                    </Grid>
                </Border>
            </Grid>

            <!-- Side Panel -->
            <ScrollViewer Grid.Column="1" VerticalScrollBarVisibility="Auto">
                <StackPanel>
                    <!-- Volume Profile -->
                    <Border Style="{StaticResource CardStyle}" Margin="0,0,0,8">
                        <StackPanel>
                            <TextBlock Text="Volume Profile" FontWeight="SemiBold" FontSize="14"
                                       Foreground="{DynamicResource ConsoleTextBrush}" Margin="0,0,0,12" />

                            <ItemsControl x:Name="VolumeProfileChart" MaxHeight="300">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Grid Height="14" Margin="0,1">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="55" />
                                                <ColumnDefinition Width="*" />
                                            </Grid.ColumnDefinitions>
                                            <TextBlock Grid.Column="0" Text="{Binding PriceLabel}" FontSize="10" FontFamily="Consolas"
                                                       Foreground="{StaticResource ConsoleTextMutedBrush}" VerticalAlignment="Center" />
                                            <Border Grid.Column="1" Height="10" HorizontalAlignment="Left"
                                                    Width="{Binding BarWidth}" Background="{Binding BarBrush}" CornerRadius="2" />
                                        </Grid>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>

                            <TextBlock x:Name="NoVolumeProfileText" Text="No volume profile data"
                                       HorizontalAlignment="Center" Foreground="{StaticResource ConsoleTextMutedBrush}"
                                       FontStyle="Italic" FontSize="12" />

                            <StackPanel Margin="0,8,0,0">
                                <StackPanel Orientation="Horizontal" Margin="0,2">
                                    <TextBlock Text="POC:" FontSize="11" Foreground="{StaticResource ConsoleTextMutedBrush}" Width="35" />
                                    <TextBlock x:Name="PocText" Text="--" FontSize="11" FontFamily="Consolas" Foreground="{DynamicResource ConsoleTextBrush}" />
                                </StackPanel>
                                <StackPanel Orientation="Horizontal" Margin="0,2">
                                    <TextBlock Text="VAH:" FontSize="11" Foreground="{StaticResource ConsoleTextMutedBrush}" Width="35" />
                                    <TextBlock x:Name="VahText" Text="--" FontSize="11" FontFamily="Consolas" Foreground="{DynamicResource ConsoleTextBrush}" />
                                </StackPanel>
                                <StackPanel Orientation="Horizontal" Margin="0,2">
                                    <TextBlock Text="VAL:" FontSize="11" Foreground="{StaticResource ConsoleTextMutedBrush}" Width="35" />
                                    <TextBlock x:Name="ValText" Text="--" FontSize="11" FontFamily="Consolas" Foreground="{DynamicResource ConsoleTextBrush}" />
                                </StackPanel>
                            </StackPanel>
                        </StackPanel>
                    </Border>

                    <!-- Indicator Values -->
                    <Border Style="{StaticResource CardStyle}" Margin="0,0,0,8">
                        <StackPanel>
                            <TextBlock Text="Indicator Values" FontWeight="SemiBold" FontSize="14"
                                       Foreground="{DynamicResource ConsoleTextBrush}" Margin="0,0,0,12" />

                            <ItemsControl x:Name="IndicatorValuesList" MaxHeight="250">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Grid Margin="0,2">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*" />
                                                <ColumnDefinition Width="Auto" />
                                            </Grid.ColumnDefinitions>
                                            <TextBlock Grid.Column="0" Text="{Binding Name}" FontSize="12" Foreground="{DynamicResource ConsoleTextBrush}" />
                                            <TextBlock Grid.Column="1" Text="{Binding Value}" FontSize="12" FontFamily="Consolas"
                                                       Foreground="{Binding ValueBrush}" FontWeight="SemiBold" />
                                        </Grid>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>

                            <TextBlock x:Name="NoIndicatorsText" Text="Select indicators from the toolbar"
                                       Foreground="{StaticResource ConsoleTextMutedBrush}" FontStyle="Italic"
                                       FontSize="12" HorizontalAlignment="Center" />
                        </StackPanel>
                    </Border>

                    <!-- Period Statistics -->
                    <Border Style="{StaticResource CardStyle}">
                        <StackPanel>
                            <TextBlock Text="Period Statistics" FontWeight="SemiBold" FontSize="14"
                                       Foreground="{DynamicResource ConsoleTextBrush}" Margin="0,0,0,12" />
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                </Grid.RowDefinitions>

                                <TextBlock Grid.Row="0" Grid.Column="0" Text="High" FontSize="11" Foreground="{StaticResource ConsoleTextMutedBrush}" Margin="0,2" />
                                <TextBlock Grid.Row="0" Grid.Column="1" x:Name="PeriodHighText" Text="--" FontSize="11" FontFamily="Consolas"
                                           Foreground="{StaticResource SuccessColorBrush}" HorizontalAlignment="Right" Margin="0,2" />
                                <TextBlock Grid.Row="1" Grid.Column="0" Text="Low" FontSize="11" Foreground="{StaticResource ConsoleTextMutedBrush}" Margin="0,2" />
                                <TextBlock Grid.Row="1" Grid.Column="1" x:Name="PeriodLowText" Text="--" FontSize="11" FontFamily="Consolas"
                                           Foreground="{StaticResource ErrorColorBrush}" HorizontalAlignment="Right" Margin="0,2" />
                                <TextBlock Grid.Row="2" Grid.Column="0" Text="Total Volume" FontSize="11" Foreground="{StaticResource ConsoleTextMutedBrush}" Margin="0,2" />
                                <TextBlock Grid.Row="2" Grid.Column="1" x:Name="PeriodVolumeText" Text="--" FontSize="11" FontFamily="Consolas"
                                           Foreground="{DynamicResource ConsoleTextBrush}" HorizontalAlignment="Right" Margin="0,2" />
                                <TextBlock Grid.Row="3" Grid.Column="0" Text="Candles" FontSize="11" Foreground="{StaticResource ConsoleTextMutedBrush}" Margin="0,2" />
                                <TextBlock Grid.Row="3" Grid.Column="1" x:Name="CandleCountText" Text="--" FontSize="11" FontFamily="Consolas"
                                           Foreground="{DynamicResource ConsoleTextBrush}" HorizontalAlignment="Right" Margin="0,2" />
                            </Grid>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </ScrollViewer>
        </Grid>

        <!-- Loading Overlay -->
        <Border x:Name="LoadingOverlay" Grid.RowSpan="2" Visibility="Collapsed" Background="#CC1a1a2e">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                <TextBlock Text="Loading chart data..." Foreground="{DynamicResource ConsoleTextBrush}" FontSize="14" />
            </StackPanel>
        </Border>
    </Grid>
</Page>
