<Page x:Class="MarketDataCollector.Wpf.Views.StorageOptimizationPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Background="{DynamicResource ConsoleBackgroundDarkBrush}"
      Loaded="OnPageLoaded">
    <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="24">
        <StackPanel MaxWidth="1200">
            <!-- Page Header -->
            <StackPanel Orientation="Horizontal" Margin="0,0,0,24">
                <TextBlock Text="&#xE90F;" FontFamily="{StaticResource SymbolThemeFontFamily}"
                           FontSize="28" Foreground="{StaticResource InfoColorBrush}" VerticalAlignment="Center" />
                <TextBlock Text="Storage Optimization" Style="{StaticResource PageTitleStyle}" Margin="12,0,0,0" VerticalAlignment="Center" />
            </StackPanel>

            <!-- Storage Overview -->
            <Border Style="{StaticResource CardStyle}" Margin="0,0,0,16">
                <StackPanel>
                    <DockPanel Margin="0,0,0,12">
                        <TextBlock Text="Storage Overview" Style="{StaticResource CardHeaderStyle}" VerticalAlignment="Center" />
                        <Button Content="Refresh" Style="{StaticResource PrimaryButtonStyle}"
                                Click="RefreshAnalytics_Click" HorizontalAlignment="Right" Padding="12,6" />
                    </DockPanel>
                    <Grid Margin="0,0,0,8">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <StackPanel Grid.Column="0" Margin="0,0,12,0">
                            <TextBlock Text="Total Size" Foreground="{StaticResource ConsoleTextMutedBrush}" FontSize="11" />
                            <TextBlock x:Name="TotalSizeText" Text="--" FontSize="20" FontWeight="Bold"
                                       Foreground="{StaticResource ConsoleTextPrimaryBrush}" />
                        </StackPanel>
                        <StackPanel Grid.Column="1" Margin="0,0,12,0">
                            <TextBlock Text="Total Files" Foreground="{StaticResource ConsoleTextMutedBrush}" FontSize="11" />
                            <TextBlock x:Name="TotalFilesText" Text="--" FontSize="20" FontWeight="Bold"
                                       Foreground="{StaticResource ConsoleTextPrimaryBrush}" />
                        </StackPanel>
                        <StackPanel Grid.Column="2" Margin="0,0,12,0">
                            <TextBlock Text="Daily Growth" Foreground="{StaticResource ConsoleTextMutedBrush}" FontSize="11" />
                            <TextBlock x:Name="DailyGrowthText" Text="--" FontSize="20" FontWeight="Bold"
                                       Foreground="{StaticResource WarningColorBrush}" />
                        </StackPanel>
                        <StackPanel Grid.Column="3">
                            <TextBlock Text="Days Until Full" Foreground="{StaticResource ConsoleTextMutedBrush}" FontSize="11" />
                            <TextBlock x:Name="DaysUntilFullText" Text="--" FontSize="20" FontWeight="Bold"
                                       Foreground="{StaticResource ConsoleTextPrimaryBrush}" />
                        </StackPanel>
                    </Grid>
                </StackPanel>
            </Border>

            <!-- Storage Breakdown by Type -->
            <Border Style="{StaticResource CardStyle}" Margin="0,0,0,16">
                <StackPanel>
                    <TextBlock Text="Storage Breakdown" Style="{StaticResource CardHeaderStyle}" Margin="0,0,0,12" />
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <StackPanel Grid.Column="0" Margin="0,0,12,0">
                            <TextBlock Text="Trade Data" Foreground="{StaticResource ConsoleTextMutedBrush}" FontSize="11" />
                            <TextBlock x:Name="TradeSizeText" Text="--" FontSize="16" FontWeight="SemiBold"
                                       Foreground="{StaticResource ConsoleTextPrimaryBrush}" />
                            <TextBlock x:Name="TradeFilesText" Text="-- files" FontSize="11"
                                       Foreground="{StaticResource ConsoleTextMutedBrush}" />
                        </StackPanel>
                        <StackPanel Grid.Column="1" Margin="0,0,12,0">
                            <TextBlock Text="Depth Data" Foreground="{StaticResource ConsoleTextMutedBrush}" FontSize="11" />
                            <TextBlock x:Name="DepthSizeText" Text="--" FontSize="16" FontWeight="SemiBold"
                                       Foreground="{StaticResource ConsoleTextPrimaryBrush}" />
                            <TextBlock x:Name="DepthFilesText" Text="-- files" FontSize="11"
                                       Foreground="{StaticResource ConsoleTextMutedBrush}" />
                        </StackPanel>
                        <StackPanel Grid.Column="2">
                            <TextBlock Text="Historical Data" Foreground="{StaticResource ConsoleTextMutedBrush}" FontSize="11" />
                            <TextBlock x:Name="HistoricalSizeText" Text="--" FontSize="16" FontWeight="SemiBold"
                                       Foreground="{StaticResource ConsoleTextPrimaryBrush}" />
                            <TextBlock x:Name="HistoricalFilesText" Text="-- files" FontSize="11"
                                       Foreground="{StaticResource ConsoleTextMutedBrush}" />
                        </StackPanel>
                    </Grid>
                </StackPanel>
            </Border>

            <!-- Symbol Breakdown -->
            <Border Style="{StaticResource CardStyle}" Margin="0,0,0,16">
                <StackPanel>
                    <TextBlock Text="Top Symbols by Size" Style="{StaticResource CardHeaderStyle}" Margin="0,0,0,12" />
                    <TextBlock x:Name="SymbolBreakdownStatus" Text="Loading..."
                               Foreground="{StaticResource ConsoleTextMutedBrush}" Margin="0,0,0,8" />
                    <ItemsControl x:Name="SymbolBreakdownList">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Grid Margin="0,4">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="80" />
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="60" />
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Grid.Column="0" Text="{Binding Symbol}" FontWeight="SemiBold"
                                               Foreground="{StaticResource ConsoleTextPrimaryBrush}" />
                                    <ProgressBar Grid.Column="1" Value="{Binding PercentOfTotal}" Maximum="100"
                                                 Height="8" Margin="8,0"
                                                 Foreground="{StaticResource InfoColorBrush}"
                                                 Background="{StaticResource ConsoleBackgroundDarkBrush}" />
                                    <TextBlock Grid.Column="2" Text="{Binding FileCount, StringFormat='{}{0} files'}"
                                               Foreground="{StaticResource ConsoleTextMutedBrush}" Margin="8,0" />
                                    <TextBlock Grid.Column="3" Text="{Binding PercentOfTotal, StringFormat='{}{0:F1}%'}"
                                               Foreground="{StaticResource ConsoleTextMutedBrush}" HorizontalAlignment="Right" />
                                </Grid>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </StackPanel>
            </Border>

            <!-- Drive Information -->
            <Border Style="{StaticResource CardStyle}" Margin="0,0,0,16">
                <StackPanel>
                    <TextBlock Text="Drive Information" Style="{StaticResource CardHeaderStyle}" Margin="0,0,0,12" />
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <StackPanel Grid.Column="0" Margin="0,0,12,0">
                            <TextBlock Text="Drive" Foreground="{StaticResource ConsoleTextMutedBrush}" FontSize="11" />
                            <TextBlock x:Name="DriveNameText" Text="--" FontSize="14"
                                       Foreground="{StaticResource ConsoleTextPrimaryBrush}" />
                        </StackPanel>
                        <StackPanel Grid.Column="1" Margin="0,0,12,0">
                            <TextBlock Text="Free Space" Foreground="{StaticResource ConsoleTextMutedBrush}" FontSize="11" />
                            <TextBlock x:Name="FreeSpaceText" Text="--" FontSize="14"
                                       Foreground="{StaticResource ConsoleTextPrimaryBrush}" />
                        </StackPanel>
                        <StackPanel Grid.Column="2">
                            <TextBlock Text="Used" Foreground="{StaticResource ConsoleTextMutedBrush}" FontSize="11" />
                            <TextBlock x:Name="UsedPercentText" Text="--" FontSize="14"
                                       Foreground="{StaticResource ConsoleTextPrimaryBrush}" />
                        </StackPanel>
                    </Grid>
                    <ProgressBar x:Name="DriveUsageBar" Value="0" Maximum="100" Height="12" Margin="0,12,0,0"
                                 Foreground="{StaticResource InfoColorBrush}"
                                 Background="{StaticResource ConsoleBackgroundDarkBrush}" />
                </StackPanel>
            </Border>

            <!-- Optimization Actions -->
            <Border Style="{StaticResource CardStyle}">
                <StackPanel>
                    <TextBlock Text="Optimization Actions" Style="{StaticResource CardHeaderStyle}" Margin="0,0,0,12" />
                    <TextBlock Text="Run a storage analysis to identify optimization opportunities such as duplicate files, uncompressed archives, small file consolidation, and tier migration candidates."
                               Foreground="{StaticResource ConsoleTextMutedBrush}" TextWrapping="Wrap" Margin="0,0,0,12" />
                    <StackPanel Orientation="Horizontal">
                        <Button Content="Run Analysis" Style="{StaticResource PrimaryButtonStyle}"
                                Click="RunAnalysis_Click" Padding="16,8" Margin="0,0,8,0" />
                        <Button Content="View Tier Statistics" Style="{StaticResource PrimaryButtonStyle}"
                                Click="ViewTierStats_Click" Padding="16,8" />
                    </StackPanel>
                    <TextBlock x:Name="AnalysisResultText" Text=""
                               Foreground="{StaticResource ConsoleTextMutedBrush}" TextWrapping="Wrap"
                               Margin="0,12,0,0" FontFamily="Consolas" FontSize="11" />
                </StackPanel>
            </Border>
        </StackPanel>
    </ScrollViewer>
</Page>
