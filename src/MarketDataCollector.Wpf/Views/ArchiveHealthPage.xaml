<Page x:Class="MarketDataCollector.Wpf.Views.ArchiveHealthPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Background="{DynamicResource ConsoleBackgroundDarkBrush}">
    <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="24">
        <StackPanel MaxWidth="1200">
            <!-- Header -->
            <Grid Margin="0,0,0,24">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <TextBlock Text="&#xE9F5;" FontFamily="{StaticResource SymbolThemeFontFamily}"
                               FontSize="28" Foreground="{StaticResource InfoColorBrush}" VerticalAlignment="Center" />
                    <TextBlock Text="Archive Health" Style="{StaticResource PageTitleStyle}" Margin="12,0,0,0" VerticalAlignment="Center" />
                    <Border x:Name="HealthStatusBadge" Background="#48BB78" CornerRadius="4" Padding="8,4" VerticalAlignment="Center" Margin="12,0,0,0">
                        <TextBlock x:Name="HealthStatusText" Text="Healthy" FontSize="12" Foreground="White" />
                    </Border>
                </StackPanel>

                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <Button x:Name="VerifyAllButton" Click="VerifyAll_Click" Style="{StaticResource ConsoleButtonStyle}" Margin="0,0,8,0">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="&#xE73E;" FontFamily="{StaticResource SymbolThemeFontFamily}" FontSize="14" Margin="0,0,6,0" />
                            <TextBlock Text="Verify All" />
                        </StackPanel>
                    </Button>
                    <Button x:Name="QuickCheckButton" Click="QuickCheck_Click" Style="{StaticResource ConsoleButtonStyle}" Margin="0,0,8,0">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="&#xE9D9;" FontFamily="{StaticResource SymbolThemeFontFamily}" FontSize="14" Margin="0,0,6,0" />
                            <TextBlock Text="Quick Check" />
                        </StackPanel>
                    </Button>
                    <Button x:Name="RefreshButton" Click="Refresh_Click" Style="{StaticResource ConsoleButtonStyle}">
                        <TextBlock Text="&#xE72C;" FontFamily="{StaticResource SymbolThemeFontFamily}" FontSize="14" />
                    </Button>
                </StackPanel>
            </Grid>

            <!-- Status InfoBar -->
            <Border x:Name="StatusInfoBar" Visibility="Collapsed" CornerRadius="4" Padding="12" Margin="0,0,0,16">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    <TextBlock x:Name="StatusIcon" Text="&#xE73E;" FontFamily="{StaticResource SymbolThemeFontFamily}" FontSize="16" VerticalAlignment="Center" Margin="0,0,8,0" />
                    <StackPanel Grid.Column="1" VerticalAlignment="Center">
                        <TextBlock x:Name="StatusTitle" FontWeight="SemiBold" />
                        <TextBlock x:Name="StatusMessage" Style="{StaticResource ConsoleTextStyle}" />
                    </StackPanel>
                    <Button Grid.Column="2" Content="âœ•" Click="CloseInfoBar_Click" Background="Transparent" BorderThickness="0" />
                </Grid>
            </Border>

            <!-- Health Score Card -->
            <Border Style="{StaticResource CardStyle}" Margin="0,0,0,16">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <!-- Health Gauge -->
                    <Grid Grid.Column="0" Width="150" Height="150" Margin="0,0,24,0">
                        <Ellipse Width="140" Height="140" Stroke="{StaticResource ConsoleBorderBrush}" StrokeThickness="12" />
                        <Ellipse x:Name="HealthGaugeArc" Width="140" Height="140"
                                 Stroke="{StaticResource InfoColorBrush}" StrokeThickness="12"
                                 StrokeDashArray="3.14 3.14" StrokeDashOffset="0" />
                        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                            <TextBlock x:Name="HealthScoreText" Text="100%" FontSize="32" FontWeight="Bold"
                                       HorizontalAlignment="Center" Foreground="{StaticResource InfoColorBrush}" />
                            <TextBlock Text="Health Score" Style="{StaticResource ConsoleTextMutedStyle}"
                                       HorizontalAlignment="Center" />
                        </StackPanel>
                    </Grid>

                    <!-- Health Details -->
                    <StackPanel Grid.Column="1">
                        <Grid Margin="0,0,0,16">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0">
                                <TextBlock x:Name="TotalFilesText" Text="0" Style="{StaticResource MetricValueStyle}" />
                                <TextBlock Text="Total Files" Style="{StaticResource ConsoleTextMutedStyle}" />
                            </StackPanel>

                            <StackPanel Grid.Column="1">
                                <TextBlock x:Name="VerifiedFilesText" Text="0" Style="{StaticResource MetricValueStyle}" Foreground="#48BB78" />
                                <TextBlock Text="Verified" Style="{StaticResource ConsoleTextMutedStyle}" />
                            </StackPanel>

                            <StackPanel Grid.Column="2">
                                <TextBlock x:Name="PendingFilesText" Text="0" Style="{StaticResource MetricValueStyle}" Foreground="#ED8936" />
                                <TextBlock Text="Pending" Style="{StaticResource ConsoleTextMutedStyle}" />
                            </StackPanel>

                            <StackPanel Grid.Column="3">
                                <TextBlock x:Name="FailedFilesText" Text="0" Style="{StaticResource MetricValueStyle}" Foreground="#F56565" />
                                <TextBlock Text="Failed" Style="{StaticResource ConsoleTextMutedStyle}" />
                            </StackPanel>
                        </Grid>

                        <!-- Progress Bar (shown during verification) -->
                        <ProgressBar x:Name="VerificationProgress" Visibility="Collapsed" IsIndeterminate="False" Value="0" Height="8" Margin="0,0,0,8" />
                        <TextBlock x:Name="VerificationStatusText" Visibility="Collapsed"
                                   Style="{StaticResource ConsoleTextMutedStyle}" />

                        <!-- Last Verification -->
                        <StackPanel Orientation="Horizontal" Margin="0,8,0,0">
                            <TextBlock Text="&#xE787;" FontFamily="{StaticResource SymbolThemeFontFamily}" FontSize="14"
                                       Foreground="{StaticResource ConsoleTextMutedBrush}" Margin="0,0,8,0" />
                            <TextBlock x:Name="LastVerificationText" Text="Last full verification: Never"
                                       Style="{StaticResource ConsoleTextMutedStyle}" />
                        </StackPanel>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Storage Health Card -->
            <Border Style="{StaticResource CardStyle}" Margin="0,0,0,16">
                <StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,16">
                        <TextBlock Text="&#xE8B7;" FontFamily="{StaticResource SymbolThemeFontFamily}"
                                   FontSize="16" Foreground="{StaticResource InfoColorBrush}" Margin="0,0,8,0" />
                        <TextBlock Text="Storage Health" Style="{StaticResource CardHeaderStyle}" />
                    </StackPanel>

                    <Grid Margin="0,0,0,16">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0">
                            <TextBlock x:Name="TotalCapacityText" Text="0 GB" Style="{StaticResource MetricValueStyle}" />
                            <TextBlock Text="Total Capacity" Style="{StaticResource ConsoleTextMutedStyle}" />
                        </StackPanel>

                        <StackPanel Grid.Column="1">
                            <TextBlock x:Name="UsedSpaceText" Text="0 GB" Style="{StaticResource MetricValueStyle}" />
                            <TextBlock Text="Used Space" Style="{StaticResource ConsoleTextMutedStyle}" />
                        </StackPanel>

                        <StackPanel Grid.Column="2">
                            <TextBlock x:Name="FreeSpaceText" Text="0 GB" Style="{StaticResource MetricValueStyle}" />
                            <TextBlock Text="Free Space" Style="{StaticResource ConsoleTextMutedStyle}" />
                        </StackPanel>

                        <StackPanel Grid.Column="3">
                            <TextBlock x:Name="DaysUntilFullText" Text="--" Style="{StaticResource MetricValueStyle}" />
                            <TextBlock Text="Days Until Full" Style="{StaticResource ConsoleTextMutedStyle}" />
                        </StackPanel>
                    </Grid>

                    <!-- Storage Usage Bar -->
                    <Grid Margin="0,0,0,8">
                        <ProgressBar x:Name="StorageUsageBar" Value="0" Maximum="100" Height="16" />
                        <TextBlock x:Name="StorageUsagePercent" Text="0%" HorizontalAlignment="Center" VerticalAlignment="Center"
                                   FontSize="10" Foreground="White" />
                    </Grid>

                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="&#xE946;" FontFamily="{StaticResource SymbolThemeFontFamily}" FontSize="14"
                                   Foreground="{StaticResource ConsoleTextMutedBrush}" Margin="0,0,8,0" />
                        <TextBlock x:Name="DriveTypeText" Text="Drive Type: Unknown"
                                   Style="{StaticResource ConsoleTextMutedStyle}" />
                    </StackPanel>
                </StackPanel>
            </Border>

            <!-- Issues and Recommendations -->
            <Grid Margin="0,0,0,16">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="12" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <!-- Active Issues -->
                <Border Grid.Column="0" Style="{StaticResource CardStyle}">
                    <StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,16">
                            <TextBlock Text="&#xE7BA;" FontFamily="{StaticResource SymbolThemeFontFamily}"
                                       FontSize="16" Foreground="#F56565" Margin="0,0,8,0" />
                            <TextBlock Text="Active Issues" Style="{StaticResource CardHeaderStyle}" />
                            <Border x:Name="IssueCountBadge" Background="#F56565" CornerRadius="10" Padding="8,2"
                                    Visibility="Collapsed" Margin="8,0,0,0">
                                <TextBlock x:Name="IssueCountText" Text="0" FontSize="12" Foreground="White" />
                            </Border>
                        </StackPanel>

                        <ListView x:Name="IssuesList" SelectionMode="Single" MaxHeight="250" Background="Transparent" BorderThickness="0">
                            <ListView.ItemTemplate>
                                <DataTemplate>
                                    <Grid Margin="0,4">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto" />
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="Auto" />
                                        </Grid.ColumnDefinitions>

                                        <TextBlock Grid.Column="0" Text="&#xE7BA;" FontFamily="{StaticResource SymbolThemeFontFamily}"
                                                   FontSize="16" Foreground="{Binding SeverityColor}" Margin="0,0,8,0" VerticalAlignment="Top" />

                                        <StackPanel Grid.Column="1">
                                            <TextBlock Text="{Binding Message}" TextWrapping="Wrap" Style="{StaticResource ConsoleTextStyle}" />
                                            <TextBlock Text="{Binding SuggestedAction}" Style="{StaticResource ConsoleTextMutedStyle}"
                                                       TextWrapping="Wrap" />
                                        </StackPanel>

                                        <Button Grid.Column="2" Click="ResolveIssue_Click" Padding="8"
                                                Visibility="{Binding IsAutoFixableVisibility}" ToolTip="Auto-fix"
                                                Style="{StaticResource ConsoleButtonStyle}">
                                            <TextBlock Text="&#xE930;" FontFamily="{StaticResource SymbolThemeFontFamily}" FontSize="12" />
                                        </Button>
                                    </Grid>
                                </DataTemplate>
                            </ListView.ItemTemplate>
                        </ListView>

                        <TextBlock x:Name="NoIssuesText" Text="No issues detected. Archive is healthy!"
                                   Visibility="Visible" Style="{StaticResource ConsoleTextMutedStyle}"
                                   Foreground="#48BB78" HorizontalAlignment="Center" />
                    </StackPanel>
                </Border>

                <!-- Recommendations -->
                <Border Grid.Column="2" Style="{StaticResource CardStyle}">
                    <StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,16">
                            <TextBlock Text="&#xE8BD;" FontFamily="{StaticResource SymbolThemeFontFamily}"
                                       FontSize="16" Foreground="{StaticResource InfoColorBrush}" Margin="0,0,8,0" />
                            <TextBlock Text="Recommendations" Style="{StaticResource CardHeaderStyle}" />
                        </StackPanel>

                        <ListView x:Name="RecommendationsList" SelectionMode="None" MaxHeight="250" Background="Transparent" BorderThickness="0">
                            <ListView.ItemTemplate>
                                <DataTemplate>
                                    <Grid Margin="0,4">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto" />
                                            <ColumnDefinition Width="*" />
                                        </Grid.ColumnDefinitions>

                                        <TextBlock Grid.Column="0" Text="&#xE73E;" FontFamily="{StaticResource SymbolThemeFontFamily}"
                                                   FontSize="14" Foreground="{StaticResource InfoColorBrush}" Margin="0,0,8,0" />
                                        <TextBlock Grid.Column="1" Text="{Binding}" TextWrapping="Wrap" Style="{StaticResource ConsoleTextStyle}" />
                                    </Grid>
                                </DataTemplate>
                            </ListView.ItemTemplate>
                        </ListView>

                        <TextBlock x:Name="NoRecommendationsText" Text="No recommendations at this time."
                                   Visibility="Visible" Style="{StaticResource ConsoleTextMutedStyle}"
                                   HorizontalAlignment="Center" />
                    </StackPanel>
                </Border>
            </Grid>

            <!-- Verification Schedule -->
            <Border Style="{StaticResource CardStyle}" Margin="0,0,0,16">
                <StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,16">
                        <TextBlock Text="&#xE823;" FontFamily="{StaticResource SymbolThemeFontFamily}"
                                   FontSize="16" Foreground="{StaticResource InfoColorBrush}" Margin="0,0,8,0" />
                        <TextBlock Text="Verification Schedule" Style="{StaticResource CardHeaderStyle}" />
                    </StackPanel>

                    <CheckBox x:Name="EnableScheduleToggle" Content="Enable scheduled verification" IsChecked="True" Margin="0,0,0,12" />

                    <Grid Margin="0,0,0,12">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="16" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0">
                            <TextBlock Text="Daily verification time" Style="{StaticResource ConsoleTextMutedStyle}" Margin="0,0,0,4" />
                            <TextBox x:Name="DailyVerificationTime" Text="03:00" Style="{StaticResource FormTextBoxStyle}" />
                        </StackPanel>

                        <StackPanel Grid.Column="2">
                            <TextBlock Text="Daily scope" Style="{StaticResource ConsoleTextMutedStyle}" Margin="0,0,0,4" />
                            <ComboBox x:Name="DailyScopeCombo" SelectedIndex="0" Style="{StaticResource FormComboBoxStyle}">
                                <ComboBoxItem Content="Last 7 Days" Tag="Last7Days" />
                                <ComboBoxItem Content="Last 30 Days" Tag="Last30Days" />
                                <ComboBoxItem Content="All Files" Tag="All" />
                            </ComboBox>
                        </StackPanel>
                    </Grid>

                    <CheckBox x:Name="PauseDuringMarketToggle" Content="Pause verification during market hours" IsChecked="True" Margin="0,0,0,12" />

                    <StackPanel>
                        <TextBlock Text="Max concurrent verifications" Style="{StaticResource ConsoleTextMutedStyle}" Margin="0,0,0,4" />
                        <TextBox x:Name="MaxConcurrentBox" Text="4" Width="100" HorizontalAlignment="Left" Style="{StaticResource FormTextBoxStyle}" />
                    </StackPanel>
                </StackPanel>
            </Border>

            <!-- Data Dictionary -->
            <Border Style="{StaticResource CardStyle}">
                <StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,16">
                        <TextBlock Text="&#xE82D;" FontFamily="{StaticResource SymbolThemeFontFamily}"
                                   FontSize="16" Foreground="{StaticResource InfoColorBrush}" Margin="0,0,8,0" />
                        <TextBlock Text="Data Dictionary &amp; Schema" Style="{StaticResource CardHeaderStyle}" />
                    </StackPanel>

                    <TextBlock Text="Generate comprehensive documentation for all data schemas and event types."
                               Style="{StaticResource ConsoleTextMutedStyle}" Margin="0,0,0,12" />

                    <StackPanel Orientation="Horizontal" Margin="0,0,0,12">
                        <Button x:Name="GenerateDictionaryButton" Click="GenerateDictionary_Click" Style="{StaticResource ConsoleButtonStyle}" Margin="0,0,8,0">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="&#xE82D;" FontFamily="{StaticResource SymbolThemeFontFamily}" FontSize="14" Margin="0,0,6,0" />
                                <TextBlock Text="Generate Dictionary" />
                            </StackPanel>
                        </Button>
                        <Button x:Name="ExportMarkdownButton" Click="ExportMarkdown_Click" Style="{StaticResource ConsoleButtonStyle}" Margin="0,0,8,0">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="&#xEDE1;" FontFamily="{StaticResource SymbolThemeFontFamily}" FontSize="14" Margin="0,0,6,0" />
                                <TextBlock Text="Export as Markdown" />
                            </StackPanel>
                        </Button>
                        <Button x:Name="ExportJsonButton" Click="ExportJson_Click" Style="{StaticResource ConsoleButtonStyle}">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="&#xE943;" FontFamily="{StaticResource SymbolThemeFontFamily}" FontSize="14" Margin="0,0,6,0" />
                                <TextBlock Text="Export as JSON" />
                            </StackPanel>
                        </Button>
                    </StackPanel>

                    <TextBlock x:Name="DictionaryStatusText" Text="Last generated: Never"
                               Style="{StaticResource ConsoleTextMutedStyle}" />
                </StackPanel>
            </Border>
        </StackPanel>
    </ScrollViewer>
</Page>
