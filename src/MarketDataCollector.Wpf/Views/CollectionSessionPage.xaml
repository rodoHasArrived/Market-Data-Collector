<Page x:Class="MarketDataCollector.Wpf.Views.CollectionSessionPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Background="{DynamicResource ConsoleBackgroundDarkBrush}"
      Loaded="OnPageLoaded"
      Unloaded="OnPageUnloaded">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Grid Grid.Row="0" Margin="24,24,24,16">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="0" Orientation="Horizontal">
                <TextBlock Text="&#xE768;" FontFamily="{StaticResource SymbolThemeFontFamily}"
                           FontSize="28" Foreground="{StaticResource InfoColorBrush}"
                           VerticalAlignment="Center" />
                <TextBlock Text="Collection Session" Style="{StaticResource PageTitleStyle}"
                           Margin="12,0,0,0" VerticalAlignment="Center" />
            </StackPanel>

            <StackPanel Grid.Column="1" Orientation="Horizontal">
                <TextBlock x:Name="LastUpdatedText" Text="Last updated: --"
                           Foreground="{StaticResource ConsoleTextMutedBrush}"
                           VerticalAlignment="Center" Margin="0,0,16,0"/>
                <Button x:Name="StartSessionButton" Content="Start Session" Click="StartSession_Click"
                        Style="{StaticResource PrimaryButtonStyle}" Margin="0,0,8,0"/>
                <Button x:Name="EndSessionButton" Content="End Session" Click="EndSession_Click"
                        Style="{StaticResource SecondaryButtonStyle}" Margin="0,0,8,0"
                        Visibility="Collapsed"/>
                <Button Content="Refresh" Click="Refresh_Click"
                        Background="{DynamicResource ConsoleBackgroundMediumBrush}"
                        Foreground="{DynamicResource ConsoleTextBrush}"
                        BorderThickness="0" Padding="16,8"/>
            </StackPanel>
        </Grid>

        <!-- Summary -->
        <Grid Grid.Row="1" Margin="24,0,24,16">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="16"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="16"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="16"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Border Grid.Column="0" Style="{StaticResource CardStyle}">
                <StackPanel HorizontalAlignment="Center">
                    <TextBlock x:Name="SessionStatusText" Text="Idle"
                               FontSize="28" FontWeight="Bold"
                               Foreground="{StaticResource ConsoleTextMutedBrush}"
                               HorizontalAlignment="Center" />
                    <TextBlock Text="Session Status"
                               HorizontalAlignment="Center"
                               Foreground="{StaticResource ConsoleTextMutedBrush}" />
                </StackPanel>
            </Border>

            <Border Grid.Column="2" Style="{StaticResource CardStyle}">
                <StackPanel HorizontalAlignment="Center">
                    <TextBlock x:Name="SessionDurationText" Text="0m"
                               FontSize="28" FontWeight="Bold"
                               Foreground="{StaticResource InfoColorBrush}"
                               HorizontalAlignment="Center" />
                    <TextBlock Text="Duration"
                               HorizontalAlignment="Center"
                               Foreground="{StaticResource ConsoleTextMutedBrush}" />
                </StackPanel>
            </Border>

            <Border Grid.Column="4" Style="{StaticResource CardStyle}">
                <StackPanel HorizontalAlignment="Center">
                    <TextBlock x:Name="SymbolsTrackedText" Text="0"
                               FontSize="28" FontWeight="Bold"
                               Foreground="{StaticResource SuccessColorBrush}"
                               HorizontalAlignment="Center" />
                    <TextBlock Text="Symbols Tracked"
                               HorizontalAlignment="Center"
                               Foreground="{StaticResource ConsoleTextMutedBrush}" />
                </StackPanel>
            </Border>

            <Border Grid.Column="6" Style="{StaticResource CardStyle}">
                <StackPanel HorizontalAlignment="Center">
                    <TextBlock x:Name="EventsCollectedText" Text="0"
                               FontSize="28" FontWeight="Bold"
                               Foreground="{StaticResource WarningColorBrush}"
                               HorizontalAlignment="Center" />
                    <TextBlock Text="Events Collected"
                               HorizontalAlignment="Center"
                               Foreground="{StaticResource ConsoleTextMutedBrush}" />
                </StackPanel>
            </Border>
        </Grid>

        <!-- Main Content -->
        <Grid Grid.Row="2" Margin="24,0,24,24">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="16"/>
                <ColumnDefinition Width="360"/>
            </Grid.ColumnDefinitions>

            <Border Grid.Column="0" Style="{StaticResource CardStyle}">
                <StackPanel>
                    <TextBlock Text="Current Session" Style="{StaticResource CardHeaderStyle}" Margin="0,0,0,16" />

                    <Grid Margin="0,0,0,16">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="16"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0">
                            <TextBlock Text="Status" Style="{StaticResource FormLabelStyle}" Margin="0,0,0,4" />
                            <TextBlock x:Name="CurrentStatusText" Text="Idle"
                                       Foreground="{StaticResource ConsoleTextMutedBrush}" />
                        </StackPanel>

                        <StackPanel Grid.Column="2">
                            <TextBlock Text="Started" Style="{StaticResource FormLabelStyle}" Margin="0,0,0,4" />
                            <TextBlock x:Name="CurrentStartText" Text="--"
                                       Foreground="{StaticResource ConsoleTextMutedBrush}" />
                        </StackPanel>
                    </Grid>

                    <Grid Margin="0,0,0,16">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="16"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0">
                            <TextBlock Text="Provider" Style="{StaticResource FormLabelStyle}" Margin="0,0,0,4" />
                            <TextBlock x:Name="CurrentProviderText" Text="--"
                                       Foreground="{StaticResource ConsoleTextMutedBrush}" />
                        </StackPanel>

                        <StackPanel Grid.Column="2">
                            <TextBlock Text="Mode" Style="{StaticResource FormLabelStyle}" Margin="0,0,0,4" />
                            <TextBlock x:Name="CurrentModeText" Text="--"
                                       Foreground="{StaticResource ConsoleTextMutedBrush}" />
                        </StackPanel>
                    </Grid>

                    <StackPanel>
                        <TextBlock Text="Notes" Style="{StaticResource FormLabelStyle}" Margin="0,0,0,4" />
                        <TextBlock x:Name="CurrentNotesText" Text="No active collection session."
                                   Foreground="{StaticResource ConsoleTextMutedBrush}" TextWrapping="Wrap" />
                    </StackPanel>
                </StackPanel>
            </Border>

            <Border Grid.Column="2" Style="{StaticResource CardStyle}">
                <StackPanel>
                    <TextBlock Text="Recent Sessions" Style="{StaticResource CardHeaderStyle}" Margin="0,0,0,16" />
                    <ListView x:Name="SessionHistoryList"
                              Background="Transparent"
                              BorderThickness="0"
                              ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <Grid Margin="0,6">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="110"/>
                                        <ColumnDefinition Width="70"/>
                                        <ColumnDefinition Width="70"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Grid.Column="0" Text="{Binding StartTime}"
                                               Foreground="{StaticResource ConsoleTextMutedBrush}" FontSize="11"/>
                                    <TextBlock Grid.Column="1" Text="{Binding Duration}"
                                               Foreground="{StaticResource ConsoleTextSecondaryBrush}" FontSize="11"/>
                                    <TextBlock Grid.Column="2" Text="{Binding Symbols}"
                                               Foreground="{StaticResource ConsoleTextSecondaryBrush}" FontSize="11"/>
                                    <TextBlock Grid.Column="3" Text="{Binding Status}"
                                               Foreground="{Binding StatusBrush}" FontSize="11"
                                               FontWeight="SemiBold"/>
                                </Grid>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                    <TextBlock x:Name="NoSessionsText" Text="No sessions recorded yet."
                               Foreground="{StaticResource ConsoleTextMutedBrush}"
                               HorizontalAlignment="Center"
                               Margin="0,12,0,0"
                               Visibility="Collapsed"/>
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</Page>
