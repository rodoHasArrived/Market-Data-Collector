<Page x:Class="MarketDataCollector.Wpf.Views.RetentionAssurancePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Background="{DynamicResource ConsoleBackgroundDarkBrush}"
      Loaded="OnPageLoaded">
    <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="24">
        <StackPanel MaxWidth="1200">

            <!-- Header -->
            <StackPanel Margin="0,0,0,24">
                <StackPanel Orientation="Horizontal" Margin="0,0,0,4">
                    <TextBlock Text="&#xE73E;" FontFamily="{StaticResource SymbolThemeFontFamily}"
                               FontSize="28" Foreground="{StaticResource InfoColorBrush}" VerticalAlignment="Center" />
                    <TextBlock Text="Retention Assurance" Style="{StaticResource PageTitleStyle}" Margin="12,0,0,0" VerticalAlignment="Center" />
                </StackPanel>
                <TextBlock Text="Configure retention policies, manage legal holds, and run cleanup operations with guardrails"
                           Style="{StaticResource CardDescriptionStyle}" />
            </StackPanel>

            <!-- Guardrails -->
            <Border Style="{StaticResource CardStyle}" Margin="0,0,0,24">
                <StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,16">
                        <TextBlock Text="&#xE8BE;" FontFamily="{StaticResource SymbolThemeFontFamily}"
                                   FontSize="16" Foreground="{StaticResource WarningColorBrush}" VerticalAlignment="Center" Margin="0,0,8,0" />
                        <TextBlock Text="Guardrails" Style="{StaticResource CardHeaderStyle}" />
                    </StackPanel>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="16" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <StackPanel Grid.Column="0">
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                                <TextBlock Text="Min tick data retention:" Width="180" Foreground="{StaticResource ConsoleTextSecondaryBrush}" VerticalAlignment="Center" />
                                <TextBox x:Name="MinTickDaysBox" Width="60" Text="7" Style="{StaticResource FormTextBoxStyle}" />
                                <TextBlock Text=" days" Foreground="{StaticResource ConsoleTextMutedBrush}" VerticalAlignment="Center" Margin="4,0,0,0" />
                            </StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                                <TextBlock Text="Min bar data retention:" Width="180" Foreground="{StaticResource ConsoleTextSecondaryBrush}" VerticalAlignment="Center" />
                                <TextBox x:Name="MinBarDaysBox" Width="60" Text="30" Style="{StaticResource FormTextBoxStyle}" />
                                <TextBlock Text=" days" Foreground="{StaticResource ConsoleTextMutedBrush}" VerticalAlignment="Center" Margin="4,0,0,0" />
                            </StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                                <TextBlock Text="Min quote data retention:" Width="180" Foreground="{StaticResource ConsoleTextSecondaryBrush}" VerticalAlignment="Center" />
                                <TextBox x:Name="MinQuoteDaysBox" Width="60" Text="7" Style="{StaticResource FormTextBoxStyle}" />
                                <TextBlock Text=" days" Foreground="{StaticResource ConsoleTextMutedBrush}" VerticalAlignment="Center" Margin="4,0,0,0" />
                            </StackPanel>
                        </StackPanel>
                        <StackPanel Grid.Column="2">
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                                <TextBlock Text="Max daily deletions:" Width="180" Foreground="{StaticResource ConsoleTextSecondaryBrush}" VerticalAlignment="Center" />
                                <TextBox x:Name="MaxDailyDeletesBox" Width="80" Text="1000" Style="{StaticResource FormTextBoxStyle}" />
                            </StackPanel>
                            <CheckBox x:Name="RequireChecksumCheck" Content="Require checksum verification" IsChecked="True"
                                      Foreground="{StaticResource ConsoleTextPrimaryBrush}" Margin="0,0,0,8" />
                            <CheckBox x:Name="RequireDryRunCheck" Content="Require dry-run preview" IsChecked="True"
                                      Foreground="{StaticResource ConsoleTextPrimaryBrush}" Margin="0,0,0,8" />
                            <CheckBox x:Name="AllowTradingHoursCheck" Content="Allow deletion during trading hours" IsChecked="False"
                                      Foreground="{StaticResource ConsoleTextPrimaryBrush}" />
                        </StackPanel>
                    </Grid>
                    <Button Content="Save Guardrails" Click="SaveGuardrails_Click" Style="{StaticResource PrimaryButtonStyle}"
                            HorizontalAlignment="Left" Margin="0,12,0,0" />
                </StackPanel>
            </Border>

            <!-- Retention Policy -->
            <Border Style="{StaticResource CardStyle}" Margin="0,0,0,24">
                <StackPanel>
                    <TextBlock Text="Retention Policy" Style="{StaticResource CardHeaderStyle}" Margin="0,0,0,16" />
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="16" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <StackPanel Grid.Column="0">
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                                <TextBlock Text="Tick data retention:" Width="180" Foreground="{StaticResource ConsoleTextSecondaryBrush}" VerticalAlignment="Center" />
                                <TextBox x:Name="TickDataDaysBox" Width="60" Text="30" Style="{StaticResource FormTextBoxStyle}" />
                                <TextBlock Text=" days" Foreground="{StaticResource ConsoleTextMutedBrush}" VerticalAlignment="Center" Margin="4,0,0,0" />
                            </StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                                <TextBlock Text="Bar data retention:" Width="180" Foreground="{StaticResource ConsoleTextSecondaryBrush}" VerticalAlignment="Center" />
                                <TextBox x:Name="BarDataDaysBox" Width="60" Text="365" Style="{StaticResource FormTextBoxStyle}" />
                                <TextBlock Text=" days" Foreground="{StaticResource ConsoleTextMutedBrush}" VerticalAlignment="Center" Margin="4,0,0,0" />
                            </StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                                <TextBlock Text="Quote data retention:" Width="180" Foreground="{StaticResource ConsoleTextSecondaryBrush}" VerticalAlignment="Center" />
                                <TextBox x:Name="QuoteDataDaysBox" Width="60" Text="30" Style="{StaticResource FormTextBoxStyle}" />
                                <TextBlock Text=" days" Foreground="{StaticResource ConsoleTextMutedBrush}" VerticalAlignment="Center" Margin="4,0,0,0" />
                            </StackPanel>
                        </StackPanel>
                        <StackPanel Grid.Column="2">
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                                <TextBlock Text="Files per cleanup run:" Width="180" Foreground="{StaticResource ConsoleTextSecondaryBrush}" VerticalAlignment="Center" />
                                <TextBox x:Name="FilesPerRunBox" Width="80" Text="100" Style="{StaticResource FormTextBoxStyle}" />
                            </StackPanel>
                            <CheckBox x:Name="CompressBeforeDeleteCheck" Content="Compress before delete" IsChecked="True"
                                      Foreground="{StaticResource ConsoleTextPrimaryBrush}" Margin="0,0,0,8" />
                        </StackPanel>
                    </Grid>
                    <StackPanel Orientation="Horizontal" Margin="0,12,0,0">
                        <Button Content="Validate Policy" Click="ValidatePolicy_Click" Style="{StaticResource SecondaryButtonStyle}" Margin="0,0,12,0" />
                        <Button x:Name="DryRunButton" Content="Dry Run" Click="DryRun_Click" Style="{StaticResource PrimaryButtonStyle}" Margin="0,0,12,0" />
                        <Button x:Name="ExecuteCleanupButton" Content="Execute Cleanup" Click="ExecuteCleanup_Click"
                                Style="{StaticResource SecondaryButtonStyle}" IsEnabled="False" />
                    </StackPanel>
                </StackPanel>
            </Border>

            <!-- Validation / Dry Run Results -->
            <Border x:Name="ResultsPanel" Style="{StaticResource CardStyle}" Margin="0,0,0,24" Visibility="Collapsed">
                <StackPanel>
                    <TextBlock x:Name="ResultsHeader" Text="Results" Style="{StaticResource CardHeaderStyle}" Margin="0,0,0,12" />
                    <TextBlock x:Name="ResultsText" Text="" FontSize="13"
                               Foreground="{StaticResource ConsoleTextPrimaryBrush}" TextWrapping="Wrap" />
                    <ListView x:Name="ResultsList" SelectionMode="Single" MaxHeight="200"
                              Background="Transparent" BorderThickness="0" Margin="0,8,0,0" Visibility="Collapsed">
                        <ListView.ItemContainerStyle>
                            <Style TargetType="ListViewItem">
                                <Setter Property="HorizontalContentAlignment" Value="Stretch" />
                                <Setter Property="Padding" Value="0" />
                                <Setter Property="Margin" Value="0,0,0,2" />
                                <Setter Property="Background" Value="Transparent" />
                            </Style>
                        </ListView.ItemContainerStyle>
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <Grid Margin="0,2">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="*" />
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Grid.Column="0" Text="{Binding Severity}" FontSize="12" FontWeight="SemiBold"
                                               Foreground="{Binding SeverityColor}" VerticalAlignment="Center" Margin="0,0,12,0" Width="60" />
                                    <TextBlock Grid.Column="1" Text="{Binding Message}" FontSize="12"
                                               Foreground="{StaticResource ConsoleTextPrimaryBrush}"
                                               TextWrapping="Wrap" VerticalAlignment="Center" />
                                </Grid>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </StackPanel>
            </Border>

            <!-- Legal Holds -->
            <Border Style="{StaticResource CardStyle}" Margin="0,0,0,24">
                <StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,16">
                        <TextBlock Text="&#xE72E;" FontFamily="{StaticResource SymbolThemeFontFamily}"
                                   FontSize="16" Foreground="{StaticResource ErrorColorBrush}" VerticalAlignment="Center" Margin="0,0,8,0" />
                        <TextBlock Text="Legal Holds" Style="{StaticResource CardHeaderStyle}" />
                    </StackPanel>
                    <TextBlock Text="Files under legal hold are protected from deletion regardless of retention policy"
                               FontSize="12" Foreground="{StaticResource ConsoleTextMutedBrush}" Margin="0,0,0,12" />
                    <Grid Margin="0,0,0,12">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="12" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="12" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="12" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>
                        <TextBox x:Name="HoldNameBox" Grid.Column="0" Style="{StaticResource FormTextBoxStyle}" />
                        <TextBox x:Name="HoldReasonBox" Grid.Column="2" Style="{StaticResource FormTextBoxStyle}" />
                        <TextBox x:Name="HoldSymbolsBox" Grid.Column="4" Style="{StaticResource FormTextBoxStyle}" />
                        <Button Grid.Column="6" Content="Create Hold" Click="CreateHold_Click" Style="{StaticResource PrimaryButtonStyle}" />
                    </Grid>
                    <Grid Margin="0,0,0,8">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="12" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="12" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="12" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0" Text="Hold Name" FontSize="11" Foreground="{StaticResource ConsoleTextMutedBrush}" />
                        <TextBlock Grid.Column="2" Text="Reason" FontSize="11" Foreground="{StaticResource ConsoleTextMutedBrush}" />
                        <TextBlock Grid.Column="4" Text="Symbols (comma-separated)" FontSize="11" Foreground="{StaticResource ConsoleTextMutedBrush}" />
                    </Grid>
                    <ListView x:Name="LegalHoldsList" SelectionMode="Single" MaxHeight="200"
                              Background="Transparent" BorderThickness="0">
                        <ListView.ItemContainerStyle>
                            <Style TargetType="ListViewItem">
                                <Setter Property="HorizontalContentAlignment" Value="Stretch" />
                                <Setter Property="Padding" Value="0" />
                                <Setter Property="Margin" Value="0,0,0,4" />
                                <Setter Property="Background" Value="Transparent" />
                            </Style>
                        </ListView.ItemContainerStyle>
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <Border Background="{StaticResource ConsoleBackgroundLightBrush}"
                                        CornerRadius="6" Padding="12,8"
                                        BorderBrush="{StaticResource ConsoleBorderBrush}" BorderThickness="1">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="Auto" />
                                            <ColumnDefinition Width="Auto" />
                                            <ColumnDefinition Width="Auto" />
                                        </Grid.ColumnDefinitions>
                                        <StackPanel Grid.Column="0">
                                            <TextBlock Text="{Binding Name}" FontSize="13" FontWeight="Bold"
                                                       Foreground="{StaticResource ConsoleTextPrimaryBrush}" />
                                            <TextBlock Text="{Binding Reason}" FontSize="11"
                                                       Foreground="{StaticResource ConsoleTextMutedBrush}" />
                                        </StackPanel>
                                        <TextBlock Grid.Column="1" Text="{Binding SymbolsText}" FontSize="12"
                                                   Foreground="{StaticResource InfoColorBrush}"
                                                   VerticalAlignment="Center" Margin="12,0" />
                                        <TextBlock Grid.Column="2" Text="{Binding CreatedText}" FontSize="11"
                                                   Foreground="{StaticResource ConsoleTextMutedBrush}"
                                                   VerticalAlignment="Center" Margin="0,0,12,0" />
                                        <Button Grid.Column="3" Content="Release" Click="ReleaseHold_Click"
                                                Style="{StaticResource GhostButtonStyle}" Tag="{Binding Id}" />
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                    <StackPanel x:Name="NoHoldsPanel" Visibility="Collapsed" Margin="0,8,0,0">
                        <TextBlock Text="No active legal holds" FontSize="13"
                                   Foreground="{StaticResource ConsoleTextMutedBrush}" HorizontalAlignment="Center" />
                    </StackPanel>
                </StackPanel>
            </Border>

            <!-- Audit Reports -->
            <Border Style="{StaticResource CardStyle}" Margin="0,0,0,24">
                <StackPanel>
                    <TextBlock Text="Recent Audit Reports" Style="{StaticResource CardHeaderStyle}" Margin="0,0,0,16" />
                    <ListView x:Name="AuditReportsList" SelectionMode="Single" MaxHeight="200"
                              Background="Transparent" BorderThickness="0">
                        <ListView.ItemContainerStyle>
                            <Style TargetType="ListViewItem">
                                <Setter Property="HorizontalContentAlignment" Value="Stretch" />
                                <Setter Property="Padding" Value="0" />
                                <Setter Property="Margin" Value="0,0,0,4" />
                                <Setter Property="Background" Value="Transparent" />
                            </Style>
                        </ListView.ItemContainerStyle>
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <Border Background="{StaticResource ConsoleBackgroundLightBrush}"
                                        CornerRadius="6" Padding="12,8"
                                        BorderBrush="{StaticResource ConsoleBorderBrush}" BorderThickness="1">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto" />
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="Auto" />
                                            <ColumnDefinition Width="Auto" />
                                        </Grid.ColumnDefinitions>
                                        <Border Grid.Column="0" Background="{Binding StatusColor}" CornerRadius="4" Padding="8,2"
                                                VerticalAlignment="Center" Margin="0,0,12,0">
                                            <TextBlock Text="{Binding StatusText}" FontSize="11" Foreground="White" FontWeight="SemiBold" />
                                        </Border>
                                        <TextBlock Grid.Column="1" Text="{Binding Summary}" FontSize="13"
                                                   Foreground="{StaticResource ConsoleTextPrimaryBrush}" VerticalAlignment="Center" />
                                        <TextBlock Grid.Column="2" Text="{Binding SizeText}" FontSize="12"
                                                   Foreground="{StaticResource ConsoleTextMutedBrush}" VerticalAlignment="Center" Margin="12,0" />
                                        <TextBlock Grid.Column="3" Text="{Binding TimeText}" FontSize="11"
                                                   Foreground="{StaticResource ConsoleTextMutedBrush}" VerticalAlignment="Center" />
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                    <StackPanel x:Name="NoAuditsPanel" Visibility="Collapsed" Margin="0,8,0,0">
                        <TextBlock Text="No audit reports yet" FontSize="13"
                                   Foreground="{StaticResource ConsoleTextMutedBrush}" HorizontalAlignment="Center" />
                    </StackPanel>
                </StackPanel>
            </Border>

            <!-- Status -->
            <Border x:Name="StatusPanel" Style="{StaticResource CardStyle}" Visibility="Collapsed">
                <StackPanel>
                    <TextBlock x:Name="StatusText" Text="" FontSize="13"
                               Foreground="{StaticResource ConsoleTextPrimaryBrush}" />
                    <ProgressBar x:Name="StatusProgress" IsIndeterminate="True" Height="4" Margin="0,8,0,0"
                                 Visibility="Collapsed" Foreground="{StaticResource InfoColorBrush}" />
                </StackPanel>
            </Border>

        </StackPanel>
    </ScrollViewer>
</Page>
