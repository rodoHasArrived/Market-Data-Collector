<Page x:Class="MarketDataCollector.Wpf.Views.StoragePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      mc:Ignorable="d"
      Background="{DynamicResource ConsoleBackgroundDarkBrush}">

    <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="24">
        <StackPanel MaxWidth="1200">
            <StackPanel Orientation="Horizontal" Margin="0,0,0,24">
                <TextBlock Text="{StaticResource IconDatabase}"
                           FontFamily="{StaticResource SymbolThemeFontFamily}"
                           FontSize="28" Foreground="{StaticResource InfoColorBrush}"
                           VerticalAlignment="Center" />
                <TextBlock Text="Storage Management"
                           Style="{StaticResource PageTitleStyle}"
                           Margin="12,0,0,0" VerticalAlignment="Center" />
            </StackPanel>

            <!-- Storage Overview -->
            <Grid Margin="0,0,0,24">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="16" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="16" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <Border Grid.Column="0" Style="{StaticResource CardStyle}">
                    <StackPanel HorizontalAlignment="Center">
                        <TextBlock Text="2.4 GB" FontSize="32" FontWeight="Bold"
                                   Foreground="{StaticResource InfoColorBrush}"
                                   HorizontalAlignment="Center" />
                        <TextBlock Text="Total Size" HorizontalAlignment="Center"
                                   Foreground="{StaticResource ConsoleTextMutedBrush}" />
                    </StackPanel>
                </Border>

                <Border Grid.Column="2" Style="{StaticResource CardStyle}">
                    <StackPanel HorizontalAlignment="Center">
                        <TextBlock Text="1,234,567" FontSize="32" FontWeight="Bold"
                                   Foreground="{StaticResource SuccessColorBrush}"
                                   HorizontalAlignment="Center" />
                        <TextBlock Text="Total Records" HorizontalAlignment="Center"
                                   Foreground="{StaticResource ConsoleTextMutedBrush}" />
                    </StackPanel>
                </Border>

                <Border Grid.Column="4" Style="{StaticResource CardStyle}">
                    <StackPanel HorizontalAlignment="Center">
                        <TextBlock Text="45" FontSize="32" FontWeight="Bold"
                                   Foreground="{StaticResource InfoColorBrush}"
                                   HorizontalAlignment="Center" />
                        <TextBlock Text="Symbols" HorizontalAlignment="Center"
                                   Foreground="{StaticResource ConsoleTextMutedBrush}" />
                    </StackPanel>
                </Border>
            </Grid>

            <!-- Storage Configuration -->
            <Border Style="{StaticResource CardStyle}" Margin="0,0,0,24">
                <StackPanel>
                    <TextBlock Text="Storage Configuration" Style="{StaticResource CardHeaderStyle}" Margin="0,0,0,16" />

                    <StackPanel Margin="0,0,0,12">
                        <TextBlock Text="Data Directory" Style="{StaticResource FormLabelStyle}" Margin="0,0,0,4" />
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>
                            <TextBox x:Name="DataDirectoryBox" Style="{StaticResource FormTextBoxStyle}"
                                     Text="./data" IsReadOnly="True" />
                            <Button Grid.Column="1" Content="Browse" Style="{StaticResource SecondaryButtonStyle}"
                                    Margin="8,0,0,0" />
                        </Grid>
                    </StackPanel>

                    <StackPanel Margin="0,0,0,12">
                        <TextBlock Text="Naming Convention" Style="{StaticResource FormLabelStyle}" Margin="0,0,0,4" />
                        <ComboBox Style="{StaticResource FormComboBoxStyle}">
                            <ComboBoxItem Content="By Symbol (symbol/type/date)" IsSelected="True" />
                            <ComboBoxItem Content="By Date (date/symbol/type)" />
                            <ComboBoxItem Content="By Type (type/symbol/date)" />
                            <ComboBoxItem Content="Flat (symbol_type_date)" />
                        </ComboBox>
                    </StackPanel>

                    <StackPanel Margin="0,0,0,12">
                        <TextBlock Text="Compression" Style="{StaticResource FormLabelStyle}" Margin="0,0,0,4" />
                        <ComboBox Style="{StaticResource FormComboBoxStyle}">
                            <ComboBoxItem Content="None" />
                            <ComboBoxItem Content="Gzip" IsSelected="True" />
                            <ComboBoxItem Content="LZ4 (Fast)" />
                            <ComboBoxItem Content="ZSTD (Best)" />
                        </ComboBox>
                    </StackPanel>
                </StackPanel>
            </Border>

            <!-- Tiered Storage -->
            <Border Style="{StaticResource CardStyle}">
                <StackPanel>
                    <TextBlock Text="Tiered Storage" Style="{StaticResource CardHeaderStyle}" Margin="0,0,0,16" />

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0" Margin="0,0,8,0">
                            <TextBlock Text="Hot Tier" FontWeight="SemiBold" Foreground="{StaticResource ConsoleTextPrimaryBrush}" />
                            <TextBlock Text="Last 7 days" Foreground="{StaticResource ConsoleTextMutedBrush}" FontSize="12" />
                            <TextBlock Text="450 MB" Foreground="{StaticResource SuccessColorBrush}" FontWeight="SemiBold" Margin="0,4,0,0" />
                        </StackPanel>

                        <StackPanel Grid.Column="1" Margin="8,0">
                            <TextBlock Text="Warm Tier" FontWeight="SemiBold" Foreground="{StaticResource ConsoleTextPrimaryBrush}" />
                            <TextBlock Text="8-30 days" Foreground="{StaticResource ConsoleTextMutedBrush}" FontSize="12" />
                            <TextBlock Text="800 MB" Foreground="{StaticResource WarningColorBrush}" FontWeight="SemiBold" Margin="0,4,0,0" />
                        </StackPanel>

                        <StackPanel Grid.Column="2" Margin="8,0,0,0">
                            <TextBlock Text="Cold Tier" FontWeight="SemiBold" Foreground="{StaticResource ConsoleTextPrimaryBrush}" />
                            <TextBlock Text="30+ days" Foreground="{StaticResource ConsoleTextMutedBrush}" FontSize="12" />
                            <TextBlock Text="1.2 GB" Foreground="{StaticResource InfoColorBrush}" FontWeight="SemiBold" Margin="0,4,0,0" />
                        </StackPanel>
                    </Grid>
                </StackPanel>
            </Border>
        </StackPanel>
    </ScrollViewer>
</Page>
