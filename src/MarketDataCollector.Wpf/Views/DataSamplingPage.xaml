<Page x:Class="MarketDataCollector.Wpf.Views.DataSamplingPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Background="{DynamicResource ConsoleBackgroundDarkBrush}"
      Loaded="OnPageLoaded">
    <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="24">
        <StackPanel MaxWidth="1200">
            <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                <TextBlock Text="&#xE9D9;" FontFamily="{StaticResource SymbolThemeFontFamily}"
                           FontSize="28" Foreground="{StaticResource InfoColorBrush}" VerticalAlignment="Center" />
                <TextBlock Text="Data Sampling" Style="{StaticResource PageTitleStyle}" Margin="12,0,0,0" VerticalAlignment="Center" />
            </StackPanel>
            <TextBlock Text="Create curated data subsets for testing, research, and analytics."
                       Style="{StaticResource PageSubtitleStyle}" Margin="0,0,0,20" />

            <Border Style="{StaticResource CardStyle}" Margin="0,0,0,16">
                <StackPanel>
                    <TextBlock Text="Sampling Configuration" Style="{StaticResource CardHeaderStyle}" Margin="0,0,0,16" />
                    <Grid ColumnSpacing="16" RowSpacing="12">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>

                        <StackPanel Grid.Row="0" Grid.Column="0">
                            <TextBlock Text="Sample Name" Style="{StaticResource FormLabelStyle}" />
                            <TextBox Style="{StaticResource FormTextBoxStyle}"
                                     Text="{Binding SampleName, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}" />
                        </StackPanel>

                        <StackPanel Grid.Row="0" Grid.Column="1">
                            <TextBlock Text="Sample Size" Style="{StaticResource FormLabelStyle}" />
                            <TextBox Style="{StaticResource FormTextBoxStyle}"
                                     Text="{Binding SampleSize, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}" />
                        </StackPanel>

                        <StackPanel Grid.Row="0" Grid.Column="2">
                            <TextBlock Text="Preset" Style="{StaticResource FormLabelStyle}" />
                            <ComboBox Style="{StaticResource FormComboBoxStyle}"
                                      ItemsSource="{Binding Presets}"
                                      SelectedItem="{Binding SelectedPreset}" />
                        </StackPanel>

                        <StackPanel Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2">
                            <TextBlock Text="Description" Style="{StaticResource FormLabelStyle}" />
                            <TextBox Style="{StaticResource FormTextBoxStyle}"
                                     Text="{Binding Description, UpdateSourceTrigger=PropertyChanged}"
                                     Height="60"
                                     TextWrapping="Wrap"
                                     AcceptsReturn="True" />
                        </StackPanel>

                        <StackPanel Grid.Row="1" Grid.Column="2">
                            <TextBlock Text="Symbols" Style="{StaticResource FormLabelStyle}" />
                            <StackPanel Orientation="Horizontal">
                                <TextBox Style="{StaticResource FormTextBoxStyle}"
                                         Text="{Binding SymbolInput, UpdateSourceTrigger=PropertyChanged}"
                                         Width="140" />
                                <Button Content="Add"
                                        Style="{StaticResource SecondaryButtonStyle}"
                                        Margin="8,0,0,0"
                                        Click="AddSymbol_Click" />
                            </StackPanel>
                            <ListBox ItemsSource="{Binding Symbols}" Height="100" Margin="0,8,0,0" />
                        </StackPanel>

                        <StackPanel Grid.Row="2" Grid.Column="0">
                            <TextBlock Text="From" Style="{StaticResource FormLabelStyle}" />
                            <DatePicker SelectedDate="{Binding FromDate, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}" />
                        </StackPanel>

                        <StackPanel Grid.Row="2" Grid.Column="1">
                            <TextBlock Text="To" Style="{StaticResource FormLabelStyle}" />
                            <DatePicker SelectedDate="{Binding ToDate, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}" />
                        </StackPanel>

                        <StackPanel Grid.Row="2" Grid.Column="2">
                            <TextBlock Text="Data Types" Style="{StaticResource FormLabelStyle}" />
                            <CheckBox Content="Trades" IsChecked="{Binding IncludeTrades}" Margin="0,4,0,0" />
                            <CheckBox Content="Quotes" IsChecked="{Binding IncludeQuotes}" />
                        </StackPanel>
                    </Grid>

                    <StackPanel Orientation="Horizontal" Margin="0,16,0,0">
                        <Button Content="Generate Sample"
                                Style="{StaticResource PrimaryButtonStyle}"
                                Click="GenerateSample_Click"
                                Margin="0,0,8,0" />
                        <Button Content="Save Preset"
                                Style="{StaticResource SecondaryButtonStyle}"
                                Click="SavePreset_Click" />
                    </StackPanel>

                    <TextBlock Text="{Binding StatusMessage}"
                               Foreground="{StaticResource InfoColorBrush}"
                               Margin="0,12,0,0" />
                </StackPanel>
            </Border>

            <Border Style="{StaticResource CardStyle}">
                <StackPanel>
                    <TextBlock Text="Recent Samples" Style="{StaticResource CardHeaderStyle}" Margin="0,0,0,12" />
                    <DataGrid ItemsSource="{Binding RecentSamples}"
                              AutoGenerateColumns="False"
                              CanUserAddRows="False"
                              MinHeight="200">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="*" />
                            <DataGridTextColumn Header="Symbols" Binding="{Binding SymbolCount}" Width="120" />
                            <DataGridTextColumn Header="Range" Binding="{Binding DateRange}" Width="200" />
                            <DataGridTextColumn Header="Created" Binding="{Binding CreatedAt}" Width="160" />
                        </DataGrid.Columns>
                    </DataGrid>
                </StackPanel>
            </Border>

            <TextBlock Text="{Binding ValidationSummary}"
                       Foreground="{StaticResource ErrorColorBrush}"
                       Margin="0,12,0,0"
                       Visibility="{Binding ValidationSummary, Converter={StaticResource StringToVisibilityConverter}}" />
        </StackPanel>
    </ScrollViewer>
</Page>
