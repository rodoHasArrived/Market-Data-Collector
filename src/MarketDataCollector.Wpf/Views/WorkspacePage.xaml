<Page x:Class="MarketDataCollector.Wpf.Views.WorkspacePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Background="{DynamicResource ConsoleBackgroundDarkBrush}"
      Loaded="OnPageLoaded">
    <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="24">
        <StackPanel MaxWidth="1200">

            <!-- Header -->
            <Grid Margin="0,0,0,24">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <StackPanel Grid.Column="0">
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,4">
                        <TextBlock Text="&#xE8A1;" FontFamily="{StaticResource SymbolThemeFontFamily}"
                                   FontSize="28" Foreground="{StaticResource InfoColorBrush}" VerticalAlignment="Center" />
                        <TextBlock Text="Workspaces" Style="{StaticResource PageTitleStyle}" Margin="12,0,0,0" VerticalAlignment="Center" />
                    </StackPanel>
                    <TextBlock Text="Manage workspace templates, save and restore session layouts"
                               Style="{StaticResource CardDescriptionStyle}" />
                </StackPanel>
                <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                    <Button Content="Import" Click="ImportWorkspace_Click" Style="{StaticResource SecondaryButtonStyle}" Margin="0,0,8,0" />
                    <Button Content="Capture Current" Click="CaptureWorkspace_Click" Style="{StaticResource PrimaryButtonStyle}" />
                </StackPanel>
            </Grid>

            <!-- Active Workspace -->
            <Border Style="{StaticResource CardStyle}" Margin="0,0,0,24">
                <StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,12">
                        <TextBlock Text="&#xE8A7;" FontFamily="{StaticResource SymbolThemeFontFamily}"
                                   FontSize="16" Foreground="{StaticResource SuccessColorBrush}" VerticalAlignment="Center" Margin="0,0,8,0" />
                        <TextBlock Text="Active Workspace" Style="{StaticResource CardHeaderStyle}" />
                    </StackPanel>
                    <Border Background="{StaticResource ConsoleBackgroundLightBrush}" CornerRadius="6" Padding="16">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>
                            <StackPanel Grid.Column="0">
                                <TextBlock x:Name="ActiveWorkspaceName" Text="None" FontSize="16" FontWeight="Bold"
                                           Foreground="{StaticResource ConsoleTextPrimaryBrush}" />
                                <TextBlock x:Name="ActiveWorkspaceDescription" Text="No workspace active"
                                           FontSize="12" Foreground="{StaticResource ConsoleTextMutedBrush}" Margin="0,4,0,0" />
                                <TextBlock x:Name="ActiveWorkspacePages" Text="" FontSize="12"
                                           Foreground="{StaticResource ConsoleTextSecondaryBrush}" Margin="0,4,0,0" />
                            </StackPanel>
                            <Border Grid.Column="1" x:Name="ActiveCategoryBadge" CornerRadius="4" Padding="8,4"
                                    Background="{StaticResource ConsoleAccentBlueAlpha10Brush}" VerticalAlignment="Top">
                                <TextBlock x:Name="ActiveCategoryText" Text="" FontSize="11" FontWeight="SemiBold"
                                           Foreground="{StaticResource InfoColorBrush}" />
                            </Border>
                        </Grid>
                    </Border>
                </StackPanel>
            </Border>

            <!-- Session Restore -->
            <Border Style="{StaticResource CardStyle}" Margin="0,0,0,24">
                <StackPanel>
                    <TextBlock Text="Last Session" Style="{StaticResource CardHeaderStyle}" Margin="0,0,0,12" />
                    <TextBlock x:Name="LastSessionText" Text="No saved session" FontSize="13"
                               Foreground="{StaticResource ConsoleTextMutedBrush}" />
                    <Button x:Name="RestoreSessionButton" Content="Restore Session" Click="RestoreSession_Click"
                            Style="{StaticResource SecondaryButtonStyle}" HorizontalAlignment="Left" Margin="0,8,0,0"
                            IsEnabled="False" />
                </StackPanel>
            </Border>

            <!-- Create Workspace -->
            <Border Style="{StaticResource CardStyle}" Margin="0,0,0,24">
                <StackPanel>
                    <TextBlock Text="Create Workspace" Style="{StaticResource CardHeaderStyle}" Margin="0,0,0,16" />
                    <Grid Margin="0,0,0,12">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="16" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="16" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>
                        <StackPanel Grid.Column="0">
                            <TextBlock Text="Name" FontSize="11" Foreground="{StaticResource ConsoleTextMutedBrush}" Margin="0,0,0,4" />
                            <TextBox x:Name="NewWorkspaceNameBox" Style="{StaticResource FormTextBoxStyle}" />
                        </StackPanel>
                        <StackPanel Grid.Column="2">
                            <TextBlock Text="Description" FontSize="11" Foreground="{StaticResource ConsoleTextMutedBrush}" Margin="0,0,0,4" />
                            <TextBox x:Name="NewWorkspaceDescBox" Style="{StaticResource FormTextBoxStyle}" />
                        </StackPanel>
                        <StackPanel Grid.Column="4">
                            <TextBlock Text="Category" FontSize="11" Foreground="{StaticResource ConsoleTextMutedBrush}" Margin="0,0,0,4" />
                            <ComboBox x:Name="NewCategoryCombo" SelectedIndex="4" Width="130">
                                <ComboBoxItem Content="Monitoring" />
                                <ComboBoxItem Content="Backfill" />
                                <ComboBoxItem Content="Storage" />
                                <ComboBoxItem Content="Analysis" />
                                <ComboBoxItem Content="Custom" />
                            </ComboBox>
                        </StackPanel>
                    </Grid>
                    <Button Content="Create Workspace" Click="CreateWorkspace_Click"
                            Style="{StaticResource PrimaryButtonStyle}" HorizontalAlignment="Left" />
                </StackPanel>
            </Border>

            <!-- Workspace List -->
            <Border Style="{StaticResource CardStyle}" Margin="0,0,0,24">
                <StackPanel>
                    <Grid Margin="0,0,0,16">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0" Text="All Workspaces" Style="{StaticResource CardHeaderStyle}" />
                        <TextBlock Grid.Column="1" x:Name="WorkspaceCountText" Text="0 workspaces" FontSize="12"
                                   Foreground="{StaticResource ConsoleTextMutedBrush}" VerticalAlignment="Center" />
                    </Grid>
                    <ListView x:Name="WorkspacesList" SelectionMode="Single" MaxHeight="400"
                              Background="Transparent" BorderThickness="0">
                        <ListView.ItemContainerStyle>
                            <Style TargetType="ListViewItem">
                                <Setter Property="HorizontalContentAlignment" Value="Stretch" />
                                <Setter Property="Padding" Value="0" />
                                <Setter Property="Margin" Value="0,0,0,4" />
                                <Setter Property="Background" Value="Transparent" />
                            </Style>
                        </ListView.ItemContainerStyle>
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <Border Background="{StaticResource ConsoleBackgroundLightBrush}"
                                        CornerRadius="6" Padding="12,8"
                                        BorderBrush="{StaticResource ConsoleBorderBrush}" BorderThickness="1">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="Auto" />
                                            <ColumnDefinition Width="Auto" />
                                            <ColumnDefinition Width="Auto" />
                                            <ColumnDefinition Width="Auto" />
                                        </Grid.ColumnDefinitions>
                                        <StackPanel Grid.Column="0">
                                            <StackPanel Orientation="Horizontal">
                                                <TextBlock Text="{Binding Name}" FontSize="13" FontWeight="Bold"
                                                           Foreground="{StaticResource ConsoleTextPrimaryBrush}" />
                                                <TextBlock Text="{Binding BadgeText}" FontSize="10" FontWeight="SemiBold"
                                                           Foreground="{StaticResource InfoColorBrush}" Margin="8,0,0,0"
                                                           VerticalAlignment="Center" />
                                            </StackPanel>
                                            <TextBlock Text="{Binding Description}" FontSize="11"
                                                       Foreground="{StaticResource ConsoleTextMutedBrush}" />
                                        </StackPanel>
                                        <TextBlock Grid.Column="1" Text="{Binding PagesText}" FontSize="12"
                                                   Foreground="{StaticResource ConsoleTextSecondaryBrush}"
                                                   VerticalAlignment="Center" Margin="12,0" />
                                        <Button Grid.Column="2" Content="Activate" Click="ActivateWorkspace_Click"
                                                Style="{StaticResource PrimaryButtonStyle}" Tag="{Binding Id}"
                                                Margin="0,0,4,0" />
                                        <Button Grid.Column="3" Content="Export" Click="ExportWorkspace_Click"
                                                Style="{StaticResource GhostButtonStyle}" Tag="{Binding Id}"
                                                Margin="0,0,4,0" />
                                        <Button Grid.Column="4" Content="Delete" Click="DeleteWorkspace_Click"
                                                Style="{StaticResource GhostButtonStyle}" Tag="{Binding Id}"
                                                Visibility="{Binding DeleteVisibility}" />
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </StackPanel>
            </Border>

        </StackPanel>
    </ScrollViewer>
</Page>
