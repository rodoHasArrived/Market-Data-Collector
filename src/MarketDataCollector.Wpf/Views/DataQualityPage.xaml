<Page x:Class="MarketDataCollector.Wpf.Views.DataQualityPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      mc:Ignorable="d"
      d:DesignHeight="800" d:DesignWidth="1200"
      Background="{DynamicResource ConsoleBackgroundDarkBrush}">

    <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="24">
        <StackPanel MaxWidth="1200">
            <!-- Header -->
            <StackPanel Orientation="Horizontal" Margin="0,0,0,24">
                <TextBlock Text="{StaticResource IconChart}"
                           FontFamily="{StaticResource SymbolThemeFontFamily}"
                           FontSize="28" Foreground="{StaticResource InfoColorBrush}"
                           VerticalAlignment="Center" />
                <TextBlock Text="Data Quality Monitor"
                           Style="{StaticResource PageTitleStyle}"
                           Margin="12,0,0,0" VerticalAlignment="Center" />
            </StackPanel>

            <!-- Quality Metrics Overview -->
            <Grid Margin="0,0,0,24">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="16" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="16" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="16" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <Border Grid.Column="0" Style="{StaticResource CardStyle}">
                    <StackPanel HorizontalAlignment="Center">
                        <TextBlock Text="98.5%" FontSize="32" FontWeight="Bold"
                                   Foreground="{StaticResource SuccessColorBrush}"
                                   HorizontalAlignment="Center" />
                        <TextBlock Text="Completeness Score" HorizontalAlignment="Center"
                                   Foreground="{StaticResource ConsoleTextMutedBrush}" />
                    </StackPanel>
                </Border>

                <Border Grid.Column="2" Style="{StaticResource CardStyle}">
                    <StackPanel HorizontalAlignment="Center">
                        <TextBlock Text="3" FontSize="32" FontWeight="Bold"
                                   Foreground="{StaticResource WarningColorBrush}"
                                   HorizontalAlignment="Center" />
                        <TextBlock Text="Data Gaps" HorizontalAlignment="Center"
                                   Foreground="{StaticResource ConsoleTextMutedBrush}" />
                    </StackPanel>
                </Border>

                <Border Grid.Column="4" Style="{StaticResource CardStyle}">
                    <StackPanel HorizontalAlignment="Center">
                        <TextBlock Text="0" FontSize="32" FontWeight="Bold"
                                   Foreground="{StaticResource SuccessColorBrush}"
                                   HorizontalAlignment="Center" />
                        <TextBlock Text="Sequence Errors" HorizontalAlignment="Center"
                                   Foreground="{StaticResource ConsoleTextMutedBrush}" />
                    </StackPanel>
                </Border>

                <Border Grid.Column="6" Style="{StaticResource CardStyle}">
                    <StackPanel HorizontalAlignment="Center">
                        <TextBlock Text="12ms" FontSize="32" FontWeight="Bold"
                                   Foreground="{StaticResource InfoColorBrush}"
                                   HorizontalAlignment="Center" />
                        <TextBlock Text="Avg Latency" HorizontalAlignment="Center"
                                   Foreground="{StaticResource ConsoleTextMutedBrush}" />
                    </StackPanel>
                </Border>
            </Grid>

            <!-- Gap Analysis -->
            <Border Style="{StaticResource CardStyle}" Margin="0,0,0,24">
                <StackPanel>
                    <TextBlock Text="Gap Analysis" Style="{StaticResource CardHeaderStyle}" Margin="0,0,0,16" />
                    <ListView x:Name="GapsListView" Background="Transparent" BorderThickness="0" MaxHeight="200">
                        <ListViewItem>
                            <Grid Width="800">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="80" />
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="120" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="AAPL" FontWeight="SemiBold" Foreground="{StaticResource ConsoleTextPrimaryBrush}" />
                                <TextBlock Grid.Column="1" Text="Missing 156 bars between 2024-01-15 and 2024-01-17" Foreground="{StaticResource ConsoleTextSecondaryBrush}" />
                                <TextBlock Grid.Column="2" Text="2 days" Foreground="{StaticResource WarningColorBrush}" />
                                <Button Grid.Column="3" Content="Repair" Style="{StaticResource GhostButtonStyle}" />
                            </Grid>
                        </ListViewItem>
                    </ListView>
                </StackPanel>
            </Border>

            <!-- Anomaly Detection -->
            <Border Style="{StaticResource CardStyle}">
                <StackPanel>
                    <TextBlock Text="Anomaly Detection" Style="{StaticResource CardHeaderStyle}" Margin="0,0,0,16" />
                    <TextBlock Text="No anomalies detected in the last 24 hours."
                               Foreground="{StaticResource ConsoleTextMutedBrush}" />
                </StackPanel>
            </Border>
        </StackPanel>
    </ScrollViewer>
</Page>
