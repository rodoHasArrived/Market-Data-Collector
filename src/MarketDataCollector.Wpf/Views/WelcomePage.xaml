<Page x:Class="MarketDataCollector.Wpf.Views.WelcomePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      mc:Ignorable="d"
      d:DesignHeight="900" d:DesignWidth="1200"
      Background="{DynamicResource ConsoleBackgroundDarkBrush}"
      Loaded="OnPageLoaded">

    <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="24">
        <StackPanel MaxWidth="1200">

            <!-- Header with branding -->
            <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                <TextBlock Text="{StaticResource IconHome}"
                           FontFamily="{StaticResource SymbolThemeFontFamily}"
                           FontSize="28"
                           Foreground="{StaticResource InfoColorBrush}"
                           VerticalAlignment="Center" />
                <TextBlock Text="Market Data Collector"
                           Style="{StaticResource PageTitleStyle}"
                           Margin="12,0,0,0"
                           VerticalAlignment="Center" />
                <Border Background="{StaticResource ConsoleBackgroundLightBrush}"
                        CornerRadius="4"
                        Padding="8,2"
                        Margin="12,0,0,0"
                        VerticalAlignment="Center">
                    <TextBlock Text="v1.6.1"
                               FontSize="12"
                               FontWeight="SemiBold"
                               Foreground="{StaticResource InfoColorBrush}" />
                </Border>
            </StackPanel>

            <TextBlock Text="High-performance market data collection for real-time and historical data from multiple providers."
                       Foreground="{StaticResource ConsoleTextSecondaryBrush}"
                       TextWrapping="Wrap"
                       Margin="0,0,0,24" />

            <!-- Getting Started Card -->
            <Border Style="{StaticResource CardStyle}" Margin="0,0,0,24">
                <StackPanel>
                    <Grid Margin="0,0,0,16">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0" Orientation="Horizontal">
                            <TextBlock Text="{StaticResource IconPlay}"
                                       FontFamily="{StaticResource SymbolThemeFontFamily}"
                                       FontSize="18"
                                       Foreground="{StaticResource InfoColorBrush}"
                                       VerticalAlignment="Center" />
                            <TextBlock Text="Getting Started"
                                       Style="{StaticResource CardHeaderStyle}"
                                       Margin="8,0,0,0" />
                        </StackPanel>

                        <Button Grid.Column="1"
                                Content="Open Documentation"
                                Style="{StaticResource SecondaryButtonStyle}"
                                Click="OpenDocumentation_Click" />
                    </Grid>

                    <TextBlock Text="Follow these five steps to begin collecting market data. Click any step to navigate directly to its configuration page."
                               TextWrapping="Wrap"
                               Foreground="{StaticResource ConsoleTextSecondaryBrush}"
                               Margin="0,0,0,16" />

                    <!-- Quick-start step cards -->
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="12" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="12" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="12" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="12" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>

                        <!-- Step 1: Configure Provider -->
                        <Border Grid.Column="0" Background="{StaticResource ConsoleBackgroundMediumBrush}"
                                CornerRadius="8" Padding="12" Cursor="Hand"
                                MouseLeftButtonUp="StepProvider_CardClick">
                            <StackPanel HorizontalAlignment="Center">
                                <TextBlock Text="{StaticResource IconProvider}"
                                           FontFamily="{StaticResource SymbolThemeFontFamily}"
                                           FontSize="24"
                                           Foreground="{StaticResource InfoColorBrush}"
                                           HorizontalAlignment="Center" />
                                <TextBlock Text="1. Provider" HorizontalAlignment="Center" FontWeight="SemiBold"
                                           Foreground="{StaticResource ConsoleTextPrimaryBrush}" Margin="0,8,0,4" />
                                <TextBlock Text="Configure data source" HorizontalAlignment="Center"
                                           TextAlignment="Center"
                                           Foreground="{StaticResource ConsoleTextMutedBrush}" FontSize="11" />
                            </StackPanel>
                        </Border>

                        <!-- Step 2: Add Symbols -->
                        <Border Grid.Column="2" Background="{StaticResource ConsoleBackgroundMediumBrush}"
                                CornerRadius="8" Padding="12" Cursor="Hand"
                                MouseLeftButtonUp="StepSymbols_CardClick">
                            <StackPanel HorizontalAlignment="Center">
                                <TextBlock Text="{StaticResource IconList}"
                                           FontFamily="{StaticResource SymbolThemeFontFamily}"
                                           FontSize="24"
                                           Foreground="{StaticResource InfoColorBrush}"
                                           HorizontalAlignment="Center" />
                                <TextBlock Text="2. Symbols" HorizontalAlignment="Center" FontWeight="SemiBold"
                                           Foreground="{StaticResource ConsoleTextPrimaryBrush}" Margin="0,8,0,4" />
                                <TextBlock Text="Add subscriptions" HorizontalAlignment="Center"
                                           TextAlignment="Center"
                                           Foreground="{StaticResource ConsoleTextMutedBrush}" FontSize="11" />
                            </StackPanel>
                        </Border>

                        <!-- Step 3: Set Storage -->
                        <Border Grid.Column="4" Background="{StaticResource ConsoleBackgroundMediumBrush}"
                                CornerRadius="8" Padding="12" Cursor="Hand"
                                MouseLeftButtonUp="StepStorage_CardClick">
                            <StackPanel HorizontalAlignment="Center">
                                <TextBlock Text="{StaticResource IconDatabase}"
                                           FontFamily="{StaticResource SymbolThemeFontFamily}"
                                           FontSize="24"
                                           Foreground="{StaticResource InfoColorBrush}"
                                           HorizontalAlignment="Center" />
                                <TextBlock Text="3. Storage" HorizontalAlignment="Center" FontWeight="SemiBold"
                                           Foreground="{StaticResource ConsoleTextPrimaryBrush}" Margin="0,8,0,4" />
                                <TextBlock Text="Set output location" HorizontalAlignment="Center"
                                           TextAlignment="Center"
                                           Foreground="{StaticResource ConsoleTextMutedBrush}" FontSize="11" />
                            </StackPanel>
                        </Border>

                        <!-- Step 4: Start Collection -->
                        <Border Grid.Column="6" Background="{StaticResource ConsoleBackgroundMediumBrush}"
                                CornerRadius="8" Padding="12" Cursor="Hand"
                                MouseLeftButtonUp="StepDashboard_CardClick">
                            <StackPanel HorizontalAlignment="Center">
                                <TextBlock Text="{StaticResource IconPlay}"
                                           FontFamily="{StaticResource SymbolThemeFontFamily}"
                                           FontSize="24"
                                           Foreground="{StaticResource InfoColorBrush}"
                                           HorizontalAlignment="Center" />
                                <TextBlock Text="4. Collect" HorizontalAlignment="Center" FontWeight="SemiBold"
                                           Foreground="{StaticResource ConsoleTextPrimaryBrush}" Margin="0,8,0,4" />
                                <TextBlock Text="Start collection" HorizontalAlignment="Center"
                                           TextAlignment="Center"
                                           Foreground="{StaticResource ConsoleTextMutedBrush}" FontSize="11" />
                            </StackPanel>
                        </Border>

                        <!-- Step 5: Monitor Quality -->
                        <Border Grid.Column="8" Background="{StaticResource ConsoleBackgroundMediumBrush}"
                                CornerRadius="8" Padding="12" Cursor="Hand"
                                MouseLeftButtonUp="StepDataQuality_CardClick">
                            <StackPanel HorizontalAlignment="Center">
                                <TextBlock Text="{StaticResource IconChart}"
                                           FontFamily="{StaticResource SymbolThemeFontFamily}"
                                           FontSize="24"
                                           Foreground="{StaticResource InfoColorBrush}"
                                           HorizontalAlignment="Center" />
                                <TextBlock Text="5. Monitor" HorizontalAlignment="Center" FontWeight="SemiBold"
                                           Foreground="{StaticResource ConsoleTextPrimaryBrush}" Margin="0,8,0,4" />
                                <TextBlock Text="Monitor quality" HorizontalAlignment="Center"
                                           TextAlignment="Center"
                                           Foreground="{StaticResource ConsoleTextMutedBrush}" FontSize="11" />
                            </StackPanel>
                        </Border>
                    </Grid>
                </StackPanel>
            </Border>

            <!-- System Overview and Recent Features side by side -->
            <Grid Margin="0,0,0,24">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="24" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <!-- System Overview Card -->
                <Border Grid.Column="0" Style="{StaticResource CardStyle}">
                    <StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,16">
                            <TextBlock Text="{StaticResource IconDashboard}"
                                       FontFamily="{StaticResource SymbolThemeFontFamily}"
                                       FontSize="18"
                                       Foreground="{StaticResource InfoColorBrush}"
                                       VerticalAlignment="Center" />
                            <TextBlock Text="System Overview"
                                       Style="{StaticResource CardHeaderStyle}"
                                       Margin="8,0,0,0" />
                        </StackPanel>

                        <!-- Connection Status -->
                        <Border Background="{StaticResource ConsoleBackgroundMediumBrush}"
                                CornerRadius="8"
                                Padding="12"
                                Margin="0,0,0,12">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0"
                                           Text="{StaticResource IconNetwork}"
                                           FontFamily="{StaticResource SymbolThemeFontFamily}"
                                           FontSize="18"
                                           Foreground="{StaticResource ConsoleTextMutedBrush}"
                                           VerticalAlignment="Center"
                                           Margin="0,0,12,0" />
                                <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                    <TextBlock Text="Connection"
                                               FontWeight="SemiBold"
                                               Foreground="{StaticResource ConsoleTextPrimaryBrush}" />
                                    <TextBlock x:Name="ConnectionProviderText"
                                               Text="No provider connected"
                                               Foreground="{StaticResource ConsoleTextMutedBrush}"
                                               FontSize="11" />
                                </StackPanel>
                                <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center">
                                    <Ellipse x:Name="ConnectionStatusDot" Width="8" Height="8"
                                             Fill="{StaticResource ConsoleTextMutedBrush}" Margin="0,0,6,0" />
                                    <TextBlock x:Name="ConnectionStatusText"
                                               Text="Disconnected"
                                               FontWeight="SemiBold"
                                               Foreground="{StaticResource ConsoleTextSecondaryBrush}" />
                                </StackPanel>
                            </Grid>
                        </Border>

                        <!-- Symbols Count -->
                        <Border Background="{StaticResource ConsoleBackgroundMediumBrush}"
                                CornerRadius="8"
                                Padding="12"
                                Margin="0,0,0,12">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0"
                                           Text="{StaticResource IconList}"
                                           FontFamily="{StaticResource SymbolThemeFontFamily}"
                                           FontSize="18"
                                           Foreground="{StaticResource ConsoleTextMutedBrush}"
                                           VerticalAlignment="Center"
                                           Margin="0,0,12,0" />
                                <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                    <TextBlock Text="Monitored Symbols"
                                               FontWeight="SemiBold"
                                               Foreground="{StaticResource ConsoleTextPrimaryBrush}" />
                                    <TextBlock Text="Configured subscriptions"
                                               Foreground="{StaticResource ConsoleTextMutedBrush}"
                                               FontSize="11" />
                                </StackPanel>
                                <TextBlock x:Name="SymbolsCountText"
                                           Grid.Column="2"
                                           Text="0"
                                           FontSize="20"
                                           FontWeight="Bold"
                                           Foreground="{StaticResource ConsoleTextPrimaryBrush}"
                                           VerticalAlignment="Center" />
                            </Grid>
                        </Border>

                        <!-- Storage Path -->
                        <Border Background="{StaticResource ConsoleBackgroundMediumBrush}"
                                CornerRadius="8"
                                Padding="12">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0"
                                           Text="{StaticResource IconDatabase}"
                                           FontFamily="{StaticResource SymbolThemeFontFamily}"
                                           FontSize="18"
                                           Foreground="{StaticResource ConsoleTextMutedBrush}"
                                           VerticalAlignment="Center"
                                           Margin="0,0,12,0" />
                                <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                    <TextBlock Text="Storage Path"
                                               FontWeight="SemiBold"
                                               Foreground="{StaticResource ConsoleTextPrimaryBrush}" />
                                    <TextBlock x:Name="StoragePathText"
                                               Text="./data"
                                               FontFamily="Cascadia Code, Consolas, monospace"
                                               FontSize="11"
                                               Foreground="{StaticResource ConsoleTextMutedBrush}"
                                               TextTrimming="CharacterEllipsis" />
                                </StackPanel>
                            </Grid>
                        </Border>

                        <Button Content="Go to Dashboard"
                                Style="{StaticResource PrimaryButtonStyle}"
                                HorizontalAlignment="Left"
                                Margin="0,16,0,0"
                                Click="StepDashboard_Click" />
                    </StackPanel>
                </Border>

                <!-- Recent Features Card -->
                <Border Grid.Column="2" Style="{StaticResource CardStyle}">
                    <StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,16">
                            <TextBlock Text="{StaticResource IconStar}"
                                       FontFamily="{StaticResource SymbolThemeFontFamily}"
                                       FontSize="18"
                                       Foreground="{StaticResource InfoColorBrush}"
                                       VerticalAlignment="Center" />
                            <TextBlock Text="Recent Features"
                                       Style="{StaticResource CardHeaderStyle}"
                                       Margin="8,0,0,0" />
                        </StackPanel>

                        <TextBlock Text="What's new in v1.6.1"
                                   Foreground="{StaticResource ConsoleTextSecondaryBrush}"
                                   Margin="0,0,0,12" />

                        <!-- Feature: WPF Desktop App -->
                        <Border Background="{StaticResource ConsoleBackgroundMediumBrush}"
                                CornerRadius="8"
                                Padding="12"
                                Margin="0,0,0,8">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="{StaticResource IconCheckmark}"
                                           FontFamily="{StaticResource SymbolThemeFontFamily}"
                                           FontSize="14"
                                           Foreground="{StaticResource SuccessColorBrush}"
                                           VerticalAlignment="Center"
                                           Margin="0,0,10,0" />
                                <StackPanel>
                                    <TextBlock Text="WPF Desktop App"
                                               FontWeight="SemiBold"
                                               Foreground="{StaticResource ConsoleTextPrimaryBrush}" />
                                    <TextBlock Text="Full-featured Windows desktop client with modern UI"
                                               Foreground="{StaticResource ConsoleTextMutedBrush}"
                                               FontSize="11"
                                               TextWrapping="Wrap" />
                                </StackPanel>
                            </StackPanel>
                        </Border>

                        <!-- Feature: Data Quality Monitoring -->
                        <Border Background="{StaticResource ConsoleBackgroundMediumBrush}"
                                CornerRadius="8"
                                Padding="12"
                                Margin="0,0,0,8">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="{StaticResource IconCheckmark}"
                                           FontFamily="{StaticResource SymbolThemeFontFamily}"
                                           FontSize="14"
                                           Foreground="{StaticResource SuccessColorBrush}"
                                           VerticalAlignment="Center"
                                           Margin="0,0,10,0" />
                                <StackPanel>
                                    <TextBlock Text="Data Quality Monitoring"
                                               FontWeight="SemiBold"
                                               Foreground="{StaticResource ConsoleTextPrimaryBrush}" />
                                    <TextBlock Text="SLA enforcement, gap analysis, and anomaly detection"
                                               Foreground="{StaticResource ConsoleTextMutedBrush}"
                                               FontSize="11"
                                               TextWrapping="Wrap" />
                                </StackPanel>
                            </StackPanel>
                        </Border>

                        <!-- Feature: Portable Data Packages -->
                        <Border Background="{StaticResource ConsoleBackgroundMediumBrush}"
                                CornerRadius="8"
                                Padding="12"
                                Margin="0,0,0,8">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="{StaticResource IconCheckmark}"
                                           FontFamily="{StaticResource SymbolThemeFontFamily}"
                                           FontSize="14"
                                           Foreground="{StaticResource SuccessColorBrush}"
                                           VerticalAlignment="Center"
                                           Margin="0,0,10,0" />
                                <StackPanel>
                                    <TextBlock Text="Portable Data Packages"
                                               FontWeight="SemiBold"
                                               Foreground="{StaticResource ConsoleTextPrimaryBrush}" />
                                    <TextBlock Text="Create, share, and import compressed data archives"
                                               Foreground="{StaticResource ConsoleTextMutedBrush}"
                                               FontSize="11"
                                               TextWrapping="Wrap" />
                                </StackPanel>
                            </StackPanel>
                        </Border>

                        <!-- Feature: QuantConnect Integration -->
                        <Border Background="{StaticResource ConsoleBackgroundMediumBrush}"
                                CornerRadius="8"
                                Padding="12">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="{StaticResource IconCheckmark}"
                                           FontFamily="{StaticResource SymbolThemeFontFamily}"
                                           FontSize="14"
                                           Foreground="{StaticResource SuccessColorBrush}"
                                           VerticalAlignment="Center"
                                           Margin="0,0,10,0" />
                                <StackPanel>
                                    <TextBlock Text="QuantConnect Integration"
                                               FontWeight="SemiBold"
                                               Foreground="{StaticResource ConsoleTextPrimaryBrush}" />
                                    <TextBlock Text="Lean Engine data export for algorithmic backtesting"
                                               Foreground="{StaticResource ConsoleTextMutedBrush}"
                                               FontSize="11"
                                               TextWrapping="Wrap" />
                                </StackPanel>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </Border>
            </Grid>

            <!-- Quick Actions -->
            <Border Style="{StaticResource CardStyle}" Margin="0,0,0,24">
                <StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,16">
                        <TextBlock Text="{StaticResource IconSettings}"
                                   FontFamily="{StaticResource SymbolThemeFontFamily}"
                                   FontSize="18"
                                   Foreground="{StaticResource InfoColorBrush}"
                                   VerticalAlignment="Center" />
                        <TextBlock Text="Quick Actions"
                                   Style="{StaticResource CardHeaderStyle}"
                                   Margin="8,0,0,0" />
                    </StackPanel>

                    <WrapPanel>
                        <Button Style="{StaticResource SecondaryButtonStyle}"
                                Click="StepProvider_Click"
                                Margin="0,0,8,8">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="{StaticResource IconProvider}"
                                           FontFamily="{StaticResource SymbolThemeFontFamily}"
                                           FontSize="14"
                                           VerticalAlignment="Center" />
                                <TextBlock Text="Configure Provider" Margin="8,0,0,0" VerticalAlignment="Center" />
                            </StackPanel>
                        </Button>

                        <Button Style="{StaticResource SecondaryButtonStyle}"
                                Click="StepSymbols_Click"
                                Margin="0,0,8,8">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="{StaticResource IconList}"
                                           FontFamily="{StaticResource SymbolThemeFontFamily}"
                                           FontSize="14"
                                           VerticalAlignment="Center" />
                                <TextBlock Text="Manage Symbols" Margin="8,0,0,0" VerticalAlignment="Center" />
                            </StackPanel>
                        </Button>

                        <Button Style="{StaticResource SecondaryButtonStyle}"
                                Click="StepStorage_Click"
                                Margin="0,0,8,8">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="{StaticResource IconDatabase}"
                                           FontFamily="{StaticResource SymbolThemeFontFamily}"
                                           FontSize="14"
                                           VerticalAlignment="Center" />
                                <TextBlock Text="Storage Settings" Margin="8,0,0,0" VerticalAlignment="Center" />
                            </StackPanel>
                        </Button>

                        <Button Style="{StaticResource SecondaryButtonStyle}"
                                Click="StepDataQuality_Click"
                                Margin="0,0,8,8">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="{StaticResource IconChart}"
                                           FontFamily="{StaticResource SymbolThemeFontFamily}"
                                           FontSize="14"
                                           VerticalAlignment="Center" />
                                <TextBlock Text="Data Quality" Margin="8,0,0,0" VerticalAlignment="Center" />
                            </StackPanel>
                        </Button>

                        <Button Style="{StaticResource GhostButtonStyle}"
                                Click="OpenDocumentation_Click"
                                Margin="0,0,8,8">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="{StaticResource IconHelp}"
                                           FontFamily="{StaticResource SymbolThemeFontFamily}"
                                           FontSize="14"
                                           VerticalAlignment="Center" />
                                <TextBlock Text="Help &amp; Docs" Margin="8,0,0,0" VerticalAlignment="Center" />
                            </StackPanel>
                        </Button>
                    </WrapPanel>
                </StackPanel>
            </Border>

        </StackPanel>
    </ScrollViewer>
</Page>
