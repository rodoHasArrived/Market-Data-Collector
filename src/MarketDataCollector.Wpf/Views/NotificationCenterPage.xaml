<Page x:Class="MarketDataCollector.Wpf.Views.NotificationCenterPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      mc:Ignorable="d"
      d:DesignHeight="900" d:DesignWidth="1200"
      Background="{DynamicResource ConsoleBackgroundDarkBrush}"
      Loaded="OnPageLoaded"
      Unloaded="OnPageUnloaded">

    <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="24">
        <StackPanel MaxWidth="1200">

            <!-- Header -->
            <Grid Margin="0,0,0,24">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0">
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,4">
                        <TextBlock Text="&#xEA8F;"
                                   FontFamily="{StaticResource SymbolThemeFontFamily}"
                                   FontSize="28"
                                   Foreground="{StaticResource InfoColorBrush}"
                                   VerticalAlignment="Center" />
                        <TextBlock Text="Notification Center"
                                   Style="{StaticResource PageTitleStyle}"
                                   Margin="12,0,0,0"
                                   VerticalAlignment="Center" />
                        <Border x:Name="UnreadBadge"
                                Background="{StaticResource ErrorColorBrush}"
                                CornerRadius="10"
                                Padding="8,2"
                                Margin="12,0,0,0"
                                VerticalAlignment="Center"
                                Visibility="Collapsed">
                            <TextBlock x:Name="UnreadCountText"
                                       Text="0"
                                       FontSize="11"
                                       Foreground="White"
                                       FontWeight="SemiBold" />
                        </Border>
                    </StackPanel>
                    <TextBlock Text="View and manage notifications about connection status, data quality, and system events"
                               Style="{StaticResource CardDescriptionStyle}"
                               Margin="0" />
                </StackPanel>

                <!-- Toolbar -->
                <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                    <Button x:Name="MarkAllReadButton"
                            Click="MarkAllRead_Click"
                            Style="{StaticResource SecondaryButtonStyle}"
                            Margin="0,0,8,0">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="{StaticResource IconSuccess}"
                                       FontFamily="{StaticResource SymbolThemeFontFamily}"
                                       FontSize="14"
                                       Margin="0,0,6,0" />
                            <TextBlock Text="Mark All Read" />
                        </StackPanel>
                    </Button>
                    <Button x:Name="ClearAllButton"
                            Click="ClearAll_Click"
                            Style="{StaticResource GhostButtonStyle}">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="{StaticResource IconDelete}"
                                       FontFamily="{StaticResource SymbolThemeFontFamily}"
                                       FontSize="14"
                                       Margin="0,0,6,0" />
                            <TextBlock Text="Clear All" />
                        </StackPanel>
                    </Button>
                </StackPanel>
            </Grid>

            <!-- Notification Count -->
            <StackPanel Orientation="Horizontal" Margin="0,0,0,16">
                <TextBlock x:Name="NotificationCountText"
                           Text="0 notifications"
                           FontSize="13"
                           Foreground="{StaticResource ConsoleTextSecondaryBrush}" />
            </StackPanel>

            <!-- Filter Row -->
            <Border Style="{StaticResource CardStyle}" Margin="0,0,0,24" Padding="16">
                <StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,4">
                        <TextBlock Text="{StaticResource IconFilter}"
                                   FontFamily="{StaticResource SymbolThemeFontFamily}"
                                   FontSize="14"
                                   Foreground="{StaticResource ConsoleTextMutedBrush}"
                                   VerticalAlignment="Center"
                                   Margin="0,0,8,0" />
                        <TextBlock Text="Filter"
                                   FontWeight="SemiBold"
                                   FontSize="13"
                                   Foreground="{StaticResource ConsoleTextSecondaryBrush}"
                                   VerticalAlignment="Center" />
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" Margin="0,8,0,0">
                        <CheckBox x:Name="FilterAllCheck"
                                  Content="All"
                                  IsChecked="True"
                                  Foreground="{StaticResource ConsoleTextPrimaryBrush}"
                                  Checked="FilterChanged"
                                  Unchecked="FilterChanged"
                                  Margin="0,0,16,0" />
                        <CheckBox x:Name="FilterErrorsCheck"
                                  Content="Errors"
                                  IsChecked="True"
                                  Foreground="{StaticResource ErrorColorBrush}"
                                  Checked="FilterChanged"
                                  Unchecked="FilterChanged"
                                  Margin="0,0,16,0" />
                        <CheckBox x:Name="FilterWarningsCheck"
                                  Content="Warnings"
                                  IsChecked="True"
                                  Foreground="{StaticResource WarningColorBrush}"
                                  Checked="FilterChanged"
                                  Unchecked="FilterChanged"
                                  Margin="0,0,16,0" />
                        <CheckBox x:Name="FilterInfoCheck"
                                  Content="Info"
                                  IsChecked="True"
                                  Foreground="{StaticResource InfoColorBrush}"
                                  Checked="FilterChanged"
                                  Unchecked="FilterChanged"
                                  Margin="0,0,16,0" />
                        <CheckBox x:Name="FilterSuccessCheck"
                                  Content="Success"
                                  IsChecked="True"
                                  Foreground="{StaticResource SuccessColorBrush}"
                                  Checked="FilterChanged"
                                  Unchecked="FilterChanged" />
                    </StackPanel>
                </StackPanel>
            </Border>

            <!-- Notification List -->
            <Border Style="{StaticResource CardStyle}" Margin="0,0,0,24">
                <StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,12">
                        <TextBlock Text="{StaticResource IconList}"
                                   FontFamily="{StaticResource SymbolThemeFontFamily}"
                                   FontSize="16"
                                   Foreground="{StaticResource InfoColorBrush}"
                                   VerticalAlignment="Center"
                                   Margin="0,0,8,0" />
                        <TextBlock Text="Notifications"
                                   Style="{StaticResource SectionHeaderStyle}"
                                   Margin="0" />
                    </StackPanel>

                    <ListView x:Name="NotificationsList"
                              SelectionMode="Single"
                              MaxHeight="500"
                              Background="Transparent"
                              BorderThickness="0">
                        <ListView.ItemsPanel>
                            <ItemsPanelTemplate>
                                <VirtualizingStackPanel Orientation="Vertical" />
                            </ItemsPanelTemplate>
                        </ListView.ItemsPanel>
                        <ListView.ItemContainerStyle>
                            <Style TargetType="ListViewItem">
                                <Setter Property="HorizontalContentAlignment" Value="Stretch" />
                                <Setter Property="Padding" Value="0" />
                                <Setter Property="Margin" Value="0,0,0,4" />
                                <Setter Property="Background" Value="Transparent" />
                            </Style>
                        </ListView.ItemContainerStyle>
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <Border Background="{StaticResource ConsoleBackgroundLightBrush}"
                                        CornerRadius="8"
                                        Padding="12,10"
                                        BorderBrush="{StaticResource ConsoleBorderBrush}"
                                        BorderThickness="1">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto" />
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="Auto" />
                                        </Grid.ColumnDefinitions>

                                        <!-- Icon -->
                                        <Border Grid.Column="0"
                                                Width="36" Height="36"
                                                CornerRadius="18"
                                                Background="{Binding IconBackground}"
                                                VerticalAlignment="Center">
                                            <TextBlock Text="{Binding Icon}"
                                                       FontFamily="{StaticResource SymbolThemeFontFamily}"
                                                       FontSize="14"
                                                       Foreground="White"
                                                       HorizontalAlignment="Center"
                                                       VerticalAlignment="Center" />
                                        </Border>

                                        <!-- Title, Message -->
                                        <StackPanel Grid.Column="1" Margin="12,0,0,0" VerticalAlignment="Center">
                                            <StackPanel Orientation="Horizontal" Margin="0,0,0,2">
                                                <TextBlock Text="{Binding Title}"
                                                           FontWeight="SemiBold"
                                                           FontSize="13"
                                                           Foreground="{StaticResource ConsoleTextPrimaryBrush}" />
                                                <Border Background="{Binding TypeBackground}"
                                                        CornerRadius="4"
                                                        Padding="6,2"
                                                        Margin="8,0,0,0"
                                                        VerticalAlignment="Center">
                                                    <TextBlock Text="{Binding Type}"
                                                               FontSize="10"
                                                               FontWeight="SemiBold"
                                                               Foreground="{Binding IconColor}" />
                                                </Border>
                                            </StackPanel>
                                            <TextBlock Text="{Binding Message}"
                                                       FontSize="12"
                                                       Foreground="{StaticResource ConsoleTextSecondaryBrush}"
                                                       TextTrimming="CharacterEllipsis"
                                                       MaxWidth="600"
                                                       HorizontalAlignment="Left" />
                                        </StackPanel>

                                        <!-- Timestamp -->
                                        <TextBlock Grid.Column="2"
                                                   Text="{Binding Timestamp}"
                                                   FontSize="11"
                                                   Foreground="{StaticResource ConsoleTextMutedBrush}"
                                                   VerticalAlignment="Center"
                                                   Margin="12,0,0,0" />
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>

                    <!-- Empty State -->
                    <StackPanel x:Name="EmptyStatePanel"
                                Visibility="Collapsed"
                                Margin="0,24,0,24">
                        <TextBlock Text="&#xEA8F;"
                                   FontFamily="{StaticResource SymbolThemeFontFamily}"
                                   FontSize="48"
                                   Foreground="{StaticResource ConsoleTextMutedBrush}"
                                   HorizontalAlignment="Center"
                                   Margin="0,0,0,16" />
                        <TextBlock Text="No notifications yet"
                                   Style="{StaticResource EmptyStateTitleStyle}"
                                   Margin="0,0,0,8" />
                        <TextBlock Text="Notifications about connection status, data quality, and system events will appear here."
                                   Style="{StaticResource EmptyStateDescriptionStyle}" />
                    </StackPanel>
                </StackPanel>
            </Border>

            <!-- Notification Preferences -->
            <Border Style="{StaticResource CardStyle}" Margin="0,0,0,24">
                <StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,16">
                        <TextBlock Text="{StaticResource IconSettings}"
                                   FontFamily="{StaticResource SymbolThemeFontFamily}"
                                   FontSize="16"
                                   Foreground="{StaticResource InfoColorBrush}"
                                   VerticalAlignment="Center"
                                   Margin="0,0,8,0" />
                        <TextBlock Text="Notification Preferences"
                                   Style="{StaticResource CardHeaderStyle}" />
                    </StackPanel>

                    <CheckBox x:Name="EnableDesktopNotificationsCheck"
                              Content="Enable desktop notifications"
                              IsChecked="True"
                              Foreground="{StaticResource ConsoleTextPrimaryBrush}"
                              Margin="0,0,0,12" />

                    <CheckBox x:Name="PlayNotificationSoundCheck"
                              Content="Play notification sound"
                              IsChecked="True"
                              Foreground="{StaticResource ConsoleTextPrimaryBrush}"
                              Margin="0,0,0,12" />

                    <CheckBox x:Name="ShowNotificationBadgeCheck"
                              Content="Show notification badge"
                              IsChecked="True"
                              Foreground="{StaticResource ConsoleTextPrimaryBrush}"
                              Margin="0,0,0,12" />

                    <Rectangle Style="{StaticResource HorizontalDividerStyle}" />

                    <TextBlock Text="These preferences control how notifications are displayed in the desktop application. Connection alerts and critical errors will always be shown regardless of these settings."
                               FontSize="12"
                               Foreground="{StaticResource ConsoleTextMutedBrush}"
                               TextWrapping="Wrap"
                               Margin="0,4,0,0" />
                </StackPanel>
            </Border>

        </StackPanel>
    </ScrollViewer>
</Page>
