<Page x:Class="MarketDataCollector.Wpf.Views.PortfolioImportPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Background="{DynamicResource ConsoleBackgroundDarkBrush}"
      Loaded="OnPageLoaded">
    <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="24">
        <StackPanel MaxWidth="1200">
            <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                <TextBlock Text="&#xE896;" FontFamily="{StaticResource SymbolThemeFontFamily}"
                           FontSize="28" Foreground="{StaticResource InfoColorBrush}" VerticalAlignment="Center" />
                <TextBlock Text="Portfolio Import" Style="{StaticResource PageTitleStyle}" Margin="12,0,0,0" VerticalAlignment="Center" />
            </StackPanel>
            <TextBlock Text="Import symbols from portfolio files or quickly add index constituents for monitoring."
                       Style="{StaticResource PageSubtitleStyle}" Margin="0,0,0,20" />

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <!-- File Import -->
                <Border Grid.Column="0" Style="{StaticResource CardStyle}" Margin="0,0,8,16">
                    <StackPanel>
                        <TextBlock Text="Import from File" Style="{StaticResource CardHeaderStyle}" Margin="0,0,0,4" />
                        <TextBlock Text="CSV, Excel, or text files with symbol lists." Foreground="{StaticResource ConsoleTextMutedBrush}" FontSize="12" Margin="0,0,0,16" />

                        <TextBlock Text="File Format" Style="{StaticResource FormLabelStyle}" />
                        <ComboBox x:Name="FileFormatCombo" Style="{StaticResource FormComboBoxStyle}" SelectedIndex="0" Margin="0,0,0,8">
                            <ComboBoxItem Content="CSV (Symbol per row)" Tag="csv" />
                            <ComboBoxItem Content="CSV with headers" Tag="csv-header" />
                            <ComboBoxItem Content="Text (one symbol per line)" Tag="text" />
                            <ComboBoxItem Content="Excel (.xlsx)" Tag="excel" />
                        </ComboBox>

                        <TextBlock Text="Symbol Column (for CSV with headers)" Style="{StaticResource FormLabelStyle}" />
                        <TextBox x:Name="SymbolColumnBox" Style="{StaticResource FormTextBoxStyle}" Text="Symbol" Margin="0,0,0,8" />

                        <TextBlock Text="Selected File" Style="{StaticResource FormLabelStyle}" />
                        <Grid Margin="0,0,0,12">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>
                            <TextBox x:Name="FilePathBox" Style="{StaticResource FormTextBoxStyle}" IsReadOnly="True" />
                            <Button Grid.Column="1" Content="Browse..." Click="BrowseFile_Click" Style="{StaticResource FormButtonStyle}" Margin="8,0,0,0" />
                        </Grid>

                        <CheckBox x:Name="ValidateSymbolsCheck" Content="Validate symbols before import" IsChecked="True"
                                  Foreground="{DynamicResource ConsoleTextBrush}" Margin="0,0,0,8" />
                        <CheckBox x:Name="SkipExistingCheck" Content="Skip symbols already monitored" IsChecked="True"
                                  Foreground="{DynamicResource ConsoleTextBrush}" Margin="0,0,0,12" />

                        <StackPanel Orientation="Horizontal">
                            <Button Content="Import" Click="ImportFile_Click" Style="{StaticResource FormButtonStyle}" />
                            <TextBlock x:Name="ImportStatusText" VerticalAlignment="Center" Margin="12,0,0,0"
                                       Foreground="{StaticResource ConsoleTextMutedBrush}" FontSize="12" />
                        </StackPanel>
                    </StackPanel>
                </Border>

                <!-- Quick Index Import -->
                <Border Grid.Column="1" Style="{StaticResource CardStyle}" Margin="8,0,0,16">
                    <StackPanel>
                        <TextBlock Text="Quick Index Import" Style="{StaticResource CardHeaderStyle}" Margin="0,0,0,4" />
                        <TextBlock Text="Add all constituents of a major index." Foreground="{StaticResource ConsoleTextMutedBrush}" FontSize="12" Margin="0,0,0,16" />

                        <Button Content="S&amp;P 500 (SPY constituents)" Click="ImportIndex_Click" Tag="sp500"
                                Style="{StaticResource FormButtonStyle}" HorizontalAlignment="Stretch" Margin="0,0,0,8" />
                        <Button Content="NASDAQ-100 (QQQ constituents)" Click="ImportIndex_Click" Tag="nasdaq100"
                                Style="{StaticResource FormButtonStyle}" HorizontalAlignment="Stretch" Margin="0,0,0,8" />
                        <Button Content="Dow Jones 30 (DIA constituents)" Click="ImportIndex_Click" Tag="djia"
                                Style="{StaticResource FormButtonStyle}" HorizontalAlignment="Stretch" Margin="0,0,0,8" />
                        <Button Content="Russell 2000 (IWM constituents)" Click="ImportIndex_Click" Tag="russell2000"
                                Style="{StaticResource FormButtonStyle}" HorizontalAlignment="Stretch" Margin="0,0,0,8" />
                        <Button Content="S&amp;P MidCap 400" Click="ImportIndex_Click" Tag="sp400"
                                Style="{StaticResource FormButtonStyle}" HorizontalAlignment="Stretch" Margin="0,0,0,8" />

                        <TextBlock x:Name="IndexImportStatusText" Foreground="{StaticResource ConsoleTextMutedBrush}" FontSize="12" Margin="0,8,0,0" />
                    </StackPanel>
                </Border>
            </Grid>

            <!-- Manual Entry -->
            <Border Style="{StaticResource CardStyle}" Margin="0,0,0,16">
                <StackPanel>
                    <TextBlock Text="Manual Entry" Style="{StaticResource CardHeaderStyle}" Margin="0,0,0,4" />
                    <TextBlock Text="Paste or type symbols separated by commas, spaces, or newlines." Foreground="{StaticResource ConsoleTextMutedBrush}" FontSize="12" Margin="0,0,0,16" />

                    <TextBox x:Name="ManualSymbolsBox" Style="{StaticResource FormTextBoxStyle}" Height="80"
                             AcceptsReturn="True" TextWrapping="Wrap" VerticalScrollBarVisibility="Auto" Margin="0,0,0,12" />

                    <StackPanel Orientation="Horizontal">
                        <Button Content="Add Symbols" Click="AddManualSymbols_Click" Style="{StaticResource FormButtonStyle}" />
                        <TextBlock x:Name="ManualStatusText" VerticalAlignment="Center" Margin="12,0,0,0"
                                   Foreground="{StaticResource ConsoleTextMutedBrush}" FontSize="12" />
                    </StackPanel>
                </StackPanel>
            </Border>

            <!-- Import History -->
            <Border Style="{StaticResource CardStyle}" Margin="0,0,0,16">
                <StackPanel>
                    <TextBlock Text="Import History" Style="{StaticResource CardHeaderStyle}" Margin="0,0,0,12" />
                    <ItemsControl x:Name="ImportHistoryList">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Padding="8,6" Margin="0,0,0,4" BorderBrush="{DynamicResource ConsoleBackgroundBrush}" BorderThickness="0,0,0,1">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="Auto" />
                                            <ColumnDefinition Width="Auto" />
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Grid.Column="0" Text="{Binding Source}" Foreground="{DynamicResource ConsoleTextBrush}" />
                                        <TextBlock Grid.Column="1" Text="{Binding CountText}" Foreground="{StaticResource ConsoleTextMutedBrush}" Margin="16,0" />
                                        <TextBlock Grid.Column="2" Text="{Binding DateText}" Foreground="{StaticResource ConsoleTextMutedBrush}" FontSize="11" />
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                    <TextBlock x:Name="NoImportHistoryText" Text="No imports yet." Foreground="{StaticResource ConsoleTextMutedBrush}" FontSize="12" />
                </StackPanel>
            </Border>
        </StackPanel>
    </ScrollViewer>
</Page>
