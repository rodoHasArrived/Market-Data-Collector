<Window x:Class="MarketDataCollector.Wpf.Views.CommandPaletteWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Command Palette"
        Width="600" Height="450"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        WindowStartupLocation="CenterOwner"
        ShowInTaskbar="False"
        ResizeMode="NoResize"
        Deactivated="OnWindowDeactivated"
        KeyDown="OnWindowKeyDown">

    <Border Background="#FF1E1E2E"
            CornerRadius="8"
            BorderBrush="#FF45475A"
            BorderThickness="1"
            Margin="16"
            Effect="{StaticResource CommandPaletteShadow}">
        <Grid Margin="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <!-- Search box -->
            <Border Grid.Row="0" BorderBrush="#FF45475A" BorderThickness="0,0,0,1" Padding="12,12,12,10">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Column="0"
                               Text="&#xE721;"
                               FontFamily="Segoe MDL2 Assets"
                               FontSize="16"
                               Foreground="#FF89B4FA"
                               VerticalAlignment="Center"
                               Margin="0,0,8,0" />
                    <TextBox x:Name="SearchBox"
                             Grid.Column="1"
                             FontSize="16"
                             Background="Transparent"
                             Foreground="#FFCDD6F4"
                             CaretBrush="#FF89B4FA"
                             BorderThickness="0"
                             VerticalContentAlignment="Center"
                             TextChanged="OnSearchTextChanged" />
                    <TextBlock Grid.Column="1"
                               x:Name="PlaceholderText"
                               Text="Type a command or search..."
                               FontSize="16"
                               Foreground="#FF6C7086"
                               VerticalAlignment="Center"
                               IsHitTestVisible="False"
                               Margin="4,0,0,0" />
                </Grid>
            </Border>

            <!-- Category label -->
            <TextBlock Grid.Row="1"
                       x:Name="CategoryLabel"
                       Text="RECENT"
                       FontSize="11"
                       Foreground="#FF6C7086"
                       FontWeight="SemiBold"
                       Margin="16,8,16,4"
                       />

            <!-- Results list -->
            <ListBox x:Name="ResultsList"
                     Grid.Row="2"
                     Background="Transparent"
                     BorderThickness="0"
                     ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                     SelectionMode="Single"
                     MouseDoubleClick="OnResultDoubleClick"
                     KeyDown="OnResultsKeyDown">
                <ListBox.ItemContainerStyle>
                    <Style TargetType="ListBoxItem">
                        <Setter Property="Padding" Value="12,8" />
                        <Setter Property="Margin" Value="4,1" />
                        <Setter Property="Background" Value="Transparent" />
                        <Setter Property="Foreground" Value="#FFCDD6F4" />
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="ListBoxItem">
                                    <Border x:Name="Border"
                                            Background="{TemplateBinding Background}"
                                            CornerRadius="4"
                                            Padding="{TemplateBinding Padding}"
                                            Margin="{TemplateBinding Margin}">
                                        <ContentPresenter />
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter TargetName="Border" Property="Background" Value="#FF313244" />
                                        </Trigger>
                                        <Trigger Property="IsSelected" Value="True">
                                            <Setter TargetName="Border" Property="Background" Value="#FF45475A" />
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </ListBox.ItemContainerStyle>
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="28" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0"
                                       Text="{Binding Icon}"
                                       FontFamily="Segoe MDL2 Assets"
                                       FontSize="14"
                                       Foreground="#FF89B4FA"
                                       VerticalAlignment="Center" />
                            <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                <TextBlock Text="{Binding Title}"
                                           FontSize="13"
                                           Foreground="#FFCDD6F4" />
                                <TextBlock Text="{Binding Description}"
                                           FontSize="11"
                                           Foreground="#FF6C7086"
                                           Margin="0,1,0,0" />
                            </StackPanel>
                            <TextBlock Grid.Column="2"
                                       Text="{Binding Shortcut}"
                                       FontSize="11"
                                       Foreground="#FF585B70"
                                       VerticalAlignment="Center"
                                       Margin="8,0,0,0" />
                        </Grid>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>

            <!-- Footer -->
            <Border Grid.Row="3" BorderBrush="#FF45475A" BorderThickness="0,1,0,0" Padding="12,8">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="&#x2191;&#x2193;" Foreground="#FF585B70" FontSize="11" Margin="0,0,4,0" />
                    <TextBlock Text="navigate" Foreground="#FF585B70" FontSize="11" Margin="0,0,12,0" />
                    <TextBlock Text="&#x23CE;" Foreground="#FF585B70" FontSize="11" Margin="0,0,4,0" />
                    <TextBlock Text="select" Foreground="#FF585B70" FontSize="11" Margin="0,0,12,0" />
                    <TextBlock Text="esc" Foreground="#FF585B70" FontSize="11" Margin="0,0,4,0" />
                    <TextBlock Text="close" Foreground="#FF585B70" FontSize="11" />
                </StackPanel>
            </Border>
        </Grid>
    </Border>

    <Window.Resources>
        <DropShadowEffect x:Key="CommandPaletteShadow"
                          BlurRadius="24"
                          Direction="270"
                          ShadowDepth="8"
                          Opacity="0.6"
                          Color="Black" />
    </Window.Resources>
</Window>
