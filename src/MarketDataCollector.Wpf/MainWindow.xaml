<Window x:Class="MarketDataCollector.Wpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MarketDataCollector.Wpf"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        mc:Ignorable="d"
        Title="Market Data Collector"
        Height="900" Width="1400"
        MinHeight="600" MinWidth="900"
        WindowStartupLocation="CenterScreen"
        Background="{DynamicResource ConsoleBackgroundDarkBrush}"
        Loaded="OnWindowLoaded"
        Closing="OnWindowClosing"
        KeyDown="OnWindowKeyDown">

    <Window.InputBindings>
        <!-- Navigation shortcuts -->
        <KeyBinding Key="D" Modifiers="Control" Command="{Binding NavigateCommand}" CommandParameter="Dashboard" />
        <KeyBinding Key="S" Modifiers="Control+Shift" Command="{Binding StartCollectorCommand}" />
        <KeyBinding Key="Q" Modifiers="Control+Shift" Command="{Binding StopCollectorCommand}" />
        <KeyBinding Key="F5" Command="{Binding RefreshCommand}" />
    </Window.InputBindings>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!-- Fixture/Offline Mode Banner (P0: Hard visual distinction for non-live modes) -->
        <Border x:Name="FixtureModeBanner"
                Grid.Row="0"
                Visibility="Collapsed"
                Padding="8,6"
                CornerRadius="0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <TextBlock Grid.Column="0"
                           Text="&#xE7BA;"
                           FontFamily="{StaticResource SymbolThemeFontFamily}"
                           FontSize="16"
                           Foreground="White"
                           VerticalAlignment="Center"
                           Margin="0,0,8,0" />
                <TextBlock x:Name="FixtureModeText"
                           Grid.Column="1"
                           Text="FIXTURE MODE â€” Showing sample data, not connected to live backend"
                           Foreground="White"
                           FontWeight="SemiBold"
                           FontSize="12"
                           VerticalAlignment="Center" />
                <TextBlock Grid.Column="2"
                           Text="&#xE8BB;"
                           FontFamily="{StaticResource SymbolThemeFontFamily}"
                           FontSize="14"
                           Foreground="White"
                           Opacity="0.7"
                           VerticalAlignment="Center"
                           Margin="8,0,0,0" />
            </Grid>
        </Border>

        <Frame x:Name="RootFrame"
               Grid.Row="1"
               NavigationUIVisibility="Hidden"
               Navigated="OnRootFrameNavigated" />
    </Grid>
</Window>
