<Window x:Class="MarketDataCollector.Wpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        mc:Ignorable="d"
        Title="Market Data Collector"
        Height="800"
        Width="1400"
        MinHeight="600"
        MinWidth="1000"
        WindowStartupLocation="CenterScreen"
        TextElement.Foreground="{DynamicResource MaterialDesignBody}"
        Background="{DynamicResource MaterialDesignPaper}"
        FontFamily="{materialDesign:MaterialDesignFont}">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Top Navigation Bar -->
        <Border Grid.Row="0" 
                Background="{DynamicResource MaterialDesignToolBarBackground}"
                Height="56">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Menu Button -->
                <Button Grid.Column="0"
                        Style="{StaticResource MaterialDesignIconButton}"
                        Margin="8"
                        Width="40"
                        Height="40"
                        Click="MenuButton_Click"
                        ToolTip="Menu">
                    <materialDesign:PackIcon Kind="Menu" Width="24" Height="24"/>
                </Button>

                <!-- Title -->
                <TextBlock Grid.Column="1"
                           Text="Market Data Collector"
                           VerticalAlignment="Center"
                           FontSize="20"
                           FontWeight="Medium"
                           Margin="16,0"/>

                <!-- Status Indicator -->
                <StackPanel Grid.Column="2" 
                            Orientation="Horizontal" 
                            Margin="8">
                    <Border x:Name="StatusIndicator"
                            Width="12"
                            Height="12"
                            CornerRadius="6"
                            Background="Gray"
                            VerticalAlignment="Center"
                            Margin="0,0,8,0"/>
                    <TextBlock x:Name="StatusText"
                               Text="Disconnected"
                               VerticalAlignment="Center"
                               Margin="0,0,16,0"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Main Content Area with Navigation -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Navigation Panel -->
            <Border x:Name="NavigationPanel"
                    Grid.Column="0"
                    Width="250"
                    Background="{DynamicResource MaterialDesignCardBackground}"
                    BorderThickness="0,0,1,0"
                    BorderBrush="{DynamicResource MaterialDesignDivider}">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel Margin="0,8">
                        <!-- Navigation Items will be added here -->
                        <Button Style="{StaticResource MaterialDesignFlatButton}"
                                Height="48"
                                HorizontalContentAlignment="Left"
                                Padding="16,0"
                                Click="NavigateToDashboard">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="ViewDashboard" 
                                                        Width="24" 
                                                        Height="24" 
                                                        Margin="0,0,16,0"/>
                                <TextBlock Text="Dashboard" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>

                        <Button Style="{StaticResource MaterialDesignFlatButton}"
                                Height="48"
                                HorizontalContentAlignment="Left"
                                Padding="16,0"
                                Click="NavigateToSymbols">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="Tag" 
                                                        Width="24" 
                                                        Height="24" 
                                                        Margin="0,0,16,0"/>
                                <TextBlock Text="Symbols" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>

                        <Button Style="{StaticResource MaterialDesignFlatButton}"
                                Height="48"
                                HorizontalContentAlignment="Left"
                                Padding="16,0"
                                Click="NavigateToBackfill">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="Download" 
                                                        Width="24" 
                                                        Height="24" 
                                                        Margin="0,0,16,0"/>
                                <TextBlock Text="Backfill" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>

                        <Button Style="{StaticResource MaterialDesignFlatButton}"
                                Height="48"
                                HorizontalContentAlignment="Left"
                                Padding="16,0"
                                Click="NavigateToSettings">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="Settings" 
                                                        Width="24" 
                                                        Height="24" 
                                                        Margin="0,0,16,0"/>
                                <TextBlock Text="Settings" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>
                    </StackPanel>
                </ScrollViewer>
            </Border>

            <!-- Main Content Frame -->
            <Frame x:Name="MainFrame" 
                   Grid.Column="1"
                   NavigationUIVisibility="Hidden"/>
        </Grid>
    </Grid>
</Window>
