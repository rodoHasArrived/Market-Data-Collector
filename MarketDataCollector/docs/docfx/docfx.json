{
  "metadata": [
    {
      "src": [
        { "src": "../..", "files": [ "src/**/*.csproj" ] }
      ],
      "dest": "api",
      "properties": {
        "TargetFramework": "net8.0"
      }
    }
  ],
  "build": {
    "content": [
      { "files": [ "*.md", "toc.yml" ], "src": ".." },
      { "files": [ "api/**.yml", "api/index.md" ] }
    ],
    "resource": [
      { "files": [ "**/*.png", "**/*.svg", "**/*.puml" ], "src": ".." }
    ],
    "output": "_site",
    "template": [ "default", "modern" ],
    "globalMetadata": {
      "_appTitle": "IB Data Collector",
      "_enableSearch": true
    }
  }
}
