<Project Sdk="Microsoft.NET.Sdk.Web">
  <PropertyGroup>
    <TargetFramework>net9.0</TargetFramework>
    <Nullable>enable</Nullable>
    <ImplicitUsings>enable</ImplicitUsings>

    <!-- Assembly Information -->
    <AssemblyName>MarketDataCollector.Ui</AssemblyName>
    <Version>1.0.0</Version>
    <Authors>MarketDataCollector Team</Authors>
    <Description>Web dashboard for MarketDataCollector monitoring and configuration</Description>
    <Product>Market Data Collector Dashboard</Product>
    <Copyright>Copyright © 2024 MarketDataCollector Team</Copyright>

    <!-- ═══════════════════════════════════════════════════════════════════════════ -->
    <!-- SINGLE-EXE DESKTOP DEPLOYMENT CONFIGURATION                                  -->
    <!-- This configuration ensures the app runs as a single portable executable      -->
    <!-- ═══════════════════════════════════════════════════════════════════════════ -->

    <!-- Single-file publishing - bundles everything into one EXE -->
    <PublishSingleFile>true</PublishSingleFile>
    <SelfContained>true</SelfContained>
    <EnableCompressionInSingleFile>true</EnableCompressionInSingleFile>

    <!-- Include ALL content in single file - no extraction needed -->
    <IncludeNativeLibrariesForSelfExtract>true</IncludeNativeLibrariesForSelfExtract>
    <IncludeAllContentForSelfExtract>true</IncludeAllContentForSelfExtract>

    <!-- Trimming for smaller executable -->
    <PublishTrimmed>true</PublishTrimmed>
    <TrimMode>partial</TrimMode>

    <!-- Ready-to-run for faster startup -->
    <PublishReadyToRun>true</PublishReadyToRun>

    <!-- Globalization settings -->
    <InvariantGlobalization>false</InvariantGlobalization>

    <!-- Windows Desktop Integration -->
    <ApplicationIcon Condition="Exists('app.ico')">app.ico</ApplicationIcon>
    <ApplicationManifest Condition="Exists('app.manifest')">app.manifest</ApplicationManifest>

    <!-- Deterministic builds for reproducibility -->
    <Deterministic>true</Deterministic>

    <!-- Optimize for size -->
    <DebugType>embedded</DebugType>
    <DebugSymbols>true</DebugSymbols>
  </PropertyGroup>

  <!-- Platform-specific runtime identifiers -->
  <PropertyGroup Condition="'$(RuntimeIdentifier)' == ''">
    <RuntimeIdentifiers>win-x64;win-arm64;linux-x64;linux-arm64;osx-x64;osx-arm64</RuntimeIdentifiers>
  </PropertyGroup>

  <!-- Trimmer root assemblies to preserve reflection-based serialization -->
  <ItemGroup>
    <TrimmerRootAssembly Include="System.Text.Json" />
  </ItemGroup>

  <!-- Web UI Dependencies -->
  <ItemGroup>
    <!-- ASP.NET Core -->
    <PackageReference Include="Microsoft.AspNetCore.OpenApi" Version="8.0.0" />

    <!-- Logging -->
    <PackageReference Include="Serilog.AspNetCore" Version="8.0.3" />

    <!-- Monitoring -->
    <PackageReference Include="prometheus-net.AspNetCore" Version="8.2.1" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\MarketDataCollector\MarketDataCollector.csproj" />
  </ItemGroup>
</Project>
