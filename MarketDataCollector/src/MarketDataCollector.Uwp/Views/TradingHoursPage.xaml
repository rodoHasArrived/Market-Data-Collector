<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="MarketDataCollector.Uwp.Views.TradingHoursPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:MarketDataCollector.Uwp.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="24">
        <StackPanel Spacing="24" MaxWidth="1000">
            <!-- Header -->
            <StackPanel Orientation="Horizontal" Spacing="12">
                <FontIcon Glyph="&#xE823;" FontSize="28" Foreground="{ThemeResource SystemAccentColor}" />
                <TextBlock Text="Trading Hours Manager" Style="{StaticResource TitleTextBlockStyle}" VerticalAlignment="Center" />
            </StackPanel>

            <TextBlock Text="Configure trading sessions, exchange calendars, and collection schedules for different markets."
                       Style="{StaticResource BodyTextBlockStyle}"
                       Foreground="{ThemeResource SystemBaseMediumColor}" />

            <!-- Current Time Display -->
            <Border Style="{StaticResource CardStyle}"
                    Background="{ThemeResource SystemFillColorNeutralBackgroundBrush}">
                <Grid ColumnSpacing="24">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0" Spacing="4">
                        <TextBlock Text="Local Time" Style="{StaticResource CaptionTextBlockStyle}" />
                        <TextBlock x:Name="LocalTimeText" Text="14:30:45"
                                   Style="{StaticResource SubtitleTextBlockStyle}" />
                        <TextBlock x:Name="LocalTimezoneText" Text="EST (UTC-5)"
                                   Style="{StaticResource CaptionTextBlockStyle}"
                                   Foreground="{ThemeResource SystemBaseMediumColor}" />
                    </StackPanel>

                    <StackPanel Grid.Column="1" Spacing="4">
                        <TextBlock Text="UTC Time" Style="{StaticResource CaptionTextBlockStyle}" />
                        <TextBlock x:Name="UtcTimeText" Text="19:30:45"
                                   Style="{StaticResource SubtitleTextBlockStyle}" />
                        <TextBlock Text="Coordinated Universal Time"
                                   Style="{StaticResource CaptionTextBlockStyle}"
                                   Foreground="{ThemeResource SystemBaseMediumColor}" />
                    </StackPanel>

                    <StackPanel Grid.Column="2" Spacing="4">
                        <TextBlock Text="NYSE Status" Style="{StaticResource CaptionTextBlockStyle}" />
                        <StackPanel Orientation="Horizontal" Spacing="8">
                            <Ellipse x:Name="NyseStatusIndicator" Width="12" Height="12" Fill="#48BB78" />
                            <TextBlock x:Name="NyseStatusText" Text="Open"
                                       Style="{StaticResource SubtitleTextBlockStyle}" />
                        </StackPanel>
                        <TextBlock x:Name="NyseNextEventText" Text="Closes in 1h 30m"
                                   Style="{StaticResource CaptionTextBlockStyle}"
                                   Foreground="{ThemeResource SystemBaseMediumColor}" />
                    </StackPanel>

                    <StackPanel Grid.Column="3" Spacing="4">
                        <TextBlock Text="NASDAQ Status" Style="{StaticResource CaptionTextBlockStyle}" />
                        <StackPanel Orientation="Horizontal" Spacing="8">
                            <Ellipse x:Name="NasdaqStatusIndicator" Width="12" Height="12" Fill="#48BB78" />
                            <TextBlock x:Name="NasdaqStatusText" Text="Open"
                                       Style="{StaticResource SubtitleTextBlockStyle}" />
                        </StackPanel>
                        <TextBlock x:Name="NasdaqNextEventText" Text="Closes in 1h 30m"
                                   Style="{StaticResource CaptionTextBlockStyle}"
                                   Foreground="{ThemeResource SystemBaseMediumColor}" />
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Exchange Sessions -->
            <Border Style="{StaticResource CardStyle}">
                <StackPanel Spacing="16">
                    <StackPanel Orientation="Horizontal" Spacing="8">
                        <FontIcon Glyph="&#xE774;" Foreground="{ThemeResource SystemAccentColor}" />
                        <TextBlock Text="Exchange Trading Sessions" Style="{StaticResource SubtitleTextBlockStyle}" />
                    </StackPanel>

                    <ListView x:Name="ExchangeSessionsList"
                              SelectionMode="Single"
                              SelectionChanged="ExchangeSession_SelectionChanged">
                        <ListView.HeaderTemplate>
                            <DataTemplate>
                                <Grid Padding="8,4" Background="{ThemeResource SystemFillColorNeutralBackgroundBrush}">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="120" />
                                        <ColumnDefinition Width="80" />
                                        <ColumnDefinition Width="100" />
                                        <ColumnDefinition Width="100" />
                                        <ColumnDefinition Width="100" />
                                        <ColumnDefinition Width="100" />
                                        <ColumnDefinition Width="*" />
                                    </Grid.ColumnDefinitions>

                                    <TextBlock Grid.Column="0" Text="Exchange" FontWeight="SemiBold" />
                                    <TextBlock Grid.Column="1" Text="Status" FontWeight="SemiBold" />
                                    <TextBlock Grid.Column="2" Text="Pre-Market" FontWeight="SemiBold" />
                                    <TextBlock Grid.Column="3" Text="Regular" FontWeight="SemiBold" />
                                    <TextBlock Grid.Column="4" Text="Post-Market" FontWeight="SemiBold" />
                                    <TextBlock Grid.Column="5" Text="Timezone" FontWeight="SemiBold" />
                                    <TextBlock Grid.Column="6" Text="Collect" FontWeight="SemiBold" />
                                </Grid>
                            </DataTemplate>
                        </ListView.HeaderTemplate>
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <Grid Padding="8,8">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="120" />
                                        <ColumnDefinition Width="80" />
                                        <ColumnDefinition Width="100" />
                                        <ColumnDefinition Width="100" />
                                        <ColumnDefinition Width="100" />
                                        <ColumnDefinition Width="100" />
                                        <ColumnDefinition Width="*" />
                                    </Grid.ColumnDefinitions>

                                    <TextBlock Grid.Column="0" Text="{Binding Name}" FontWeight="SemiBold" />
                                    <StackPanel Grid.Column="1" Orientation="Horizontal" Spacing="6">
                                        <Ellipse Width="10" Height="10" Fill="{Binding StatusColor}" />
                                        <TextBlock Text="{Binding Status}" />
                                    </StackPanel>
                                    <TextBlock Grid.Column="2" Text="{Binding PreMarket}"
                                               Foreground="{ThemeResource SystemBaseMediumColor}" />
                                    <TextBlock Grid.Column="3" Text="{Binding RegularHours}" />
                                    <TextBlock Grid.Column="4" Text="{Binding PostMarket}"
                                               Foreground="{ThemeResource SystemBaseMediumColor}" />
                                    <TextBlock Grid.Column="5" Text="{Binding Timezone}"
                                               Foreground="{ThemeResource SystemBaseMediumColor}" />
                                    <CheckBox Grid.Column="6" IsChecked="{Binding CollectData, Mode=TwoWay}" />
                                </Grid>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </StackPanel>
            </Border>

            <!-- Session Configuration -->
            <Border Style="{StaticResource CardStyle}">
                <StackPanel Spacing="16">
                    <StackPanel Orientation="Horizontal" Spacing="8">
                        <FontIcon Glyph="&#xE713;" Foreground="{ThemeResource SystemAccentColor}" />
                        <TextBlock Text="Session Configuration" Style="{StaticResource SubtitleTextBlockStyle}" />
                    </StackPanel>

                    <ComboBox x:Name="ExchangeCombo"
                              Header="Exchange"
                              HorizontalAlignment="Stretch"
                              SelectedIndex="0"
                              SelectionChanged="ExchangeCombo_SelectionChanged">
                        <ComboBoxItem Content="NYSE (New York Stock Exchange)" Tag="NYSE" />
                        <ComboBoxItem Content="NASDAQ" Tag="NASDAQ" />
                        <ComboBoxItem Content="CME (Chicago Mercantile Exchange)" Tag="CME" />
                        <ComboBoxItem Content="LSE (London Stock Exchange)" Tag="LSE" />
                        <ComboBoxItem Content="TSE (Tokyo Stock Exchange)" Tag="TSE" />
                        <ComboBoxItem Content="Custom Exchange" Tag="CUSTOM" />
                    </ComboBox>

                    <Grid ColumnSpacing="16" RowSpacing="16">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>

                        <!-- Pre-Market -->
                        <StackPanel Grid.Row="0" Grid.Column="0" Spacing="8">
                            <CheckBox x:Name="EnablePreMarketCheck"
                                      Content="Enable Pre-Market Collection"
                                      IsChecked="True" />
                            <TimePicker x:Name="PreMarketStartTime"
                                        Header="Pre-Market Start"
                                        ClockIdentifier="24HourClock"
                                        Time="04:00:00" />
                            <TimePicker x:Name="PreMarketEndTime"
                                        Header="Pre-Market End"
                                        ClockIdentifier="24HourClock"
                                        Time="09:30:00" />
                        </StackPanel>

                        <!-- Regular Hours -->
                        <StackPanel Grid.Row="0" Grid.Column="1" Spacing="8">
                            <CheckBox x:Name="EnableRegularHoursCheck"
                                      Content="Enable Regular Hours Collection"
                                      IsChecked="True" />
                            <TimePicker x:Name="RegularStartTime"
                                        Header="Market Open"
                                        ClockIdentifier="24HourClock"
                                        Time="09:30:00" />
                            <TimePicker x:Name="RegularEndTime"
                                        Header="Market Close"
                                        ClockIdentifier="24HourClock"
                                        Time="16:00:00" />
                        </StackPanel>

                        <!-- Post-Market -->
                        <StackPanel Grid.Row="0" Grid.Column="2" Spacing="8">
                            <CheckBox x:Name="EnablePostMarketCheck"
                                      Content="Enable Post-Market Collection"
                                      IsChecked="True" />
                            <TimePicker x:Name="PostMarketStartTime"
                                        Header="Post-Market Start"
                                        ClockIdentifier="24HourClock"
                                        Time="16:00:00" />
                            <TimePicker x:Name="PostMarketEndTime"
                                        Header="Post-Market End"
                                        ClockIdentifier="24HourClock"
                                        Time="20:00:00" />
                        </StackPanel>

                        <!-- Timezone -->
                        <ComboBox x:Name="TimezoneCombo"
                                  Grid.Row="1" Grid.Column="0"
                                  Header="Exchange Timezone"
                                  HorizontalAlignment="Stretch"
                                  SelectedIndex="0">
                            <ComboBoxItem Content="America/New_York (EST/EDT)" Tag="America/New_York" />
                            <ComboBoxItem Content="America/Chicago (CST/CDT)" Tag="America/Chicago" />
                            <ComboBoxItem Content="Europe/London (GMT/BST)" Tag="Europe/London" />
                            <ComboBoxItem Content="Asia/Tokyo (JST)" Tag="Asia/Tokyo" />
                            <ComboBoxItem Content="Asia/Hong_Kong (HKT)" Tag="Asia/Hong_Kong" />
                            <ComboBoxItem Content="UTC" Tag="UTC" />
                        </ComboBox>

                        <!-- Trading Days -->
                        <StackPanel Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="2" Spacing="8">
                            <TextBlock Text="Trading Days" Style="{StaticResource CaptionTextBlockStyle}" />
                            <StackPanel Orientation="Horizontal" Spacing="8">
                                <CheckBox x:Name="MondayCheck" Content="Mon" IsChecked="True" />
                                <CheckBox x:Name="TuesdayCheck" Content="Tue" IsChecked="True" />
                                <CheckBox x:Name="WednesdayCheck" Content="Wed" IsChecked="True" />
                                <CheckBox x:Name="ThursdayCheck" Content="Thu" IsChecked="True" />
                                <CheckBox x:Name="FridayCheck" Content="Fri" IsChecked="True" />
                                <CheckBox x:Name="SaturdayCheck" Content="Sat" IsChecked="False" />
                                <CheckBox x:Name="SundayCheck" Content="Sun" IsChecked="False" />
                            </StackPanel>
                        </StackPanel>
                    </Grid>
                </StackPanel>
            </Border>

            <!-- Holiday Calendar -->
            <Border Style="{StaticResource CardStyle}">
                <StackPanel Spacing="16">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0" Orientation="Horizontal" Spacing="8">
                            <FontIcon Glyph="&#xE787;" Foreground="{ThemeResource SystemAccentColor}" />
                            <TextBlock Text="Holiday Calendar" Style="{StaticResource SubtitleTextBlockStyle}" />
                        </StackPanel>

                        <StackPanel Grid.Column="1" Orientation="Horizontal" Spacing="8">
                            <Button Content="Add Holiday" Click="AddHoliday_Click" />
                            <Button Content="Import Holidays" Click="ImportHolidays_Click" />
                        </StackPanel>
                    </Grid>

                    <InfoBar IsOpen="True" IsClosable="False" Severity="Informational"
                             Title="Automatic Holiday Detection"
                             Message="Holidays are automatically detected based on the selected exchange. You can add custom holidays below." />

                    <ListView x:Name="HolidaysList"
                              SelectionMode="None"
                              MaxHeight="200">
                        <ListView.HeaderTemplate>
                            <DataTemplate>
                                <Grid Padding="8,4" Background="{ThemeResource SystemFillColorNeutralBackgroundBrush}">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="120" />
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="100" />
                                        <ColumnDefinition Width="80" />
                                    </Grid.ColumnDefinitions>

                                    <TextBlock Grid.Column="0" Text="Date" FontWeight="SemiBold" />
                                    <TextBlock Grid.Column="1" Text="Holiday Name" FontWeight="SemiBold" />
                                    <TextBlock Grid.Column="2" Text="Exchange" FontWeight="SemiBold" />
                                    <TextBlock Grid.Column="3" Text="Type" FontWeight="SemiBold" />
                                </Grid>
                            </DataTemplate>
                        </ListView.HeaderTemplate>
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <Grid Padding="8,8">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="120" />
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="100" />
                                        <ColumnDefinition Width="80" />
                                    </Grid.ColumnDefinitions>

                                    <TextBlock Grid.Column="0" Text="{Binding Date}" />
                                    <TextBlock Grid.Column="1" Text="{Binding Name}" />
                                    <TextBlock Grid.Column="2" Text="{Binding Exchange}"
                                               Foreground="{ThemeResource SystemBaseMediumColor}" />
                                    <TextBlock Grid.Column="3" Text="{Binding Type}"
                                               Foreground="{Binding TypeColor}" />
                                </Grid>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </StackPanel>
            </Border>

            <!-- Session Overlap Visualization -->
            <Border Style="{StaticResource CardStyle}">
                <StackPanel Spacing="16">
                    <StackPanel Orientation="Horizontal" Spacing="8">
                        <FontIcon Glyph="&#xE7C4;" Foreground="{ThemeResource SystemAccentColor}" />
                        <TextBlock Text="Global Market Hours (UTC)" Style="{StaticResource SubtitleTextBlockStyle}" />
                    </StackPanel>

                    <TextBlock Text="Visual representation of trading sessions across global markets."
                               Style="{StaticResource CaptionTextBlockStyle}"
                               Foreground="{ThemeResource SystemBaseMediumColor}" />

                    <!-- Timeline Grid -->
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>

                        <!-- Hour Labels -->
                        <Grid Grid.Row="0" Margin="80,0,0,4">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0" Text="00:00" Style="{StaticResource CaptionTextBlockStyle}" />
                            <TextBlock Grid.Column="1" Text="04:00" Style="{StaticResource CaptionTextBlockStyle}" />
                            <TextBlock Grid.Column="2" Text="08:00" Style="{StaticResource CaptionTextBlockStyle}" />
                            <TextBlock Grid.Column="3" Text="12:00" Style="{StaticResource CaptionTextBlockStyle}" />
                            <TextBlock Grid.Column="4" Text="16:00" Style="{StaticResource CaptionTextBlockStyle}" />
                            <TextBlock Grid.Column="5" Text="20:00" Style="{StaticResource CaptionTextBlockStyle}" />
                        </Grid>

                        <!-- Tokyo Session -->
                        <Grid Grid.Row="1" Height="32">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="80" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0" Text="Tokyo" VerticalAlignment="Center" />
                            <Border Grid.Column="1" Background="{ThemeResource SystemFillColorNeutralBackgroundBrush}"
                                    CornerRadius="4">
                                <Border Background="#48BB78" CornerRadius="4"
                                        HorizontalAlignment="Left" Width="120" Margin="0,4" />
                            </Border>
                        </Grid>

                        <!-- London Session -->
                        <Grid Grid.Row="2" Height="32">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="80" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0" Text="London" VerticalAlignment="Center" />
                            <Border Grid.Column="1" Background="{ThemeResource SystemFillColorNeutralBackgroundBrush}"
                                    CornerRadius="4">
                                <Border Background="#4299E1" CornerRadius="4"
                                        HorizontalAlignment="Left" Width="140" Margin="130,4,0,4" />
                            </Border>
                        </Grid>

                        <!-- New York Session -->
                        <Grid Grid.Row="3" Height="32">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="80" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0" Text="New York" VerticalAlignment="Center" />
                            <Border Grid.Column="1" Background="{ThemeResource SystemFillColorNeutralBackgroundBrush}"
                                    CornerRadius="4">
                                <Border Background="#ED8936" CornerRadius="4"
                                        HorizontalAlignment="Left" Width="160" Margin="230,4,0,4" />
                            </Border>
                        </Grid>

                        <!-- Current Time Indicator -->
                        <Grid Grid.Row="4" Height="24" Margin="80,8,0,0">
                            <Border x:Name="CurrentTimeIndicator"
                                    Background="{ThemeResource SystemAccentColor}"
                                    Width="2" Height="20"
                                    HorizontalAlignment="Left"
                                    Margin="200,0,0,0" />
                            <TextBlock x:Name="CurrentTimeLabel" Text="Now"
                                       Margin="195,0,0,0"
                                       Style="{StaticResource CaptionTextBlockStyle}"
                                       Foreground="{ThemeResource SystemAccentColor}" />
                        </Grid>
                    </Grid>

                    <!-- Legend -->
                    <StackPanel Orientation="Horizontal" Spacing="24">
                        <StackPanel Orientation="Horizontal" Spacing="8">
                            <Border Background="#48BB78" Width="16" Height="16" CornerRadius="2" />
                            <TextBlock Text="Tokyo/Asia" Style="{StaticResource CaptionTextBlockStyle}" />
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Spacing="8">
                            <Border Background="#4299E1" Width="16" Height="16" CornerRadius="2" />
                            <TextBlock Text="London/Europe" Style="{StaticResource CaptionTextBlockStyle}" />
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Spacing="8">
                            <Border Background="#ED8936" Width="16" Height="16" CornerRadius="2" />
                            <TextBlock Text="New York/US" Style="{StaticResource CaptionTextBlockStyle}" />
                        </StackPanel>
                    </StackPanel>
                </StackPanel>
            </Border>

            <!-- DST Settings -->
            <Border Style="{StaticResource CardStyle}">
                <StackPanel Spacing="16">
                    <StackPanel Orientation="Horizontal" Spacing="8">
                        <FontIcon Glyph="&#xEC46;" Foreground="{ThemeResource SystemAccentColor}" />
                        <TextBlock Text="Daylight Saving Time" Style="{StaticResource SubtitleTextBlockStyle}" />
                    </StackPanel>

                    <ToggleSwitch x:Name="AutoDstToggle"
                                  Header="Automatic DST Adjustments"
                                  OffContent="Manual"
                                  OnContent="Automatic"
                                  IsOn="True" />

                    <InfoBar x:Name="DstWarningBar" IsOpen="False" IsClosable="True" Severity="Warning"
                             Title="DST Transition Upcoming"
                             Message="Daylight Saving Time change in 5 days. Trading hours will automatically adjust." />

                    <Grid ColumnSpacing="24">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0" Spacing="4">
                            <TextBlock Text="Next DST Change (US)" Style="{StaticResource CaptionTextBlockStyle}" />
                            <TextBlock x:Name="NextDstUsText" Text="March 9, 2026 - Spring Forward"
                                       Style="{StaticResource BodyTextBlockStyle}" />
                        </StackPanel>

                        <StackPanel Grid.Column="1" Spacing="4">
                            <TextBlock Text="Next DST Change (EU)" Style="{StaticResource CaptionTextBlockStyle}" />
                            <TextBlock x:Name="NextDstEuText" Text="March 29, 2026 - Spring Forward"
                                       Style="{StaticResource BodyTextBlockStyle}" />
                        </StackPanel>
                    </Grid>
                </StackPanel>
            </Border>

            <!-- Save Button -->
            <StackPanel Orientation="Horizontal" Spacing="12">
                <Button Content="Save Configuration"
                        Style="{StaticResource AccentButtonStyle}"
                        Click="SaveConfiguration_Click" />
                <Button Content="Reset to Defaults" Click="ResetDefaults_Click" />
                <ProgressRing x:Name="SaveProgress" IsActive="False" Width="20" Height="20" />
            </StackPanel>

            <InfoBar x:Name="ActionInfoBar" IsOpen="False" IsClosable="True" />
        </StackPanel>
    </ScrollViewer>
</Page>
