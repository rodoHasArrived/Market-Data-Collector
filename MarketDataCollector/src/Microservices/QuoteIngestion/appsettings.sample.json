{
  "QuoteService": {
    "ServiceName": "DataIngestion.QuoteService",
    "HttpPort": 5003,
    "EnableMetrics": true,
    "MessageBus": {
      "Transport": "InMemory",
      "RabbitMq": { "Host": "localhost", "Port": 5672, "Username": "guest", "Password": "guest" }
    },
    "Storage": { "DataDirectory": "data/quotes" },
    "Processing": {
      "ChannelCapacity": 100000,
      "BatchSize": 200,
      "FlushIntervalMs": 500,
      "TrackNbbo": true,
      "CalculateSpread": true
    },
    "Validation": {
      "DetectCrossedQuotes": true,
      "DetectLockedQuotes": true,
      "ValidatePrices": true,
      "MaxSpreadPercent": 10
    }
  },
  "Serilog": {
    "MinimumLevel": { "Default": "Information", "Override": { "Microsoft": "Warning" } },
    "WriteTo": [{ "Name": "Console" }]
  }
}
